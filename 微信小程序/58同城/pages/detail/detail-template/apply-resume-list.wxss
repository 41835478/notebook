@import "../../../__wuBaseWxss__/5.wxss";

.container-resume {
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    position: fixed;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    background-color: rgba(0,0,0,0.5);
    z-index: 100;
}

.resume-wrapper {
    background-color: #fff;
    -webkit-box-flex: 0;
    flex: 0 0 500rpx;
    min-height: 300rpx;
    z-index: 99;
    padding-top: 20rpx;
}

.resume-title {
    line-height: 100rpx;
    text-align: center;
}

.resume-list {
    max-height: 350rpx;
    overflow-y: auto;
    padding-bottom: 30rpx;
}

.resume-radio-group {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    text-align: center;
    color: #888888;
}

.resume-radio-wrapper {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    padding: 10rpx 50rpx;
}

.resume-radio-title {
    -webkit-box-flex: 1;
    flex: 1;
    font-size: 30rpx;
}

.resume-btn-apply {
    color: #ff552e;
    text-align: center;
    border-top: 1rpx solid #eeeeee;
    line-height: 90rpx;
}