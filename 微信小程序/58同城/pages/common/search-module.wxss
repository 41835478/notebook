.search-contain {
    height: calc(100vh - 88rpx);
    overflow: hidden;
}

.search-header {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    background: #efeff4;
    padding: 16rpx 17rpx 16rpx 15rpx;
}

.search_hide {
    opacity: 0;
}

.search_show {
    opacity: 1;
}

.search-btn {
    font-size: 32rpx;
    line-height: 48rpx;
    width: 80rpx;
    text-align: center;
    padding: 4rpx 0rpx 4rpx 4rpx;
    background: none;
}

.search-cancel {
    color: #ff552e;
}

.search-btn:after {
    border: none;
}

.search-border {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-flex: 1;
    flex: 1;
    height: 56rpx;
    background-color: #fff;
    border-radius: 10rpx;
    padding-right: 30rpx;
}

.search-icon {
    margin: 16rpx 16rpx 12rpx 16rpx;
}

.search-input {
    -webkit-box-flex: 1;
    flex: 1;
    height: 56rpx;
    line-height: 60rpx;
    font-size: 28rpx;
}

.search-result-li {
    font-size: 28rpx;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 34rpx;
    color: #666;
    border-bottom: 1rpx solid #F3F3F3;
    margin-left: 30rpx;
}

.search-words-title {
    font-size: 24rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 34rpx;
    color: #b2b2b2;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #F3F3F3;
}

.reset {
    position: relative;
    top: 13rpx;
    width: 30rpx;
    height: 30rpx;
    padding: 0;
    border-radius: 100%;
    background-image: url(data:image/png;base64,);
    background-size: contain;
}

.last {
    margin-left: 0;
    padding-left: 64rpx;
}