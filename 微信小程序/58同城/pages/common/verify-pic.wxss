.verify-wrap {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
}

.verify-block {
    position: absolute;
    width: 600rpx;
    top: 50%;
    left: 50%;
    margin-left: -300rpx;
    margin-top: -300rpx;
    background-color: #fff;
    box-sizing: border-box;
    border-radius: 10rpx;
}

.verify-title {
    font-size: 36rpx;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    background-color: #fff;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}

.verify {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 108rpx;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.verify-input {
    font-size: 36rpx;
    padding-left: 20rpx;
    width: 260rpx;
    height: 106rpx;
}

.verify-pic {
    width: 260rpx;
    height: 106rpx;
}

.verify-btn-block {
    border-top: 1rpx solid #eee;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 98rpx;
}

.verify-btn {
    background-color: #fff;
    -webkit-box-flex: 1;
    flex: 1;
    font-size: 36rpx;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    padding: 0;
    margin: 0;
    border-radius: 0;
}

.verify-btn.one {
    border-right: 1rpx solid #eee;
    border-bottom-left-radius: 10rpx;
}

.verify-btn.two {
    color: #09bb07;
    border-bottom-right-radius: 10rpx;
}