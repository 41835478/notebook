@import "template/cityList.wxss";

@import "template/townList.wxss";

@import "template/townNav.wxss";

@import "template/townSearchList.wxss";

page {
    height: 100vh;
    overflow: hidden;
}

.city-search-header {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    background: #f6f6f6;
    padding: 30rpx;
}

.city-nav-wrap {
    font-size: 32rpx;
    color: #ff552e;
    text-align: center;
    padding: 15rpx 30rpx;
}

.city-nav {
    display: inline-block;
    border: 2rpx solid #ff552e;
    border-radius: 10rpx;
    font-size: 32rpx;
    color: #ff552e;
    overflow: hidden;
    box-sizing: border-box;
}

.nav-item-btn[plain] {
    position: relative;
    border: none;
    padding: 0;
    margin: 0;
    border-radius: 0;
}

.nav-item-btn {
    width: 200rpx;
    font-size: 32rpx;
    border-right: 1rpx solid #ff552e;
    line-height: 70rpx;
    height: 70rpx;
    overflow: auto;
    float: left;
}

.city-nav-item:last-child {
    border-right: none;
}

.nav-item-btn.on {
    background-color: #ff552e;
    color: #fff;
}

.search_hide {
    opacity: 0;
}

.search_show {
    opacity: 1;
}

.search-btn {
    font-size: 32rpx;
    line-height: 48rpx;
    width: 80rpx;
    text-align: center;
    padding: 4rpx 0rpx 4rpx 4rpx;
    background: none;
}

.search-cancel {
    color: #ff552e;
}

.search-btn:after {
    border: none;
}

.city-search-border {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-flex: 1;
    flex: 1;
    height: 64rpx;
    background-color: #fff;
    border-radius: 10rpx;
    padding-right: 30rpx;
}

.city-search-icon {
    margin: 17rpx 16rpx 12rpx 16rpx;
}

.city-search-input {
    -webkit-box-flex: 1;
    flex: 1;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 28rpx;
}

.reset-btn[plain] {
    position: relative;
    border: none;
    line-height: 0;
    padding: 0;
}

.reset-btn {
    position: relative;
    top: 17rpx;
    width: 30rpx;
    width: 30rpx;
    height: 30rpx;
    padding: 0;
    border-radius: 100%;
    background-image: url(data:image/png;base64,);
    background-size: contain;
}

.city-search-cancel {
    height: 64rpx;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    line-height: 64rpx;
    color: #FF552E;
}

.scroll-city-content {
    height: calc(100vh - 324rpx);
    max-height: 100vh;
}

.scroll-city-content-nogps {
    height: calc(100vh - 324rpx + 88rpx);
}

.scroll-city-content-nav {
    height: calc(100vh - 416rpx);
}

.scroll-city-content-nogps-town {
    height: calc(100vh - 324rpx);
}

.curr-city {
    padding: 40rpx 30rpx 20rpx 30rpx;
    font-size: 28rpx;
    color: #FF552E;
    letter-spacing: 0.5px;
    line-height: 28rpx;
}

.city-contain {
    position: relative;
}

.char-List {
    position: absolute;
    z-index: 2000;
    width: 100rpx;
    background: #fff;
    top: 0;
    bottom: 0;
    right: 0;
}

.char-item {
    font-size: 28rpx;
}