.add-alert {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0,0.5);
    z-index: 9999;
}

.add-content {
    position: absolute;
    top: 33%;
    left: 0;
    right: 0;
    width: 600rpx;
    margin: auto;
    background-color: #fff;
    font-size: 28rpx;
    z-index: 9999;
    padding-top: 20rpx;
}

.alert-title {
    font-size: 36rpx;
    margin: 30rpx;
    color: #333333;
    text-align: center;
}

.alert-remove {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    width: 80rpx;
    height: 80rpx;
}

.alert-remove:before,.alert-remove:after {
    height: 36rpx;
    width: 2rpx;
    content: "";
    position: absolute;
    background-color: #aaa;
    transform: rotate(45deg);
    top: 8rpx;
    right: 30rpx;
}

.alert-remove:before {
    transform: rotate(-45deg);
}

.add-label-wrap {
    padding: 0rpx 50rpx;
}

.add-label-name {
    padding: 0 8rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #333;
    border: 2rpx solid #d2d2d2;
    box-sizing: border-box;
    width: 100%;
}

.submit-tip {
    font-size: 20rpx;
    color: red;
    height: 30rpx;
    line-height: 30rpx;
    margin: 0rpx 50rpx;
}

.alert-btn-wrap {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.alert-btn-item {
    margin-top: 10rpx;
    font-size: 32rpx;
    -webkit-box-flex: 1;
    flex: 1;
    display: inline-block;
    color: #53bcde;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    vertical-align: top;
    border: 2rpx solid #F3F3F3;
    border-bottom: none;
    border-radius: 0;
    background: #fff;
}

.alert-btn-item.label-cancel {
    color: #555555;
    border-right: none;
}

.label-tip {
    font-size: 24rpx;
    color: #CBCBCB;
    margin: 5rpx 50rpx;
}