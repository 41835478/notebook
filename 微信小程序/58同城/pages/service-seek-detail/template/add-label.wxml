<template name="add-label">
    <view class="add-alert">
        <view class="add-content">
            <view catchtap="labelAlertToggle" class="alert-remove"></view>
            <view class="alert-title">添加新标签</view>
            <view class="add-label-wrap">
                <input bindinput="getLabelInput" class="add-label-name" placeholder="最多输入7个字" type="text"></input>
            </view>
            <view class="submit-tip">{{labelTips}}</view>
            <view class="label-tip"> 新标签会记录但不展示在页面上</view>
            <view class="alert-btn-wrap">
                <button catchtap="labelAlertToggle" class="alert-btn-item label-cancel">取消</button>
                <button catchtap="e_labelSubmit" class="alert-btn-item label-submit">登记新标签</button>
            </view>
        </view>
    </view>
</template>
