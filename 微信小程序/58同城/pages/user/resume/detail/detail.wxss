@import "../../../../__wuBaseWxss__/5.wxss";

.container-main {
    overflow-y: auto;
    height: auto;
}

.panel {
    border-bottom: 15rpx solid #efeff4;
}

.panel-last {
    border: none;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50% 50%;
    background-image: url("//img.58cdn.com.cn/weixin/img/wechat-app/avatar-default.png");
    background-size: cover;
}

.container-form {
    overflow-y: scroll;
    font-size: 26rpx;
    padding: 30rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}

.form-item {
    margin-bottom: 10rpx;
    min-height: 40rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: start;
    align-items: flex-start;
    margin-bottom: 16rpx;
}

.field_edu,.field_exp {
    margin-bottom: 15rpx;
}

.dash-border {
    border-bottom: 1px dashed #B2B2B2;
}

.form-item-label {
    color: #B2B2B2;
    -webkit-box-flex: 0;
    flex: 0 0 120rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.letter-last {
    margin-right: 10rpx;
}

.form-item-field {
    -webkit-box-flex: 1;
    flex: 1;
    margin-left: 25rpx;
}

.form-item-field_true_name {
    align-self: center;
    font-size: 38rpx;
}

.form-item-field_advantage {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-flow: row wrap;
    -webkit-box-pack: start;
    justify-content: flex-start;
    -webkit-box-align: center;
    align-items: center;
    align-content: flex-start;
}

.field-advantage {
    -webkit-box-flex: 0;
    flex: 0 0 auto;
    border: 1rpx solid #ff552e;
    border-radius: 5rpx;
    color: #ff552e;
    margin-right: 10rpx;
    font-size: 24rpx;
    line-height: 37rpx;
    padding: 0 8rpx;
    margin-bottom: 15rpx;
}

.form-field-target_cate,.form-field-target_area {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: flext-start;
    justify-content: flext-start;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-flow: row wrap;
    -webkit-box-align: center;
    align-items: center;
    align-content: flext-start;
}

.target_cate-item,.target_area-item {
    -webkit-box-flex: 0;
    flex: 0 0 auto;
}

.field-split {
    color: #ff552e;
    padding: 0 15rpx;
}