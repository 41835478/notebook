page {
    font-family: 'PingFangSC-Regular, sans-serif';
    height: 100%;
}

.authorize-box {
    height: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
}

.logo-box {
    width: 200rpx;
    height: 200rpx;
}

.logo-box .logo-pic {
    width: 160rpx;
    height: 145rpx;
    margin: 27.5rpx 20rpx;
}

.title {
    font-size: 40rpx;
    color: #333;
    line-height: 50rpx;
    margin: 20rpx 0;
}

.title-des {
    font-size: 30rpx;
    color: #999;
    line-height: 36rpx;
}

.auz-box {
    width: 650rpx;
    margin: 100rpx 0;
    padding-top: 40rpx;
    border-top: 1rpx solid #eee;
}

.auz-box text {
    font-size: 30rpx;
    color: #999;
}

.auz-box .auz-des {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    margin: 20rpx 0;
}

.circle {
    width: 13rpx;
    height: 13rpx;
    background-color: #999;
    border-radius: 13rpx;
    margin-right: 20rpx;
}

.btn-box {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.btn-box text,.btn-box button {
    width: 310rpx;
    height: 90rpx;
    color: #666;
    font-size: 30rpx;
    background-color: #ddd;
    border-radius: 2rpx;
    text-align: center;
    line-height: 90rpx;
}

.btn-box .auz-btn {
    background-color: #ff552e;
    color: #fff;
    margin-left: 30rpx;
}