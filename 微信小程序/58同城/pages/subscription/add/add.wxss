@import "../../../__wuBaseWxss__/5.wxss";

.register-from {
    margin: 25rpx;
    font-size: 14px;
}

.sub-post {
    position: relative;
    height: 98rpx;
    padding: 0 32rpx 0 24rpx;
    margin-bottom: 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    border: 1rpx solid #D2D2D2;
}

.sub-post.no-border-bottom {
    margin-bottom: 0;
    border-bottom: none;
    box-sizing: border-box;
}

.label {
    color: #727472;
    width: 63px;
    text-align: justify;
    display: inline-block;
    padding-right: 20rpx;
    border-right: 1rpx solid #CBCBCB;
    -webkit-box-flex: 0;
    flex: 0 0 63px;
}

.sub-area {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: start;
    align-items: flex-start;
    height: auto;
    padding-bottom: 20rpx;
}

.area-label {
    color: #727472;
    line-height: 98rpx;
}

.area-item {
    margin-right: 20rpx;
    background-color: #f3f3f3;
    position: relative;
    padding: 15rpx;
}

.area-item-add {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 200rpx;
    border: 2rpx dotted black;
    text-align: center;
    -webkit-box-align: center;
    align-items: center;
    padding: 13rpx 0rpx;
}

.area-item-add-text {
    -webkit-box-flex: 1;
    flex: 1;
    font-weight: bold;
}

.area-item-wrapper {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.area-item-close {
    background-color: #777777;
    color: #fff;
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
    font-size: 28rpx;
    line-height: 40rpx;
    text-align: center;
    position: absolute;
    right: -17rpx;
    top: -20rpx;
}

.space1 {
    border-left: 54rpx solid transparent;
}

.space2 {
    border-left: 16rpx solid transparent;
}

.select-post {
    position: relative;
    font-size: 14px;
    color: #333;
    margin-left: 20rpx;
    cursor: pointer;
    background-color: #fff;
}

.select-post-empty {
    color: gray;
}

.select-icon {
    margin: 0;
    padding: 0;
    position: absolute;
    display: block;
    top: 50%;
    right: 26rpx;
    width: 20rpx;
    height: 26rpx;
    margin-top: -12rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100% auto;
}

.require-wrap {
    padding: 24rpx 32rpx 24rpx 24rpx;
    margin-bottom: 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    border: 1rpx solid #D2D2D2;
    box-sizing: border-box;
}

.require-textarea-block {
    background-color: #fff;
    width: 100%;
    height: 280rpx;
    box-sizing: border-box;
}

.require-detail {
    width: 100%;
    height: 100%;
    font-size: 14px;
    color: #333;
    margin-left: 20rpx;
    border: none;
    resize: none;
}

.require-detail:focus {
    border: 1rpx solid #e0aa40;
}

.title {
    font-size: 12px;
    color: #333;
    padding: 20rpx 30rpx;
    line-height: 12px;
    background-color: #f3f3f3;
}

.register-input {
    width: 100%;
    -webkit-box-flex: 1;
    flex: 1;
    height: 68rpx;
    line-height: 68rpx;
    background-color: #fff;
    font-size: 14px;
    color: #333;
    margin-left: 20rpx;
    box-sizing: border-box;
    border: none;
}

.register-input:focus {
    border: 1rpx solid #e0aa40;
}

.submit-wrap {
    text-align: center;
}

.subscription-submit {
    display: block;
    font-size: 16px;
    width: 90%;
    color: #fff;
    height: 86rpx;
    background-color: #ff552e;
    line-height: 88rpx;
    text-align: center;
    margin: 74rpx auto;
}

.sub-select {
    background-color: #6f747a;
}

.data-city-list,.data-list {
    position: absolute;
    display: none;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    background-color: #fff;
    list-style: none;
    overflow: scroll;
}

.head-back {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 14px;
    color: #555;
    border-bottom: 1rpx solid #f3f3f3;
    background-color: #f6f6f6;
}

.head-title {
    position: fixed;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    width: 100%;
    top: 0;
}

.back {
    position: absolute;
    top: 0;
    left: 16rpx;
    width: 100rpx;
    height: 88rpx;
    display: block;
    background: url(data:image/png;base64,) left center no-repeat;
    background-size: 34rpx auto;
}

.data-item {
    display: block;
    line-height: 88rpx;
    height: 88rpx;
    font-size: 14px;
    color: #555;
    border-bottom: 1rpx solid #f3f3f3;
    padding-left: 24rpx;
}

.data-city-list {
    display: none;
}

.list-title {
    position: relative;
    height: 88rpx;
    background-color: #f6f6f6;
    color: #555;
    line-height: 88rpx;
    text-align: center;
    font-size: 14px;
    border-bottom: 1rpx solid #f3f3f3;
}

.list-title-icon {
    position: absolute;
    top: 0;
    left: 16rpx;
    width: 100rpx;
    height: 88rpx;
    display: block;
    background: url(data:image/png;base64,) left center no-repeat;
    background-size: 17px auto;
}

.item {
    line-height: 88rpx;
    height: 88rpx;
    font-size: 14px;
    color: #555;
    border-bottom: 1rpx solid #f3f3f3;
    padding-left: 12px;
}