}

.share-container .answer-item-4 {
    left: 87rpx;
    top: 438rpx;
}

.share-container .answer-item-5 {
    left: 64rpx;
    top: 243rpx;
}

.share-container .user-avatar {
    position: absolute;
    top: 219rpx;
    left: 235rpx;
    border-radius: 50%;
    width: 220rpx;
    height: 220rpx;
    border: 6rpx solid #fff;
    background-color: #fff;
    background: url(https://img.58cdn.com.cn/weixin/img/wechat-app/webview/friends/no-matching.png) 0 0 no-repeat;
    background-size: cover;
}

.qr-img-container {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
}

.qr-img-container .qr-img {
    position: absolute;
    width: 72%;
    height: 80%;
    left: 50%;
    margin-left: -36%;
    top: 150rpx;
}

.qr-img-container .qr-img .qr-img-show {
    background-size: 100% auto;
    height: 820rpx;
    width: 100%;
}

.qr-img-container .qr-img .save-share-btn {
    background-color: #ff552e;
    border-radius: 2rpx;
    width: 360rpx;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    color: #fff;
    position: relative;
    text-align: center;
    margin: 30rpx auto;
    padding-left: 40rpx;
    border: 0;
}

.qr-img-container .qr-img .share-icon {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 30rpx;
    margin: auto;
}