page {
    background-color: #fff7ef;
}

.share-container {
    width: 690rpx;
    height: 930rpx;
    border-radius: 10rpx;
    box-shadow: 0 8px 37px 0 rgba(202,202,202,0.42);
    -webkit-border-radius: 10px;
    border-radius: 10px;
    margin: 90rpx auto 0;
    background: #fff url("https://img.58cdn.com.cn/weixin/img/wechat-app/webview/friends/avatar-bg.png") 50% 73rpx no-repeat;
    background-size: 524rpx 514rpx;
    padding-top: 600rpx;
    box-sizing: border-box;
}

.save-qr-btn,.invite-btn {
    width: 560rpx;
    height: 134rpx;
    display: block;
    background: url("https://img.58cdn.com.cn/weixin/img/wechat-app/webview/friends/yellow-btn.png") 0 0 no-repeat;
    background-size: 100%;
    font-family: 'PingFang-SC-Medium';
    font-size: 36rpx;
    color: #fff;
}

.invite-btn {
    background-image: url("https://img.58cdn.com.cn/weixin/img/wechat-app/webview/friends/red-btn.png");
}

.share-container {
    position: relative;
}

.share-container .answer-item {
    position: absolute;
    font-size: 28rpx;
    left: 289rpx;
    top: 107rpx;
}

.share-container .answer-item-icon {
    content: '';
    width: 14rpx;
    height: 14rpx;
    display: inline-block;
    border-radius: 50%;
    background: #F5A623;
    margin-right: 20rpx;
}

.share-container .answer-item-1 {
    left: 485rpx;
    top: 203rpx;
}

.share-container .answer-item-2 {
    left: 485rpx;
