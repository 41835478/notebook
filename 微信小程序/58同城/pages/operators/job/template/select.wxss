.list-title {
    position: relative;
    height: 88rpx;
    background-color: #f6f6f6;
    color: #555;
    line-height: 88rpx;
    text-align: center;
    font-size: 14px;
    border-bottom: 1rpx solid #f3f3f3;
}

.list-title-icon {
    position: absolute;
    top: 0;
    left: 16rpx;
    width: 100rpx;
    height: 88rpx;
    display: block;
    background: url(data:image/png;base64,) left center no-repeat;
    background-size: 17px auto;
}

.item {
    line-height: 88rpx;
    height: 88rpx;
    font-size: 14px;
    color: #555;
    border-bottom: 1rpx solid #f3f3f3;
    padding-left: 12px;
}