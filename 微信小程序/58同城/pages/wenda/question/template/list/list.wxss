.question-list {
    margin-top: 16rpx;
    background: #f2f4f5;
}

.question-list-item {
    background: #fff;
    padding: 28rpx 20rpx;
    margin-bottom: 16rpx;
}

.list-item-title {
    color: #292929;
    font-size: 32rpx;
    line-height: 48rpx;
    font-weight: bold;
}

.list-item-user-info {
    color: #999;
    font-size: 28rpx;
    line-height: 34rpx;
    vertical-align: middle;
    padding: 16rpx 0;
    overflow: hidden;
}

.list-item-answer-num {
    float: right;
}

.list-item-content {
    font-size: 30rpx;
    line-height: 44rpx;
    color: #464646;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}