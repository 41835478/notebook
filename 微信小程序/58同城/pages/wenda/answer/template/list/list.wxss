.answer-list {
    margin-top: 30rpx;
}

.answer-item {
    padding: 30rpx 20rpx;
    background-color: #fff;
    margin-bottom: 30rpx;
    position: relative;
}

.answer-user-name {
    font-size: 32rpx;
    line-height: 34rpx;
    margin-bottom: 22rpx;
    color: #aaaaaa;
}

.answer-detail {
    font-size: 36rpx;
    color: #454545;
    line-height: 54rpx;
}

.answer-detail-fold {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.answer-detail-opera {
    font-size: 27rpx;
    color: #aaaaaa;
    line-height: 34rpx;
    background-color: #fff;
    text-align: right;
    padding-top: 8rpx;
}