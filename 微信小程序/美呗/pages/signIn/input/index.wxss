.header {
    width: 100%;
    height: 330rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    background-size: 100% 100%;
}

.content {
    width: 100%;
}

.input-container {
    width: 600rpx;
    margin: auto;
    margin-top: 16rpx;
}

.input-item {
    position: relative;
    padding: 40rpx 0;
    border-bottom: 1rpx solid #ddd;
}

.input-item input {
    width: 300rpx;
}

.code-btn {
    position: absolute;
    right: 0;
    bottom: 25rpx;
    font-size: 14px;
    color: #333;
    z-index: 11;
    padding-left: 8px;
    padding-right: 0px;
    line-height: 2;
    outline: none;
    background: #fff;
    top: 40rpx;
}

.signin {
    margin-top: 90rpx;
    width: 580rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 5px;
    font-size: 16px;
    border: none;
    text-align: center;
    color: #fff;
    background: #fd8185;
}

button[disabled]:not([type]) {
    background-color: #fff;
}