.qa-list {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    font-size: 30rpx;
    color: #333;
}

.qa-list .qa-filterbar {
    position: fixed;
    height: 100rpx;
    width: 100vw;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: white;
    justify-content: space-between;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
}

.qa-list .qa-filterbar view {
    flex: 1;
    text-align: center;
}

.qa-list .qa-filterbar image {
    height: 10rpx;
    width: 18rpx;
    margin-left: 15rpx;
    margin-bottom: 6rpx;
}

.qa-list-cells {
    margin-top: 100rpx;
}