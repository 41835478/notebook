.qa-detail {
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
}

.qa-detail-scroll {
    height: 90vh;
}

.qa-title-view {
    display: flex;
    flex-direction: column;
    background: white;
    padding: 30rpx;
}

.qa-title {
    margin-top: 20rpx;
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
}

.qa-desc {
    font-size: 32rpx;
    color: #666;
    margin-top: 56rpx;
    letter-spacing: 3rpx;
}

.qa-remind {
    width: 100vw;
    padding: 30rpx;
    padding-left: 100rpx;
    font-size: 24rpx;
    color: #999;
}

.qa-answer {
    display: flex;
    flex-direction: column;
    width: 100vw;
    background: white;
}

.bottom-layout {
    display: flex;
    flex-direction: row;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 10vh;
}

.icon-layout {
    background-color: #fec0c2;
    width: 140rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.icon {
    width: 62rpx;
    height: 56rpx;
}

.button-layout {
    display: flex;
    background: #fd8185;
    justify-content: center;
    align-items: center;
    width: 100%;
    border-radius: 0;
}

.bottom-text {
    color: white;
    font-size: 34rpx;
    background: #fd8185;
}

.qa-relevant {
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    background: white;
    padding: 30rpx;
}

.qa-relevant-title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
}

.qa-relevant-content {
    margin-top: 30rpx;
}

.qa-relevant-content view {
    font-size: 30rpx;
    color: #333;
    letter-spacing: 3rpx;
    line-height: 60rpx;
}

.qa-relevant-more {
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #fb8285;
}