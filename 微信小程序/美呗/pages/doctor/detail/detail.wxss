page {
    color: #333;
}

.title-normal {
    font-size: 17px;
    font-weight: bold;
}

.flex {
    display: flex;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.text-c {
    text-align: center;
}

.doctor-info {
    padding: 30rpx;
    background-color: #1faaac;
    display: flex;
}

.doctor-info .img {
    margin: 0 20rpx;
}

.doctor-info .img image {
    width: 250rpx;
    height: 250rpx;
    background-color: #f5f5f5;
}

.doctor-info .details {
    color: #fff;
    font-size: 12px;
    margin-left: 30rpx;
}

.doctor-info .details .name {
    font-size: 1.066rem;
    font-weight: bold;
    margin-bottom: 56rpx;
    display: flex;
    justify-content: space-between;
}

.doctor-info .details .name .navigator {
    margin-left: 30rpx;
}

.doctor-info .details .name image {
    height: 42rpx;
    width: 50rpx;
    position: relative;
    top: 6rpx;
}

.doctor-info .details .info-item {
    display: flex;
    margin-top: 16rpx;
}

.doctor-info .details .info-item .item-name {
    margin-right: 40rpx;
    min-width: 2rem;
}

.doctor-info .details .info-item .item-value {
    word-break: break-all;
}

.doctor-about {
    background-color: #fff;
    padding: 70rpx 30rpx;
}

.doctor-about-title {
    margin-bottom: 58rpx;
}

.doctor-about-content {
    text-align: justify;
    line-height: 1.4rem;
}

.projects {
    background-color: #fff;
    margin-top: 50rpx;
}

.doctor-hospital {
    height: 168rpx;
    line-height: 168rpx;
    margin-top: 30rpx;
    background-color: #fff;
}

.doctor-hospital .angle-right {
    background-color: #61d6d8;
    width: 20%;
    color: #fff;
    position: relative;
    line-height: 1.2;
    display: flex;
    align-items: center;
    justify-content: center;
}

.doctor-hospital .angle-right::after {
    content: '';
    display: block;
    width: 0rpx;
    height: 0rpx;
    position: absolute;
    right: -35rpx;
    top: 50%;
    margin-top: -20rpx;
    border: 20rpx solid transparent;
    border-left: 20rpx solid #61d6d8;
}

.doctor-hospital .circle {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    border: 1px solid #f5f5f5;
    margin-right: 20rpx;
}

.doctor-hospital .hospital {
    line-height: 1.2rem;
    height: 168rpx;
    width: 80%;
    padding: 0 30rpx;
    margin-right: 30rpx;
}

.doctor-hospital .hospital .hospital-name {
    font-weight: bold;
}

.doctor-hospital .icon {
    width: 30rpx;
    height: 30rpx;
}

.item-title {
    font-weight: bold;
    margin-left: 50rpx;
    position: relative;
}

.item-title::before {
    content: "";
    display: block;
    background-color: #ff8083;
    height: 100%;
    width: 10rpx;
    position: absolute;
    left: -20rpx;
}

.doctor-relate-diary {
    background-color: #fff;
    margin-top: 30rpx;
    padding: 30rpx 0;
}

.doctor-relate-diary .item-title .value {
    color: #ccc;
    margin-left: 20rpx;
}

.doctor-relate-diary .view-more {
    color: #ff8083;
}

.other-doctor {
    background-color: #fff;
    padding: 30rpx 0 110rpx;
    margin-top: 30rpx;
    position: relative;
}

.other-doctor .item-title {
    margin-bottom: 60rpx;
}

.other-doctor .split-line {
    border-bottom: 1px solid #f5f5f5;
    margin: 20rpx 30rpx 0;
}

.other-doctor .split-line.full {
    width: 100%;
    position: absolute;
    top: 60rpx;
    margin: 40rpx 0 0;
    border-bottom-width: 2px;
    padding-bottom: 10rpx;
}

.consulte {
    position: fixed;
    width: 100vw;
    bottom: 0;
    height: 110rpx;
}

.consulte .icon {
    width: 20%;
    display: flex;
    justify-content: center;
    flex-direction: row;
    align-items: center;
    background-color: #ffc1c1;
}

.consulte .icon image {
    width: 62rpx;
    height: 56rpx;
}

.consulte-btn {
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: 80%;
    color: #fff;
    background-color: #ff8083;
    padding: 0;
    border-radius: 0;
    align-items: center;
}

.bottom-view {
    display: flex;
    flex-direction: row;
    position: fixed;
    bottom: 0rpx;
    height: 110rpx;
    width: 100%;
    background-color: #ff8083;
}

.bottom-left-view {
    width: 140rpx;
    height: 100%;
}

.bottom-left-view image {
    width: 62rpx;
    height: 56rpx;
}

.bottom-left-view {
    background-color: rgba(255,255,255,0.5);
    display: flex;
    justify-content: center;
    align-items: center;
}

.bottom-right-view {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #ff8083;
    flex-grow: 1;
}

.bottom-right-view text {
    font-size: 34rpx;
    color: #fff;
}