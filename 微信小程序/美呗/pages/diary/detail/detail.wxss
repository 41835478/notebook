.diarydetail {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    width: 100vw;
    height: 100vh;
    font-size: 30rpx;
    color: #333;
}

.diary-author {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100vw;
    height: 160rpx;
    padding-top: 30rpx;
    background-color: white;
}

.diary-author-icon {
    margin-left: 30rpx;
    width: 100rpx;
    height: 100rpx;
    border: 2rpx solid rgba(245,245,245,0.3);
    border-radius: 50rpx;
}

.diary-author-nickname {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.diary-content {
    width: 100vw;
    padding: 10rpx 30rpx 30rpx 30rpx;
    font-size: 30rpx;
    background-color: white;
}

.diary-content text {
    line-height: 50rpx;
}

.diary-content-mood {
    float: left;
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}

.diary-other-diary-operater {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100vw;
    height: 100rpx;
    background-color: white;
}

.diary-other-diary-operater button {
    display: flex;
    align-items: center;
    background-color: transparent;
    margin-left: -6rpx;
    margin-right: -6rpx;
    color: #444;
    font-size: 32rpx;
}

.diary-other-diary-operater button[disabled] {
    display: flex;
    align-items: center;
    background-color: transparent;
    margin-left: -6rpx;
    margin-right: -6rpx;
    color: #999;
}

.diary-other-diary-operater image {
    margin-left: 10rpx;
    margin-right: 10rpx;
    width: 17rpx;
    height: 30rpx;
}

.diary-thumbsup {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 20rpx;
    width: 100vw;
    height: 100rpx;
    background-color: white;
    padding: 0rpx 30rpx 0rpx 30rpx;
}

.diary-thumbsup-number {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.diary-thumbsup-list {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 26rpx;
}

.diary-thumbsup-list image {
    width: 60rpx;
    height: 60rpx;
    margin-left: -6rpx;
    border-radius: 30rpx;
    border: solid #f5f5f5 2rpx;
}

.diary-commentnumber {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100vw;
    font-size: 26rpx;
    color: #424242;
    padding: 26rpx;
    padding-left: 0rpx;
    background-color: white;
}

.diary-comment-list {
    display: flex;
    flex-direction: column;
    width: 100vw;
    background-color: white;
}

.diarydetail-scroll {
    height: 90vh;
}

.comment-operate {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100vw;
    height: 10vh;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: white;
}

.comment-operate input {
    margin-left: 30rpx;
    padding-left: 20rpx;
    width: 100vw;
    height: 80rpx;
    background-color: #f5f5f5;
    border-radius: 10rpx;
}

.comment-operate image {
    margin-left: 20rpx;
    margin-right: 30rpx;
    width: 80rpx;
    height: 80rpx;
}

.load-more {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;
    background: #f5f5f5;
    color: #333;
}