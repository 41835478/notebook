.diaryBook {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    width: 100vw;
    height: 100vh;
    font-size: 30rpx;
    color: #333;
}

.diaryBook-author {
    display: flex;
    align-items: center;
    background-color: white;
    height: 120rpx;
    width: 100vw;
}

.diaryBook-author-icon {
    margin-left: 30rpx;
    width: 60rpx;
    height: 60rpx;
    border: 2rpx solid;
    border-radius: 30rpx;
    border-color: #eee;
}

.diaryBook-author-nickname {
    margin-left: 20rpx;
    font-size: 34rpx;
}

.diaryBook-project {
    display: flex;
    flex-direction: column;
    width: 100vw;
    background-color: white;
    margin-top: 20rpx;
}

.diaryBook-project-item {
    display: flex;
    align-items: center;
    width: 100vw;
    height: 88rpx;
    border-bottom: 1rpx #f5f5f5 solid;
}

.diaryBook-project-item1 {
    display: flex;
    align-items: flex-start;
    width: 100vw;
    height: 230rpx;
    padding-top: 12rpx;
}

.diaryBook-project-item-desc {
    margin-left: 30rpx;
    color: #999;
    margin-right: 40rpx;
}

.diaryBook-project-item-content {
    width: 520rpx;
}

.diaryBook-project-item-arrow {
    width: 17rpx;
    height: 30rpx;
}

.diaryBook-project-item-pictures {
    display: flex;
    flex-direction: row;
    width: 550rpx;
    height: 240rpx;
}

.diaryBook-project-item-pictures-item {
    width: 175rpx;
    height: 175rpx;
    margin: 16.25rpx 32.5rpx 16.25rpx 0;
    border-radius: 10rpx;
    background: #f5f5f5;
}

.diaryBook-list {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    width: 100vw;
    height: 100vh;
}