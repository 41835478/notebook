.content-view {
    display: flex;
    flex-direction: column;
}

.list-view {
    margin-top: 123rpx;
}

.flter-view {
    display: flex;
    flex-direction: row;
    width: 100vw;
    height: 103rpx;
    justify-content: center;
    align-items: center;
    background-color: white;
    position: fixed;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}

.flter-item-view {
    width: 33vw;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.flter-item-sub-view {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.flter-item-sub-view text {
    font-size: 26rpx;
    color: #232323;
}

.flter-item-sub-view image {
    width: 18rpx;
    height: 10rpx;
    margin-left: 8rpx;
}

.flter-item-link-view {
    width: 1rpx;
    height: 18rpx;
    background-color: #c4c4c4;
}

.rotateUp {
    transform: rotate(180deg);
}