.content-view {
    display: flex;
    flex-direction: column;
}

.flter-view {
    position: fixed;
    display: flex;
    top: 0;
    flex-direction: row;
    width: 100vw;
    height: 100rpx;
    justify-content: center;
    align-items: center;
    background-color: white;
    z-index: 999;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
}

.flter-item-view {
    width: 50vw;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.flter-item-sub-view {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.flter-item-link-view {
    width: 1rpx;
    height: 30rpx;
    background-color: #c4c4c4;
}

.flter-text {
    font-size: 30rpx;
    color: #232323;
}

.flter-img {
    height: 10rpx;
    width: 18rpx;
    margin-left: 15rpx;
    justify-content: center;
}

.list {
    margin-top: 102rpx;
}

.line {
    background-color: #f5f5f5;
    height: 20rpx;
}

.line-top {
    width: 100%;
    height: 2rpx;
    margin-top: 100rpx;
    position: fixed;
    top: 0;
    background-color: #f5f5f5;
}