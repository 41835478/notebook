.diary-item {
    width: 100%;
}

.diray-inner {
    padding: 30rpx;
}

.header {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.diary-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: #f5f5f5;
}

.user-name {
    margin-left: 20rpx;
}

.user-name text {
    color: #333;
}

.user-name view {
    margin-top: 10rpx;
    color: #999;
    font-size: 13px;
}

.img-contetnt {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0;
    margin-top: 30rpx;
}

.img-contetnt view {
    position: relative;
}

.diary-img {
    width: 330rpx;
    height: 360rpx;
    background: #f5f5f5;
}

.diary-tag-img {
    position: absolute;
    width: 100rpx;
    height: 40rpx;
    left: 0;
    bottom: 0;
}

.diary-content {
    margin-top: 31rpx;
    color: #333;
    margin-bottom: 30rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.diary-operation {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.diary-likes {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.likes-avatar {
    margin-left: -10rpx;
    font-size: 0;
    border: 3rpx solid #fff;
    border-radius: 50%;
}

.likes-avatar:nth-child(1) {
    margin-left: 0;
}

.likes-avatar-img {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}

.likes-num {
    color: #999;
    font-size: 12px;
    margin-left: 20rpx;
}

.rich-bottom {
    width: 100%;
    height: 20rpx;
    background: #f5f5f5;
}

.comments {
    margin-top: 40rpx;
    padding: 30rpx;
    background: #f5f5f5;
    position: relative;
}

.triangle {
    width: 0;
    height: 0;
    position: absolute;
    top: -20rpx;
    right: 20rpx;
    border-bottom: 20rpx solid #f5f5f5;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
}

.comments-more {
    font-size: 13px;
    color: #333;
}

.comments-user {
    font-size: 13px;
    color: #333;
}

.comments-text {
    font-size: 13px;
    color: #999;
}

.comment-item {
    margin-top: 25rpx;
}

.likes-img {
    margin-top: 14rpx;
    width: 45rpx;
    height: 45rpx;
}

.comment-img {
    margin-left: 38rpx;
    width: 50rpx;
    height: 45rpx;
}