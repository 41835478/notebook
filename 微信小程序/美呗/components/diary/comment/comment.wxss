.comment {
    display: flex;
    flex-direction: column;
    width: 100vw;
    padding: 30rpx;
    background-color: white;
    font-size: 30rpx;
    border-bottom: 2rpx solid #f5f5f5;
}

.comment-top {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 60rpx;
}

.comment-author {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.comment-author image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    border: 2rpx solid rgba(245,245,245,0.3);
}

.comment-author text {
    margin-left: 12rpx;
}

.comment-content {
    margin-top: 20rpx;
    color: #666;
}

.comment-parent {
    margin-top: 20rpx;
    position: relative;
}

.triangle {
    width: 0;
    height: 0;
    position: absolute;
    top: -20rpx;
    left: 40rpx;
    border-bottom: 20rpx solid #f5f5f5;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
}

.comment-parent-content {
    margin-top: -2rpx;
    padding: 20rpx;
    background-color: #f5f5f5;
    border-radius: 8rpx;
}

.comment-parent-content-nickname {
    color: #FF8083;
    margin-right: 20rpx;
}