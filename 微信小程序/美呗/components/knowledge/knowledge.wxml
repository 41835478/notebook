<view class="card">
    <view class="container">
        <view class="left-container">
            <text class="title">{{datas.Title}}</text>
            <view class="doctor-container" wx:if="{{datas.DoctorName.length>0&&datas.JobTitle.length>0&&datas.HospitalName.length>0}}">
                <text class="doctor-name">{{datas.DoctorName}}</text>
                <text class="gray-text">{{'/'+datas.JobTitle+'/'+datas.HospitalName}}</text>
            </view>
        </view>
        <image class="image" mode="aspectFill" src="{{datas.ImgUrl}}"></image>
    </view>
    <view class="line"></view>
</view>
