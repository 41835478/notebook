.card {
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: white;
}

.container {
    display: flex;
    flex-direction: row;
    height: 205rpx;
    width: 100%;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 30rpx;
    background-color: white;
}

.left-container {
    display: flex;
    width: 441rpx;
    margin-right: 28rpx;
    flex-direction: column;
    align-self: flex-start;
}

.image {
    align-items: flex-end;
    width: 220rpx;
    height: 150rpx;
    position: relative;
}

.title {
    font-size: 36rpx;
    color: #222;
    min-height: 92rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.doctor-container {
    margin-top: 26rpx;
    display: flex;
    flex-direction: row;
}

.doctor-name {
    font-size: 26rpx;
    color: #1c1c1c;
    line-height: 36rpx;
}

.gray-text {
    font-size: 26rpx;
    left: 0;
    color: #c3c3c3;
    line-height: 36rpx;
    max-width: 340rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.line {
    height: 2rpx;
    background-color: #f5f5f5;
    margin-left: 30rpx;
    margin-right: 30rpx;
}