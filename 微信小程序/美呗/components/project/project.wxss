.modal-project {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 100vh;
    background: #fff;
    z-index: 9999;
}

.modal-header {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    position: relative;
    border-bottom: 1rpx solid #f5f5f5;
}

.close-modal {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    top: 30rpx;
    left: 30rpx;
}

.close-img {
    width: 40rpx;
    height: 40rpx;
}

.flex-left {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.pj1-container {
    width: 260rpx;
    height: calc(100vh - 100rpx);
    background: #f5f5f5;
}

.pj1-item {
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    color: #999;
}

.pjActive {
    background: #fff;
    color: #ff8083;
}

.province-border {
    width: 5rpx;
    height: 100rpx;
    position: absolute;
    left: 0;
    top: 0;
    background: #ff8083;
    display: none;
}

.pjActive .province-border {
    display: block;
}

.pj2-container {
    width: 490rpx;
    height: calc(100vh - 100rpx);
}

.pj2-all {
    background: #ffe7e8;
    color: #ff8083;
    border-radius: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: 200rpx;
    font-size: 14px;
    height: 46rpx;
}

.pj2-inner {
    margin: 30rpx 0 30rpx 30rpx;
}

.pj2-item {
    display: inline-block;
    vertical-align: top;
    border: 1px solid #f5f5f5;
    padding: 8rpx 30rpx;
    border-radius: 20px;
    font-size: 14px;
    color: #999;
    margin: 30rpx 30rpx 0 0;
}