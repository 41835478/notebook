page {
    color: #333;
    font-size: 30rpx;
}

.font-weight-b {
    font-weight: bold;
}

.doctor-item {
    display: flex;
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
    background-color: #fff;
}

.doctor-item .img image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 8rpx;
    background-color: #f5f5f5;
}

.doctor-item .details {
    margin-left: 40rpx;
}

.doctor-item .details .doctor-info {
    margin-bottom: 22rpx;
}

.doctor-item .details .name {
    font-size: 32rpx;
    margin-right: 30rpx;
}

.doctor-item .details .doctor-hospital {
    margin-bottom: 10rpx;
}

.doctor-item .details .case .case-number {
    margin-left: 30rpx;
}