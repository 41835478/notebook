.modal-city {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 100vh;
    background: #fff;
    z-index: 9999;
}

.modal-header {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    position: relative;
    border-bottom: 1rpx solid #f5f5f5;
}

.close-modal {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    top: 30rpx;
    left: 30rpx;
}

.close-img {
    width: 40rpx;
    height: 40rpx;
}

.province-container {
    width: 260rpx;
    height: calc(100vh - 100rpx);
    background: #f5f5f5;
}

.province-item {
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    color: #999;
}

.province-border {
    width: 5rpx;
    height: 100rpx;
    position: absolute;
    left: 0;
    top: 0;
    background: #ff8083;
    display: none;
}

.province-active {
    background: #fff;
    color: #ff8083;
}

.province-active .province-border {
    display: block;
}

.city-container {
    width: 490rpx;
    height: calc(100vh - 100rpx);
}

.city-item {
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    color: #333;
    border-bottom: 1rpx solid #f5f5f5;
}

.flex-left {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}