.sort-view {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    display: flex;
    flex-direction: column;
    width: 100vw;
    height: 100vh;
    background: white;
}

.sort-view-top-bar {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
    background: #f5f5f5;
}

.close-img {
    position: absolute;
    top: 30rpx;
    left: 50rpx;
    width: 40rpx;
    height: 40rpx;
}

.sort-item {
    display: flex;
    align-items: center;
    height: 100rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.sort-item text {
    margin-left: 50rpx;
    font-size: 30rpx;
    color: #333;
}