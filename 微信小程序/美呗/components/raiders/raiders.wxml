<view class="card">
    <view class="image-layout">
        <image class="image" mode="aspectFill" src="{{data.ImgUrl}}"></image>
        <view class="cover-modal"></view>
        <text class="title">{{data.Title}}</text>
    </view>
    <view class="info" wx:if="{{data.DoctorName.length>0&&data.JobTitle.length>0&&data.HospitalName.length>0}}">
        <text class="doctor-name">{{data.DoctorName}}</text>
        <text class="gray-text">{{'/'+data.JobTitle+'/'+data.HospitalName}}</text>
    </view>
</view>
