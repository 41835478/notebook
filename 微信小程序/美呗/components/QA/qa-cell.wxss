@import "../../wxParse/wxParse.wxss";

.qa-cell {
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: white;
    padding: 30rpx;
}

.qa-title {
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.qa-author {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 50rpx;
    margin-top: 50rpx;
}

.qa-author image {
    width: 50rpx;
    height: 50rpx;
    border: 2rpx solid rgba(245,245,245,0.6);
    border-radius: 25rpx;
    background: #F5F5F5;
}

.qa-author text {
    font-size: 26rpx;
    color: #999;
    margin-left: 20rpx;
}

.qa-desc {
    font-size: 28rpx;
    color: #666;
    line-height: 45rpx;
    margin-top: 56rpx;
    letter-spacing: 3rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}