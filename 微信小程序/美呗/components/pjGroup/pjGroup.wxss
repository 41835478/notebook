.modal-pj {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 100vh;
    background: #fff;
    z-index: 9999;
}

.modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 750rpx;
    height: 100rpx;
    position: relative;
    padding: 0 30rpx;
}

.flex-left {
    display: flex;
    justify-content: flex-start;
}

.close-modal {
    width: 100rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.close-img {
    width: 40rpx;
    height: 40rpx;
}

.pj-content {
    background: #f5f5f5;
    height: calc(100vh - 100rpx);
}

.btn-group {
    width: 750rpx;
    display: flex;
    justify-content: flex-end;
    padding-right: 30rpx;
    align-items: center;
    height: 110rpx;
}

.btn-group view {
    width: 120rpx;
    height: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 13px;
    border-radius: 20px;
}

.select-all {
    background: #fe8687;
    color: #fff;
}

.empty-all {
    border: 1px solid #353535;
    margin-left: 20rpx;
}

.selects {
    width: 750rpx;
    height: calc(100vh - 220rpx);
}

.pj-menu-container {
    width: 200rpx;
}

.pj-item-container {
    width: 550rpx;
    background: #fff;
}

.menus {
    height: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.menus-inner {
    text-align: center;
}

.menus-nums {
    width: 45rpx;
    height: 45rpx;
    border-radius: 100%;
    background: #ff8788;
    color: #fff;
    margin: 0 auto;
    font-size: 12px;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.pj-item {
    padding: 30rpx 20rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f5f5f5;
}

.pj-image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    margin-right: 20rpx;
    background-size: 100% 100%;
    position: relative;
}

.pj-desc {
    width: 390rpx;
}

.pj-text {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    color: #999;
    font-size: 14px;
    margin-top: 10rpx;
}

.active {
    color: #fa878c;
}

.checked {
    width: 100rpx;
    height: 100rpx;
}