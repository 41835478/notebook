.play-loading {
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    text-align: center;
}

.play-loading .loading {
    width: 100rpx;
    height: 100rpx;
}

@keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}