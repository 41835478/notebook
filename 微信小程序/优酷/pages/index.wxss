@import "../__wuBaseWxss__/0.wxss";

.updatebar {
    background: #f5f5f5;
    height: 90rpx;
    margin: 0 18rpx 40rpx;
    border-radius: 8rpx;
    display: block;
    text-align: center;
    font-size: 24rpx;
    color: #2b2b2b;
    line-height: 90rpx;
    clear: both;
}

.updatebar .pic {
    width: 17rpx;
    height: 17rpx;
    margin-left: 10rpx;
}

.acircle .pic {
    animation: acircle .5s linear infinite;
}

@keyframes acircle {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(180deg);
    }
}

@import "../__wuBaseWxss__/3.wxss";

@import "../__wuBaseWxss__/1.wxss";

.singlepic {
    padding: 0 0 40rpx;
}

.singlepic .picwrap {
    overflow: hidden;
    margin-bottom: 20rpx;
    position: relative;
}

.singlepic .picwrap .pic {
    display: block;
    width: 100%;
}

.swiper {
    position: relative;
    height: 350rpx;
}

.swiper .swiperitem .slide-image {
    display: block;
    width: 100%;
}

.swiper .swipertitle {
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    width: 100%;
    display: block;
    position: absolute;
    bottom: 40rpx;
    left: 0;
    z-index: 2;
}

text {
    white-space: pre-line;
}

.container {
    width: 750rpx;
    overflow-x: hidden;
}

.border-bottom {
    border-bottom: 2rpx solid #ebebeb;
}

.module-name {
    height: 36rpx;
    line-height: 36rpx;
    font-size: 34rpx;
    font-weight: 700;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    float: left;
}

button {
    border: none;
    padding: 0;
    line-height: 0;
    background-color: #fff;
    border-radius: 0;
}

button::after {
    content: '';
    border: none;
}

.module {
    position: relative;
    padding: 15px 0;
}

.clearfix {
    zoom: 1;
}

.net-cover {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}

.change-recommend {
    padding: 0;
    font-size: 13px;
    font-weight: bolder;
    color: #2692ff;
    display: inline-block;
    position: relative;
}

.gradientbg {
    background: linear-gradient(-180deg,rgba(0,0,0,0) 5%,rgba(0,0,0,0.7) 99%);
    height: 90rpx;
    width: 100%;
    position: absolute;
    bottom: 0;
    z-index: 2;
}

.vtitle {
    color: #000;
    font-size: 28rpx;
    padding-left: 18rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
    line-height: 28rpx;
    height: 28rpx;
}

.vdec {
    color: #999;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-left: 18rpx;
    display: block;
    line-height: 24rpx;
    height: 24rpx;
    padding-top: 10rpx;
}

.item-score {
    font-size: 36rpx;
    font-weight: 600;
    color: #FF6600;
    position: absolute;
    right: 32rpx;
    bottom: 12rpx;
    height: 36rpx;
    z-index: 3;
    line-height: 36rpx;
}

.score-small {
    font-size: 22rpx;
    right: 12rpx;
    height: 24rpx;
    line-height: 23rpx;
}

.drawlist {
    display: flex;
    flex-flow: row wrap;
    width: 762rpx;
    overflow: hidden;
}

.title {
    line-height: 32rpx;
    font-weight: 700;
    margin-top: 40rpx;
    margin-bottom: 30rpx;
    background: url(http://gw.alicdn.com/tfs/TB14wQHXAyWBuNjy0FpXXassXXa-28-28.png) no-repeat 18rpx 8rpx;
    background-size: 28rpx 28rpx;
    background-position-y: 0;
    padding-left: 64rpx;
    color: #000;
    font-size: 32rpx;
}

.playtime {
    font-size: 20rpx;
    color: #f2f2f2;
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    z-index: 3;
}

.drawlist .item-movie {
    width: 372rpx;
    overflow: hidden;
    height: 332rpx;
    margin-right: 6rpx;
    float: left;
}

.drawlist .item-movie .picwrap {
    overflow: hidden;
    margin-bottom: 20rpx;
    position: relative;
}

.drawlist .item-movie .pic {
    display: block;
    width: 100%;
    height: 210rpx;
}

.PHONE_BASE_C .item-movie {
    width: 246rpx;
    height: 492rpx;
}

.PHONE_BASE_C .item-movie .picwrap {
    height: 370rpx;
}

.PHONE_BASE_C .item-movie .pic {
    height: 370rpx;
}

.PHONE_BASE_E {
    position: relative;
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    margin: 40rpx 0 0 0;
}

.PHONE_BASE_E .item-movie-e {
    display: inline-block;
    height: 322rpx;
    width: 354rpx;
    margin-right: 6rpx;
    position: relative;
}

.PHONE_BASE_E .picwrap {
    overflow: hidden;
    margin-bottom: 20rpx;
    position: relative;
    height: 200rpx;
}

.PHONE_BASE_E .pic {
    width: 100%;
    height: 100%;
}

.index-container {
    padding-top: 74rpx;
}

.navwrap {
    background: #fff;
    height: 74rpx;
    padding-top: 13rpx;
    box-sizing: border-box;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 999;
}

.navwrap .nav {
    width: 100%;
    height: 100%;
    display: block;
    display: flex;
    flex-flow: row wrap;
}

.navwrap .nav .item {
    height: 100%;
    flex-direction: column;
    margin: 0 41rpx;
    font-size: 34rpx;
    position: relative;
    font-weight: 500;
}

.navwrap .nav .current {
    color: #2692ff;
}

.navwrap .nav .current .botline {
    width: 26rpx;
    height: 4rpx;
    background: #2692ff;
    position: absolute;
    bottom: 2rpx;
    left: 50%;
    margin-left: -13rpx;
    display: inline-block;
}

.ad-layer {
    margin: 40rpx 0;
    position: relative;
    overflow: hidden;
}

.ad-layer .ad-title {
    margin-top: 20rpx;
}

.ad-layer .ad-picture {
    overflow: hidden;
    position: relative;
    height: 280rpx;
    width: 750rpx;
}

.ad-layer .ad-picture image {
    width: 100%;
    height: 100%;
}

.ad-layer .ad-tips {
    background-color: rgba(0,0,0,0.6);
    font-size: 20rpx;
    color: #f2f2f2;
    position: absolute;
    right: 12rpx;
    top: 12rpx;
    padding: 2rpx 8rpx;
    z-index: 3;
}

.PHONE_AD_B .ad-picture {
    height: 210rpx;
}