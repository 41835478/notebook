@import "../../__wuBaseWxss__/3.wxss";

text {
    white-space: pre-line;
}

.container {
    width: 750rpx;
    overflow-x: hidden;
}

.border-bottom {
    border-bottom: 2rpx solid #ebebeb;
}

.module-name {
    height: 36rpx;
    line-height: 36rpx;
    font-size: 34rpx;
    font-weight: 700;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    float: left;
}

button {
    border: none;
    padding: 0;
    line-height: 0;
    background-color: #fff;
    border-radius: 0;
}

button::after {
    content: '';
    border: none;
}

.module {
    position: relative;
    padding: 15px 0;
}

.clearfix {
    zoom: 1;
}

.net-cover {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}

.change-recommend {
    padding: 0;
    font-size: 13px;
    font-weight: bolder;
    color: #2692ff;
    display: inline-block;
    position: relative;
}

.gradientbg {
    background: linear-gradient(-180deg,rgba(0,0,0,0) 5%,rgba(0,0,0,0.7) 99%);
    height: 90rpx;
    width: 100%;
    position: absolute;
    bottom: 0;
    z-index: 2;
}

.vtitle {
    color: #000;
    font-size: 28rpx;
    padding-left: 18rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
    line-height: 28rpx;
    height: 28rpx;
}

.vdec {
    color: #999;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-left: 18rpx;
    display: block;
    line-height: 24rpx;
    height: 24rpx;
    padding-top: 10rpx;
}

.item-score {
    font-size: 36rpx;
    font-weight: 600;
    color: #FF6600;
    position: absolute;
    right: 32rpx;
    bottom: 12rpx;
    height: 36rpx;
    z-index: 3;
    line-height: 36rpx;
}

.score-small {
    font-size: 22rpx;
    right: 12rpx;
    height: 24rpx;
    line-height: 23rpx;
}

.drawlist {
    display: flex;
    flex-flow: row wrap;
    width: 762rpx;
    overflow: hidden;
}

.title {
    line-height: 32rpx;
    font-weight: 700;
    margin-top: 40rpx;
    margin-bottom: 30rpx;
    background: url(http://gw.alicdn.com/tfs/TB14wQHXAyWBuNjy0FpXXassXXa-28-28.png) no-repeat 18rpx 8rpx;
    background-size: 28rpx 28rpx;
    background-position-y: 0;
    padding-left: 64rpx;
    color: #000;
    font-size: 32rpx;
}

.playtime {
    font-size: 20rpx;
    color: #f2f2f2;
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    z-index: 3;
}

.drawlist .item-movie {
    width: 372rpx;
    overflow: hidden;
    height: 332rpx;
    margin-right: 6rpx;
    float: left;
}

.drawlist .item-movie .picwrap {
    overflow: hidden;
    margin-bottom: 20rpx;
    position: relative;
}

.drawlist .item-movie .pic {
    display: block;
    width: 100%;
    height: 210rpx;
}

.PHONE_BASE_C .item-movie {
    width: 246rpx;
    height: 492rpx;
}

.PHONE_BASE_C .item-movie .picwrap {
    height: 370rpx;
}

.PHONE_BASE_C .item-movie .pic {
    height: 370rpx;
}

.PHONE_BASE_E {
    position: relative;
    overflow: auto;
    width: 100%;
    box-sizing: border-box;
    margin: 40rpx 0 0 0;
}

.PHONE_BASE_E .item-movie-e {
    display: inline-block;
    height: 322rpx;
    width: 354rpx;
    margin-right: 6rpx;
    position: relative;
}

.PHONE_BASE_E .picwrap {
    overflow: hidden;
    margin-bottom: 20rpx;
    position: relative;
    height: 200rpx;
}

.PHONE_BASE_E .pic {
    width: 100%;
    height: 100%;
}

.member-container .member-userbg {
    width: 100%;
    height: 280rpx;
    display: block;
}

.member-container .member-info {
    width: 100%;
    height: 280rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.member-container .member-user {
    position: absolute;
    top: 50%;
    left: 50%;
    display: block;
    transform: translate(-50%,-50%);
    text-align: center;
}

.member-container .user-picwrap {
    height: 120rpx;
    width: 120rpx;
    position: relative;
    display: block;
}

.member-container .user-pic {
    height: 100%;
    width: 100%;
    border-radius: 50%;
}

.member-container .user-login {
    font-weight: bold;
    font-size: 30rpx;
    color: #000000;
    line-height: 32rpx;
    margin-top: 21rpx;
    background: none;
    z-index: 3;
    position: relative;
    width: 100%;
}

.member-container .history-layer {
    margin: 40rpx 0 30rpx 30rpx;
}

.member-container .history-title {
    color: #333;
    font-size: 28rpx;
    line-height: 34rpx;
    overflow: hidden;
    position: relative;
}

.member-container .history-more {
    background: url('http://img.alicdn.com/tfs/TB1jOYDigmTBuNjy1XbXXaMrVXa-16-16.png') no-repeat;
    transform: rotate(-90deg);
    width: 20rpx;
    height: 20rpx;
    background-size: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    right: 30rpx;
}

.member-container .history-item-layer {
    display: inline-block;
    position: relative;
    box-sizing: border-box;
    margin: 40rpx 0 0 0;
}

.member-container .history-item {
    width: 224rpx;
    margin-right: 6rpx;
    margin-bottom: 16rpx;
    position: relative;
}

.member-container .history-item-image {
    width: 100%;
    height: 126rpx;
    display: block;
}

.member-container .history-item-title {
    color: #000000;
    letter-spacing: 0;
    font-size: 26rpx;
    line-height: 36rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    width: 224rpx;
}