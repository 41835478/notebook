@import "../../components/common_qa/common_qa.wxss";

.question-list-item {
    font-size: 30rpx;
}

.list-title {
    font-size: 30rpx;
}

.self-service {
    position: relative;
}

.self-service .self-service-list {
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;
    background-color: #fff;
    font-size: 0;
}

.self-service .self-service-list .list-item {
    position: relative;
    display: inline-block;
    width: 250rpx;
    height: 238rpx;
    font-size: 28rpx;
    color: #151516;
    text-align: center;
    overflow: hidden;
    border-right: 1rpx solid #ededed;
}

.self-service .self-service-list .list-item .list-item-img {
    position: relative;
    margin-top: 60rpx;
    width: 54rpx;
    height: 54rpx;
}

.self-service .self-service-list .list-item .list-item-text {
    display: block;
    position: relative;
    width: 100%;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 28rpx;
    color: #151516;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.all-questions {
    font-size: 28rpx;
    text-align: right;
    padding-right: 40rpx;
    margin-top: -12rpx;
}

.all-questions::after {
    content: '\e65f';
    font-family: "icomoon";
    font-smoothing: antialiased;
    font-size: 24rpx;
    color: #58595b;
    line-height: 1;
    position: relative;
    left: 14rpx;
}