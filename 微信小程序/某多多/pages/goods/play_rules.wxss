.play-rules-container {
    position: relative;
    width: 100%;
    margin-top: 16rpx;
    background-color: #fff;
    color: #151516;
}

.rules-title {
    height: 74rpx;
    line-height: 74rpx;
    border-bottom: 1px solid #f2f2f2;
    font-size: 26rpx;
    text-align: left;
    margin: 0 20rpx;
}

.rules-flow {
    padding: 30rpx 32rpx;
    display: flex;
    justify-content: space-between;
}

.play-rules-item {
    position: relative;
    padding-left: 56rpx;
    font-size: 22rpx;
    color: #58595b;
}

.play-rules-item.item0::before {
    background-position: 0 0;
}

.play-rules-item.item1::before {
    background-position: -50rpx 0;
}

.play-rules-item.item2::before {
    background-position: -100rpx 0;
}

.play-rules-item.item3::before {
    background-position: -148rpx 0;
}

.play-rules-item::before {
    content: "";
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    background-image: url('http://pinduoduoimg.yangkeduo.com/wxapp/play_rules_sprites.png');
    background-repeat: no-repeat;
    background-size: 186rpx 36rpx;
}

.play-rules-item view {
    width: 100rpx;
    text-align: left;
    height: 28rpx;
    line-height: 28rpx;
}