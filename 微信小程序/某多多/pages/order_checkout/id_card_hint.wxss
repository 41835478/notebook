.bg-fill {
    background-color: rgba(0,0,0,0.7);
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    position: fixed;
    z-index: 202;
}

.id-card-hint-container {
    position: fixed;
    width: 82%;
    left: 50%;
    top: 50%;
    z-index: 203;
    transform: translate3d(-50%,-50%,0);
}

.id-card-hint-head {
    width: 100%;
    min-height: 90rpx;
}

.id-card-hint-container .id-card-hint-body {
    padding: 36rpx;
    background-color: #fff;
    border-radius: 0 0 8px 8px;
}

.id-card-hint-body .hint-item {
    margin-top: 10px;
    position: relative;
    font-size: 13px;
    padding-left: 22px;
    line-height: 21px;
    color: #333;
}

.hint-item-index {
    display: inline-block;
    position: absolute;
    font-size: 12px;
    font-weight: bold;
    left: 0;
    top: 3px;
    width: 16px;
    height: 16px;
    line-height: 19px;
    border-radius: 50%;
    background-color: #ffdd00;
    text-align: center;
}

.id-card-hint-body .confirm-btn {
    font-size: 13px;
    color: #333;
    height: 28px;
    line-height: 28px;
    background-color: #fff5b2;
    border-radius: 3px;
    margin-top: 36rpx;
    text-align: center;
}

.id-card-hint-container .close-button {
    position: absolute;
    top: -22px;
    right: -22px;
    padding: 15px;
}

.id-card-hint-container .close-button image {
    display: block;
    width: 24px;
    height: 24px;
}