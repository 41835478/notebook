@import "../../components/mall_coupon_toast/mall_coupon_toast.wxss";

.mall-coupons-list {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.7);
    z-index: 215;
}

.mall-coupons-main {
    position: fixed;
    width: 100%;
    height: 786rpx;
    bottom: -936rpx;
    background-color: #fff;
    transition: bottom 150ms ease-in-out 150ms;
}

.rei-mall-coupons-list .mall-coupons-main {
    height: 762rpx;
}

.mall-coupons-main-up {
    bottom: 0;
}

.mall-coupons-main-down {
    bottom: -936rpx;
}

.mall-coupons-title-container {
    position: relative;
    width: 100%;
    padding: 31rpx 20rpx;
    border-bottom: #ECECEC solid 1px;
    font-size: 36rpx;
    color: #000000;
    text-align: center;
}

.rei-mall-coupons-list .mall-coupons-title-container {
    padding: 22rpx 20rpx;
}

.mall-coupons-title-m {
    height: auto;
    text-align: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding: 0 100rpx;
    line-height: 48rpx;
}

.mall-coupons-close {
    position: absolute;
    display: inline-block;
    padding: 20rpx 30rpx;
    top: 11rpx;
    right: 3rpx;
}

.mall-coupons-close:before {
    content: "\e61d";
    font-size: 24rpx;
    color: #939393;
    font-family: "icomoon";
    font-weight: normal;
    font-smoothing: antialiased;
}

.rei-mall-coupons-list .mall-coupons-close {
    top: -2rpx;
}

.mall-coupon-container {
    position: relative;
    width: 100%;
    height: 680rpx;
    padding: 0 20rpx;
    overflow-y: auto;
}

.rei-mall-coupons-list .mall-coupon-container {
    height: 674rpx;
}

.mall-coupon {
    display: flex;
    width: 100%;
    padding: 31rpx 0 28rpx;
    text-align: left;
    border-bottom: #ECECEC solid 1px;
    align-items: center;
}

.mall-coupon .mall-coupon-left {
    width: 27%;
}

.mall-coupon-left .mall-coupon-discount {
    text-align: center;
    color: #DC2F21;
    font-size: 62rpx;
    font-weight: 600;
}

.mall-coupon-left .mall-coupon-discount .unit {
    font-size: 36rpx;
    font-weight: normal;
}

.mall-coupon-left .merchandise-color {
    color: #FBAC31;
}

.mall-coupon .mall-coupon-middle {
    width: 53%;
    padding-left: 2rpx;
    text-align: left;
}

.mall-coupon-middle .mall-coupon-min {
    line-height: 41rpx;
    font-size: 29rpx;
    color: #565759;
}

.mall-coupon-middle .mall-coupon-expire {
    line-height: 36rpx;
    font-size: 25rpx;
    color: #9B9B9B;
}

.mall-coupon-middle .mall-coupon-expire .date {
    font-size: 24rpx;
}

.mall-coupon .mall-coupon-right {
    width: 20%;
    text-align: right;
    font-size: 29rpx;
    padding-right: 4rpx;
}

.mall-coupon-right .get-coupon-btn {
    display: inline-block;
    line-height: 56rpx;
    color: #C43934;
    text-align: center;
    width: 114rpx;
    border: 1px solid #C43934;
    border-radius: 8rpx;
}

.mall-coupon-right .merchandise-view {
    color: #FBAC31;
    border: 1px solid #FBAC31;
}

.mall-coupon-right .coupon-btn-disable {
    color: #9B9B9B;
    line-height: 59rpx;
    width: 100rpx;
    text-align: center;
    display: inline-block;
}

.oc-m-coupons-unselected:after {
    content: "";
    position: absolute;
    display: inline-block;
    width: 48rpx;
    height: 48rpx;
    top: 44rpx;
    right: 10rpx;
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/order_checkout_sprites.png") no-repeat;
    background-size: 428rpx 200rpx;
    background-position: -154rpx 4rpx;
}