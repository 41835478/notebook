.local-group-container {
    font-size: 0;
    padding: 0 25rpx 20rpx;
    background-color: white;
}

.local-group-content {
    background-color: #fdebe9;
    padding: 0 28rpx;
    border-radius: 10rpx;
}

.local-group-content button {
    line-height: 40rpx;
}

.local-group-content button::after {
    content: none;
}

.local-group-tips {
    text-align: center;
    font-size: 26rpx;
    color: rgba(224,46,36,0.8);
    padding-top: 12rpx;
    line-height: 36rpx;
}

.local-group-tips text {
    display: inline-block;
    vertical-align: middle;
}

.local-group-tips .tips_icon {
    width: 96rpx;
    height: 1px;
    background-color: rgba(224,46,36,0.2);
}

.local-group-tips .tips_title {
    padding: 0 12rpx;
}

.local-group-item {
    position: relative;
    border-bottom: 1px solid #e0e0e0;
    padding: 20rpx 0 28rpx;
    display: table;
    table-layout: fixed;
    width: 100%;
    background-color: #fdebe9;
}

.local-group-item .item {
    display: table-cell;
    vertical-align: middle;
}

.group-item-no-border {
    border-bottom: none;
}

.local-group-item .head_pic {
    width: 88rpx;
}

.local-group-img {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    will-change: transform;
}

.local-group-item .name {
    padding: 0 10rpx;
    width: 200rpx;
    font-size: 30rpx;
    color: #151516;
    text-align: left;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.local-group-item .left_info {
    width: 160rpx;
    text-align: right;
    padding-right: 4px;
}

.local-group-item .left_info .local-group-left-num {
    font-size: 26rpx;
    color: #151516;
    overflow: hidden;
    line-height: 36rpx;
}

.local-group-item .left_info .num {
    color: #e02E24;
}

.local-group-item .left_info .local-group-left-time {
    margin-top: 2rpx;
    font-size: 20rpx;
    color: #58595b;
    overflow: hidden;
    font-family: Helvetica;
    line-height: 30rpx;
}

.local-group-item .local-group-btn-area {
    width: 136rpx;
    text-align: right;
}

.local-group-item .local-group-btn-area .local-group-btn {
    padding: 10rpx 26rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    border-radius: 6rpx;
    background-color: #e02E24;
    display: inline-block;
    line-height: 40rpx;
}

.local-group-detial {
    position: relative;
    width: 384rpx;
    height: 68rpx;
    float: left;
}