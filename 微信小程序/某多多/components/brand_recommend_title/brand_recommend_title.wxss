.brand-recommend-title {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 16rpx;
    font-size: 32rpx;
    height: 88rpx;
    background: #ffffff;
}

.no-content {
    height: 0;
}

.brand-recommend-content {
    display: flex;
    position: relative;
    left: 26rpx;
    align-items: center;
}

.brand-recommend-text {
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #151516;
    display: flex;
    align-items: center;
}

.brand-recommend-text::before {
    font-family: icomoon;
    display: flex;
    align-items: center;
    content: '\e680';
    position: absolute;
    font-size: 36rpx;
    left: -52rpx;
    color: #8f638a;
}