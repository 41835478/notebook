#subject-scroll-container {
    position: relative;
    width: 100%;
    height: 432rpx;
    margin-bottom: 16rpx;
    background-color: #fff;
}

.margin-top-16rpx {
    margin-top: 16rpx;
}

#subject-scroll-container .scroll-head {
    position: relative;
    width: 100%;
    height: 88rpx;
    padding: 0 20rpx;
    overflow: hidden;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
}

#subject-scroll-container .scroll-head .title {
    color: #151516;
    font-size: 30rpx;
    float: left;
    height: 88rpx;
    line-height: 88rpx;
    max-width: 550rpx;
    overflow: hidden;
    -webkit-line-clamp: 1;
    word-break: break-all;
    word-wrap: break-word;
    -webkit-box-orient: vertical;
    white-space: normal;
    text-align: left;
    text-overflow: clip;
}

#subject-scroll-container .scroll-head .read-more {
    color: #9c9c9c;
    font-size: 26rpx;
    height: 26rpx;
    line-height: 26rpx;
    position: relative;
    left: 4rpx;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
}

#subject-scroll-container .scroll-head .read-more .read-more-text {
    width: 110rpx;
    height: 26rpx;
    line-height: 26rpx;
}

#subject-scroll-container .scroll-head .read-more .icon-arrow-read-more {
    font-size: 24rpx;
    margin-left: 8rpx;
    width: 24rpx;
    height: 26rpx;
    line-height: 26rpx;
}

.subject-goods-scroll {
    width: 100%;
    padding-right: 20rpx;
    white-space: nowrap;
    height: 344rpx;
}

.subject-goods-scroll .goods-item {
    padding: 0!important;
    width: 240rpx;
    height: 344rpx;
    margin-left: 20rpx;
    display: inline-block;
    vertical-align: top;
    background-color: white;
}

.subject-goods-scroll .goods-item .goods-img {
    width: 240rpx;
    height: 240rpx;
    margin-bottom: 14rpx;
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/default_square.png") no-repeat;
    background-size: contain;
}

.subject-goods-scroll .goods-item .short-name {
    color: #58595b;
    font-size: 26rpx;
    width: 100%;
    height: 26rpx;
    line-height: 28rpx;
    margin-bottom: 18rpx;
    overflow: hidden;
    -webkit-line-clamp: 1;
    word-break: break-all;
    word-wrap: break-word;
    -webkit-box-orient: vertical;
    white-space: normal;
    text-align: left;
    text-overflow: clip;
}

.subject-goods-scroll .goods-item .goods-price {
    color: #e02e24;
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    line-height: 40rpx;
}