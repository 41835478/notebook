.subjects-recommend-container {
    width: 100%;
    background-color: #fff;
    position: relative;
    margin-top: 8rpx;
    padding-top: 28rpx;
    margin-bottom: -8rpx;
    text-align: center;
}

.ss-recommend-header-title {
    position: relative;
    display: inline-block;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #151516;
    margin-left: 46rpx;
}

.ss-recommend-header-title::before {
    content: "\e66d";
    font-size: 32rpx;
    color: #e02e24;
    font-family: "icomoon";
    font-weight: normal;
    -webkit-font-smoothing: antialiased;
    position: absolute;
    left: -46rpx;
}

.ss-recommend-header-subtitle {
    text-align: center;
    font-size: 22rpx;
    line-height: 22rpx;
    padding-top: 10rpx;
    padding-bottom: 24rpx;
    color: #9c9c9c;
}

.recommend-goods-container {
    height: 386rpx;
    overflow-y: hidden;
}

.recommend-goods-grid:first-child {
    margin-left: 12rpx!important;
}

.recommend-goods-grid {
    height: 386rpx;
    position: relative;
    display: inline-block;
    border-radius: 2px;
    padding: 0!important;
    background-color: white;
    overflow: visible;
}

.recommend-goods-grid .recommend-goods-img {
    position: relative;
    overflow: hidden;
}

.recommend-goods-grid .recommend-goods-img image {
    width: 240rpx;
    height: 240rpx;
    border-radius: 2px 2px 0 0;
}

.recommend-goods-grid .recommend-goods-name {
    position: relative;
    color: #151516;
    font-size: 24rpx;
    width: 240rpx;
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
    -webkit-line-clamp: 1;
    word-break: break-all;
    word-wrap: break-word;
    -webkit-box-orient: vertical;
    white-space: normal;
    text-align: center;
    text-overflow: clip;
}

.recommend-goods-grid .recommend-goods-price {
    height: 32rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -webkit-flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
}

.recommend-goods-grid .recommend-goods-price {
    font-size: 32rpx;
    color: #e02e24;
}

.recommend-goods-grid .recommend-goods-price .recommend-price i {
    font-size: 28rpx;
}

.recommend-goods-grid .recommend-goods-price .recommend-price-desc {
    color: #9c9c9c;
    font-size: 24rpx;
    height: 24rpx;
    line-height: 28rpx;
    margin-top: -2rpx;
}

.recommend-price {
    padding-right: 8rpx;
}

.recommend-price-desc {
    text-decoration: line-through;
}

.recommend-goods-scroll {
    width: 100%;
    height: 416rpx;
    white-space: nowrap;
}

.ss-header-subtitle {
    text-align: center;
    font-size: 22rpx;
    line-height: 22rpx;
    padding-top: 10rpx;
    padding-bottom: 24rpx;
    color: #9c9c9c;
}

.delete-margin-top {
    margin-top: 0;
}