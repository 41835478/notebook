.subject-scroll-container-new {
    position: relative;
    width: 100%;
    background-color: #fff;
}

.margin-top-16rpx {
    margin-top: 16rpx;
}

.subject-goods-scroll-new {
    width: 100%;
    padding: 22rpx 0 40rpx 0;
    white-space: nowrap;
}

.scroll-brand-wrap {
    width: 100%;
    height: 292rpx;
    position: relative;
}

.scroll-brand-wrap-mask {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    box-shadow: 0 0 4px rgba(0,0,0,.1);
}

.logo-wrap {
    position: absolute;
    width: 112rpx;
    height: 112rpx;
    top: 20rpx;
    left: 20rpx;
    border: 1px solid #ededed;
    border-radius: 2px;
}

.brand-main-wrap {
    position: absolute;
    top: 46rpx;
    left: 24rpx;
}

.brand-content-wrap-logo-img {
    position: absolute;
    width: 92rpx;
    height: 92rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.scroll-brand-wrap-bg-img {
    width: 100%;
    height: 100%;
}

.brand-content-wrap {
    width: 390rpx;
    height: 152rpx;
    background-color: white;
    position: relative;
    border-radius: 8rpx 8rpx 0 0;
}

.brand-content-wrap-subject {
    position: absolute;
    line-height: 34rpx;
    font-size: 32rpx;
    height: 32rpx;
    top: 40rpx;
    left: 152rpx;
    max-width: 260rpx;
    overflow: hidden;
    color: #222121;
}

.brand-content-wrap-desc {
    position: absolute;
    line-height: 30rpx;
    font-size: 26rpx;
    height: 34rpx;
    top: 82rpx;
    left: 152rpx;
    max-width: 260rpx;
    overflow: hidden;
    color: #58595B;
}

.brand-tip-wrap {
    width: 390rpx;
    height: 50rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #ffffff;
    border-radius: 0 0 8rpx 8rpx;
}

.new-goods {
    background-color: rgba(10,55,13,0.7);
}

.more-than-one-day {
    background-color: rgba(143,27,21,0.7);
}

.less-than-one-day {
    background-color: rgba(143,27,21,0.7);
}

.left-time {
    color: #FFDD2B;
    font-size: 36rpx;
    margin: 0 5rpx;
}

.triangle {
    position: absolute;
    bottom: -4px;
    left: 50rpx;
    width: 20px;
    height: 20px;
    border-width: 10px;
    border-style: solid;
    border-color: transparent transparent white transparent;
}

.scroll-new-goods-item {
    padding: 0!important;
    width: 180rpx;
    height: 282rpx;
    margin-left: 30rpx;
    display: inline-block;
    vertical-align: top;
    background-color: white;
}

.scroll-new-goods-img {
    width: 180rpx;
    height: 180rpx;
    margin-bottom: 18rpx;
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/default_square.png") no-repeat;
    background-size: contain;
}

.scroll-new-goods-name {
    color: #151516;
    font-size: 24rpx;
    width: 100%;
    height: 24rpx;
    line-height: 24rpx;
    margin-bottom: 6rpx;
    overflow: hidden;
    word-break: break-all;
    word-wrap: break-word;
    white-space: normal;
    text-align: center;
    text-overflow: clip;
    margin-top: 12rpx;
}

.scroll-new-goods-price {
    color: #e02e24;
    width: 100%;
    text-align: center;
    line-height: 40rpx;
}

.scroll-new-price {
    font-size: 30rpx;
}

.scroll-new-currency-price {
    font-size: 24rpx;
}

.scroll-new-market-price::before {
    position: absolute;
    width: 100%;
    height: 1px;
    background-color: #9c9c9c;
    bottom: 10rpx;
    content: '';
}

.scroll-new-market-price {
    font-size: 20rpx;
    position: relative;
    color: #9c9c9c;
}

.scroll-new-currency-market-price::before {
    position: absolute;
    width: 100%;
    height: 1px;
    background-color: #9c9c9c;
    bottom: 10rpx;
    content: '';
}

.scroll-new-currency-market-price {
    position: relative;
    font-size: 16rpx;
    color: #9c9c9c;
    margin-left: 10rpx;
}

.check-more-button {
    margin-right: 30rpx;
}

.scroll-new-check-more {
    display: flex;
    background-color: #f5f5f5;
    height: 282rpx;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.check-more-text {
    height: 36rpx;
    font-size: 26rpx;
    color: #58595b;
    margin-bottom: 6rpx;
}

.check-more-text-en {
    font-size: 22rpx;
    hight: 32rpx;
    color: #cccccc;
}