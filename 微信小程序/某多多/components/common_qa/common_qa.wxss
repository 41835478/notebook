.list-title {
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 10px;
}

.common-qa-list {
    height: auto;
}

.item-group {
    background-color: white;
    height: auto;
    margin-bottom: 8px;
}

.question-list-item {
    height: 90rpx;
    line-height: 90rpx;
    display: block;
    position: relative;
    font-size: 32rpx;
}

.item-icon {
    margin-left: 8px;
    position: relative;
    top: 25rpx;
    width: 40rpx;
    height: 40rpx;
}

.question-list-item::before {
    content: "\e617";
    font-size: 24rpx;
    color: #9c9c9c;
    font-family: "icomoon";
    line-height: 1;
    font-weight: normal;
    font-smoothing: antialiased;
    position: absolute;
    top: 34rpx;
    right: 20rpx;
}

.separator-line {
    position: absolute;
    height: 1px;
    background-color: #ededed;
    bottom: 0;
    left: 8px;
    right: 0px;
}