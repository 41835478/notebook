.load-more-bar {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0 40rpx 0 40rpx;
}

.load-more-line {
    display: flex;
    width: 180rpx;
    height: 1rpx;
    color: black;
    align-self: center;
    position: relative;
    flex-grow: 1;
}

.load-more-line::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 0;
    border-top: 1px solid #e6e6e6;
}

.load-more-btn {
    position: relative;
    height: 90rpx;
    line-height: 90rpx;
    background-color: transparent;
    border-width: 0!important;
    font-size: 26rpx;
    color: #555!important;
    text-align: center;
    vertical-align: center;
    flex-grow: 0;
    padding-left: 24rpx;
    padding-right: 24rpx;
}

.load-more-btn::before {
    width: 50rpx!important;
    height: 50rpx!important;
}

.load-more-btn-draw-result {
    color: white;
    font-size: 26rpx;
    padding: 0 20rpx;
}

.fix-ipx-load-more {
    height: 158rpx!important;
    padding-bottom: 68rpx;
}