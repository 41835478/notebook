.edit-address-container {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(60,60,60,0.9);
    z-index: 300;
}

.m-addr-main {
    position: fixed;
    top: 5%;
    left: 6.5%;
    width: 87%;
    border-radius: 16rpx;
    background-color: #fff;
    text-align: center;
    color: #151516;
    font-size: 0;
}

.m-addr-title {
    position: relative;
    height: 102rpx;
    line-height: 100rpx;
    font-size: 34rpx;
    border-bottom: 1px solid #ededed;
    color: #272727;
}

.m-addr-name,.m-addr-mobile,.m-addr-region {
    position: relative;
    left: 10px;
    height: 90rpx;
    line-height: 90rpx;
    text-align: left;
    font-size: 30rpx;
    width: calc(100% - 10px);
    border-bottom: 1px solid #ededed;
}

.normal-input {
    position: absolute;
    left: 22%;
    top: 0;
    width: 78%;
    display: inline-block;
    overflow: visible!important;
    height: 90rpx;
}

.address-picker {
    position: absolute;
    left: 22%;
    top: 0;
    width: 78%;
    display: inline-block;
    height: 90rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.placeholder-color {
    color: rgb(128,128,128);
}

.m-addr-address {
    position: relative;
    left: 10px;
    text-align: left;
    font-size: 30rpx;
    width: calc(100% - 10px);
    text-align: left;
    height: 130rpx;
    word-wrap: break-word;
}

.location-icon {
    position: absolute;
    top: 0;
    padding-top: 10px;
    padding-right: 15px;
    right: 0;
    text-align: center;
    height: 100rpx;
}

.location-icon::before {
    content: "\e615";
    color: black;
    font-family: "icomoon";
    line-height: 1;
    font-size: 42rpx;
    font-weight: normal;
    -webkit-font-smoothing: antialiased;
}

.normal-textarea {
    position: absolute;
    left: 21%;
    top: 0;
    width: 68%;
    display: inline-block;
    height: 90rpx;
}

.m-addr-close {
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    padding: 28rpx 30rpx 30rpx 28rpx;
    top: -44rpx;
    right: -44rpx;
    box-sizing: border-box;
}

.ms-addr-close-icon {
    position: relative;
    width: 100%;
    height: 100%;
    background: url(http://pinduoduoimg.yangkeduo.com/wxapp/address_v1.png) no-repeat;
    background-size: 300rpx 150rpx;
    background-position: -228rpx 0;
}

.input-error {
    color: red;
}

.m-addr-main .m-addr-save {
    position: relative;
    display: inline-block;
    width: 91%;
    height: 86rpx;
    line-height: 86rpx;
    margin: 10rpx 0 20rpx 0;
    font-size: 34rpx;
    color: #fff;
    background-color: #e02e24;
    border-radius: 10rpx;
}

.regions-container {
    position: fixed;
    width: 100%;
    bottom: -350px;
    z-index: 420;
    background-color: #fff;
    transition: bottom 150ms ease-in-out 150ms;
}

.regions-picker {
    width: 100%;
    font-size: 34rpx;
    height: 190px;
}

.recomend-location-title {
    text-align: center;
    font-size: 30rpx;
    line-height: 60rpx;
}

.recommend-list-view {
    width: 100%;
    font-size: 34rpx;
    height: 440rpx;
}

.recommend-main-title {
    width: 90%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 14px;
    font-weight: bold;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.recommend-sub-title {
    width: 90%;
    font-size: 12px;
    height: 38rpx;
    color: #999;
    line-height: 38rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.recommend-item {
    position: relative;
    left: 10px;
    height: 96rpx;
    line-height: 96rpx;
    border-bottom: 1px solid #ededed;
}

.icon-arrows-right {
    position: absolute;
    right: 15px;
    text-align: center;
    font-size: 24rpx;
    color: #9c9c9c;
    font-family: icomoon;
}

.picker-topbar {
    width: 100%;
    background-color: #f5f5f5;
    overflow: hidden;
}

.picker-topbar .picker-cancel {
    font-size: 16px;
    float: left;
    padding: 17px 27px;
    color: #999;
}

.picker-topbar .picker-confirm {
    font-size: 16px;
    float: right;
    padding: 17px 27px;
    color: #09bb07;
}

.picker-view-show {
    bottom: 0!important;
}

.picker-view-hide {
    bottom: -700rpx!important;
}