@import "search/index.wxss";

.cancelText {
    position: relative;
    color: #3388FF;
    font-size: 28rpx;
    padding-left: 30rpx;
    width: 10%;
    padding-top: 15rpx;
}

.selectGoodsText {
    background: #ededed;
    color: #666;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
}

.searchImage {
    width: 30rpx;
    height: 30rpx;
    padding-top: 18rpx;
    padding-left: 33%;
}

.searchCityBg {
    width: 100%;
    height: 80rpx;
    background: red;
}

.searchCityBgView {
    width: 100%;
    height: 80rpx;
    background: red;
}

.searchLetter {
    position: fixed;
    right: -100;
    width: 40rpx;
    text-align: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    z-index: 1;
}

.searchLetter view {
    margin-top: 20rpx;
}

.touchClass {
    background-color: #fff;
    color: #fff;
    padding-top: 46rpx;
}

.hotCityIndex {
    color: #3388FF;
    font-size: 25rpx;
    margin: 0!important;
}

.showSelectLetter {
    background-color: rgba(0,0,0,0.5);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 50%;
    left: 50%;
    margin: -50rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 20rpx;
    font-size: 52rpx;
    z-index: 1;
}

.city-common {
    font-size: 24rpx;
    color: #999999;
    padding: 0 0 0 30rpx;
}

.thisCity {
    padding-top: 30rpx;
}

.locationCityName {
    display: inline-block;
    border: 1rpx solid #BBBBBB;
    border-radius: 4rpx;
    padding: 10rpx 0;
    font-size: 24rpx;
    color: #666666;
    text-align: center;
    min-width: 112rpx;
    background-color: #FFFFFF;
    margin: 20rpx 0 20rpx 30rpx;
}

.weui-grid {
    position: relative;
    float: left;
    padding: 10rpx 0;
    width: 112rpx;
    box-sizing: border-box;
    border: 1rpx solid #BBBBBB;
    border-radius: 4rpx;
    background-color: #FFFFFF;
    margin: 20rpx 0 20rpx 30rpx;
}

.weui-grid_label {
    display: block;
    text-align: center;
    color: #666666;
    font-size: 24rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.selection {
    display: flex;
    width: 100%;
    flex-direction: column;
}

.item_letter {
    display: flex;
    background-color: #f5f5f5;
    height: 40rpx;
    padding-left: 34rpx;
    align-items: center;
    font-size: 24rpx;
    color: #666;
}

.item_city {
    display: flex;
    background-color: #fff;
    height: 100rpx;
    padding-left: 34rpx;
    align-items: center;
    border-bottom: 1rpx solid #ededed;
    border-left: 34rpx;
    font-size: 24rpx;
    color: #666;
}

.slectCity {
    border-color: #2ab4ff!important;
}

.slectCity view {
    color: #2ab4ff!important;
}

.search_containerView {
    background: #F8F8F8;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 16rpx;
    padding-bottom: 16rpx;
    border-bottom: 1rpx solid #E5E5E5;
}

.search_view_containerView {
    border: 1rpx solid #E6E6EA;
    border-radius: 8rpx;
    height: 56rpx;
    text-align: center;
    background: white;
}

.search_view_imageView {
    width: 32rpx;
    height: 32rpx;
    padding-left: 38%;
    padding-top: 14rpx;
    float: left;
}

.search_view_textView {
    margin-left: 10rpx;
    font-size: 28rpx;
    color: #999;
    height: 56rpx;
    text-align: center;
    line-height: 56rpx;
    float: left;
}

.searchAdressBg {
    display: flex;
    background-color: #F8F8F8;
    border-bottom: #E6E6EA solid;
    border-width: 2rpx;
}

.searchInputBg {
    width: 100%;
    height: 86rpx;
}