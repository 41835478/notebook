.zan-btn.disabled-btn {
    background: #eee;
    color: #bbb;
}

.good-info__pay-info {
    position: relative;
}

.goods-desc {
    line-height: 17px;
    word-break: break-all;
}

.share-image__icon {
    width: 38px;
    height: 38px;
}

.share-image__icon image {
    width: 100%;
    height: 100%;
}

.goods-title__container {
    display: flex;
}

.goods-share__btn {
    width: 55px;
}

.goods-header {
    flex: 1;
    margin-bottom: 12px;
}

.goods-title {
    margin-bottom: 8px;
    word-break: break-all;
}

.goods-info-panel {
    background-color: #fff;
}

.goods-brief-sku-panel {
    margin-top: 10px;
    background-color: #fff;
}

.shop-info-panel {
    margin-top: 10px;
    background-color: #fff;
}

.good-info__pay-info {
    padding: 15px 15px 0;
    box-sizing: border-box;
    background: #fff;
}

.good-info__price {
    display: flex;
    margin-bottom: 2px;
    flex-flow: row wrap;
}

.good-info__price-origin {
    margin-bottom: 8px;
}

.goods-type__is-group-on {
    background: #ff4444;
    border-radius: 23px 0 0 23px;
    height: 16px;
    font-size: 12px;
    color: #ffffff;
    line-height: 16px;
    text-align: right;
    margin-right: 10px;
    padding-left: 5px;
    padding-right: 2px;
    transform: translateY(-2px);
}

.good-info__price>view {
    flex: 0 0 1;
    align-self: flex-end;
    white-space: nowrap;
}

.shop-cert {
    display: inline-block;
    font-size: 12px;
    vertical-align: middle;
    color: #333;
    margin-right: 8px;
}

.goods-image {
    width: 750rpx;
    height: 750rpx;
    vertical-align: bottom;
}

.goods-price view {
    display: inline-block;
    vertical-align: bottom;
    margin-right: 4px;
}

.goods-info {
    display: flex;
    padding: 10px 15px 10px 0px;
    margin-right: -15px;
    color: #999;
    font-size: 12px;
    border-top: 1rpx solid #e5e5e5;
}

.goods-info__item {
    flex: 3;
}

.goods-info__item--remain {
    flex: 2;
}

.goods-sku {
    position: relative;
    color: #333;
    font-size: 14px;
    padding: 10px;
}

.goods-detail__text {
    display: block;
    font-size: 14px;
    color: #454545;
    margin: 15px;
    line-height: 28px;
    vertical-align: middle;
}

.buy-now {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    border-top: 1rpx solid rgba(0,0,0,.1);
    background: #fff;
}

.buy-now__tips {
    background: rgba(255,247,204,0.95);
    color: #f44;
    font-size: 12px;
    height: 35px;
    line-height: 35px;
    text-align: center;
}

.goods-dialog__hd {
    height: 82px;
    margin: 0 0 0 15px;
    border-bottom: 1rpx solid #e5e5e5;
    overflow: hidden;
}

.goods-dialog__bd {
    max-height: 50vh;
    position: relative;
    box-sizing: border-box;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
}

.goods-dialog__ft {
    margin-top: 1px;
}

.goods-dialog__image {
    position: absolute;
    top: -10px;
    left: 15px;
    width: 80px;
    height: 80px;
    border-radius: 4px;
    border: 1px solid #e5e5e5;
    background: #fff;
}

.goods-dialog__title {
    height: 15px;
    color: #333;
    margin: 10px 45px 10px 90px;
}

.goods-dialog__close {
    position: absolute;
    top: 0px;
    right: 0px;
    width: 40px;
    height: 40px;
    line-height: 40px;
    text-align: center;
}

.sku-key {
    font-size: 14px;
    color: #333;
    margin-bottom: 10px;
}

.sku-wrap {
    margin-bottom: 15px;
}

.sku-value-wrap {
    margin-bottom: -10px;
}

.sku-wrap .zan-tag {
    margin-bottom: 10px;
    min-width: 40px;
}

.sku-wrap--last-child {
    margin-bottom: 0;
}

.quantity__wrap {
    display: flex;
}

.quantity__label {
    flex: 1;
}

.order-preference {
    position: relative;
    padding: 12px 0;
    border-top: 1rpx solid #e5e5e5;
    margin-right: -15px;
}

.order-preference__bd {
    width: 80%;
    display: inline-block;
}

.order-prefernce__ft {
    position: absolute;
    top: 50%;
    right: 17px;
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #c8c8c8;
    border-style: solid;
    transform: translateY(-50%) matrix(0.71,0.71,-0.71,0.71,0,0);
}

.order-preference__label {
}

.order-preference__desc {
    display: inline;
    font-size: 12px;
    line-height: 16px;
    vertical-align: middle;
}

.buttons-flex {
    display: flex;
}

.buttons-flex .zan-btn {
    flex: 1;
    padding-left: 0;
    padding-right: 0;
}

.shopping-cart {
    background: #fff;
    text-align: center;
    width: 50px;
    height: 50px;
    overflow: hidden;
}

.shopping-cart__icon {
    position: relative;
    font-size: 20px;
    line-height: 20px;
    color: #666;
    padding-top: 8px;
}

.shopping-cart__text {
    font-size: 10px;
    color: #666;
    line-height: 16px;
}

.shopping-cart--has-goods .shopping-cart__icon:after {
    position: absolute;
    top: 5px;
    right: -3px;
    content: ' ';
    width: 8px;
    height: 8px;
    border-radius: 4px;
    background: #f44;
}

.message-container {
    background: #fff;
    text-align: center;
    width: 50px;
    height: 50px;
    overflow: hidden;
    position: relative;
}

.message__icon {
    position: relative;
    line-height: 20px;
    padding-top: 8px;
    font-size: 20px;
    color: #ff4343;
}

.message__text {
    line-height: 16px;
    font-size: 10px;
    color: #666;
}

.message__contact-button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.column-divider {
    width: 0.5rpx;
    height: 50px;
    background: #E5E5E5;
}

.groupon__presale-info {
    padding-left: 15px;
    line-height: 44px;
    font-size: 12px;
    background: #fff;
}

.groupon__presale-info::after {
    border-left: none;
    border-right: none;
    margin-left: 15px;
}

.groupon__presale-tag {
    margin-right: 5px;
    vertical-align: middle;
}

.groupon__presale-desc {
    vertical-align: middle;
}

.waittosold-countdown {
    line-height: 35px;
    font-size: 12px;
    color: #fff;
    background: rgba(0,0,0,.4);
    text-align: center;
}

.waittosold-countdown .mc-days,.waittosold-countdown .mc-hours,.waittosold-countdown .mc-minutes,.waittosold-countdown .mc-seconds {
    margin: 0 2px;
}

.goods-video-play {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 55px;
    height: 55px;
    background-image: url(data:image/png;base64,);
    background-size: 55px 55px;
    transform: translate(-50%,-50%);
    text-indent: -999px;
}

.goods-video {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
}

.goods-video__mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.goods-video__close-btn {
    position: absolute;
    top: 8px;
    left: 5px;
    width: 40px;
    height: 40px;
    font-size: 40px;
    line-height: 40px;
    text-align: center;
    color: #fff;
}

.goods-video__close-btn--fullscreen {
    top: 25px;
}

.price-tag {
    font-size: 10px;
    color: #f44;
    background-color: #fff;
    border: 1px solid #f44;
    padding: 2px 5px;
    margin-left: 5px;
    border-radius: 2px;
    margin-top: 2px;
    margin-bottom: 3px;
    line-height: 12px;
    text-align: center;
}

.free-pack-label {
    display: inline;
    color: rgb(71,166,255);
}