.order-preference-dialog {
    color: #333;
}

.order-preference-dialog .zan-popup__container {
    width: 100%;
}

.order-preference-dialog__title {
    text-align: center;
    font-size: 16px;
    line-height: 16px;
    padding: 14px 0;
}

.order-preference-dialog__item {
    border-top: 1rpx solid #e5e5e5;
    font-size: 14px;
    line-height: 16px;
    padding: 10px 15px;
    display: flex;
    align-items: center;
}

.order-preference-dialog__label {
    margin-right: 3px;
}

.order-preference-dialog__desc {
    flex: 1;
}