.shopping-cart {
    background: #fff;
    text-align: center;
    width: 50px;
    height: 50px;
    overflow: hidden;
    border-top: 0.5rpx solid #e5e5e5;
}

.shopping-cart__icon {
    position: relative;
    font-size: 20px;
    line-height: 20px;
    color: #666;
    padding-top: 8px;
}

.shopping-cart__text {
    font-size: 10px;
    color: #666;
    line-height: 16px;
}

.shopping-cart--has-goods .shopping-cart__icon:after {
    position: absolute;
    top: 5px;
    right: -3px;
    content: ' ';
    width: 8px;
    height: 8px;
    border-radius: 4px;
    background: #f44;
}

.message-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    text-align: center;
    border-top: 0.5rpx solid #e5e5e5;
    width: 50px;
    height: 50px;
    overflow: hidden;
    position: relative;
}

.message__icon {
    position: relative;
    line-height: 20px;
    padding-top: 8px;
    font-size: 20px;
    color: #ff4343;
}

.message__text {
    font-size: 10px;
    color: #666;
    padding-top: 4px;
    background: #fff;
}

.message__contact-button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.btn-container--md {
    width: 70px;
}