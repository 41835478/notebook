.express-intro-container .zan-popup__container {
    width: 100%;
}

.express-intro-container .header {
    background: #ffffff;
    border-bottom: 2rpx solid #e5e5e5;
    height: 44px;
    text-align: center;
    position: relative;
    line-height: 44px;
    color: #333;
}

.express-intro-container .header .zan-icon {
    position: absolute;
    right: 0;
    height: 44px;
    top: 0;
    width: 44px;
}

.express-intro-container .intro view {
    height: 50px;
    line-height: 50px;
    border-bottom: 1rpx solid #e5e5e5;
    margin-right: -15px;
}

.express-intro-container .intro text {
    font-size: 14px;
    color: #333;
}

.express-intro-container .intro {
    font-size: 12px;
    color: #999999;
    line-height: 14px;
    text-align: left;
    padding: 0 15px;
}