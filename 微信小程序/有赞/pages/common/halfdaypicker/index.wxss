page {
    height: 100%;
}

.halfdaypicker {
    background: #F8F8F8;
    height: 100%;
    font-size: 14px;
}

.header {
    background-color: #CACACA;
    color: #666666;
    height: 33px;
    line-height: 33px;
    position: relative;
    text-align: center;
}

.header .cancel {
    position: absolute;
    color: #3388FF;
    left: 10px;
}

.slot-panel {
    height: calc(100% - 33px);
    text-align: center;
    padding: 10px;
    background-color: #F8F8F8;
    box-sizing: border-box;
}

.slot-row {
    display: flex;
    margin-bottom: 10px;
}

.slot-row .description {
    width: 122px;
    border-radius: 2px;
}

.slot {
    background-color: #ffffff;
    height: 32px;
    line-height: 32px;
}

.morning,.afternoon,.night {
    flex-grow: 1;
    border-left: #E5E5E5 1px solid;
}

.slot-row .disabled {
    color: #999999;
    background: #E5E5E5;
}

.slot-row .selected {
    color: #ffffff;
    background: #FF4444;
}