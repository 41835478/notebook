@import "../../../../components/sku/index.wxss";

@import "search/index.wxss";

.zan-card {
    margin-left: 0;
    width: auto;
    padding: 5px 15px;
    overflow: hidden;
    position: relative;
    font-size: 14px;
}

.zan-card__thumb {
    width: 90px;
    height: 90px;
    float: left;
    position: relative;
    margin-left: auto;
    margin-right: auto;
    overflow: hidden;
    background-size: cover;
}

.zan-card__img {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: auto;
    height: auto;
    max-width: 100%;
    max-height: 100%;
}

.zan-card__detail {
    margin-left: 100px;
    width: auto;
    position: relative;
}

.zan-card__detail-row {
    overflow: hidden;
    line-height: 20px;
    min-height: 20px;
    margin-bottom: 3px;
}

.zan-card__right-col {
    float: right;
}

.zan-card__left-col {
    margin-right: 80px;
}

.search-goods__cell {
    background: white;
    opacity: 1;
    padding: 10px 15px;
    border-bottom: 1rpx solid #e5e5e5;
}

.search-goods__thumb {
    height: 196rpx;
    width: 196rpx;
}

.search-goods__detail {
    margin-left: 216rpx;
    height: 196rpx;
}

.search-goods__title {
    font-size: 14px;
}

.search-goods__price {
    position: absolute;
    left: 0;
    bottom: 0;
    margin-bottom: 0;
    font-size: 14px;
}

.search-goods__cart {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 64rpx;
    height: 64rpx;
    background-size: 64rpx;
    border-radius: 64rpx;
    text-align: center;
    line-height: 64rpx;
}

.search-goods__emptytext {
    font-size: 14px;
    color: #a9a9a9;
    position: absolute;
    left: 0px;
    right: 0px;
    top: 0px;
    bottom: 0px;
    margin: auto;
    width: 140px;
    height: 70px;
    text-align: center;
}

.sc-goods__photo--soldout::after {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 100%;
    height: 100%;
    background-image: url(https://img.yzcdn.cn/public_files/2017/11/20/fab60eb5be80315a6dd19f91fbd1dca9.png);
    background-color: rgba(0,0,0,0.3);
    background-position: center;
    background-repeat: no-repeat;
    background-size: 60px 60px;
    content: '';
}