@import "../../../components/scroll-to-top/index.wxss";

.zan-icon-arrow {
    font-size: 10px;
    position: relative;
    top: 0px;
}

.integral-store__container {
    background: #f8f8f8;
    height: 100vh;
}

.integral-store__banner {
    width: 750rpx;
    height: 130px;
    font-size: 32px;
    color: #ffffff;
    line-height: 24px;
    text-align: center;
    display: flex;
    flex-direction: column;
    background-image: linear-gradient(225deg,#ff8b8b 0%,#ff6666 52%,#ff4444 100%)!important;
}

.integral-store__banner.not-store {
    height: 94px;
}

.integral-store__integral-count {
    flex: 1;
    display: flex;
}

.integral-store__integral-count>view {
    margin: auto;
}

.integral-store__label {
    font-size: 12px;
    color: rgba(248,248,248,0.8);
    line-height: 12px;
    text-align: center;
    margin-bottom: 10px;
}

.integral-store__nav {
    height: 40px;
    display: flex;
    background: rgba(255,255,255,0.1);
    position: relative;
}

.integral-store__nav>view {
    flex: 1;
    font-size: 14px;
    color: rgba(248,248,248,0.8);
    line-height: 40px;
    text-align: center;
}

.col-line {
    height: 18px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translateY(-50%);
    border-right: 1rpx solid rgba(255,255,255,0.3);
}

.integral-store__entry .zan-icon-arrow,.integral-store__nav .zan-icon-arrow {
    margin-left: 10px;
    position: relative;
    top: -2px;
    width: 5px;
    font-size: 8px;
}

.integral-store__entry .zan-icon-arrow {
    margin-left: 5px;
}

.integral-store__entry {
    width: 78px;
    height: 22px;
    line-height: 22px;
    border: 1px solid rgba(255,255,255,0.5);
    border-radius: 13px;
    font-size: 12px;
    margin-top: 15px;
    color: rgba(255,255,255,0.7);
    position: relative;
}

.integral-store__entry:active {
    opacity: 0.3;
}

.integral-store__tabs {
    margin-top: 10px;
    height: 45px;
}

.fixed-tabs .integral-store__tabs>.zan-tab {
    margin-top: 0;
    position: fixed;
    z-index: 1;
    top: 0;
}

.zan-card__thumb {
    height: 80px;
    width: 80px;
}

.zan-card__detail {
    margin-left: 95px;
}

.zan-card__detail-row {
    margin-bottom: -1px;
    line-height: 16px;
    min-height: 14px;
}

.margin-right-45 {
    margin-right: 45px;
}

.goods__item {
    background: #ffffff;
}

.goods__item-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 80px;
}

.goods__item-info .goods__item-info__title {
    word-break: break-all;
    margin-right: 0;
    line-height: 17px;
    font-size: 14px;
}

.goods__item-info__price {
    margin-right: 0;
}

.scroll-to-top__container {
    position: fixed;
    right: 10px;
    bottom: 75px;
}