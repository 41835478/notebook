@import "../../../../components/sku/index.wxss";

.pintuan_detail_container {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: #f5f5f5;
}

.pintuan_detail_card {
    height: 260rpx;
    width: 100%;
    background: #FFF;
    position: relative;
}

.pintuan_detail_card__view {
    float: left;
    width: 220rpx;
    height: 220rpx;
    padding: 10px 15px 10px 10px;
}

.pintuan_detail_card__img {
    height: 220rpx;
    width: 220rpx;
    position: relativen;
    float: left;
}

.pintuan_detail_card_content {
    display: flex;
    flex-direction: column;
    height: 220rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-right: 20rpx;
    width: auto;
}

.pintuan_detail_card_title {
    display: -webkit-box;
    font-size: 14px;
    color: #333333;
    line-height: 18px;
    max-height: 36px;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.pintuan_detail_card_member {
    margin-top: 24rpx;
    display: flex;
    flex-direction: row;
    height: 42rpx;
}

.pintuan_detail_card_success_icon {
    position: absolute;
    height: 55px;
    width: 55px;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: url('https://img.yzcdn.cn/public_files/2017/09/18/6b52bd94541d3a84fc8ad382277139a4.png') no-repeat;
    background-size: cover;
}

.pintuan_detail_card_failed_icon {
    position: absolute;
    height: 55px;
    width: 55px;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: url('https://img.yzcdn.cn/public_files/2017/09/22/7379b4febd77ded87c9977c23c4bc565.png') no-repeat;
    background-size: cover;
}

.pintuan_detail_card_group_full_icon {
    position: absolute;
    height: 55px;
    width: 55px;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: url('https://img.yzcdn.cn/public_files/2017/09/22/ee2e3c2fc7064d24fcb83cca48f20842.png') no-repeat;
    background-size: cover;
}

.pintuan_detail_card_group_stoped_icon {
    position: absolute;
    height: 55px;
    width: 55px;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: url('https://img.yzcdn.cn/public_files/2017/09/22/54a97b66589907e974d35d4c8559f074.png') no-repeat;
    background-size: cover;
}

.pintuan_detail_card_group_invalid_icon {
    position: absolute;
    height: 55px;
    width: 55px;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: url('https://img.yzcdn.cn/public_files/2017/09/22/d94ec5c3b930c53b215ab467dc6efbd9.png') no-repeat;
    background-size: cover;
}

.pintuan_detail_card_member_text {
    font-size: 12px;
    color: #999999;
    line-height: 16px;
}

.pintuan_detail_card_member_icon {
    width: 16px;
    height: 16px;
    background: url('https://img.yzcdn.cn/public_files/2017/09/18/899cc975156f948e72586a39e48daa50.png') no-repeat center;
    background-size: 16px;
    margin-right: 10rpx;
}

.pintuan_detail_card_group_price_view {
    flex: 1;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
}

.pintuan_detail_card_group_price {
    font-size: 12px;
    color: #FF4444;
    line-height: 12px;
}

.pintuan_detail_card_group_price__number {
    font-size: 24px;
    line-height: 24px;
    margin: 0px 5px;
    color: #FF4444;
    font-weight: bold;
    position: relative;
    bottom: -2px;
}

.pintuan_detail_card_group_price__number .small {
    font-size: 12px;
}

.pintuan_detail_card_normal_price {
    margin-top: 12rpx;
    font-size: 12px;
    color: #999999;
}

.pintuan_detail_card_content_view {
    position: relative;
}

.pintuan_detail_info {
    padding: 20px 15px;
    background: #FFF;
    margin-top: 10px;
    position: relative;
}

.pintuan-detail__title {
    font-size: 16px;
    text-align: center;
    margin-bottom: 10px;
    line-height: 16px;
    color: #333;
    font-weight: bold;
}

.pintuan-detail__title:empty {
    display: none;
}

.pintuan-detail__title icon {
    margin-right: 10px;
    position: relative;
    top: 3px;
}

.pintuan_detail_info__wait {
    display: block;
    position: relative;
}

.pintuan_detial_info_intro_icon {
    height: 37px;
    width: 30px;
    position: absolute;
    right: 10px;
    top: 0px;
    background: url('https://img.yzcdn.cn/public_files/2017/09/20/479c70cd13f26115741cfe50ca39e4a5.png') no-repeat;
    background-size: 30px 37px;
}

.pintuan_detial_info__wait_title_number {
    margin-left: 10rpx;
    margin-right: 10rpx;
    color: red;
    font-weight: bold;
    font-size: 18px;
}

.pintuan_detail_info__lefttime {
    padding-top: 8px;
    font-size: 12px;
    line-height: 16px;
    color: #999;
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: 156px;
    margin: 0 auto;
    background: #FFF;
}

.pintuan_detail_card_group_rest_price {
    font-size: 10px;
    color: #ff4444;
    line-height: 11px;
    text-align: center;
    background: #ff44441c;
    border-radius: 2px;
    height: 10px;
    padding: 2px 5px;
    position: relative;
    bottom: 0px;
}

.pintuan_detail_info__lefttime_time {
    font-size: 10px;
    line-height: 14px;
    margin-left: 12rpx;
    margin-right: 12rpx;
    color: #fff;
    background: #333333;
    border-radius: 2px;
    width: 14px;
    height: 14px;
    padding: 1px;
    text-align: center;
}

.pintuan_detial_info_wrap {
    border-bottom: 1px solid #E5E5E5;
    margin: 12px auto 28px;
    height: 16px;
    width: 236px;
}

.pintuan_detail_button {
    margin-left: 20rpx;
    margin-right: 20rpx;
    background: #FF4444;
    color: #FFF;
    height: 50px;
    line-height: 50px;
    font-size: 16px;
}

.pintuan_detail_button_text {
    display: block;
    font-size: 12px;
    color: #3183FB;
    width: auto;
    text-align: center;
    margin-top: 5px;
}

.pintuan-detail__btns {
    margin-top: 20px;
}

.member_avatar_grid {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.member_avatar_grid_item {
    margin: 10px;
    position: relative;
    height: 40px;
}

.member_avatar_grid_item_img {
    width: 40px;
    height: 40px;
    margin: 0 auto;
    border-radius: 50%;
}

.member_avatar_grid_item_label_view {
    position: absolute;
    height: 8px;
    color: #FFF;
    background: #FF5050;
    font-size: 8px;
    text-align: center;
    line-height: 8px;
    border-radius: 2px;
    bottom: -5px;
    left: 50%;
    padding: 2px;
    transform: translateX(-50%);
    white-space: nowrap;
}

.bottom-btn-container {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 42px;
    border-top: 1px solid #e5e5e5;
    background-color: #fff;
    padding: 6px 10px;
    box-sizing: border-box;
    display: flex;
    justify-content: flex-end;
}

.fission-btn {
    padding: 0 8px;
    font-size: 12px;
    line-height: 28px;
    border-radius: 3px;
    text-align: center;
    height: 28px;
    border: 1px solid #ddd;
}