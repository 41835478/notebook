@import "../../../__wuBaseWxss__/1.wxss";

page {
    min-height: 100%;
}

.fission-sharer {
    background-color: #fff;
}

.share-result {
    background-color: #FEE5C5;
    background-image: url(https://img.yzcdn.cn/public_files/2018/02/08/d23f51006ee472a383d957690e89dc28.png);
    background-repeat: no-repeat;
    background-size: 100% 101%;
    height: 688rpx;
    position: relative;
}

.share-coupon-total {
    font-size: 20px;
    color: #FF4444;
    text-align: center;
    position: absolute;
    top: 150rpx;
    display: block;
    width: 100%;
}

.share-coupon-taken {
    color: #333333;
    font-size: 12px;
    top: 206rpx;
    text-align: center;
    position: absolute;
    width: 100%;
}

.share-coupon-tips {
    color: #FFFFFF;
    font-size: 14px;
    top: 406rpx;
    text-align: center;
    position: absolute;
    width: 100%;
}

.share-btn-container {
    padding: 20rpx 40rpx 40rpx 40rpx;
}

.share-btn {
    border-radius: 2px;
    overflow: hidden;
}

.taken-split-container {
    position: relative;
    color: #999999;
    font-size: 14px;
    text-align: center;
    height: 20px;
    line-height: 20px;
    margin: 0 20px;
    background-image: url(https://img.yzcdn.cn/public_files/2018/02/09/75a738e7da3d4042e5975090631b7cee.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.taken-record {
    display: flex;
    height: 80px;
    padding: 18px 15px;
    box-sizing: border-box;
    align-items: center;
}

.taken-record .header-img {
    flex-shrink: 0;
}

.header-img {
    height: 44px;
    width: 44px;
    border-radius: 22px;
}

.record-body {
    flex-grow: 1;
    padding-left: 15px;
    box-sizing: border-box;
}

.body-info {
}

.first-name {
    color: #333333;
    font-size: 14px;
    margin-right: 12px;
}

.first-time {
    color: #999999;
    font-size: 12px;
}

.body-message {
    color: #333333;
    font-size: 14px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.record-amount {
    width: 80px;
    text-align: right;
    font-size: 18px;
    color: #FF4444;
}

.take-result {
    background-color: #FEE5C5;
    background-image: url(https://img.yzcdn.cn/public_files/2018/02/08/ea9454add4fc891a6e0a971a4e7349a8.png);
    background-repeat: no-repeat;
    background-size: 100% 101%;
    height: 594rpx;
    position: relative;
}

.take-result-title {
    font-size: 20px;
    color: #FF4444;
    text-align: center;
    position: absolute;
    top: 150rpx;
    display: block;
    width: 100%;
}

.take-result-info {
    color: #000000;
    font-size: 12px;
    top: 204rpx;
    text-align: center;
    position: absolute;
    width: 100%;
}

.taken-btn-container {
    padding: 20rpx 40rpx 40rpx 40rpx;
}

.taken-btn {
    border-radius: 2px;
    overflow: hidden;
}