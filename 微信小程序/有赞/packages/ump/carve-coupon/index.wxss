@import "../../../components/copyright/index.wxss";

.page-container {
    padding: 0 15px;
    box-sizing: border-box;
    background: #F64141;
}

.container,.copyright-container {
    background: transparent!important;
}

.header-banner {
    height: 526rpx;
    width: 100%;
    padding: 5px 15px 120rpx;
    box-sizing: border-box;
    position: absolute;
    left: 0;
    top: 5px;
    background-image: linear-gradient(0deg,#f64141 11%,#ff2020 60%);
}

.header-banner image {
    width: 100%;
    height: 100%;
}

.content-banner {
    margin-top: 354rpx;
    margin-bottom: 20px;
    transform: translateY(0);
    overflow: hidden;
    visibility: hidden;
}

.show-view {
    visibility: visible;
}

.message-container {
    background: #ffffff;
    border-radius: 8px;
    width: 100%;
    height: auto;
    padding: 24px;
    box-sizing: border-box;
    text-align: center;
}

.message-container image {
    height: 60px;
    width: 60px;
}

.message-container .error-message {
    font-size: 14px;
    color: #ff4444;
    letter-spacing: 0;
    line-height: 23px;
    margin-bottom: 28px;
}

.open-package-btns .message-btn {
    display: block;
    color: #fff;
    width: 520rpx;
    border-radius: 22px;
    font-size: 14px;
}

.message-container .message-text {
    font-size: 14px;
    color: #ff4444;
    letter-spacing: 0;
    line-height: 23px;
    text-align: center;
}

.message-container .message-text view:last-child {
    font-size: 14px;
    color: #f5a623;
    letter-spacing: 0;
    line-height: 23px;
}

.message-btn.yellow {
    background-image: linear-gradient(-90deg,#ffce28 3%,#ffb132 98%);
}

.message-btn.red {
    background-image: linear-gradient(-90deg,#ff4b4b 4%,#ff2020 100%);
}

.pop-bar {
}

.pop-bar>view {
    opacity: 0.9;
    background: #ff8787;
    border-radius: 0 19px 19px 0;
    width: 105px;
    height: 38px;
    margin-bottom: 10px;
    font-size: 9px;
    color: #ffffff;
    letter-spacing: 0;
    line-height: 12px;
    text-align: left;
    padding: 8px 18px 8px 8px;
    box-sizing: border-box;
    transition: all ease .3s;
}

.pop-bar .pop-top {
    position: absolute;
    left: 0;
    top: 25px;
}

.pop-bar .pop-bottom {
    position: absolute;
    left: 0;
    top: 73px;
}

.pop-line-1 {
    display: flex;
}

.pop-line-1 .pop-name {
    flex: 0 0 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    vertical-align: middle;
    max-width: 37px;
}

.pop-bar .pop-name+text {
    position: relative;
    vertical-align: middle;
    white-space: nowrap;
}

.package-container {
    margin: 0 15px;
    height: 240px;
    background-image: url(https://b.yzcdn.cn/public_files/2018/04/03/cd3551e1de0ad9972168d5f61aa468f2.png);
    background-size: 100% 100%;
    border-radius: 8px;
    text-align: center;
    transform: translateY(0);
    overflow: hidden;
    position: relative;
}

.package-container .package-circle {
    position: absolute;
    font-family: PingFangSC-Regular;
    font-size: 16px;
    color: #ff2727;
    letter-spacing: 0;
    line-height: 21px;
    text-align: center;
    width: 100%;
    margin-top: 24px;
}

.package-container image {
    width: 60px;
    height: 60px;
}

.package-actions {
    margin-top: 90px;
    position: relative;
}

.package-actions .package-btn {
    background-image: linear-gradient(90deg,#ff2121 0%,#ff3f3f 97%);
    border: 2px solid #fff9db;
    box-shadow: 0 2px 4px 0 #dfa700;
    border-radius: 22px;
    width: 472rpx;
    height: 40px;
    line-height: 40px;
    display: inline-block;
    color: #fff;
    font-size: 17px;
    margin-top: 18px;
}

.zan-popup__container {
    background: transparent;
}

.popup-message {
    background-repeat: no-repeat;
    text-align: center;
    padding: 25px;
    margin: 0 auto;
    box-sizing: border-box;
    position: relative;
    position: relative;
    border-radius: 8px;
}

.share-popup {
    background-image: url(https://img.yzcdn.cn/public_files/2018/04/04/3f812df6ca298c7120d41de38b07df4d.png);
    background-size: 290px 340px;
    width: 290px;
    height: 340px;
}

.open-popup {
    background-image: url(https://b.yzcdn.cn/public_files/2018/04/13/c4fc09982e1fa6ab96e512de3a6ab5fc.png);
}

.tips-popup {
    background-image: linear-gradient(0deg,#ff2121 0%,#ff5959 100%);
    width: 290px;
    height: 320px;
}

.popup-message image {
    height: 60px;
    width: 60px;
}

.share-popup image {
    position: absolute;
    top: 166px;
    transform: translateX(-50%);
}

.open-popup image {
    position: absolute;
    top: 194px;
    height: 100px;
    width: 100px;
    left: 95px;
    transform: none;
    border-radius: 100px;
}

.open-popup .package-opening {
    animation: translate 1s ease-in-out infinite;
    transform-origin: center;
}

@-webkit-keyframes translate {
    0% {
        transform: scale(0.98);
    }

    100% {
        transform: scale(1.05);
    }
}

@keyframes translate {
    0% {
        transform: scale(0.98);
    }

    100% {
        transform: scale(1.05);
    }
}

.tip-text {
    font-size: 16px;
    color: #ffffff;
    letter-spacing: 0;
    line-height: 21px;
    text-align: center;
    margin-top: 10px;
}

.tip-text::after {
    content: none;
}

.color-text {
    color: #F8E900;
    margin: 0 3px;
}

.color-text.red {
    color: #FF2121;
}

.color-text-deep {
    color: #F8E71C;
    font-size: 48px;
    position: relative;
    display: inline-block;
    line-height: 70px;
}

.color-text-deep::after {
    content: 'å…ƒ';
    position: absolute;
    display: inline-block;
    right: -16px;
    bottom: -6px;
    margin-left: 5px;
    font-size: 16px;
}

.color-text-deep.red {
    color: #FF2121;
}

.color-text-deep.red::after {
    content: none;
}

.message-btn {
    background-image: linear-gradient(-90deg,#fde566 0%,#f9c636 100%);
    box-shadow: 0 0 1px 0 #c27801;
    border-radius: 22px;
    width: 240px;
    height: 44px;
    padding: 12px 23px;
    box-sizing: border-box;
    font-size: 16px;
    color: #ff3232;
    margin: 15px auto;
    display: inline-block;
    line-height: 20px;
    animation: translate 0.8s infinite;
}

@media (max-width:320px) {
    .message-btn {
        font-size: 14px;
    }
}

.message-btn.share-btn {
    position: absolute;
    bottom: 40px;
    left: 25px;
}

.share-btn::before,.success-share-btn::before {
    content: '';
    display: inline-block;
    width: 20px;
    height: 17px;
    margin-right: 5px;
    position: relative;
    top: 3px;
    background-size: 100%;
    background-image: url(https://b.yzcdn.cn/public_files/2018/04/10/2d7c1b802cad0aa00185ad4d49773ed8.png);
}

.success-share-btn::before {
    background-image: url(https://b.yzcdn.cn/public_files/2018/04/10/5fc7cf49641ad786bbe6024fa215a02a.png);
}

.tips-popup .tip-text {
    margin: 18px 0 5px;
}

button.tip-text {
    background: transparent;
    margin-top: 10px;
}

.tips-popup .coin-out-top {
    transform: translateY(-54px);
}

.zan-popup .close-icon {
    padding: 10px;
    width: 14px;
    height: 14px;
    position: absolute;
    top: 0;
    left: 0;
}

.zan-popup .close-icon::after {
    content: '';
    display: block;
    background: url(https://b.yzcdn.cn/public_files/2018/04/25/ae0358b97f69c237bfab5ca4ab56543b.png);
    background-size: 100%;
    color: #ff5959;
    position: absolute;
    z-index: 1;
    width: 14px;
    height: 14px;
}

.share-disabled .avatar {
    opacity: 0.5;
    pointer-events: none;
}

.carved-user__list {
    padding: 0 20px;
    font-size: 14px;
    color: #ffffff;
    letter-spacing: 0;
    line-height: 23px;
    text-align: left;
}

.carved-user__item {
    display: flex;
    align-items: center;
    margin-top: 25px;
    position: relative;
}

.carved-user__item .avatar {
    height: 40px;
    width: 40px;
    line-height: 40px;
}

.carved-user__item .carved-user__coupon {
    width: 100px;
    text-align: right;
}

.carved-user__item .carved-user__nickname {
    flex: 1;
    margin-left: 12px;
}

.carved-user__item:last-child {
    margin-bottom: 37px;
}

.carved-user__item .has-max-money {
    position: absolute;
    font-size: 10px;
    right: 0;
    top: 24px;
    color: #FFF57A;
}

.has-max-money::before {
    content: '';
    display: inline-block;
    background: url(https://b.yzcdn.cn/public_files/2018/04/23/be20c2cd08b2a0cfba32040e82c63ed5.png);
    background-size: 100%;
    width: 14px;
    height: 8px;
    margin-right: 5px;
}

.coupon-goods__list {
    padding: 3px;
    display: flex;
    flex-flow: wrap;
}

.coupon-goods__item {
    padding: 20px 10px 0;
    box-sizing: border-box;
    flex: 50%;
    overflow: hidden;
}

.coupon-goods__item .coupon-goods__image {
    width: 100%;
    padding-bottom: 100%;
    position: relative;
    background: #fff;
}

.coupon-goods__image image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.coupon-goods__info {
    background: #fff;
    padding: 12px 10px;
    font-size: 12px;
    color: #333333;
    text-align: left;
}

.coupon-goods__price {
    display: flex;
    font-size: 14px;
    color: #ff423d;
    margin: 5px 0;
    justify-content: space-between;
    align-items: center;
}

.coupon-goods__price view:last-child::before {
    content: '';
    background-image: url(https://b.yzcdn.cn/public_files/2018/04/25/57159b7d82202be31f0ce7d123ba5e79.png);
    background-size: 100%;
    border-radius: 2px;
    width: 10px;
    height: 10px;
    display: inline-block;
    margin-right: 3px;
    top: 1px;
    position: relative;
}

.coupon-goods__buy {
    background-image: linear-gradient(-90deg,#ff4b4b 4%,#ff2020 100%);
    border-radius: 14px;
    width: 100%;
    height: 28px;
    margin-top: 14px;
    font-size: 12px;
    color: #ffffff;
    line-height: 28px;
    text-align: center;
}

.sample-card.coupon-goods__item {
    flex: 100%;
}

.sample-card .coupon-goods__info {
    padding: 20px;
}

.sample-card .coupon-goods__title {
    font-size: 20px;
}

.sample-card .coupon-goods__buy-info {
    display: flex;
    align-items: flex-end;
}

.sample-card .coupon-goods__price,.sample-card .coupon-goods__buy {
    flex: 1;
}

.sample-card .coupon-goods__buy {
    height: 34px;
    line-height: 34px;
    border-radius: 17px;
    font-size: 14px;
}

.sample-card .coupon-goods__price {
    display: flex;
    flex-direction: column;
    width: 50%;
    align-items: flex-start;
}

.sample-card .coupon-goods__price view:first-child {
    margin-bottom: 10px;
}

.coupon-goods__all {
    background-image: linear-gradient(-90deg,#ffce28 3%,#ffb132 98%);
    border-radius: 15px;
    width: 120px;
    height: 30px;
    display: block;
    margin: 30px auto 0;
    text-align: center;
    font-size: 12px;
    color: #ffffff;
    line-height: 30px;
}

.nav-list {
    font-size: 10px;
    color: #ffffff;
    text-align: center;
    margin-top: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid #f27c7c;
}

.nav-list view {
    display: inline-block;
    margin: 0 25px;
}

.rule-container {
    position: fixed;
    z-index: 2;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.9;
    background: #000000;
    padding: 30px 40px;
    font-size: 14px;
    overflow: auto;
    color: #ffffff;
}

.rule-container .rule-item {
    margin-bottom: 20px;
}

.rule-concat::before {
    content: '';
    display: block;
    border: 0 solid #ffffff;
    border: #fff dotted 1px;
    margin-bottom: 20px;
    margin-top: 10px;
}

.rule-concat {
    text-align: center;
    font-size: 14px;
    color: #ffffff;
    line-height: 24px;
    margin-bottom: 40px;
}

.close-btn {
    text-align: center;
    font-size: 34px;
}

.rule-btn {
    background: #ffd96f;
    box-shadow: 0 0 1px 0 #c27801;
    border-radius: 15px 0 0 15px;
    width: 70px;
    height: 30px;
    font-size: 12px;
    line-height: 30px;
    color: #f10505;
    letter-spacing: 0;
    text-align: right;
    position: absolute;
    top: 25px;
    right: 0;
    padding-right: 6px;
    box-sizing: border-box;
}

.title {
    font-size: 14px;
    color: #ffffff;
    letter-spacing: 0;
    text-align: center;
    position: relative;
}

.title::after,.title::before {
    content: '';
    display: inline-block;
    height: 2px;
    width: 30%;
    position: relative;
    top: -4px;
    opacity: 0.5;
}

.title::before {
    border-top-left-radius: 50%;
    border-bottom-left-radius: 50%;
    margin-right: 24px;
    background: linear-gradient(#fff,#FF2424);
}

.title::after {
    border-top-right-radius: 50%;
    border-bottom-right-radius: 50%;
    margin-left: 24px;
    background: linear-gradient(#FF2424,#fff);
}

.avatars {
    display: flex;
    flex-flow: wrap;
    justify-content: center;
}

.avatars .avatars-item .avatar {
    width: 50px;
    height: 50px;
    border-radius: 50px;
    line-height: 50px;
}

.avatars .avatars-item {
    flex: 25%;
    text-align: center;
    margin-bottom: 15px;
}

.avatars[data-flex="33"] .avatars-item {
    flex: 33%;
}

.avatar,image.avatar {
    height: 44px;
    width: 44px;
    border-radius: 44px;
    line-height: 44px;
    text-align: center;
    color: #bbb;
    background: #f4f4f4;
    display: inline-block;
}

button.avatar::after {
    display: none;
}