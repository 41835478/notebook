<template name="item">
    <view animation="{{selectedId==animation.selectedId&&item.order_no==animation.order_no?animation.animationData:''}}" catchtap="onOrderItemClicked" class="order-item zan-panel zan-panel--without-border" data-item="{{item}}" wx:for="{{list}}" wx:key="order_no">
        <view class="order-item__hd">
            <view>
                <text>店铺: {{item.items[0].shop_info.shop_name}}</text>
                <text class="zan-pull-right zan-c-red" wx:if="{{item.order_state=='tosend'&&item.express_type=='1'}}">等待买家提货</text>
                <text class="zan-pull-right zan-c-red" wx:elif="{{item.order_state=='send'&&item.express_type=='1'}}">买家已提货</text>
                <text class="zan-pull-right zan-c-red" wx:elif="{{item.order_state=='50'}}">待成团</text>
                <text class="zan-pull-right zan-c-red" wx:else>{{item.state_str}}</text>
            </view>
            <view class="zan-c-gray-dark zan-font-12">订单编号：{{item.order_no}}</view>
        </view>
        <view class="order-item__bd goods-card goods-card--first zan-card">
            <view class="zan-card__thumb">
                <image class="zan-card__img" mode="aspectFit" src="{{item.items[0].image_url}}"></image>
            </view>
            <view class="zan-card__detail">
                <view class="zan-card__detail-row">
                    <view class="zan-card__right-col">￥{{item.items[0].pay_price}}</view>
                    <view class="zan-card__left-col zan-ellipsis--l2">
            {{item.items[0].title}}
          </view>
                </view>
                <view class="zan-card__detail-row zan-c-gray-darker">
                    <view class="zan-card__right-col">x{{item.items[0].num}}</view>
                    <view class="zan-card__left-col goods-card__detail-sku">
            {{item.items[0].skuStr}}
          </view>
                </view>
                <text style="color:white;background-color:#ff4444;font-size:10px;line-height: 14px;;padding:2px 3px;border-radius: 2px;border-color: #ff5050;" wx:if="{{item.express_type==1}}">自提</text>
                <text style="color:white;background-color:#ff4444;font-size:10px;line-height: 14px;;padding:2px 3px;border-radius: 2px;border-color: #ff5050;" wx:if="{{item.order_type==10}}">拼团</text>
                <text style="color:white;background-color:#ff4444;font-size:10px;line-height: 14px;;padding:2px 3px;border-radius: 2px;border-color: #ff5050;" wx:if="{{item.activity_type==5}}">积分订单</text>
            </view>
        </view>
        <view class="order-item__extra-row zan-cell" wx:if="{{item.items.length>1}}">
            <view class="order-item__view-all zan-center zan-cell__bd">
        查看全部{{item.items.length}}件商品
      </view>
        </view>
        <view class="order-item__extra-row zan-cell {{item.btns.length>0?'':'zan-cell--last-child'}}">
            <view class="zan-cell__bd zan-right">
                <text>合计：</text>
                <text class="order-item__total zan-c-red">￥{{item.real_pay}}</text>
            </view>
        </view>
        <view class="order-item__extra-row zan-cell zan-cell--last-child" wx:if="{{item.btns.length>0}}">
            <view class="order-item__actions zan-cell__bd zan-right">
                <block wx:for="{{item.btns}}" wx:for-item="btn" wx:key="index">
                    <form-view catchtap="showOrderExpress" class="order-item__action zan-btn zan-btn--small zan-btn--plain" data-orderno="{{item.order_no}}" wx:if="{{btn=='transport'}}">
            查看物流
          </form-view>
                    <form-view catchtap="onCancelOrder" class="order-item__action zan-btn zan-btn--small zan-btn--plain" data-orderno="{{item.order_no}}" wx:if="{{btn=='cancel'}}">
            取消订单
          </form-view>
                    <form-view catchtap="onPayClick" class="order-item__action zan-btn zan-btn--danger zan-btn--small zan-btn--plain" data-item="{{item}}" wx:if="{{btn=='topay'}}">
            确认付款
          </form-view>
                    <form-view catchtap="onPintuanDetailClick" class="order-item__action zan-btn zan-btn--small zan-btn--plain" data-item="{{item}}" wx:if="{{btn=='pintuanDetail'&&!item.isAllowConfirmReceive}}">
            拼团详情
          </form-view>
                    <form-view catchtap="onConfirmReceiveClick" class="order-item__action zan-btn zan-btn--danger zan-btn--small zan-btn--plain" data-orderno="{{item.order_no}}" wx:if="{{btn=='confirmReceive'}}">
            确认收货
          </form-view>
                    <form-view catchtap="onLaterReceiveClick" class="order-item__action zan-btn zan-btn--small zan-btn--plain" data-orderno="{{item.order_no}}" wx:if="{{btn=='laterReceive'}}">
            延长收货
          </form-view>
                </block>
            </view>
        </view>
    </view>
</template>
