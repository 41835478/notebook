@charset "UTF-8";

.copyright-container {
    padding: 18px 0 20px;
    background-color: #f9f9f9;
    text-align: center;
    font-size: 0;
}

.copyright--with-fix-bottom {
    padding-bottom: 70px;
}

.copyright-image {
    display: block;
    margin: 0 auto;
    height: 30px;
    width: 110px;
    padding-bottom: 3px;
}

.copyright-text {
    position: relative;
    line-height: 16px;
    font-size: 12px;
    color: #BFBFC3;
}

.copyright-text--customized {
    padding-left: 14px;
}

.copyright-text--customized::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    width: 10px;
    height: 12px;
    background: url("https://img.yzcdn.cn/public_files/2018/01/19/344a25fb1afe9199f821829ce7a99a2d.png") no-repeat;
    background-size: 10px 12px;
}

.wxParse {
    margin: 0 5px;
    font-family: Helvetica,sans-serif;
    font-size: 28rpx;
    color: #666;
    line-height: 1.8;
}

.wxParse-container view {
    word-break: break-all;
    overflow: auto;
}

.wxParse-inline {
    display: inline;
    margin: 0;
    padding: 0;
}

.wxParse-div {
    margin: 0;
    padding: 0;
}

.wxParse-h1 {
    font-size: 2em;
    margin: .67em 0;
}

.wxParse-h2 {
    font-size: 1.5em;
    margin: .75em 0;
}

.wxParse-h3 {
    font-size: 1.17em;
    margin: .83em 0;
}

.wxParse-h4 {
    margin: 1.12em 0;
}

.wxParse-h5 {
    font-size: .83em;
    margin: 1.5em 0;
}

.wxParse-h6 {
    font-size: .75em;
    margin: 1.67em 0;
}

.wxParse-h1 {
    font-size: 18px;
    font-weight: 400;
    margin-bottom: .9em;
}

.wxParse-h2 {
    font-size: 16px;
    font-weight: 400;
    margin-bottom: .34em;
}

.wxParse-h3 {
    font-weight: 400;
    font-size: 15px;
    margin-bottom: .34em;
}

.wxParse-h4 {
    font-weight: 400;
    font-size: 14px;
    margin-bottom: .24em;
}

.wxParse-h5 {
    font-weight: 400;
    font-size: 13px;
    margin-bottom: .14em;
}

.wxParse-h6 {
    font-weight: 400;
    font-size: 12px;
    margin-bottom: .04em;
}

.wxParse-h1,.wxParse-h2,.wxParse-h3,.wxParse-h4,.wxParse-h5,.wxParse-h6,.wxParse-b,.wxParse-strong {
    font-weight: bolder;
}

.wxParse-i,.wxParse-cite,.wxParse-em,.wxParse-var,.wxParse-address {
    font-style: italic;
}

.wxParse-pre,.wxParse-tt,.wxParse-code,.wxParse-kbd,.wxParse-samp {
    font-family: monospace;
}

.wxParse-pre {
    white-space: pre;
}

.wxParse-big {
    font-size: 1.17em;
}

.wxParse-small,.wxParse-sub,.wxParse-sup {
    font-size: .83em;
}

.wxParse-sub {
    vertical-align: sub;
}

.wxParse-sup {
    vertical-align: super;
}

.wxParse-s,.wxParse-strike,.wxParse-del {
    text-decoration: line-through;
}

.wxParse-strong,.wxParse-s {
    display: inline;
}

.wxParse-a {
    color: deepskyblue;
    word-break: break-all;
    overflow: auto;
}

.wxParse-video {
    text-align: center;
    margin: 10px 0;
}

.wxParse-video-video {
    width: 100%;
}

.wxParse-img {
    overflow: hidden;
    vertical-align: bottom;
}

.wxParse-blockquote {
    margin: 0;
    padding: 10px 0 10px 5px;
    font-family: Courier,Calibri,"宋体";
    background: #f5f5f5;
    border-left: 3px solid #dbdbdb;
}

.wxParse-code,.wxParse-wxxxcode-style {
    display: inline;
    background: #f5f5f5;
}

.wxParse-ul {
    margin: 20rpx 10rpx;
}

.wxParse-li,.wxParse-li-inner {
    display: flex;
    align-items: baseline;
    margin: 10rpx 0;
}

.wxParse-li-text {
    align-items: center;
    line-height: 20px;
}

.wxParse-li-circle {
    display: inline-flex;
    width: 5px;
    height: 5px;
    background-color: #333;
    margin-right: 5px;
}

.wxParse-li-square {
    display: inline-flex;
    width: 10rpx;
    height: 10rpx;
    background-color: #333;
    margin-right: 5px;
}

.wxParse-li-ring {
    display: inline-flex;
    width: 10rpx;
    height: 10rpx;
    border: 2rpx solid #333;
    border-radius: 50%;
    background-color: #fff;
    margin-right: 5px;
}

.wxParse-u {
    text-decoration: underline;
}

.wxParse-hide {
    display: none;
}

.WxEmojiView {
    align-items: center;
}

.wxEmoji {
    width: 16px;
    height: 16px;
}

.wxParse-tr {
    display: flex;
    border-right: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    border-top: 1px solid #e0e0e0;
}

.wxParse-th,.wxParse-td {
    flex: 1;
    padding: 5px;
    font-size: 28rpx;
    border-left: 1px solid #e0e0e0;
    word-break: break-all;
}

.wxParse-td:last {
    border-top: 1px solid #e0e0e0;
}

.wxParse-th {
    background: #f0f0f0;
    border-top: 1px solid #e0e0e0;
}

.wxParse-del {
    display: inline;
}

.wxParse-figure {
    overflow: hidden;
}

page {
    background: #f9f9f9;
}

.paid-content-wp {
    min-height: 80vh;
    min-height: calc(100vh - 140px);
}

.header-image-wp {
    position: relative;
    overflow: hidden;
}

.header-audio-wp {
    position: relative;
    overflow: hidden;
}

.header-video-wp {
    position: relative;
    overflow: hidden;
    font-size: 0;
}

.header-video-wp .try-info {
    opacity: 1;
    background: #000;
    position: static;
}

.header-video {
    width: 100%;
    height: 212px;
}

.try-info {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 30px;
    font-size: 12px;
    line-height: 30px;
    color: #fff;
    background: #000;
    padding: 0 15px;
    opacity: .6;
}

.content-section {
    background: #fff;
    padding: 22px 15px;
}

.content-section .title-line {
    font-size: 20px;
    line-height: 28px;
    color: #333;
    margin-bottom: 10px;
}

.content-section .time-line {
    font-size: 12px;
    line-height: 14px;
    color: #999;
    margin-bottom: 5px;
}

.content-section .count-line,.history-play {
    font-size: 10px;
    color: #999;
}

.column-section {
    padding: 0 16px;
    margin-top: 10px;
    height: 55px;
    background: #fff;
}

.column-img {
    float: left;
    width: 30px;
    height: 40px;
    overflow: hidden;
    border-radius: 2px;
}

.column-title {
    color: #333;
    font-size: 14px;
    line-height: 20px;
    margin-bottom: 5px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.column-count {
    color: #999;
    font-size: 10px;
    line-height: 14px;
}

.go-column {
    color: #999;
    font-size: 14px;
    margin-right: 10px;
    vertical-align: middle;
}

.redirect-arrow {
    color: #999;
    font-size: 10px;
    vertical-align: middle;
}

.history-play {
    margin-right: 5px;
}

.mb10 {
    margin-bottom: 10px;
}

.fixed-btn {
    position: fixed;
    display: flex;
    left: 0;
    bottom: 0;
    z-index: 10;
    width: 100%;
    font-size: 16px;
    height: 50px;
    line-height: 50px;
}

.fixed-btn .redirect-column {
    width: 94px;
    text-align: center;
}

.fixed-btn .redirect-column.-full {
    flex: 1;
    text-align: center;
}

.fixed-btn .buy-btn {
    flex: 1;
    text-align: center;
}

.content-text {
    position: relative;
    font-size: 16px;
    line-height: 28px;
    margin-top: 15px;
    overflow: hidden;
}

.content-text::after {
    position: absolute;
    left: 0;
    bottom: 0;
    content: '';
    height: 120px;
    width: 100%;
    background: linear-gradient(180deg,rgba(255,255,255,0),rgba(255,255,255,0) 10%,white);
}

.content-text.no-after::after {
    background: transparent;
}

.buy-info {
    margin-top: 30px;
    text-align: center;
    margin-bottom: 8px;
}

.buy-info .buy-info-text {
    font-size: 12px;
    line-height: 12px;
    color: #999;
    margin-bottom: 15px;
}

.buy-info .buy-info-btn {
    display: inline-block;
    padding: 10px 26px;
    border-radius: 20px;
    border: 1rpx solid #f44;
    color: #f44;
    font-size: 14px;
    line-height: 14px;
}

.header-image {
    margin: 0 auto;
    max-width: 100%;
    display: block;
}

.column-img-wp {
    width: 80px;
}

.right-link {
    height: 55px;
    line-height: 55px;
    float: right;
    width: 80px;
    text-align: right;
}

.column-info {
    box-sizing: border-box;
    height: 55px;
    padding: 8px;
    padding-right: 80px;
}

.column-info-text {
    padding-left: 40px;
}

.comment-list {
    margin-top: 10px;
    background: #fff;
}

.comment-list__title {
    height: 40px;
    background: #fff;
    padding: 0 15px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.comment-list__title text {
    font-size: 14px;
}

.comment-list__title_fixed {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 999;
}

.comment-list__title_nobg {
    background: #f9f9f9;
    height: 20px;
}

.comment-list__writebtn {
    font-size: 14px;
    color: #5979a3;
}

.comment-list__writebtn view {
    display: inline-block;
    width: 11px;
    height: 11px;
    margin-left: 5px;
    background-size: contain;
    background-repeat: no-repeat;
    background-image: url(data:image/png;base64,);
}

.comment-list__comments {
    padding-top: 12px;
}

.comment-list__bottom {
    height: 40px;
    line-height: 40px;
    font-size: 12px;
    text-align: center;
    color: #9b9b9b;
}

.comment-list__bottom .divider {
    height: 1rpx;
    background: #E5E5E5;
}