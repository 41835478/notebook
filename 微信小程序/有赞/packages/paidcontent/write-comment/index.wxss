.copyright-container {
    padding: 18px 0 20px;
    background-color: #f9f9f9;
    text-align: center;
    font-size: 0;
}

.copyright--with-fix-bottom {
    padding-bottom: 70px;
}

.copyright-image {
    display: block;
    margin: 0 auto;
    height: 30px;
    width: 110px;
    padding-bottom: 3px;
}

.copyright-text {
    position: relative;
    line-height: 16px;
    font-size: 12px;
    color: #BFBFC3;
}

.copyright-text--customized {
    padding-left: 14px;
}

.copyright-text--customized::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    width: 10px;
    height: 12px;
    background: url("https://img.yzcdn.cn/public_files/2018/01/19/344a25fb1afe9199f821829ce7a99a2d.png") no-repeat;
    background-size: 10px 12px;
}

page {
    background: #f9f9f9;
}

.write__title {
    font-size: 16px;
    line-height: 22px;
    color: #4a4a4a;
    margin: 10px 20px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webskit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.write__write {
    background-color: #fff;
    margin: 0 15px;
    padding: 10px;
    border-radius: 4px;
    padding-bottom: 20px;
}

.write__write textarea {
    width: 100%;
    font-size: 14px;
    color: #4a4a4a;
}

.write__hint {
    float: right;
    font-size: 10px;
    color: #9b9b9b;
}

.write__submitbtn {
    margin: 15px auto;
    width: 260px;
    height: 38px;
    font-size: 15px;
    color: #fff;
    background-color: #f85;
    border: 0;
}

.comment-list .zan-loadmore {
    width: 85%;
}

.comment-list .zan-loadmore--nodata {
    margin-top: 40px;
    margin-bottom: 10px;
}

.comment-list .zan-loadmore__tips {
    padding: 0 15px;
    font-size: 16px;
    color: #4a4a4a;
}