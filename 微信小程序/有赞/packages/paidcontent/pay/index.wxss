@import "../../../components/copyright/index.wxss";

@import "../../../components/pay/cashier/index.wxss";

page {
    background: #f9f9f9;
}

.white-wp {
    position: relative;
    width: 100%;
    height: 215px;
    background: #fff;
    padding: 29px 15px 90px;
    box-sizing: border-box;
}

.price-wp {
    text-align: center;
    line-height: 40px;
    margin-bottom: 30px;
    color: #333;
}

.price {
    display: inline-block;
    position: relative;
    font-size: 28px;
}

.price::before {
    content: 'ï¿¥';
    font-size: 18px;
    color: #333;
    position: absolute;
    bottom: -4px;
    left: -20px;
}

.pay-title {
    margin-bottom: 11px;
    font-size: 12px;
    color: #999;
}

.pay-info {
    position: absolute;
    left: 15px;
    right: 15px;
    background: #fff;
    border: 1rpx solid #e0e0e0;
    box-shadow: 0 1px 8px #e5e5e5;
    z-index: 1;
    padding: 16px 20px 20px 15px;
}

.column-image {
    width: 68px;
    height: 90px;
    border-radius: 3px;
    float: left;
}

.content-image {
    height: 60px;
    width: 80px;
    border-radius: 3px;
    background: #ccc;
}

.content-image-wp {
    float: left;
    height: 60px;
    position: relative;
}

.image-icon {
    position: absolute;
    width: 18px;
    height: 18px;
    bottom: 5px;
    right: 5px;
}

.column-desc {
    padding-left: 77px;
}

.content-desc {
    padding-left: 90px;
}

.content-title,.column-title {
    font-size: 16px;
    line-height: 22px;
    color: #333;
    margin-bottom: 4px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    font-weight: 700;
}

.content-summary,.column-summary {
    font-size: 12px;
    color: rgb(153,153,153);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
}

.price-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 6px;
    font-size: 12px;
    width: 100%;
}

.publish-time {
    color: #999;
}

.column-more {
    margin-top: 30px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
}

.column-update {
    font-size: 12px;
    color: rgb(153,153,153);
}

.column-price {
    color: rgb(51,51,51);
    font-size: 12px;
}

.buy-btn {
    border-radius: 4px;
    margin: 50px 15px 100px 15px;
    height: 45px;
    background: #4b0;
    text-align: center;
    color: #fff;
    font-size: 14px;
    line-height: 45px;
    border: 1rpx solid #0a0;
}

.buy-btn.more-margin {
    margin-top: 75px;
}