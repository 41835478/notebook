@import "../../../components/copyright/index.wxss";

page {
    background: #f9f9f9;
}

.paid-column-wp {
    min-height: 80vh;
    min-height: calc(100vh - 140px);
}

.column-desc-card {
    padding: 20px 15px 30px 15px;
    height: 176px;
    background: #fff;
    margin-bottom: 10px;
    position: relative;
    overflow: hidden;
    font-size: 0;
}

.main-image {
    position: absolute;
    width: 132px;
    height: 176px;
    border-radius: 4px;
    overflow: hidden;
    background: #eee;
    box-shadow: 0 2px 4px rgba(0,0,0,.5),inset 0 1px 3px rgba(0,0,0,.5);
}

.column-desc-wp {
    padding-left: 147px;
    color: #999;
    font-size: 12px;
    line-height: 17px;
    height: 176px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.column-title {
    color: #333;
    font-size: 18px;
    line-height: 25px;
    margin-bottom: 5px;
    text-overflow: ellipsis;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.column-summary {
    color: #666;
    margin-bottom: 7px;
}

.column-author {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.zan-tab__item--selected .zan-tab__title {
    width: 100%;
}

.price-text {
    color: #FF423D;
}

.desc-part {
    background: #fff;
    overflow: hidden;
    padding: 18px 15px 24px;
    min-height: 140px;
}

.content-part {
    background: #fff;
    overflow-x: hidden;
}

.no-item {
    padding: 85px 0;
    font-size: 12px;
    color: #999;
    text-align: center;
    background: #fff;
}

.buy-btn {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 50px;
    width: 100%;
    text-align: center;
    line-height: 50px;
    font-size: 16px;
    z-index: 10;
}

.zan-loadmore {
    margin-top: 0;
    padding-bottom: 15px;
    padding-top: 15px;
}

.no-more {
    height: 40px;
    line-height: 40px;
    text-align: center;
    font-size: 12px;
    color: #ccc;
}