@import "../../../__wuBaseWxss__/1.wxss";

@import "../../../components/ZanAccount/bindPhoneNumber/bindPhoneNumber.wxss";

@import "../../../components/ZanAccount/index.wxss";

.bind-container {
    min-height: 130rpx;
}

.top-banner {
    height: 70px;
    display: flex;
    padding: 15px;
    box-sizing: border-box;
    position: relative;
    background-color: #fff;
}

.header-img {
    height: 40px;
    width: 40px;
    border-radius: 20px;
    background-color: #eee;
}

.user-info {
    flex-grow: 1;
    padding-left: 10px;
}

.user-name {
    font-size: 14px;
}

.user-phone {
    font-size: 12px;
    color: #999;
}

.user-settings {
    width: 40px;
    font-size: 14px;
    line-height: 40px;
    color: #666;
}

.card-panel {
    padding-bottom: 20px;
    color: #F8F8F8;
}

.card-container {
    height: 80px;
    box-sizing: border-box;
    padding: 15px 15px 0px 15px;
    overflow: hidden;
    box-shadow: 0 -4px 15px rgba(51,51,51,0.1);
}

.card-info {
    height: 65px;
    border-radius: 10px 10px 0 0;
    background-position: center;
    background-size: cover;
    position: relative;
    padding-left: 15px;
    padding-top: 15px;
}

.card-title {
    font-size: 16px;
}

.card-more {
    margin-top: 3px;
    display: flex;
    font-size: 12px;
}

.card-desc {
    flex-grow: 1;
}

.card-status {
    width: 50px;
}

.card-default {
    position: absolute;
    top: 10px;
    right: -5px;
    height: 30px;
    width: 70px;
}

.no-card {
    text-align: center;
    font-size: 12px;
    color: #999;
}

.no-card-img {
    width: 110px;
    height: 110px;
}