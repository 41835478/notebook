@import "../../../__wuBaseWxss__/1.wxss";

@import "../../../components/ZanAccount/index.wxss";

.card-icon:before {
    content: '';
    width: 25px;
    height: 25px;
    background: url('https://b.yzcdn.cn/v2/image/card/wap/icon/icon_list@2x.png') no-repeat;
    background-size: 25px 150px;
    display: inline-block;
    vertical-align: middle;
}

.card-icon-member:before {
    background-position: 0 0;
}

.card-icon-description:before {
    background-position: 0 -25px;
}

.card-icon-homepage:before {
    background-position: 0 -75px;
}

.card-icon-phone:before {
    background-position: 0 -50px;
}

.card-icon-cert:before {
    margin-right: 4px;
    width: 20px;
    height: 20px;
    background: url("https://b.yzcdn.cn/v2/image/card/wap/icon/icon_pingzhen@2x.png") no-repeat;
    background-size: cover;
}

.membercard-detail {
    padding-bottom: 80px;
}

.top-banner_container {
    padding: 15px;
    position: relative;
    color: #ffffff;
}

.top-banner--normal {
    border-radius: 4px;
    background-position: center;
    background-size: cover;
    height: 150px;
}

.ercode {
    width: 30px;
    height: 30px;
    top: 35px;
    right: 30px;
    position: absolute;
}

.shop-img {
    width: 30px;
    height: 30px;
    border-radius: 15px;
    left: 30px;
    top: 35px;
    position: absolute;
}

.shop-name {
    font-size: 16px;
    position: absolute;
    left: 65px;
    top: 40px;
}

.card-name {
    font-size: 20px;
    position: absolute;
    left: 30px;
    top: 100px;
}

.card-validtime {
    font-size: 14px;
    position: absolute;
    left: 30px;
    bottom: 25px;
}

.card-status {
    font-size: 14px;
    position: absolute;
    right: 30px;
    bottom: 25px;
}

.top-banner--level {
    border-radius: 4px;
    overflow: hidden;
    background-color: #fff;
}

.top-banner--level .shop {
    height: 85px;
    background-position: center;
    background-size: cover;
}

.level-sum {
    font-size: 13px;
    position: absolute;
    left: 30px;
    top: 75px;
}

.level-description {
    position: absolute;
    font-size: 12px;
    top: 75px;
    right: 30px;
}

.level-panel {
    padding: 12px 15px 10px 15px;
}

.card-promote {
    color: #666;
    font-size: 11px;
    display: block;
    position: static;
}

.top-banner--level .card-validtime {
    color: #999;
    font-size: 11px;
    display: block;
    position: static;
}

.top-banner--level .card-status {
    color: #FF4444;
    border: #FF4444 solid 1px;
    bottom: 20px;
    border-radius: 2px;
    width: 50px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    font-size: 12px;
}

.level-step-bar {
    position: relative;
}

.progress {
    top: 5px;
    width: 100%;
    height: 2px;
    background-color: #DBDBDB;
    position: absolute;
}

.progress__done {
    height: 2px;
    background-color: #BBA172;
}

.active_point {
    position: absolute;
    top: 0;
    height: 10px;
    width: 10px;
    border-radius: 10px;
    border: #D8B477 1px solid;
    background-color: #fff;
    z-index: 2;
    transform: translateX(-50%);
}

.circles,.levels {
    display: flex;
    justify-content: space-between;
}

.circles-place {
    width: 100%;
    height: 12px;
}

.circles {
    padding: 2px 0;
    position: absolute;
    width: calc(100% + 6px);
    top: 0px;
    left: -3px;
}

.circle {
    width: 6px;
    height: 6px;
    border-radius: 6px;
    border: 1px #CECECE solid;
    background-color: #CECECE;
}

.circle.actived {
    background-color: #fff;
}

.levels {
    color: #999;
    font-size: 9px;
    top: 120px;
    margin-top: 2px;
    margin-bottom: 2px;
}

.levels .current {
    color: #333;
}

.user-info-container {
    height: 70px;
    display: flex;
    padding: 15px;
    box-sizing: border-box;
    position: relative;
    background-color: #fff;
    margin-bottom: 10px;
}

.header-img {
    height: 40px;
    width: 40px;
    border-radius: 20px;
    background-color: #eee;
}

.user-info {
    flex-grow: 1;
    padding-left: 10px;
}

.user-name {
    font-size: 14px;
}

.user-card-no {
    font-size: 12px;
}

.rights-container {
    background-color: #fff;
    padding-left: 13px;
    margin-bottom: 10px;
}

.rights-title {
    border-bottom: 1px solid #e5e5e5;
    line-height: 46px;
    display: block;
    height: 46px;
    font-size: 14px;
}

.rights-body {
    padding-right: 15px;
}

.rights-wrapper {
    display: flex;
}

.rights-cell {
    margin: 10px 5px;
    width: 22%;
    text-align: center;
}

.rights-img {
    width: 60px;
    height: 60px;
    border-radius: 30px;
}

.rights-name {
    font-size: 14px;
    text-align: center;
}

.rights-info {
    font-size: 12px;
    color: #999;
    padding-left: 5px;
    padding-bottom: 10px;
}

.extra-info {
    background-color: #fff;
    margin-bottom: 10px;
}

.home-page {
    background-color: #fff;
    margin-bottom: 10px;
}

.delete-btn {
    background-color: #fff;
    margin-bottom: 10px;
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    text-align: center;
}

.bottom-btn-container {
    position: fixed;
    height: 45px;
    border-top: 1px solid #e5e5e5;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bottom-btn {
    width: 180px;
    height: 32px;
    font-size: 14px;
    text-align: center;
    line-height: 32px;
    border-radius: 2px;
}

.btn-orange {
    color: #fff;
    border-color: #f60;
    background-color: #f60;
}

.btn-green {
    color: #fff;
    background-color: #06bf04;
    border-color: #03b401;
}

.code-panel {
    border-radius: 10px;
    width: 90%;
}

.code-container {
    position: relative;
}

.code__header {
    border-radius: 10px 10px 0 0;
    height: 100px;
    color: #fff;
    position: relative;
}

.code__shop-img {
    width: 30px;
    height: 30px;
    border-radius: 15px;
    left: 20px;
    top: 15px;
    position: absolute;
}

.code__shop-name {
    font-size: 15px;
    position: absolute;
    left: 55px;
    top: 20px;
}

.code__close {
    position: absolute;
    right: 20px;
    top: 4px;
    font-size: 30px;
}

.code__name {
    font-size: 20px;
    position: absolute;
    left: 20px;
    bottom: 10px;
}

.code__discount {
    font-size: 20px;
    position: absolute;
    right: 20px;
    bottom: 10px;
}

.code__area {
    padding: 10px;
    text-align: center;
    font-size: 14px;
    color: #666;
}

.usage-cell {
    flex-wrap: wrap;
}

.usageinfo {
    padding-top: 10px;
    word-wrap: break-word;
    color: #999;
    font-size: 12px;
    width: 100%;
}

.qr-code {
    width: 200px;
    height: 200px;
}

.bar-code {
    width: 240px;
    height: 60px;
}

.code_valid {
    background-color: #f7f7f7;
    height: 20px;
    line-height: 20px;
    font-size: 10px;
    color: #999;
    border-radius: 0 0 10px 10px;
    text-align: center;
}

.code__tips {
    background-color: transparent;
    position: absolute;
    bottom: -25px;
    color: #fff;
    font-size: 12px;
    width: 100%;
    text-align: center;
}

.arrow-right {
    position: relative;
}

.arrow-right:after {
    content: '';
    position: absolute;
    width: 7px;
    height: 7px;
    border-top: 2px solid #cbc9cc;
    border-right: 2px solid #cbc9cc;
    top: 50%;
    right: 3px;
    margin-top: -5px;
    transform: rotate(45deg);
}

.arrow-down {
    position: relative;
}

.arrow-down:after {
    content: '';
    position: absolute;
    width: 7px;
    height: 7px;
    border-top: 2px solid #cbc9cc;
    border-right: 2px solid #cbc9cc;
    top: 50%;
    right: 3px;
    margin-top: -5px;
    transform: rotate(135deg);
}