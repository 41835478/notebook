@import "../../../__wuBaseWxss__/1.wxss";

page {
    min-height: 100%;
    background-color: #F8F8F8;
}

.user-info {
    height: 130px;
    background-color: #55bd47;
    text-align: center;
    box-sizing: border-box;
    padding-top: 40px;
}

.header-img {
    height: 40px;
    width: 40px;
    border-radius: 20px;
}

.user-name {
    font-size: 16px;
    color: #fff;
}

.tips {
    color: #999;
    font-size: 13px;
    padding-left: 10px;
    line-height: 30px;
    height: 30px;
}

.info-form {
    background-color: #fff;
}

.disabled {
    color: #999;
}

.btn-container {
    padding: 40px 10px 20px 10px;
}

.active_btn {
    border-radius: 4px;
}

.order-address {
    display: block;
    position: relative;
    line-height: 1.4;
    padding: 15px 15px;
    padding-left: 40px;
    font-size: 14px;
    background-color: white;
}

.order-address--has {
    background: #fff url("https://img.yzcdn.cn/public_files/2016/11/21/8026eedb0062f84a729e5e4561d0bef2.png") 18px 16px no-repeat;
    background-size: 14px 16px;
}

.order-address--empty {
    padding: 16px 10px 16px 65px;
    height: 40px;
    background: white url("https://b.yzcdn.cn/v2/image/wap/address/add@2x.png") no-repeat;
    background-size: 40px 40px;
    background-position: 15px center;
}

.order-address--empty__title {
    line-height: 40px;
    font-size: 14px;
}

.order-address--edit {
    padding-right: 25px;
}

.order-address__desc {
    word-break: break-all;
}

.order-address__title {
    padding-bottom: 3px;
    overflow: hidden;
}

.order-address__uname {
    margin-right: 90px;
}

.address-edit__pickers {
    height: 28px;
}

.address-edit__picker {
    display: inline-block;
    width: 33%;
    height: 28px;
    overflow: hidden;
}