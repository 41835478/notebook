@import "../../ump/integral-store/index.wxss";

@import "../../../components/ZanAccount/index.wxss";

@import "../../../components/ZanAccount/bindPhoneNumber/bindPhoneNumber.wxss";

.integral__item {
    height: 75px;
    background: #fff;
    padding: 15px;
    box-sizing: border-box;
}

.integral__item-info {
    margin-left: 0;
    line-height: 17px;
    width: 100%;
}

.integral__item-info__title {
    margin-bottom: 5px;
    margin-right: 30px;
    line-height: 20px;
    white-space: nowrap;
    overflow: hidden;
}

.integral__item .integral__item-info__detail {
    overflow: initial;
}

.integral__item .integral__item-info__detail .zan-card__left-col {
    color: #999!important;
}

.integral__item .integral__item-info__detail .zan-card__right-col {
    transform: translateY(-10px);
    color: #333;
}

.bind__container {
    margin-bottom: 0;
}