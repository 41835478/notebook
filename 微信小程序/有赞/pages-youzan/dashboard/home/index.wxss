.shop-list {
    overflow: hidden;
    font-size: 14px;
}

.shop-item {
    margin-top: 10px;
    padding: 15px 12px;
    background-color: #fff;
}

.shop-item__info {
    display: flex;
    align-items: center;
}

.shop-item__logo {
    width: 50px;
    height: 50px;
    flex-shrink: 0;
    box-sizing: border-box;
    overflow: hidden;
    border-radius: 2px;
}

.shop-item__logo::after {
    border-radius: 4px;
    border-color: rgba(0,0,0,0.1);
}

.shop-item__name {
    line-height: 20px;
    max-height: 40px;
    padding: 0 5px;
    padding-left: 10px;
    overflow: hidden;
    color: #111;
    font-size: 16px;
    font-weight: 500;
}

.shop-item__official {
    width: 16px;
    height: 16px;
    line-height: 16px;
    flex-shrink: 0;
    color: #fff;
    font-size: 10px;
    text-align: center;
    border-radius: 2px;
    background-color: #FF4444;
}

.shop-item__empty {
    flex: 1;
}

.shop-item__entry {
    width: 55px;
    height: 30px;
    float: right;
    flex-shrink: 0;
    line-height: 30px;
    margin-left: 20px;
    color: #fff;
    text-align: center;
    border-radius: 30px;
    background-color: #4b0;
}

.shop-item__entry::after {
    border-radius: 30px;
    border-color: #4b0;
}

.shop-item__cert {
    margin-top: 10px;
    overflow: hidden;
}

.shop-item__cert-item {
    margin-right: 20px;
    line-height: 1;
    float: left;
    color: #666;
}

.shop-item__cert-txt,.shop-item__cert-icon {
    display: inline-block;
    vertical-align: middle;
}

.shop-item__cert-icon {
    margin-right: 5px;
    font-size: 10px;
}

.shop-item__cert-txt {
    font-size: 10px;
}

.shop-item__cert-item .zan-icon {
    color: #4b0;
    margin-right: 2px;
}

.shop-item__goods {
    margin-top: 7px;
    margin-left: -3px;
}

.shop-item__goods-pic-contain {
    position: relative;
    width: 33.3%;
    float: left;
    padding-top: 33.3%;
    box-sizing: border-box;
}

.shop-item__goods-pic {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    height: auto;
    width: auto;
    margin-left: 3px;
    margin-top: 3px;
}

.shop-empty {
    margin-top: 120px;
    text-align: center;
    color: #333;
}

.shop-empty__pic {
    margin: 0 auto;
    width: 70px;
    height: 70px;
    line-height: 110px;
    background: url(https://img.yzcdn.cn/public_files/2018/02/11/482b4183a2749b9db5c8f5c954b84dd8.png) center no-repeat;
    background-size: 70px;
}

.shop-empty__title {
    margin: 10px 0;
    line-height: 24px;
    font-size: 18px;
    font-weight: 600;
}

.shop-empty__action {
    display: inline-block;
    line-height: 36px;
    height: 36px;
    padding: 0 20px;
    font-size: 14px;
    margin-top: 20px;
}