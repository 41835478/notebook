.container:before {
    height: 0;
}

.shop-empty {
    margin-top: 120px;
    text-align: center;
    color: #333;
}

.shop-empty__pic {
    margin: 0 auto;
    width: 70px;
    height: 70px;
    line-height: 110px;
    background: url(https://img.yzcdn.cn/public_files/2018/02/11/482b4183a2749b9db5c8f5c954b84dd8.png) center no-repeat;
    background-size: 70px;
}

.shop-empty__title {
    margin: 10px 0;
    line-height: 24px;
    font-size: 18px;
    font-weight: 600;
}

.shop-empty__action {
    display: inline-block;
    line-height: 36px;
    height: 36px;
    padding: 0 20px;
    font-size: 14px;
}

.shop-empty__action.zan-btn {
    margin-top: 20px;
}