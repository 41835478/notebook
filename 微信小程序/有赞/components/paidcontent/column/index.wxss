@import "../../../__wuBaseWxss__/94.wxss";

.column-item {
    padding: 15px 0;
    margin: 0 20px;
    height: 90px;
    border-bottom: 1rpx solid #eee;
}

.column-item.no-border {
    border-bottom: 0;
}

.column-image {
    width: 68px;
    height: 90px;
    border-radius: 3px;
    float: left;
}

.column-desc {
    position: relative;
    height: 90px;
    padding-left: 77px;
}

.main-text {
    font-size: 16px;
    line-height: 22px;
    margin-bottom: 5px;
    font-weight: 700;
}

.sub-text {
    font-size: 12px;
    color: #999;
}

.main-text,.sub-text,.title-text {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.column-count-wp {
    box-sizing: border-box;
    position: absolute;
    left: 0;
    bottom: 0;
    padding: 0 0 0 77px;
    font-size: 10px;
    line-height: 14px;
    color: #999;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.price-label {
    display: block;
    float: right;
    color: rgb(255,102,0);
}

.buy-time {
    display: block;
    float: right;
    color: #999;
}