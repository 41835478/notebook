@import "../../../__wuBaseWxss__/94.wxss";

.content-image-wp {
    float: left;
    height: 60px;
    width: 80px;
    position: relative;
}

.content-item {
    padding: 15px 0;
    margin: 0 20px;
    height: 60px;
}

.content-image {
    width: 80px;
    height: 60px;
    border-radius: 3px;
    background: #ccc;
    float: left;
}

.content-desc {
    position: relative;
    height: 60px;
}

.main-text {
    font-size: 16px;
    line-height: 22px;
    margin-bottom: 5px;
    font-weight: 700;
}

.sub-text {
    font-size: 12px;
    color: #999;
}

.main-text,.sub-text,.title-text {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.image-icon {
    position: absolute;
    width: 18px;
    height: 18px;
    bottom: 5px;
    right: 5px;
}

.content-title {
    font-size: 16px;
    line-height: 22px;
    margin-bottom: 4px;
    font-weight: 700;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.content-summary {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.content-count-wp {
    position: relative;
    box-sizing: border-box;
    padding: 0 35px 0 90px;
    font-size: 12px;
    color: #999;
    width: 100%;
    height: 60px;
}

.price-label {
    color: rgb(255,102,0);
}

.free-label {
    color: #f43;
}

.bottom-part {
    font-size: 10px;
    line-height: 14px;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding-left: 90px;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.buy-time .price-label {
    position: absolute;
    right: 0;
}