.sc-related-link {
    list-style: none;
    padding-left: 15px;
}

.sc-related-link__item {
    position: relative;
    border-bottom: 1rpx solid #e5e5e5;
    padding-right: 15px;
}

.sc-related-link__item:last-child {
    border-bottom: 0 none;
}

.sc-related-link__item:first-child {
    border-bottom: 1rpx solid #e5e5e5;
}

.sc-related-link__link {
    position: relative;
    display: block;
    padding-right: 20px;
    height: 44px;
    line-height: 44px;
    font-size: 14px;
    font-weight: 700;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.sc-related-link__icon {
    color: #cbc9cc;
    position: absolute;
    top: 0;
    right: 0;
    font-size: 12px;
}