.theme-feature-coupon {
    padding: 30rpx 0;
    width: 750rpx;
    background-color: #fff;
}

.coupon-container {
    display: flex;
    padding: 0 30rpx;
}

.coupon-container--large {
    height: 190rpx;
}

.coupon-container--medium {
    height: 150rpx;
}

.coupon-container--small {
    height: 140rpx;
}

.coupon-item {
    height: 100%;
    border-radius: 8rpx;
    background: linear-gradient(to right,#FF6565,#FF8C8C);
    position: relative;
}

.coupon-item:not(:last-child) {
    margin-right: 10px;
}

.coupon-item--large {
    width: 690rpx;
    display: flex;
    align-items: center;
}

.coupon-item--medium {
    width: 335rpx;
}

.coupon-item--small {
    width: 224rpx;
}

.coupon-item--small.morethan3 {
    width: 260rpx;
}

.coupon-item--valid {
    background: linear-gradient(to right,#FF6565,#FF8C8C);
}

.coupon-item--invalid {
    background: linear-gradient(to right,#C8CACC,#D3D6D9);
}

.coupon-item__leftcircle,.coupon-item__rightcircle {
    position: absolute;
    background-color: #fff;
}

.coupon-item__leftcircle--large {
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
    top: calc(50% - 20rpx);
    left: -20rpx;
}

.coupon-item__rightcircle--large {
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
    top: calc(50% - 20rpx);
    right: -20rpx;
    display: flex;
}

.coupon-item__leftcircle--medium,.coupon-item__leftcircle--small {
    width: 20rpx;
    height: 20rpx;
    border-radius: 10rpx;
    top: calc(50% - 10rpx);
    left: -10rpx;
}

.coupon-item__rightcircle--medium,.coupon-item__rightcircle--small {
    width: 20rpx;
    height: 20rpx;
    border-radius: 10rpx;
    top: calc(50% - 10rpx);
    right: -10rpx;
}

.coupon-item__priceview,.coupon-item__discountview {
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.coupon-item__priceview--large,.coupon-item__discountview--large {
    width: 37%;
    justify-content: flex-end;
    align-items: flex-end;
}

.coupon-item__priceview--medium,.coupon-item__discountview--medium {
    width: 100%;
    height: 63%;
}

.coupon-item__priceview--small,.coupon-item__discountview--small {
    width: 100%;
    height: 63%;
}

.coupon-item__priceview__symbol--large {
    font-size: 52rpx;
    margin-bottom: 2rpx;
}

.coupon-item__priceview__symbol--medium {
    font-size: 28rpx;
    margin-bottom: 2rpx;
}

.coupon-item__priceview__symbol--small {
    font-size: 24rpx;
    margin-bottom: 2rpx;
}

.coupon-item__priceview__yuan--large,.coupon-item__discountview__discount--large {
    font-size: 96rpx;
    margin: 0px 6rpx -12rpx 6rpx;
}

.coupon-item__priceview__yuan--medium,.coupon-item__discountview__discount--medium {
    font-size: 72rpx;
    margin: 0px 6rpx -12rpx 6rpx;
}

.coupon-item__priceview__yuan--small,.coupon-item__discountview__discount--small {
    font-size: 60rpx;
    margin: 0px 6rpx -12rpx 6rpx;
}

.coupon-item__priceview__cent--large,.coupon-item__discountview__text--large {
    font-size: 52rpx;
    padding-bottom: 4rpx;
}

.coupon-item__priceview__cent--medium,.coupon-item__discountview__text--medium {
    font-size: 36rpx;
    padding-bottom: 4rpx;
}

.coupon-item__priceview__cent--small,.coupon-item__discountview__text--small {
    font-size: 24rpx;
    padding-bottom: 4rpx;
}

.coupon-item__priceview__wave {
    margin-bottom: 6rpx;
}

.coupon-item__condition--large {
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    width: 32%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-left: 30rpx;
}

.coupon-item__condition--large__name {
    font-size: 40rpx;
    padding-bottom: 10rpx;
}

.coupon-item__condition--large__content {
    font-size: 28rpx;
}

.coupon-item__condition--medium {
    color: #fff;
    font-size: 24rpx;
    text-align: center;
}

.coupon-item__condition--small {
    color: #fff;
    font-size: 22rpx;
    text-align: center;
}

.coupon-item__dotted-line {
    width: 0px;
    height: 100%;
    border-left: 1px dashed hsla(0,0%,100%,.6);
    background: white;
    background-clip: padding-box;
}

.coupon-item__button {
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    display: inline-block;
    width: 30%;
}

.coupon-item__stamp-container {
    position: absolute;
    top: 0px;
    right: 0px;
    overflow: hidden;
    width: 80rpx;
    height: 80rpx;
}

.coupon-item__stamp {
    width: 80rpx;
    height: 80rpx;
    line-height: 90rpx;
    border-radius: 42rpx;
    border: 1px solid #9e9e9e;
    transform: rotate(30deg);
    font-size: 22rpx;
    text-align: center;
    color: #9e9e9e;
    position: relative;
    top: -15rpx;
    right: -10rpx;
}

.coupon-lookmore {
    width: 24rpx;
    line-height: 1.2;
    color: #ff4444;
    font-size: 24rpx;
    text-align: center;
    padding: 15rpx 0rpx 15rpx 10rpx;
}