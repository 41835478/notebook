.sc-offline-shop-info__header {
    position: relative;
    padding-top: 40%;
    height: 0;
}

.sc-offline-shop-info__swipe {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100%;
}

.sc-offline-shop-info__shop-img {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 100%;
    height: auto;
}

.sc-offline-shop-info__body {
    padding: 0 15px;
    background-color: #fff;
}

.sc-offline-shop-info__logo-wrap {
    position: relative;
    top: -32px;
    display: inline-block;
    width: 60px;
    height: 60px;
    border: 2px solid #fff;
    border-radius: 32px;
    overflow: hidden;
}

.sc-offline-shop-info__logo-wrap--left {
    left: 0;
}

.sc-offline-shop-info__logo-wrap--center {
    left: 50%;
    margin-left: -32px;
}

.sc-offline-shop-info__logo-wrap--right {
    left: 100%;
    margin-left: -64px;
}

.sc-offline-shop-info__logo {
    width: 100%;
    height: 100%;
}

.sc-offline-shop-info__detail {
    position: relative;
    padding-bottom: 12px;
    border-bottom: 1rpx solid #e5e5e5;
}

.sc-offline-shop-info__shop-name {
    padding-right: 10px;
    margin-right: 40px;
    max-height: 48px;
    border-right: 1rpx solid #e5e5e5;
    line-height: 24px;
    font-size: 20px;
    color: #000;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.sc-offline-shop-info__tel {
    position: absolute;
    right: -8px;
    top: -8px;
    width: 40px;
    height: 40px;
    line-height: 40px;
    font-size: 17px;
    text-align: center;
    color: #000;
}

.sc-offline-shop-info__address,.sc-offline-shop-info__open-time {
    position: relative;
    padding: 15px 0 15px 20px;
    line-height: 16px;
    font-size: 12px;
}

.sc-offline-shop-info__address {
    padding-right: 20px;
    border-bottom: 1rpx solid #e5e5e5;
}

.sc-offline-shop-info__address-detail {
    max-height: 32px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.sc-offline-shop-info__address-arrow {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    color: #999;
}

.sc-offline-shop-info__info-icon {
    position: absolute;
    left: 0;
    top: 15px;
    margin-right: 10px;
    color: #999;
}