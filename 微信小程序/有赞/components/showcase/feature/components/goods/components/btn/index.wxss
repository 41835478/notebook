.sc-goods__buy-btn-wrapper {
    position: absolute;
    font-size: 0;
}

.sc-goods__buy-btn-loading {
    vertical-align: middle;
    line-height: 32px;
    text-align: center;
}

.sc-goods__buy-btn-1 {
    width: 24px;
    height: 24px;
    color: #f44;
    background-color: #fff;
    border: 1px solid red;
    box-sizing: border-box;
    border-radius: 50%;
    text-align: center;
    line-height: 22px;
    font-size: 12px;
    cursor: pointer;
}

.sc-goods__buy-btn-2 {
    color: #f44;
    font-size: 22px;
    cursor: pointer;
}

.sc-goods__buy-btn-3 {
    border-radius: 14px;
    font-size: 14px;
    line-height: 26px;
    height: 28px;
    padding: 0 13px;
    cursor: pointer;
}

.sc-goods__buy-btn-4 {
    font-size: 14px;
    line-height: 24px;
    height: 26px;
    border-color: #f44;
    color: #f44;
    min-width: 48px;
    cursor: pointer;
}

.sc-goods__buy-btn-5 {
    height: 40px;
    line-height: 40px;
    padding: 0 11px;
    margin: 0;
    font-size: 12px;
    border-radius: 0;
}