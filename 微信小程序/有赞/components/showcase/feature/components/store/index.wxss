.sc-store {
    display: block;
    padding: 12px 15px;
    line-height: 20px;
    font-size: 14px;
    background: #fff;
    color: #333;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
}

.sc-store__main {
    display: flex;
    align-items: center;
}

.sc-store__icon {
    margin-right: 10px;
}

.sc-store__tag {
    margin-left: 5px;
    word-break: keep-all;
}

.sc-store__action-text {
    position: relative;
    box-sizing: border-box;
    flex: 1;
    margin-left: 5px;
    padding-right: 17px;
    word-break: keep-all;
    text-align: right;
    color: #999;
}

.sc-store__arrow {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    color: #999;
    font-size: 12px;
}

.sc-store__sub {
    margin-top: 3px;
    font-size: 12px;
    color: #999;
}