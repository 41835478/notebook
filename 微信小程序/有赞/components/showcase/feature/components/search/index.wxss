.search-view {
    position: relative;
}

.hot-search-view {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100vh;
    background: white;
    z-index: 99;
}

.hot-search-title {
    padding: 15px;
    text-align: left;
    font-size: 12px;
    line-height: 1;
    color: #999999;
}

.hot-search-list {
    padding-right: 10px;
    overflow: hidden;
}

.hot-search-list>li {
    display: inline-block;
    margin: 0 0 10px 10px;
    padding: 0 10px;
    height: 32px;
    line-height: 32px;
    border-radius: 2px;
    background: #F6F6F6;
    font-size: 12px;
    color: #666666;
    text-align: center;
}