<template name="theme-feature-broadcast">
    <view class="br-root-view" style="background-color: {{data.bg_color}}">
        <view class="br-img-container">
            <image class="br-img" mode="aspectFill" src="https://img.yzcdn.cn/public_files/2017/8/10/6af5b7168eed548100d9041f07b7c616.png"></image>
        </view>
        <view class="marquee-box">
            <view catchtransitionend="broadcast__animationFinished" class="broadcast__animation {{data.showAnimation?'broadcast__animation--show':''}}" data-index="{{index}}" style="color: {{data.color}}; animation-duration: {{data.animationTime}}s">{{data.content}}</view>
        </view>
    </view>
</template>
