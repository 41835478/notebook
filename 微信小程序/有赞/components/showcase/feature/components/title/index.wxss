.sc-title {
    position: relative;
    padding: 20px 15px;
    border-bottom: 1rpx solid #e5e5e5;
    box-sizing: border-box;
    overflow: hidden;
    word-break: break-all;
}

.sc-title__main {
    margin: 0;
    font-size: 18px;
    line-height: 22px;
}

.sc-title__sub {
    font-size: 11px;
    color: #8c8c8c;
    margin: 5px 0 0;
}

.sc-title__divider {
    margin: 0 10px;
    color: #999;
}

.sc-title__link {
    display: inline-block;
    font-size: 12px;
    color: #07d;
}

.sc-title__author,.sc-title__date {
    margin-right: 10px;
}

.sc-title--no-line {
    border-bottom: 0 none;
}

.sc-title--wx .sc-title__main {
    font-size: 20px;
    font-weight: bold;
    line-height: 24px;
}

.sc-title--wx .sc-title__sub {
    line-height: 1.6;
    font-size: 12px;
    font-weight: 400;
    margin-top: 3px;
}

.sc-title--wx .sc-title__link {
    color: #607fa6;
}

.sc-title .title-link-transparent {
    color: #07d;
}

.sc-title--wx .title-link-transparent {
    color: #607fa6;
}

.title-link-transparent {
    display: inline;
    border: none;
    border-radius: 0;
    padding: 0;
    margin: 0;
    background: transparent;
    line-height: auto;
    font-size: 12px;
}

.title-link-transparent::after {
    display: none;
    visibility: hidden;
}