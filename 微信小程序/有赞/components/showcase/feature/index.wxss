.theme-feature--hide-visible {
    visibility: hidden;
}

.theme-feature .wf-goods {
    background: #fff;
}

.theme-feature .wf-goods__container {
    background: #fff;
}

.theme-feature .wf-goods__card {
    background: white;
    opacity: 1;
    padding: 10px 15px;
}

.theme-feature .wf-goods__card:after {
    position: absolute;
    left: 15px;
    right: 15px;
    bottom: 0;
    border-top: 1rpx solid #e5e5e5;
    background: #e5e5e5;
    content: ' ';
}

.theme-feature .wf-goods__card:last-child:after {
    display: none;
}

.theme-feature .wf-goods__thumb {
    height: 196rpx;
    width: 196rpx;
}

.theme-feature .wf-goods__detail {
    margin-left: 216rpx;
    height: 196rpx;
}

.theme-feature .wf-goods__price {
    position: absolute;
    left: 0;
    bottom: 0;
    margin-bottom: 0;
}

.theme-feature .wf-goods__buy {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 64rpx;
    height: 64rpx;
    background: url('https://img.yzcdn.cn/public_files/2017/02/14/98b2e227516f9c8e86d1e0a422718807.png') no-repeat center;
    background-size: 64rpx;
}

.wf-goods__buy_sold_out {
    position: absolute;
    right: -20rpx;
    bottom: 0;
    opacity: 0.6;
    margin-bottom: 10rpx;
    color: #3d3d3b;
    width: 100rpx;
}

.theme-feature .nav {
    display: flex;
}

.theme-feature .nav--no-border {
    border-bottom: 0rpx;
}

.theme-feature .nav__item {
    flex: 1;
    line-height: 0;
    font-size: 0;
}

.theme-feature .nav__item--no-border {
    border-right: 0rpx;
}

.item-panel {
    background: #fff;
    margin-bottom: 10px;
    overflow: hidden;
}