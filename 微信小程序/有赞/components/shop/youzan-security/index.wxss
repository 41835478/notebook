.security-style {
    height: 36px;
    padding: 0 15px;
    line-height: 42px;
    background: #fff;
    overflow: hidden;
    position: relative;
}

.security-style-2 {
    background-image: linear-gradient(90deg,#44BB00 0%,#6CCB21 48%,#44BB00 100%);
}

.security-style image {
    width: 69px;
    height: 16px;
    pointer-events: none;
    font-weight: 200;
}

.security-style .text {
    position: relative;
    top: -4px;
    left: 10px;
    opacity: 0.8;
    pointer-events: none;
    font-size: 12px;
    color: #fff;
}

.security-style.no-border::before {
    content: none;
}

.security-style::before {
    content: '';
    border-top: 1rpx #e5e5e5 solid;
    display: block;
    width: 100%;
    position: absolute;
    left: 15px;
    top: 0;
}

.security-style-1 .text {
    color: #44BB00;
}

.security-style-0 .text {
    color: #666666;
}