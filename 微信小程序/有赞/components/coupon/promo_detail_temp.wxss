.detail-header {
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.detail-header-hide {
    visibility: hidden;
}

.header-sideline-left {
    width: 152rpx;
    height: 4rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}

.header-img {
    width: 26rpx;
    height: 20rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}

.header-content {
    display: inline-block;
    font-size: 28rpx;
    margin-right: 10rpx;
    color: #7a7a7a;
    opacity: 0.8;
}

.header-sideline-right {
    width: 152rpx;
    height: 4rpx;
    vertical-align: middle;
}

.content-view {
    height: auto;
    margin: 0 auto;
    width: 702rpx;
}

.detail-bg-img {
    position: absolute;
    height: 728rpx;
    margin: 0 auto;
    width: 702rpx;
    background-size: 702rpx 728rpx;
}

.sold-out-view {
    margin-top: 5rpx;
    overflow: hidden;
    float: right;
}

.sold-out-img {
    margin-top: -25rpx;
    margin-right: -50rpx;
}

.stamp {
    width: 220rpx;
    height: 220rpx;
    background: url("https://img.yzcdn.cn/public_files/2017/08/04/3748e88aacb36fe0e9d71fc233131670.png") center no-repeat;
    background-size: 220rpx;
    transform: rotate(-30deg);
    color: #9e9e9e;
    font-size: 40rpx;
    text-align: center;
    line-height: 220rpx;
}

.stamp_got::after {
    content: '已领取';
}

.stamp_over::after {
    content: '已抢完';
}

.stamp_used::after {
    content: '已使用';
}

.stamp_expired::after {
    content: '已失效';
}

.stamp_unqualified::after {
    content: '不可领';
}

