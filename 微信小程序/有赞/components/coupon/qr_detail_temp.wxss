.qr-detail-container {
    background-color: #302e39;
    display: flex;
    flex-direction: column;
    position: fixed;
}

.qr-detail-upper {
    position: relative;
    margin-top: 15rpx;
    width: 100%;
    height: 69%;
}

.qr-detail-bar-code {
    position: relative;
    height: 180rpx;
    top: 30rpx;
    width: 610rpx;
    margin: 0 auto;
    background-size: 610rpx 180rpx;
}

.qr-detail-qr-code {
    position: relative;
    top: 65rpx;
    height: 356rpx;
    width: 360rpx;
    margin: 0 auto;
    background-size: 360rpx 356rpx;
}

.qr-detail-bg {
    height: 1020rpx;
    margin: 0 auto;
    background-size: 690rpx 1020rpx;
    margin-top: 18rpx;
    width: 690rpx;
}

.qr-detail-qr-number {
    position: relative;
    top: 100rpx;
    font-size: 29rpx;
    color: #a9a9a9;
    text-align: center;
    line-height: 29rpx;
}

.qr-detail-hint {
    position: relative;
    top: 135rpx;
    font-size: 27rpx;
    text-align: center;
    line-height: 27rpx;
}

.qr-detail-lower {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    color: #747474;
    margin-top: 95rpx;
}

.qr_detail-lower-container {
    width: 85%;
}

.qr-detail-name {
    font-size: 22rpx;
    line-height: 22rpx;
}

.qr-detail-name-content {
    line-height: 22rpx;
    font-size: 22rpx;
}

.qr-detail-name-view {
    display: flex;
    line-height: 22rpx;
    flex-direction: row;
    margin-bottom: 30rpx;
    justify-content: space-between;
    font-size: 22rpx;
}

.qr-detail-value-view {
    display: flex;
    flex-direction: row;
    margin-bottom: 30rpx;
    justify-content: space-between;
    font-size: 22rpx;
}

.qr-detail-limit-view {
    margin-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 22rpx;
}

.qr-detail-expire-view {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 22rpx;
}

.qr-detail-footer-view {
    font-size: 25rpx;
    display: flex;
    color: #fff;
    flex-direction: row;
    opacity: 0.8;
    justify-content: center;
    margin-top: 110rpx;
}

.qr-detail-footer-container {
    display: flex;
    flex-direction: row;
    line-height: 1rpx;
    justify-content: space-between;
}

.line {
    height: 1px;
    width: 30rpx;
    background-color: #fff;
    vertical-align: middle;
    opacity: 0.3;
}

.left-line {
    margin-right: 22rpx;
}

.right-line {
    margin-left: 22rpx;
}