@import "../../bower_components/zan/dist/tab/index.wxss";

.zan-tab-container {
    height: 45px;
}

.zan-tab--fixed {
    position: fixed;
    top: 0;
    left: 0;
}

.zan-tab-extension {
    z-index: 20;
    height: 45px;
}

.zan-tab-default-wrapper {
    z-index: 20;
}

.zan-tab--style1 .zan-tab__item {
    padding: 0 5px;
}

.scrollview-style2 .zan-tab__item {
    padding: 0;
}

.scrollview-style2 .zan-tab__title {
    background: #fff;
}

.zan-tab__bd--scroll.scrollview-style1 {
    background: #fff;
}

.zan-tab__bd--scroll.scrollview-style2 {
    background: transparent;
    position: relative;
}

.zan-tab__bd--scroll.scrollview-style2 .background-bar {
    box-sizing: border-box;
    border-bottom: 1rpx solid #e5e5e5;
    background: #fff;
    width: 100%;
    height: 39px;
    position: absolute;
    left: 0;
    top: 0;
}

.zan-tab--style2 .zan-tab__item {
    overflow: visible;
}

.zan-tab__title {
    background: #fff;
}

.zan-tab__title.title__style2 {
    overflow: visible;
}

.zan-tab-extension .title__style1 {
    border-radius: 38rpx;
    height: 28px;
    line-height: 28px;
    margin: 8px 0;
    padding: 0px 2px;
}

.zan-tab-extension .title__style1-selected {
    background-color: #ff4444;
    color: #fff;
}

.zan-tab-extension .title__style2 {
    position: relative;
    height: 44px;
    width: 100%;
    line-height: 44px;
    margin: 0px 0px;
    padding: 0px 10px;
}

.zan-tab-extension .title__style2-selected {
    background-color: #ff4444;
    color: #fff;
}

.zan-tab-extension .title__style2-selected::before {
    z-index: 10;
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    border: 6px solid;
    margin-left: -6px;
    overflow: hidden;
    border-color: transparent transparent #f44 #f44;
    transform: rotate(-45deg);
}

.zan-tab-extension .arrow {
    position: absolute;
    left: calc(50% - 5px);
    top: 100%;
    width: 10px;
    height: 5px;
    z-index: 2;
}

.zan-tab-extension .scrollview-style1 {
    width: 750rpx;
    height: 44px;
}

.zan-tab-extension .scrollview-style2 {
    border-bottom: 0px;
}

.zan-tab-extension .style2.scrollview.title {
    height: 39px;
    line-height: 39px;
}

.zan-tab-extension .style2.scrollview.title.unselected {
    border-bottom: 1rpx solid #e5e5e5;
}

.zan-tab-extension .style2.scrollview.arrow {
    top: 39px;
}