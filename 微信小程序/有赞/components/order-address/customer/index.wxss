.customer-info__view {
    background-image: url(https://b.yzcdn.cn/v2/image/wap/address/border2@2x.png);
    background-repeat: repeat-x;
    background-position: 0 100%;
    background-size: 34px 2px;
    height: 36px;
    background-color: #fff;
}

.customer-info__view.one-line .customer-info__detail-info {
    display: flex;
    justify-content: space-between;
    flex: 1;
    align-items: center;
}

.customer-info__view.one-line .zan-cell__desc {
    line-height: 24px;
    font-size: 14px;
    color: #000;
}

.customer-info__detail {
    display: flex;
    align-items: center;
}

.customer-info__detail .zan-icon-contact {
    margin-right: 15px;
}