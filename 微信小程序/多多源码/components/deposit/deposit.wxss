@import "../../pages/goods/local_group.wxss";

@import "../goods_bottom_bar/goods_bottom_bar.wxss";

.deposit-main-view {
    padding-bottom: 100rpx;
    width: 100%;
}

.deposit-input-module {
    width: 100%;
    height: 160rpx;
    background-color: #fff;
    position: relative;
}

.deposit-input-module .dim-main-area {
    font-size: 0;
    height: 100%;
    padding: 28rpx 24rpx 0;
    position: relative;
}

.deposit-input-module .dim-main-area input {
    width: 600rpx;
    text-align: left;
    font-weight: 500;
    font-size: 54rpx;
    overflow: hidden;
    line-height: 74rpx;
    color: #151516;
    height: 74rpx;
}

.input-placeholder {
    color: #e02e24;
    font-size: 44rpx;
}

.deposit-input-module .dim-main-area .dim-mobile-carrier {
    font-size: 24rpx;
    color: #9c9c9c;
    text-align: left;
}

.deposit-input-module .dim-main-area .bottom-line {
    position: absolute;
    bottom: 0;
    width: 702rpx;
    border-bottom: 1px solid #ededed;
}

.deposit-input-module .dim-main-area .dim-mobile-clear {
    position: absolute;
    top: 42rpx;
    right: 24rpx;
}

.deposit-input-module .dim-main-area .dim-mobile-clear::before {
    content: "\e6da";
    font-family: "icomoon";
    font-size: 44rpx;
    color: #d2d2d2;
}

.deposit-input-module .dim-drop-down {
    position: absolute;
    z-index: 1001;
    background-color: #fff;
    width: 100%;
    border-top: 1px solid #f2f2f2;
    box-shadow: 0 12rpx 12rpx -10rpx rgba(4,0,0,.1);
}

.deposit-input-module .dim-drop-down .dim-drop-down-item {
    margin: 0 24rpx;
    height: 92rpx;
    border-top: 1px solid #f2f2f2;
    line-height: 94rpx;
    color: #58595b;
    text-align: left;
}

.deposit-input-module .dim-drop-down .first-dim {
    border-top: none;
}

.deposit-input-module .dim-drop-down .dim-drop-down-item .dim-candidate-mobile {
    height: 100%;
    font-size: 30rpx;
    display: inline-block;
    margin: 0 24rpx 0 0;
    vertical-align: top;
}

.deposit-input-module .dim-drop-down .dim-drop-down-item .dim-candidate-name {
    vertical-align: top;
    height: 100%;
    font-size: 30rpx;
    display: inline-block;
}

.deposit-selector-module {
    width: 100%;
    height: auto;
    background-color: #fff;
    padding: 32rpx 0 16rpx 24rpx;
}

.deposit-selector-module .dsm-item {
    width: 218rpx;
    height: 122rpx;
    display: inline-block;
    border-radius: 8rpx;
    border: 1px solid #ededed;
    background-color: #fff;
    color: #58595b;
    margin-right: 24rpx;
    margin-bottom: 24rpx;
    padding-top: 14rpx;
}

.deposit-selector-module .dsm-item-center {
    padding-top: 34rpx;
}

.deposit-selector-module .dsm-item-disable {
    color: #9c9c9c;
    border: 1px solid #f2f2f2;
    background-color: #fff;
}

.deposit-selector-module .dsm-item .dsm-item-deposit-level {
    width: 100%;
    font-size: 36rpx;
    text-align: center;
    overflow: hidden;
}

.deposit-selector-module .dsm-item .dsm-item-price {
    width: 100%;
    margin-top: 2rpx;
    font-size: 24rpx;
    text-align: center;
    overflow: hidden;
}

.deposit-selector-module .dsm-item-selected {
    color: #e02e24;
    border-color: #e02e24;
}

#g-local-groups {
    opacity: 1;
    padding: 0 24rpx 0 24rpx;
    background-color: #fff;
}

#g-local-groups .g-local-groups-head {
    padding: 0;
}

#g-local-groups .g-local-groups-title {
    height: 80rpx;
    line-height: 80rpx;
}

.local-group-nick-name {
    display: inline-block;
    float: left;
    height: 100%;
    max-width: 280rpx;
    overflow: hidden;
    line-height: 90rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    color: #151516;
}

.local-group-detial {
    position: absolute;
    height: 100%;
    top: 0;
    right: 156rpx;
    padding: 26rpx 0;
}

.local-group-detial-row2 {
    display: flex;
}

.local-group-detial-row1 .local-group-name,.local-group-detial-row2 .local-group-timer {
    float: none;
    text-align: right;
    justify-content: flex-end;
}

.local-group-detial-row1 .local-group-name {
    font-size: 26rpx;
}

.local-group-detial-row1 .local-group-name span {
    color: #e02e24;
}

.goods-direct-btn,.goods-group-btn {
    border-radius: 0px;
    padding-top: 0;
}

.goods-direct-btn::after,.goods-group-btn::after {
    border: 0;
}

.goods-group-btn text,.goods-direct-btn text {
    display: inline;
    font-size: 34rpx;
    line-height: 98rpx;
}

.dbbm-direct-buy-disabled {
    background-color: #ededed;
}

.dbbm-group-buy-disabled {
    background-color: #e0e0e0;
}

.dbbm-direct-buy-disabled text {
    color: #ccc;
}

.dbbm-group-buy-disabled text {
    color: #9c9c9c;
}