.sku-selector-bg {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    background: rgba(0,0,0,0.7);
    z-index: 1001;
}

.sku-selector-main {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 936rpx;
    padding-top: 60rpx;
    z-index: 600;
    transition: transform 150ms ease-in-out;
    transition: transform 150ms ease-in-out,-webkit-transform 150ms ease-in-out;
}

.sku-selector-main-show {
    transform: translateY(0);
}

.sku-selector-main-focus {
    position: absolute;
    transform: translateY(-250px);
}

.sku-selector-main-hide {
    transform: translateY(936rpx);
}

.fix-ipx-sku-selector-main-hide {
    transform: translateY(1004rpx);
}

.sku-selector-container {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.sku-selector-head {
    position: relative;
    width: 100%;
    height: 166rpx;
    border-bottom: 1px solid #ededed;
    padding: 0 20rpx;
}

.sku-selector-img-view {
    position: absolute;
    height: 202rpx;
    width: 202rpx;
    top: -60rpx;
    left: 20rpx;
    border: 2px solid #fff;
    border-radius: 10rpx;
    box-shadow: 0 0 4rpx #58595b;
    z-index: 1;
    background: url(http://pinduoduoimg.yangkeduo.com/wxapp/default_square.png) no-repeat;
    background-size: contain;
}

.sku-selector-img {
    width: 100%;
    height: 100%;
}

.sku-selector-head-content {
    position: relative;
    height: 100%;
    width: 100%;
    padding: 46rpx 0 0 222rpx;
}

.sku-selector-price {
    position: relative;
    width: 100%;
    height: 36rpx;
    margin-bottom: 10rpx;
    line-height: 1;
    font-size: 36rpx;
    color: #e02e24;
}

.sku-selector-desc {
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    line-height: 30rpx;
    height: 60rpx;
    font-size: 24rpx;
    color: #151516;
    word-break: break-all;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

#sku-selector-body {
    position: relative;
    width: 100%;
    max-height: 616rpx;
    overflow-y: hidden;
}

.sku-specs {
    position: relative;
    width: 100%;
    padding: 12rpx 20rpx 6rpx 20rpx;
    border-bottom: 1px solid #ededed;
}

.sku-specs-key {
    font-size: 26rpx;
    color: #151516;
    text-align: left;
}

.sku-spec-value-list {
    width: 100%;
    height: auto;
    margin-top: 16rpx;
    display: flex;
    flex-wrap: wrap;
}

.sku-spec-value-list:last-child {
    margin-right: 0;
}

.sku-spec-value {
    display: flex;
    height: 56rpx;
    padding: 0 18rpx;
    margin: 0 30rpx 14rpx 0;
    font-size: 24rpx;
    color: #151516;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 12rpx;
}

.sku-spec-value-selected {
    color: #fff;
    background-color: #e02e24;
}

.sku-spec-value-disable {
    color: #ccc;
    background-color: #f8f8f8;
}

.sku-selector-number {
    width: 100%;
    display: flex;
    height: 112rpx;
    margin-bottom: 46rpx;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    border-bottom: 1px solid #ededed;
}

.sku-number-option {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 246rpx;
}

.sku-selector-number text {
    font-size: 26rpx;
    color: #151516;
}

.sku-selector-reduce {
    height: 50rpx;
    width: 62rpx;
    border-radius: 4rpx;
    background-color: #e0e0e0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.option-reduce {
    width: 22rpx;
    height: 16rpx;
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/goods_sprites.png") no-repeat;
    background-size: 268rpx 216rpx;
}

.sku-selector-reduce .option-reduce {
    background-position: -188rpx -106rpx;
}

.sku-selector-reduce-disable {
    background-color: #f2f2f2;
}

.sku-selector-reduce-disable .option-reduce {
    background-position: -188rpx -124rpx;
}

.sku-selector-input {
    width: 94rpx;
    height: 50rpx;
    font-size: 24rpx;
    color: #151516;
    text-align: center;
    border-radius: 4rpx;
    background-color: #f2f2f2;
    min-height: 0rpx;
}

.sku-selector-increase {
    height: 50rpx;
    width: 62rpx;
    border-radius: 4rpx;
    background-color: #e0e0e0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.option-increase {
    width: 22rpx;
    height: 22rpx;
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/goods_sprites.png") no-repeat;
    background-size: 268rpx 216rpx;
}

.sku-selector-increase .option-increase {
    background-position: -187rpx -50rpx;
}

.sku-selector-increase-disable {
    background-color: #f2f2f2;
}

.sku-selector-increase-disable .option-reduce {
    background-position: -187rpx -80rpx;
}

.sku-selector-bottom {
    position: absolute;
    width: 100%;
    height: 96rpx;
    left: 0;
    bottom: 0;
    line-height: 96rpx;
    font-size: 36rpx;
    color: #fff;
    background-color: #e02e24;
    text-align: center;
    border-radius: 0;
}

.sku-selector-close-btn {
    position: absolute;
    width: 68rpx;
    height: 68rpx;
    padding: 20rpx;
    top: 0;
    right: 0rpx;
    background-color: transparent;
}

.sku-selector-close-btn::after {
    border: 0;
}

.sku-selector-close-btn:before {
    content: '';
    position: relative;
    display: block;
    width: 28rpx;
    height: 28rpx;
    background-image: url("http://pinduoduoimg.yangkeduo.com/wxapp/goods_sprites.png");
    background-repeat: no-repeat;
    background-size: 268rpx 216rpx;
    background-position: -120rpx -180rpx;
}

.sku-limit-discount {
    position: relative;
    display: inline-block;
    color: #151516;
    font-size: 24rpx;
    padding: 0 5px;
    margin-bottom: 3px;
    height: 44rpx;
    line-height: 44rpx;
    border-radius: 2px;
    background-color: #FDE750;
    vertical-align: bottom;
    text-align: center;
}

.sku-limit-discount::before {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    top: -8rpx;
    left: 24rpx;
    border-left: 8rpx solid transparent;
    border-bottom: 10rpx solid #FDE750;
    border-right: 8rpx solid transparent;
}

.fix-ipx-sku-selector-main {
    height: 1004rpx;
    padding-bottom: 68rpx;
}

.fix-ipx-sku-bottom {
    height: 68rpx;
    background-color: #ffffff;
}