.subjects-spike-container {
    width: 100%;
    background-color: #fff;
    position: relative;
    margin-top: 8rpx;
    padding-top: 28rpx;
    margin-bottom: -8rpx;
    text-align: center;
}

.subjects-spike-container-14 {
    margin-top: 16rpx;
}

.ss-header-title {
    position: relative;
    display: inline-block;
    height: 32rpx;
    line-height: 32rpx;
    font-size: 30rpx;
    color: #151516;
    margin-left: 46rpx;
}

.ss-header-title::before {
    content: "\E655";
    font-size: 32rpx;
    color: #ff70b0;
    font-family: "icomoon";
    line-height: 1;
    font-weight: normal;
    -webkit-font-smoothing: antialiased;
    position: absolute;
    left: -46rpx;
}

.ss-header-title-orange::before {
    color: #fc6504;
}

.time-line-scroll {
    width: 100%;
    height: 84rpx;
    white-space: nowrap;
}

.time-line-scroll .time-item {
    height: 84rpx;
    line-height: 84rpx;
    padding: 0 23.5rpx;
    text-align: center;
    display: inline-block;
    position: relative;
    font-size: 26rpx;
    color: #9c9c9c;
    transition: all 250ms ease-out 0ms;
}

.time-item-active {
    color: #e02E24!important;
}

.spike-goods-container {
    height: 314rpx;
    overflow-y: hidden;
}

.spike-goods-grid:first-child {
    margin-left: 12px!important;
}

.spike-goods-grid {
    position: relative;
    display: inline-block;
    margin: 0 6px;
    border-radius: 2px;
    padding: 0!important;
    background-color: white;
    overflow: visible;
}

.spike-goods-grid .spike-goods-img {
    position: relative;
    overflow: hidden;
}

.spike-goods-grid .spike-goods-img image {
    width: 100%;
    height: 100%;
    border-radius: 2px 2px 0 0;
}

.spike-goods-grid .spike-goods-name {
    position: relative;
    color: #151516;
    font-size: 24rpx;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
    -webkit-line-clamp: 1;
    word-break: break-all;
    word-wrap: break-word;
    -webkit-box-orient: vertical;
    white-space: normal;
    text-align: center;
    text-overflow: clip;
}

.spike-goods-grid .spike-goods-price {
    height: 22rpx;
    line-height: 22rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -webkit-flex;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
}

.spike-goods-grid .spike-goods-price .spike-price {
    font-size: 28rpx;
    color: #e02e24;
}

.spike-goods-grid .spike-goods-price .spike-price i {
    font-size: 22rpx;
}

.spike-goods-grid .spike-goods-price .spike-price-desc {
    color: #9c9c9c;
    font-size: 20rpx;
    height: 22rpx;
    line-height: 22rpx;
}

.spike-goods-grid .spike-goods-img .spike-soldout {
    position: absolute;
    width: 100%;
    height: 100%;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -webkit-flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
}

.spike-goods-grid .spike-goods-img .spike-soldout view {
    width: 164rpx;
    height: 164rpx;
    border-radius: 82rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: rgba(0,0,0,0.6);
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -webkit-flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
}

.spike-goods-grid .spike-time-line-hint {
    font-size: 20rpx;
    color: #9c9c9c;
    -webkit-writing-mode: vertical-rl;
    position: absolute;
    top: 50%;
    right: -50rpx;
    transform: translate(0,-50%);
    z-index: 8;
    background-color: #fff;
    height: 126rpx;
    text-align: center;
}

.spike-split-point::before {
    position: absolute;
    right: -30rpx;
    width: 2px;
    height: 100%;
    content: '';
    z-index: 7;
    background-color: #e0e0e0;
    transform: scaleX(0.5);
}

.spike-split-point {
    margin-right: 23px;
    position: relative;
}

.spike-split-point+view {
    margin-left: 23px;
}

.spike-goods-scroll {
    width: 100%;
    height: 416rpx;
    white-space: nowrap;
}

.time-line-scroll .time-item:first-child {
    padding-left: 57rpx;
}

.time-line-scroll .time-item:last-child {
    padding-right: 57rpx;
}