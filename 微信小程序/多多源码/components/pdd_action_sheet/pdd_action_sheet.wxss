.action-sheet-bg {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    background: rgba(0,0,0,0);
    z-index: 1001;
    transition: all 150ms ease-in-out;
}

.action-sheet-container {
    position: absolute;
    bottom: -100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    transition: bottom 150ms ease-in-out;
    box-shadow: 0px -6rpx 20rpx rgba(80,6b,6b,0.18);
}

.action-sheet-container-show {
    bottom: 0;
}

.action-sheet-button {
    height: 100rpx;
    width: 100%;
    background-color: #F5F5F5;
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #000000;
    text-align: center;
    line-height: 100rpx;
}

.action-sheet-border {
    border-top: 2rpx solid #E8E8E8;
}

.action-sheet-gap {
    height: 12rpx;
    width: 100%;
    background-color: #E8E8E8;
}