@import "../../components/intime_try_new/intime_try_new.wxss";

@import "../../components/resource_place_config/resource_place_config.wxss";

.all-container {
    width: 100%;
}

.header {
    width: 100%;
    height: 108px;
    line-height: 16px;
    text-align: center;
    transition: all 800ms ease-out 0ms;
    display: table;
}

.first-star-view {
    width: 50%;
    height: 108px;
    background-color: #fff;
    display: table-cell;
}

.star-title {
    margin-top: 20px;
    color: #666;
    display: inline-block;
    font-size: 16px;
    padding-left: 22px;
    position: relative;
}

.star-title:before {
    content: '';
    display: block;
    width: 20px;
    height: 20px;
    position: absolute;
    left: 0;
    top: 0;
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/new_arrivals_1.png") no-repeat;
    background-size: 16px 16px;
}

.second-star-view .star-title:before {
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/new_arrivals_2.png") no-repeat;
    background-size: 16px 16px;
}

.star-desc {
    color: #9c9c9c;
    font-size: 12px;
    margin-top: 5px;
}

.star-avater-view {
    width: 75px;
    margin-top: 10px;
    display: inline-block;
    direction: rtl;
}

.second-star-view .star-avater-view {
    width: 94px;
    margin-top: 8px;
    overflow: hidden;
}

.star-more-icon {
    border: 11px solid #e8e8e8;
    width: 25px;
    height: 25px;
    background-color: #fff;
    border-radius: 25px;
    position: relative;
    z-index: 1;
    margin: auto;
    float: right;
    display: inline-block;
}

.second-star-view .star-more-icon {
    border-radius: 0;
    width: 30px;
    height: 30px;
    border-width: 0;
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/new_arrivals_3.png");
    background-size: 100% 100%;
}

.star-more-icon:before,.star-more-icon:after {
    content: '';
    display: block;
    width: 3px;
    height: 3px;
    background-color: #fff;
    border-radius: 3px;
    position: absolute;
    left: -5px;
}

.second-star-view .star-more-icon:before,.second-star-view .star-more-icon:after {
    border-radius: 0;
    content: none;
}

.star-more-icon:after {
    left: auto;
    right: -5px;
}

.star-avater-list {
    position: relative;
    float: right;
    width: 25px;
    height: 25px;
    border-radius: 25px;
    margin: auto;
    margin-right: -4px;
    overflow: hidden;
    z-index: 1;
    border: 1px solid #e0e0e0;
    display: inline-block;
}

.star-avater-list image {
    width: 100%;
    height: 100%;
}

.second-star-view .star-avater-list {
    width: 30px;
    height: 30px;
    border-radius: 0;
    border: none;
    margin-right: 2px;
}

.second-star-view .star-avater-list::before {
    position: absolute;
    content: "";
    width: 58px;
    height: 58px;
    top: 0;
    left: 0;
    z-index: 2;
    border: 1px solid #f4f4f4;
    transform: scale(.5);
    transform-origin: 0 0;
}

.second-star-view {
    width: 50%;
    height: 108px;
    display: table-cell;
    background-color: #fff;
}

.new-arrivals-icon {
    margin-right: 13rpx;
    display: inline-block;
}

.new-arrivals-icon::before {
    content: "\E637";
    font-size: 32rpx;
    color: #e02e24;
    font-family: "icomoon";
    line-height: 1;
    font-weight: normal;
    -webkit-font-smoothing: antialiased;
}

.title-view {
    width: auto;
    height: 80rpx;
    position: relative;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #e02e24;
    background-color: white;
    text-align: center;
}

.m {
    color: #9c9c9c;
    font-size: 22rpx;
    line-height: 32rpx;
}

.good-list-container {
    width: 100%;
    transition: all 1000ms ease-out 0ms;
    text-align: left;
}

.no-order-text-view {
    color: #555;
    line-height: 50px;
    font-size: 16px;
    text-align: center;
}

.split-line {
    border-left: 1px solid #ffffff;
    border-image: linear-gradient(to bottom,rgba(255,255,255,0) 0%,rgba(255,255,255,0) 10%,#e9e0e9 50%,rgba(255,255,255,0) 90%,rgba(255,255,255,0) 100%) 1;
}

.btn-loading {
    height: 40px;
    line-height: 40px!important;
    border-width: 0!important;
    color: #555!important;
    font-size: 30rpx;
}

.btn-loading:before {
    margin-right: 8px;
    width: 20px!important;
    height: 20px!important;
}

.small-mixin-pro-img {
    height: 540rpx!important;
}