.oc-coupons-content {
    position: relative;
    width: 100%;
    font-size: 0;
    text-align: center;
    overflow-x: hidden;
    overflow-y: auto;
    height: 680rpx;
}

.oc-coupons-empty {
    position: relative;
    width: 150rpx;
    height: 150rpx;
    margin: 60rpx auto 40rpx auto;
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/order_checkout_sprites.png") no-repeat;
    background-size: 428px 200rpx;
    background-position: 0 0;
}

.oc-coupons-empty-tips {
    position: relative;
    display: inline-block;
    width: 100%;
    font-size: 28rpx;
    color: #9c9c9c;
    text-align: center;
}

.oc-coupon-disable-container {
    position: relative;
    width: 100%;
    padding: 0 24rpx;
}

.oc-coupon-container {
    background-color: #f2f2f2;
}

.oc-coupon-use-info {
    font-size: 24rpx;
    color: #9C9C9C;
    line-height: 84rpx;
    text-align: center;
}

.disable-container-head {
    width: 100%;
    height: 16rpx;
    background-color: #F2F2F2;
}

.oc-coupon-form button {
    padding: 0;
    content: none;
    background-color: white;
}

.oc-coupon-form button::after {
    content: none;
}

.oc-m-coupon {
    display: flex;
    width: 100%;
    min-height: 132rpx;
    padding: 22rpx 0;
    border-bottom: #ECECEC solid 1px;
    background-color: white;
    align-items: center;
}

.oc-coupon-superposition .oc-m-coupon {
    border-bottom: none;
}

.oc-coupon-container .oc-m-coupon {
    padding: 26rpx 0 26rpx;
}

.oc-m-coupon-disable {
    position: relative;
    display: -webkit-inline-box;
    display: -ms-inline-flexbox;
    display: -webkit-inline-flex;
    display: inline-flex;
    width: 100%;
    height: 132rpx;
    padding: 30rpx 0;
    text-align: left;
    font-size: 0;
}

.oc-m-coupon-left {
    width: 205rpx;
    min-height: 72rpx;
    text-align: center;
    font-size: 24rpx;
    color: #5B5B5B;
}

.oc-m-coupon-left .oc-m-coupon-discount {
    font-size: 58rpx;
    color: #DC2F21;
    line-height: 58rpx;
    font-weight: 600;
}

.oc-m-coupon-left .oc-m-coupon-discount .unit {
    font-size: 38rpx;
    line-height: 38rpx;
    margin-right: 3rpx;
}

.oc-m-coupon-left .oc-m-coupon-limit {
    color: #5B5B5B;
    font-size: 24rpx;
    line-height: 24rpx;
}

.oc-m-coupon-left .merchandise-color {
    color: #ffab33;
}

.oc-m-coupon-right {
    text-align: left;
}

.oc-m-coupon-right .oc-m-coupon-expire {
    color: #454545;
    line-height: 41rpx;
}

.oc-m-coupon-expire-super {
    line-height: 41rpx;
    color: #9C9C9C;
    font-size: 24rpx;
}

.oc-m-coupon-right .oc-m-coupon-expire .title {
    font-size: 29rpx;
    margin-right: 6rpx;
}

.oc-m-coupon-right .oc-m-coupon-expire .date {
    font-size: 28rpx;
}

.oc-m-coupon-right .oc-m-coupon-wxapp {
    line-height: 33rpx;
    font-size: 24rpx;
    color: #C43934;
}

.coupon-container-content .oc-m-coupon-right .oc-m-coupon-wxapp {
    position: relative;
    top: -2rpx;
}

.oc-m-coupon-right .oc-m-coupon-min,.oc-m-coupon-right .oc-m-coupon-title {
    line-height: 38rpx;
    font-size: 27rpx;
    color: #4A4A4A;
    margin-bottom: 3rpx;
}

.oc-m-coupon-right .oc-m-coupon-can-use,.oc-m-coupon-right .oc-m-coupon-desc {
    line-height: 33rpx;
    font-size: 24rpx;
    color: #E02E24;
    margin-top: 2rpx;
}

.oc-m-coupons-unselected:after {
    content: "";
    position: absolute;
    display: inline-block;
    width: 48rpx;
    height: 48rpx;
    top: 44rpx;
    right: 0rpx;
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/order_checkout_sprites.png") no-repeat;
    background-size: 428rpx 200rpx;
    background-position: -154rpx 4rpx;
}

.oc-coupon-superposition .oc-m-coupons-selected:after {
    top: 84rpx;
}

.oc-coupon-superposition .oc-m-coupons-unselected:after {
    top: 84rpx;
}

.promotion-item:after {
    top: 36rpx;
}

.oc-m-coupon-cancel {
    position: relative;
    display: inline-flex;
    width: 100%;
    height: 132rpx;
    line-height: 132rpx;
    text-align: left;
    font-size: 30rpx;
    color: #565759;
    background-color: white;
    padding: 0 24rpx 35rpx;
}

.oc-coupon-donot-use {
    padding: 0 24rpx;
    background-color: white;
}

.oc-m-coupon-cancel-border {
    border-top: solid 1px #e4e4e4;
}

.oc-receive-more-coupons {
    font-size: 26rpx;
    color: #666;
    text-align: center;
    border-top: #e4e4e4 solid 1px;
    background-color: white;
    padding: 30rpx 0;
}

.get_more_coupons_btn {
    display: inline-block;
    padding: 14rpx 20rpx;
    border-radius: 6rpx;
    border: solid 1px #999;
}

.oc-m-coupon-disable .oc-m-coupon-left {
    border-right: #e4e4e4 solid 1px!important;
}

.oc-m-coupon-discount-disable {
    color: #9d9d9d!important;
}

.oc-m-coupon-disable .oc-m-coupon-right .oc-m-coupon-min {
    color: #cbcbcb!important;
}

.oc-m-coupon-disable .oc-m-coupon-right .oc-m-coupon-wxapp {
    color: #e02E24;
    font-size: 24rpx;
    height: 44rpx;
    line-height: 44rpx;
}

.oc-m-coupon-disable .oc-m-coupon-right .oc-m-coupon-expire {
    color: #d1d1d1!important;
}

.oc-m-coupon-disable-advise {
    color: #be504f;
    font-size: 24rpx;
    height: 44rpx;
    line-height: 44rpx;
}

.oc-coupons-promotion {
    position: relative;
    font-size: 28rpx;
    color: #333333;
    text-align: left;
    padding: 0 24rpx 0 34rpx;
}

.coupon-container-item {
    margin-bottom: 16rpx;
    background-color: white;
    padding: 0 24rpx;
}

.coupon-container-item:last-child {
    margin-bottom: 0rpx;
}

.coupon-container-title {
    font-size: 28rpx;
    color: #676767;
    text-align: left;
    line-height: 86rpx;
    border-bottom: solid 1px #e4e4e4;
}

.user-coupon-num {
    font-size: 28rpx;
    color: #676767;
    text-align: center;
    margin-top: -10rpx;
}

.oc-coupon-super-num {
    border-top: #e4e4e4 solid 1px;
    padding: 14rpx 0;
    text-align: left;
    position: relative;
}

.coupon_load_area {
    padding: 0 20rpx;
    background-color: white;
}

.coupon_load_more {
    line-height: 90rpx;
    font-size: 26rpx;
    color: #8A8A8A;
    border-bottom: #e4e4e4 solid 1px;
}

.coupon_load_more text {
    display: inline-block;
}

.coupon_load_more .icon {
    width: 20rpx;
    font-size: 20rpx;
    color: #8A8A8A;
    font-family: icomoon;
    transform: rotate(90deg);
    margin-left: 10rpx;
}

.coupon_load_more .icon::before {
    content: "\e617";
}

.oc-m-coupons-selected:after {
    content: "";
    position: absolute;
    display: inline-block;
    width: 48rpx;
    height: 48rpx;
    top: 44rpx;
    right: 0rpx;
    background: url("http://pinduoduoimg.yangkeduo.com/wxapp/order_checkout_sprites.png") no-repeat;
    background-size: 428rpx 200rpx;
    background-position: -204rpx 4rpx;
}

.oc-coupon-disable-container .oc-m-coupon .oc-m-coupon-expire {
    color: #9C9C9C;
    font-size: 24rpx;
}

.coupon-super-use-limit {
    display: inline-block;
    font-size: 26rpx;
    color: #E02E24;
    position: absolute;
    top: 22rpx;
    padding-left: 20rpx;
}