.msg-area {
    padding-top: 20rpx;
}

.input-desc {
    background-color: white;
    padding: 0 20rpx;
    line-height: 100rpx;
    font-size: 30rpx;
}

.neg-list {
    padding: 20rpx;
    color: #333333;
}

.neg-item {
    background-color: white;
    font-size: 22rpx;
    padding: 20rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.neg-item:last-child {
    margin-bottom: 0;
}

.neg-head {
    padding-bottom: 20rpx;
    border-bottom: solid 1px #eee;
}

.neg-head-img {
    height: 80rpx;
    width: 80rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}

.neg-head-info {
    display: inline-block;
    vertical-align: middle;
}

.neg-head-title {
    font-size: 28rpx;
}

.neg-head-time {
    font-size: 24rpx;
    color: #666666;
    line-height: 40rpx;
}

.neg-body {
    line-height: 50rpx;
    padding-top: 10rpx;
}

.neg-img-list .neg-img-item {
    display: inline-block;
    height: 120rpx;
    width: 120rpx;
    margin-right: 20rpx;
    border: solid 1px #cccccc;
}

.send-msg {
    text-align: right;
    padding: 20rpx;
}

.send-msg-btn {
    background-color: #e02e24;
    color: white;
    font-size: 28rpx;
    display: inline-block;
}

.complaint-desc-input-textarea {
    font-family: monospace;
    border: none;
    width: 100%;
    height: 256rpx;
    font-size: 32rpx;
    line-height: 46rpx;
    color: black;
    resize: none;
    display: block;
    padding: 0!important;
    margin: 0!important;
    border-radius: 0;
    -moz-appearance: none;
    -webkit-appearance: none;
    text-indent: 0;
    -webkit-rtl-ordering: logical;
    user-select: text;
    outline: 0;
}

.complaint-layout-padding {
    padding-left: 20rpx;
    width: 100%;
    position: relative;
    margin-bottom: 16rpx!important;
    background-color: #fff;
}

.images-info {
    padding: 90rpx 20rpx 24rpx 0;
    position: relative;
    border-bottom: none!important;
}

.images-info-title {
    left: 0;
    top: 31rpx;
    height: 61rpx;
    position: absolute;
    line-height: 32rpx;
    color: #58595b;
    font-size: 30rpx;
    width: 100%;
    pointer-events: none;
    cursor: pointer;
    border-bottom: none!important;
}

.input-number-hint {
    color: #9c9c9c;
    font-size: 26rpx;
    margin-right: 20rpx;
}

.image-unloader-positioner {
    height: 0;
}

.image-uploader-root {
    padding: 0;
    font-size: 0;
}

.image-uploader-image {
    position: relative;
    display: inline-block;
    width: 108rpx;
    height: 108rpx;
    border: 2rpx dashed #e6e6e6;
    padding: 2rpx;
    box-sizing: border-box;
    border-radius: 4rpx;
    margin-right: 50rpx;
}

.image-uploader-image image {
    width: 100rpx;
    height: auto;
    max-width: 100rpx;
    max-height: 100rpx;
    overflow: hidden;
    margin: auto;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

.image-uploader-image-delete {
    border-radius: 50%;
    position: absolute;
    right: -16rpx;
    top: -16rpx;
    background-color: #e02e24;
    height: 40rpx;
    width: 40rpx;
    text-align: center;
    color: #fff;
}

.image-uploader-image-delete-sub {
    height: 6rpx;
    width: 20rpx;
    border-radius: 3rpx;
    background-color: #fff;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}

.image-uploader-image-info {
    width: 102rpx;
    padding: 4rpx 0;
    text-align: center;
    position: absolute;
    bottom: 0;
    color: #fff;
    font-size: 24rpx;
    background-color: rgba(0,0,0,.5);
}

.image-uploader-selector {
    width: 108rpx;
    height: 108rpx;
    background-size: 64rpx 54rpx;
    background-image: url("http://minipinduoduo.oss-cn-shanghai.aliyuncs.com/refund_money/image_uploader_selector.png");
    background-position: 20rpx 24rpx;
    background-repeat: no-repeat;
    border: 2rpx dashed #e6e6e6;
    display: inline-block;
    border-radius: 4rpx;
}

.complaint-block {
    background-color: white;
}

.complaint-desc-input {
    padding: 20rpx;
    border-bottom: solid 1px #cccccc;
}

.neg-head-title {
    font-size: 32rpx;
    line-height: 66rpx;
    margin-top: -14rpx;
}

.neg-head-time {
    font-size: 26rpx;
    line-height: 26rpx;
    color: #9c9c9c;
}

.neg-body-word {
    font-size: 28rpx;
    clear: both;
}

.neg-body-word .item-1 {
    width: 128rpx;
    float: left;
    line-height: 40rpx;
}

.neg-body-word .item-2 {
    margin-left: 128rpx;
    line-height: 40rpx;
}

.neg-img-list .neg-img-item {
    width: 136rpx;
    height: 136rpx;
    margin-top: 16rpx;
    border: 1px dashed #e6e6e6;
    position: relative;
    box-sizing: border-box;
}

.neg-img-list .neg-img-item image {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
    width: 128rpx;
    max-width: 128rpx;
    height: auto;
    max-height: 128rpx;
    margin: auto;
}

.update-message {
    position: relative;
    width: 100%;
    height: 46rpx;
}

.update-message .um-btn {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 202rpx;
    height: 66rpx;
    line-height: 66rpx;
    background-color: #e02e24;
    font-size: 30rpx;
    color: #fff;
    border-radius: 8rpx;
}

.button-root {
    padding: 16rpx 20rpx 16rpx 0;
    background-color: #f9f9f9;
    position: fixed;
    bottom: 0;
    width: 100%;
    border-top: 2rpx solid #e6e6e6;
    text-align: center;
}

.modify-btn {
    display: inline-block;
    text-align: center;
    color: #151516;
    height: 66rpx;
    width: auto;
    border: 2rpx solid #666;
    border-radius: 8rpx;
    padding: 0 20rpx;
    font-size: 30rpx;
    line-height: 66rpx;
    float: right;
    background-color: #fff;
}

.btn-red {
    color: #e0242e!important;
    border: 2rpx solid #e0242e!important;
}

.btn-margin-left {
    margin-left: 21rpx;
    margin-right: 0;
}

.revoked-platform-btn {
    display: inline-block;
    text-align: center;
    height: 66rpx;
    width: auto;
    background-color: #fff;
    color: #151516;
    border: 1px solid #9c9c9c;
    border-radius: 8rpx;
    padding: 0 20rpx;
    font-size: 30rpx;
    line-height: 66rpx;
    float: right;
}