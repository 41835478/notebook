.local-group-timer {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.hour-minutes-seconds {
    display: inline-block;
}

.timer-cutdown-wrap {
    position: relative;
    display: inline-block;
    overflow: hidden;
    height: 24rpx;
    width: 17rpx;
}

.timer-cutdown {
    position: absolute;
    display: flex;
    top: 0;
    left: 0;
    width: 240rpx;
    height: 24rpx;
    font-size: 24rpx;
    text-align: center;
    color: #58595b;
    animation-name: millisecondCountdown;
    animation-duration: 1s;
    animation-timing-function: linear;
    animation-fill-mode: forwards;
}

.left-distance {
    left: 147rpx;
}

.timer-cutdown>view {
    flex: auto;
    height: 24rpx;
    width: 24rpx;
    line-height: 24rpx;
    text-align: left;
    padding-left: 1px;
}

.local-group-timer-refresh {
    animation-name: millisecondCountdown-refresh;
}