@import "../../components/resource_place_config/resource_place_config.wxss";

@import "../../__wuBaseWxss__/4.wxss";

@import "../../components/double_grid_item/subjects_item.wxss";

.container {
    width: 100%;
}

.no-message-container {
    margin-top: 219rpx;
    width: 100%;
    height: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.no-message-img {
    width: 351rpx;
    height: 211rpx;
}

.no-message-container .txt {
    color: #58595b;
    font-size: 32rpx;
    margin-top: 32rpx;
}

.no-message-container .txt1 {
    color: #A0A0A0;
    font-size: 26rpx;
    margin-top: 8rpx;
}

.no-message-container .txt2 {
    color: #A0A0A0;
    font-size: 26rpx;
    margin-top: 68rpx;
    height: 50rpx;
    width: 260rpx;
    line-height: 50rpx;
    text-align: center;
    position: relative;
}

.no-message-container .txt2:after {
    content: "\e617";
    font-size: 16rpx;
    text-align: center;
    color: #9c9c9c;
    font-family: icomoon;
    font-smoothing: antialiased;
    height: 50rpx;
    line-height: 1;
    position: absolute;
    top: 16rpx;
    margin-left: 5rpx;
}

.contact-item-container {
    width: 100%;
    height: 142rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    background-color: white;
}

.contact-item-content {
    position: absolute;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    -webkit-font-smoothing: antialiased;
    transition: all 200ms ease-out 0ms;
}

.delete {
    left: -150rpx;
}

.delete-item {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size: 30rpx;
    position: relative;
    flex-shrink: 0;
    width: 155rpx;
    background-color: #e02e24;
}

.contact-item-container-selected {
    background-color: #ededed;
}

.contact-item-container::after {
    content: '';
    border-bottom: 1rpx solid #ededed;
    width: calc(100% - 24rpx);
    height: 1rpx;
    position: absolute;
    left: 24rpx;
    bottom: 0;
}

.contact-item-container .time {
    height: 30rpx;
    font-size: 25rpx;
    position: absolute;
    right: 20rpx;
    top: 30rpx;
    color: #999;
}

.contact-item {
    flex-shrink: 0;
    width: 100%;
    height: 142rpx;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.contact-item .avatar {
    width: 98rpx;
    height: 98rpx;
    margin-left: 24rpx;
    margin-right: 24rpx;
    border-radius: 98rpx;
    border: 1rpx solid #ededed;
    will-change: transform;
}

.contact-content {
    position: relative;
    height: 100%;
    width: calc(100% - 150rpx);
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.name-container {
    min-height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.mall-name {
    min-height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #343434;
    align-self: left;
    text-align: justify;
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 400rpx;
}

.offical-icon {
    width: 29rpx;
    height: 29rpx;
    margin-left: 20rpx;
}

.mall-name-icon {
    margin-left: 20rpx;
    width: 34rpx;
    height: 34rpx;
    border-radius: 6rpx;
    color: red;
    font-size: 20rpx;
    border: 1rpx solid red;
    text-align: center;
    vertical-align: center;
}

.contact-content .content {
    min-height: 40rpx;
    line-height: 40rpx;
    font-size: 25rpx;
    color: #999;
    align-self: left;
    text-align: justify;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 550rpx;
}

.unread-count-bubble {
    height: 36rpx;
    min-width: 36rpx;
    line-height: 36rpx;
    text-align: center;
    padding: 0 9rpx;
    border: 1px solid #e02e24;
    font-size: 22rpx;
    position: absolute;
    right: 20rpx;
    bottom: 45rpx;
    border-radius: 36rpx;
    background-color: #e02e24;
    color: #fff;
}

.delete-content {
    position: fixed;
    width: 120rpx;
    height: 80rpx;
    left: 200rpx;
    top: 400rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 20;
}

.delete-content .content {
    display: flex;
    align-items: center;
    align-content: center;
    justify-content: center;
    background-color: #58595b;
    width: 120rpx;
    height: 80rpx;
    font-size: 26rpx;
    color: #fff;
    border-radius: 10rpx;
}

.delete-content .arrow {
    width: 15rpx;
    height: 15rpx;
    border-radius: 2rpx;
    margin-top: -5rpx;
    transform: rotate(45deg);
    background-color: #58595b;
    border: 1px solid #58595b;
    border-left: none;
    border-top: none;
}

.delete-mask {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
    width: 100vw;
    height: 100vh;
}

.new-arrivals-title-view {
    background-color: #fff;
    text-align: center;
    margin-top: 16rpx;
    padding: 28rpx 0 6rpx;
    height: 102rpx;
    border-radius: 15rpx 15rpx 0 0;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -webkit-flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    transition: all 1000ms ease-out 0ms;
    border-bottom: 1px solid #f2f2f2;
}

.new-arrivals-icon {
    margin-right: 13rpx;
}

.new-arrivals-icon::before {
    content: "\e680";
    font-size: 32rpx;
    color: #e02e24;
    font-family: "icomoon";
    line-height: 1;
    font-weight: normal;
    -webkit-font-smoothing: antialiased;
}

.title-view {
    width: auto;
    height: 80rpx;
    padding: 0 32rpx;
    position: relative;
}

.title {
    font-size: 30rpx;
    line-height: 44rpx;
    color: #e02e24;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    display: -webkit-flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.m {
    color: #9c9c9c;
    font-size: 22rpx;
    line-height: 32rpx;
}

.good-list-container {
    width: 100%;
    transition: all 1000ms ease-out 0ms;
    text-align: left;
}

.line {
    width: 200%;
    height: 1px;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
    transform: scale(0.5,0.5);
    transform-origin: 0 0;
    background-color: #d2d2d2;
}