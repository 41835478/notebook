.mx-group-player .player {
    display: inline-block;
    width: 100rpx;
    height: 100rpx;
    margin: 0 16rpx 16rpx;
    position: relative;
    background-color: #fafafa;
    text-align: center;
    vertical-align: top;
    border-radius: 50%;
}

.mx-group-player .player::after {
    content: "";
    display: block;
    position: absolute;
    top: -1rpx;
    left: -1rpx;
    z-index: 1;
    width: 100%;
    height: 100%;
    border: 2rpx dashed #b9b9b9;
    border-radius: 50%;
}

.mx-group-player .player image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    vertical-align: top;
}

.mx-group-player .player .avatar {
    width: 100rpx;
    height: 100rpx;
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100% auto;
    border-radius: 50%;
    vertical-align: top;
}

.mx-group-player .player.uavatar::after {
    border: 2rpx solid #ff6700;
}

.mx-group-player .player .master {
    position: absolute;
    bottom: -10rpx;
    left: 50%;
    width: 80rpx;
    margin-left: -40rpx;
    line-height: 30rpx;
    background-color: #ff6700;
    color: #fff;
    font-size: 20rpx;
    border-radius: 16rpx;
    z-index: 3;
}

.mx-group-player .player .no {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    line-height: 100rpx;
    color: #b6b6b6;
    font-size: 40rpx;
}

.tips-wrapper {
    position: relative;
    padding: 40rpx 32rpx;
}

.tips-wrapper icon {
    position: absolute;
    top: 24rpx;
    right: 32rpx;
}

.tips-wrapper .title {
    font-size: 36rpx;
    text-align: center;
    font-weight: bold;
}

.tips-wrapper .content {
    font-size: 28rpx;
    color: #757575;
}

.mx-staff-share-mask {
    z-index: 9999;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.8);
    text-align: center;
    display: flex;
    flex-direction: column;
}

.mx-staff-share-mask::after {
    content: '';
    position: absolute;
    left: 50%;
    bottom: 40rpx;
    margin-left: -1rpx;
    width: 2rpx;
    height: 164rpx;
    background: #f2f2f2;
}

.mx-staff-share {
    padding: 0 50rpx;
    background: #F8F8F8;
    height: 250rpx;
}

.mx-staff-share>button {
    float: left;
    margin: 0;
    padding: 40rpx 0;
    width: 50%;
    line-height: 1.5;
    text-align: center;
}

.mx-staff-share>button:active {
    background: #f2f2f2;
}

.mx-staff-share>button image {
    display: block;
    margin: 0 auto 16rpx;
    width: 100rpx;
    height: 100rpx;
}

.mx-staff-share>button text {
    font-size: 32rpx;
    color: #888;
}

.mx-staff-share>button::after {
    display: none;
}

.mx-staff-share-mask .img-container {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.mx-staff-share-mask .pyq-img {
    display: inline-block;
    width: 480rpx;
    height: 853rpx;
}

.mx-staff-share-img-mask {
    z-index: 9998;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.8);
}

.mx-staff-share-img-mask .x {
    position: absolute;
    top: 0;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    background: url(http://i8.mifile.cn/b2c-mimall-media/bbb02d824643895b7b4e50612871610f.png) center center no-repeat;
    background-size: 40% 40%;
    opacity: .6;
}

.mx-staff-share-img-mask image {
    display: block;
    margin: 50rpx auto 0;
    width: 500rpx;
    height: 889rpx;
    background: #f2f2f2;
}

.mx-staff-share-img-mask text {
    display: block;
    margin: 16rpx auto;
    text-align: center;
    font-size: 24rpx;
    color: #888;
}

.mx-staff-share-img-mask button {
    margin-left: 125rpx;
    margin-right: 125rpx;
}

.mx-staff-share-mask .close-icon {
    position: absolute;
    z-index: 9999;
    width: 53rpx;
    height: 54rpx;
    right: 35rpx;
    top: 35rpx;
}