.bg {
    position: absolute;
    background: #fff;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    padding-bottom: 200rpx;
    box-sizing: border-box;
}

.cards {
    width: 100%;
    height: 100%;
    overflow: scroll;
}

.card {
    position: relative;
    background-color: #90c25a;
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    overflow: hidden;
}

.card-money {
    float: left;
    width: 50%;
    height: 210rpx;
    line-height: 210rpx;
    font-size: 60rpx;
    text-align: center;
    color: #709f40;
}

.card-detail {
    padding-top: 40rpx;
    float: right;
    width: 50%;
    height: 170rpx;
    background-color: #77a54e;
}

.card-option {
    position: absolute;
    top: 10rpx;
    right: 0;
    z-index: 3;
    width: 80rpx;
    height: 40rpx;
    background: url(https://s1.mi.com/m/images/m/check_normal.png) center center no-repeat;
    background-size: 32rpx 32rpx;
}

.card-option_checked {
    background-image: url(https://s1.mi.com/m/images/m/check_press.png);
}

.card-detail-balance {
    color: #fff;
    text-align: right;
    padding-right: 30rpx;
    font-size: 24rpx;
    line-height: 60rpx;
}

.card-detail-balance text {
    font-size: 60rpx;
    font-weight: bold;
}

.card-detail-endtime {
    padding-right: 30rpx;
    color: #3f4c30;
    line-height: 34rpx;
    text-align: right;
    font-size: 24rpx;
}

.card-detail-cardid {
    padding-right: 30rpx;
    color: #3f4c30;
    line-height: 34rpx;
    text-align: right;
    font-size: 24rpx;
}

.bottom {
    position: fixed;
    bottom: 10rpx;
    left: 10rpx;
    width: 100%;
    height: 116rpx;
}

.amount {
    padding-left: 20rpx;
}

.amount text {
    color: #de9561;
}

.need-to-pay {
    padding-left: 20rpx;
}

.need-to-pay text {
    color: #de9561;
}

.msxcx-widget-btn {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 50%;
}

.weui-loading {
    margin: 0 5px;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    animation: weuiLoading 1s steps(12,end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.weui-loadmore {
    width: 65%;
    margin: 1.5em auto;
    line-height: 1.6em;
    font-size: 14px;
    text-align: center;
}

.weui-loadmore__tips {
    display: inline-block;
    vertical-align: middle;
}