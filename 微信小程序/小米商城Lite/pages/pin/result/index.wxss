@import "../../product/index.wxss";

@import "../../../__wuBaseWxss__/8.wxss";

.msxcx-layout-mod-first {
    margin-top: 0;
}

.mx-product-more {
    position: relative;
    padding: 16rpx 32rpx 16rpx 100rpx;
    min-height: 80rpx;
    line-height: 80rpx;
}

.mx-product-more::after {
    clear: both;
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    border-top: 2rpx solid #e5e5e5;
    transform: scaleY(0.5);
    transform-origin: 0 0;
}

.mx-product-more label {
    position: absolute;
    top: 16rpx;
    left: 0;
    color: #999;
}

.mx-product-more .item_text {
    float: right;
}

.mx-product-more .item_text .sub {
    margin-left: 16rpx;
    font-size: 24rpx;
    color: #888;
}

.mx-group-info {
    padding: 32rpx 0;
    text-align: center;
}

.mx-group-info .title {
    font-size: 50rpx;
    margin: 8rpx 0;
}

.mx-group-info .title image {
    width: 48rpx;
    vertical-align: top;
    margin-right: 10rpx;
}

.mx-group-info .title .num {
    margin: 0 8rpx;
    color: #ff4a00;
}

.mx-group-info .time {
    padding-top: 15rpx;
    font-size: 24rpx;
    color: #000;
}

.mx-group-info .time .time-item {
    display: inline-block;
    background-color: #5b5b5b;
    color: #fff;
    width: 80rpx;
    padding: 7rpx;
    border-radius: 8rpx;
}

.mx-group-info .share-tips {
    font-size: 30rpx;
    color: #999;
}

.mx-group-info .btn {
    margin-top: 32rpx;
}

.mx-group-player .list {
    padding: 32rpx 0;
    text-align: center;
}

.mx-pin-result-bar-placeholder {
    height: 120rpx;
}

.mx-pin-result-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
    background-color: #fafafa;
    border-top: 2rpx solid #e5e5e5;
}

.mx-pin-result-bar view {
    float: left;
    width: 50%;
    margin-left: -2rpx;
    line-height: 120rpx;
    text-align: center;
    border-left: 2rpx solid #e5e5e5;
}

.msxcx-pop-mask {
    display: block;
    z-index: -1;
    opacity: 0;
    transition: opacity .2s;
    top: 100%;
}

.msxcx-pop-mask .msxcx-pop {
    transform: translate3d(0,100%,0);
    transition: all .3s .1s;
}

.msxcx-pop-mask.active {
    z-index: 9999;
    opacity: 1;
    top: 0;
}

.msxcx-pop-mask.active .msxcx-pop {
    transform: translate3d(0,0,0);
}

.msxcx-pop__bd {
    padding-top: 32rpx;
    max-height: 800rpx;
}

.mx-group-info {
    margin-top: 60rpx;
    text-align: center;
}

.mx-group-info .title {
    font-size: 48rpx;
    margin: 8rpx 0;
}

.mx-group-info .title.succ {
    color: #f95b07;
}

.mx-group-info .title image {
    width: 60rpx;
    vertical-align: -14rpx;
}

.mx-group-info .title .num {
    margin: 0 8rpx;
    color: #f95b07;
}

.mx-group-info .time {
    padding: 15rpx 0 54rpx;
    font-size: 28rpx;
    color: #999;
}

.share-btn {
    font-size: 46rpx!important;
}

.sad-container {
    background-color: #ffb300;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 240rpx 0;
}

.sad-container .sad-icon {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}

.sad-container .main {
    font-size: 75rpx;
    color: #fff;
}

.order-container {
    padding: 38rpx 35rpx 50rpx;
    text-align: left;
    line-height: 40rpx;
    font-size: 30rpx;
}

.btn-container {
    padding: 0 35rpx;
}

.btn-container button {
    margin-bottom: 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 34rpx;
    border: 0;
    border-radius: 5rpx;
}

.btn-container .pay-btn {
    background-color: #09bb07;
    color: #fff;
}

.btn-container .view-order-btn {
    background-color: #fbfafc;
}

.mx-staff-share_again {
    height: 300rpx;
}

.mx-staff-share_again .tip {
    color: #f95b07;
    font-size: 28rpx;
    margin-top: 24rpx;
}

.msxcx-pop_sharetip {
    left: 0;
    right: 0;
    bottom: 0;
    top: auto;
    text-align: center;
    padding: 32rpx;
    border-radius: 0;
    box-shadow: 0 -6rpx 50rpx rgba(0,0,0,.1);
}

.msxcx-pop_sharetip .title {
    color: #999;
    font-size: 28rpx;
    margin-bottom: 24rpx;
}

.msxcx-pop_sharetip .title text {
    color: #f95b07;
}

.msxcx-pop_sharetip icon {
    position: absolute;
    top: 20rpx;
    right: 32rpx;
    color: #999;
}

.msxcx-pop-mask_sharetip,.msxcx-pop-mask_sharetip.active {
    height: 240rpx;
    bottom: 0;
    top: auto;
    background: none;
}

.banners swiper {
    width: 100%;
    height: 208rpx;
}

.banners image {
    display: block;
    width: 100%;
    height: 208rpx;
}