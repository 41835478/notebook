.mx-pin-tabbar-placeholder {
    height: 110rpx;
}

.mx-pin-tabbar {
    display: flex;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 110rpx;
    font-size: 24rpx;
    background: #fff;
    text-align: center;
    border-top: 1px solid #e5e5e5;
    box-shadow: 0 -4rpx 8rpx rgba(200,200,200,.2);
}

.mx-pin-tabbar .navigator {
    width: 100%;
    color: #888;
}

.mx-pin-tabbar .navigator.on {
    color: #ff6800;
}

.mx-pin-tabbar .navigator image {
    width: 54rpx;
    height: 54rpx;
    margin-top: 10rpx;
}

.mx-pin-tabbar .navigator text {
    display: block;
    font-size: 24rpx;
    line-height: 1;
}

.flex-box {
    display: flex;
    justify-content: center;
    align-items: center;
}