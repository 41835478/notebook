@import "tpl/index.wxss";

swiper {
    width: 100%;
    height: 209rpx;
}

swiper swiper-item image {
    display: block;
    width: 100%;
    height: 375rpx;
}

.mx-pin-divider {
    height: 10rpx;
}

.mx-pin-banner {
    position: relative;
}

.mx-pin-banner .book-icon-section {
    z-index: 1;
    position: absolute;
    right: 25rpx;
    top: 0;
    display: flex;
    font-size: 26rpx;
    color: #fd5c01;
}

.mx-pin-banner .book-icon-section .book-icon {
    width: 32rpx;
    height: 32rpx;
    display: inline-block;
    background: no-repeat center;
    background-size: cover;
    margin-right: 10rpx;
}

.mx-pin-banner .book-icon-section.booked {
    color: #ccc;
}

.mx-pin-banner .book-icon-section.booked .book-icon {
    background-image: url('http://i8.mifile.cn/webfile/h5/weixin/0508/booked.png?1');
}

.mx-pin-banner .book-icon-section.not-book .book-icon {
    background-image: url('http://i8.mifile.cn/webfile/h5/weixin/0508/book.png');
}

.mx-pin-banner image {
    display: block;
    width: 100%;
}

.mx-pin-banner .image {
    position: relative;
    background-size: 100% auto;
    background-position: center;
    background-repeat: no-repeat;
}

.mx-pin-index-group .image {
    position: relative;
}

.mx-pin-index-group .image image {
    display: block;
    width: 100%;
}

.mx-pin-index-group .image label {
    position: absolute;
    top: 0;
    left: 0;
    padding: 0 16rpx;
    min-width: 80rpx;
    font-size: 24rpx;
    line-height: 2;
    color: #fff;
    background: #ff6700;
    border-radius: 0 0 7rpx 0;
    text-align: center;
}

.mx-pin-index-group .info {
    padding: 32rpx;
    background: #fff;
    position: relative;
}

.mx-pin-index-group .info .name {
    font-size: 32rpx;
    font-weight: bold;
}

.mx-pin-index-group .price .p1 {
    font-size: 32rpx;
    color: #ff4a00;
}

.mx-pin-index-group .price .p1 .sub {
    display: inline;
    font-size: 24rpx;
}

.mx-pin-index-group .price .p2 {
    font-size: 24rpx;
    color: #888;
}

.mx-pin-index-group .price .p2_pre {
    margin: 0 8rpx 0 16rpx;
    font-size: 24rpx;
    color: #888;
}

.mx-pin-index-group button {
    position: absolute;
    top: 50rpx;
    right: 32rpx;
    width: 160rpx;
    line-height: 60rpx;
    font-size: 28rpx;
}

button::after {
    border: none;
}

.one-point-group .pin-item {
    display: flex;
}

.one-point-group .pin-item image {
    width: 312rpx;
    height: 312rpx;
}

.one-point-group .pin-item .image label {
    background-color: #ff6700;
}

.one-point-group .pin-item .info {
    position: relative;
    flex: 1;
}

.one-point-group .pin-item .info .bottom {
    position: absolute;
    bottom: 32rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: nowrap;
    font-size: 20rpx;
    color: rgba(0,0,0,.54);
}

.one-point-group .pin-item .info .bottom button {
    position: relative;
    top: 0;
    right: 0;
}

.award-section {
    position: relative;
}

.award-section .awark-mask {
    z-index: 9999;
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
}

.award-list {
    box-sizing: border-box;
    padding: 0 39rpx;
    height: 55rpx;
    background-color: #fff;
}

.swiper-item {
    display: flex;
    align-items: center;
    font-size: 25rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.swiper-item>view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.swiper-item .avatar {
    flex-shrink: 0;
    width: 52rpx;
    height: 52rpx;
    margin-right: 26rpx;
    background-color: #ccc;
    background-repeat: no-repeat;
    background-size: 100% auto;
    background-position: center;
    border-radius: 27rpx;
}

.swiper-item .avatar image {
    width: 100%;
}

.swiper-item .right {
    flex: 1;
    display: flex;
}

.swiper-item .nickname {
    min-width: 60rpx;
    max-width: 170rpx;
    padding-right: 10rpx;
}

.mx-pin-1row2col {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.mx-pin-1row2col .pin-item {
    background-color: #fff;
    position: relative;
    width: 372rpx;
    display: inline-block;
}

.mx-pin-1row2col .image {
    margin-bottom: 10rpx;
}

.mx-pin-1row2col .image .pic {
    width: 372rpx;
    height: 372rpx;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: top center;
    background-color: #ddd;
}

.mx-pin-1row2col .pin-item label {
    position: absolute;
    top: 0;
    left: 0;
    padding: 0 16rpx;
    min-width: 80rpx;
    font-size: 24rpx;
    line-height: 2;
    color: #fff;
    background: #ff6700;
    border-radius: 0 0 7rpx 0;
    text-align: center;
}

.mx-pin-1row2col .pin-item .info {
    margin-left: 34rpx;
    margin-right: 34rpx;
}

.mx-pin-1row2col .pin-item .name {
    font-size: 28rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.mx-pin-1row2col .pin-item .price {
    font-size: 24rpx;
    color: #858585;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.mx-pin-1row2col .pin-item .price {
    color: #ff4a00;
    font-size: 28rpx;
}

.mx-pin-1row2col .pin-item .price .util {
    font-size: 24rpx;
}

.mx-pin-1row2col .pin-item .price .p2 {
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #999;
}

.mx-pin-1row2col .pin-item button {
    height: 74rpx;
    line-height: 74rpx;
    width: 292rpx;
    margin-bottom: 40rpx;
    margin-left: 0;
    margin-top: 20rpx;
    font-size: 32rpx;
}