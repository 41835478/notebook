.canvas-box {
    width: 290px;
    margin: 40rpx auto;
    height: 1000rpx;
    background: #fff;
    position: relative;
}

.canvas-box canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.canvas-main {
    z-index: 2;
}

.canvas-draft {
    z-index: -1;
    opacity: 0;
}