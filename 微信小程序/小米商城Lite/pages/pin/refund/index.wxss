page {
    background: #fff;
}

.refund-box {
    padding: 24rpx 32rpx;
}

.refund-box__hd {
    line-height: 80rpx;
    font-size: 32rpx;
    color: #414141;
}

.refund-options-list {
    margin-top: 10rpx;
}

.refund-options-list .option {
    display: inline-block;
    height: 72rpx;
    line-height: 72rpx;
    margin: 0 18rpx 18rpx 0;
    padding: 0 24rpx;
    text-align: center;
    border: 2rpx solid #dfdfdf;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #3c3c3c;
}

.refund-options-list .option.sel {
    color: #ff6700;
    border-color: #ff6700;
}

.refund-cause {
    margin: 12rpx 0;
    padding: 6rpx 14rpx;
    border: 2rpx solid #dfdfdf;
    border-radius: 8rpx;
    font-size: 28rpx;
    position: relative;
}

.refund-cause .count {
    position: absolute;
    right: 20rpx;
    bottom: 16rpx;
    color: #b2b2b2;
    font-size: 24rpx;
}

.refund-cause textarea {
    width: 100%;
    height: 300rpx;
}

.refund-tip {
    font-size: 24rpx;
    color: #b2b2b2;
    padding-left: 32rpx;
    position: relative;
}

.refund-tip image {
    position: absolute;
    top: 6rpx;
    left: 0;
    width: 24rpx;
}

.refund-submit-btn {
    margin-top: 60rpx;
}