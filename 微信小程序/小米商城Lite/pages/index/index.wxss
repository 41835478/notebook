@import "../discovery/index.wxss";

.mx-index-search {
    color: #999;
    background: #ff6700;
    overflow: auto;
    text-align: center;
}

.mx-index-search navigator {
    margin: 16rpx;
    height: 56rpx;
    line-height: 56rpx;
    background: #fff;
    border-radius: 28rpx;
}

.mx-index-search navigator view {
    display: inline-block;
}

.mx-index-search navigator view icon {
    float: left;
    margin: 12rpx 8rpx 0 0;
}

.mx-index-search navigator view text {
    float: left;
}

swiper {
    width: 100%;
    height: 375rpx;
}

swiper swiper-item image {
    display: block;
    width: 100%;
    height: 375rpx;
}

.mx-index-text-group {
    padding: 32rpx;
    overflow: auto;
}

.mx-index-text-group>text {
    display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.mx-index-text-group text.name {
    font-size: 32rpx;
    color: #333;
}

.mx-index-text-group text.sub {
    margin: 4rpx 0;
    font-size: 24rpx;
    color: #999;
}

.mx-index-text-group text.price {
    font-size: 32rpx;
    color: #ff4a00;
}

.mx-index-text-group text.price .p2 {
    margin-left: 16rpx;
    font-size: 24rpx;
    color: #999;
    text-decoration: line-through;
}

.mx-index-1l2c {
    width: 100%;
    overflow: auto;
    background: #fff;
}

.mx-index-1l2c>view {
    position: relative;
    float: left;
    margin: 6rpx 0 0 4rpx;
    width: 373rpx;
}

.mx-index-1l2c>view:nth-child(odd) {
    margin-left: 0;
}

.mx-index-1l2c>view:nth-child(even) {
    float: right;
}

.mx-index-1l2c>view .image {
    position: relative;
    width: 373rpx;
    height: 373rpx;
    overflow: hidden;
    background-size: 100% 100%;
}

.mx-index-1l2c>view .image_3_2 {
    height: 248rpx;
}

.mx-index-1l2c>view .image_5_4 {
    height: 298rpx;
}

.mx-index-1l2c>view .image .pic {
    display: block;
    width: 100%;
    height: 100%;
}

.mx-index-1l2c>view .image image.tag {
    visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
}

.mx-index-1l2c>view .image image.tag_show {
    visibility: visible;
}

.mx-index-1l2c>view .image text.tag {
    position: absolute;
    top: 0;
    left: 0;
    padding: 0 16rpx;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 24rpx;
    color: #fff;
    background: #ec6055;
    border-radius: 0 0 7rpx 0;
}

.mx-index-1l3c {
    width: 100%;
    overflow: hidden;
    background: #fff;
    padding-bottom: 6rpx;
    position: relative;
}

.mx-index-1l3c>navigator image {
    width: 100%;
    height: 100%;
}

.mx-index-1l3c>navigator:nth-child(1) {
    position: relative;
    float: left;
    width: 373rpx;
    height: 529rpx;
    margin: 6rpx 0 0;
}

.mx-index-1l3c>navigator:nth-child(2) {
    width: 373rpx;
    height: 262rpx;
    position: absolute;
    top: 6rpx;
    right: 0;
}

.mx-index-1l3c>navigator:nth-child(3) {
    width: 373rpx;
    height: 262rpx;
    position: absolute;
    right: 0;
    bottom: 6rpx;
}

.mx-index-lprt {
    width: 100%;
    overflow: auto;
    background: #fff;
}

.mx-index-lprt>view {
    position: relative;
    margin-top: 6rpx;
    padding-left: 300rpx;
    height: 300rpx;
    background: #fff;
}

.mx-index-lprt>view::after {
    content: '';
    position: absolute;
    left: 324rpx;
    right: 32rpx;
    bottom: 0;
    border-bottom: 1px solid #e5e5e5;
    transform: scaleY(.5);
    transform-origin: 0 0;
}

.mx-index-lprt>view .image {
    position: absolute;
    top: 0;
    left: 0;
    width: 300rpx;
    height: 300rpx;
    overflow: hidden;
}

.mx-index-lprt>view .image .pic {
    display: block;
    width: 100%;
    height: 100%;
}

.mx-index-lprt>view .image .tag {
    visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
}

.mx-index-lprt>view .image .tag_show {
    visibility: visible;
}

.mx-index-lprt>view .mx-index-text-group .sub {
    margin: 16rpx 0;
    max-height: 108rpx;
    white-space: normal;
    overflow: hidden;
}

.mx-index-banner .image image {
    display: block;
    width: 100%;
}

.mx-index-divider {
    height: 16rpx;
}

.mx-index-bpic {
    margin: 0;
}

.mx-index-bpic>view {
    position: relative;
}

.mx-index-bpic>view .pic {
    display: block;
    width: 100%;
    height: 422rpx;
}

.mx-index-bpic>view .tag {
    visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
}

.mx-index-bpic>view .tag_show {
    visibility: visible;
}

.mx-index-bpic>view .txt {
    position: relative;
    padding: 32rpx;
    background: #fff;
}

.mx-index-bpic>view .name {
    display: block;
    width: 80%;
    font-size: 32rpx;
    color: #333;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.mx-index-bpic>view .sub {
    display: block;
    width: 80%;
    font-size: 24rpx;
    color: #999;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.mx-index-bpic>view .price {
    position: absolute;
    top: 50%;
    right: 32rpx;
    transform: translate(0,-50%);
    text-align: right;
}

.mx-index-bpic>view .price .p1 {
    display: block;
    color: #ff4a00;
    font-size: 32rpx;
    line-height: 48rpx;
}

.mx-index-bpic>view .price .p2 {
    display: block;
    font-size: 24rpx;
    text-decoration: line-through;
    color: #999;
}

.mx-index-lprt>view .image .icon-rebate,.mx-index-1l2c>view .image .icon-rebate {
    position: absolute;
    right: 18rpx;
    bottom: 18rpx;
    width: 58rpx;
    height: 58rpx;
    z-index: 3;
}

.mx-index-bpic>view .icon-rebate {
    position: absolute;
    right: 18rpx;
    top: 346rpx;
    width: 58rpx;
    height: 58rpx;
    z-index: 3;
}