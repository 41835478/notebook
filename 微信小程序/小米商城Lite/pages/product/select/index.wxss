@import "../index.wxss";

.mx-product-price-vip {
    margin-top: 8rpx;
}

.mx-product-price-vip .vip-price {
    display: block;
    margin-left: 0;
}

.radio-group view {
    display: inline-block;
}

.radio-group label {
    display: inline-block;
    color: #000!important;
    font-size: 24rpx;
}

.radio-group navigator {
    display: inline-block;
    color: #ff6700;
    font-size: 24rpx;
    padding: 0 8rpx;
}

.mx-product-select_ins label .desc {
    font-size: 24rpx;
}

.mx-product-select_ins label .icon {
    display: inline-block;
    width: 28rpx;
    height: 28rpx;
    margin-right: 6rpx;
    border: 2rpx solid #888;
    border-radius: 50%;
    text-align: center;
    line-height: 28rpx;
}