<view style="margin:32rpx;" wx:else>
    <image mode="widthFix" src="http://i8.mifile.cn/b2c-mimall-media/460957e0360b31e4ad1aacb5fad46139.jpg" style="display:block;width:100%;box-shadow:0 0 1px rgba(0,0,0,.1);"></image>
