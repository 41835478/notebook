.product_item.sold_out .slide_content {
    background: #f6f6f9;
}

.slide {
    position: relative;
    width: 100%;
    background: #fff;
    z-index: 3;
}

.slide .slide_content {
    position: relative;
    background: #fff;
    z-index: 2;
    transition: transform 0.25s ease-out;
    transition: transform 0.25s ease-out,-webkit-transform 0.25s ease-out;
    will-change: auto;
}

.slide .slide_move {
    will-change: transform;
    transform: translateX(-60px);
}

.slide .slide_btn_remove {
    position: absolute;
    top: 1px;
    right: 0;
    width: 60px;
    height: calc(100% - 2px);
    background: #FF4343;
    font-size: 14px;
    color: #fff;
    border-color: #fff;
    text-align: center;
}

.slide .slide_btn_remove .slide_btn_remove_text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}