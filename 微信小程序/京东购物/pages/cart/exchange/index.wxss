page {
    height: 100%;
}

.exchange {
    box-sizing: border-box;
    height: 100%;
    padding-bottom: 50px;
}

.exchange__wrap {
    height: 100%;
}

.exchange__tips {
    display: flex;
    background: #fff;
    height: 90rpx;
    border-bottom: 1rpx solid #ddd;
    align-items: center;
    padding-left: 20rpx;
}

.exchange__tips image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.exchange__tips_info {
    height: 90rpx;
    line-height: 90rpx;
    vertical-align: middle;
    font-size: 12px;
    color: #999;
}

.exchange__category {
    white-space: nowrap;
    overflow-x: auto;
    margin-left: 20rpx;
    padding: 20rpx 0;
    height: 60rpx;
    width: 730rpx;
}

.exchange__category::-webkit-scrollbar {
    width: 0;
    height: 0;
    display: none;
}

.exchange__category_item {
    display: inline-block;
    height: 60rpx;
    padding: 0 30rpx;
    border-radius: 30rpx;
    line-height: 60rpx;
    vertical-align: middle;
    background: #fff;
    color: #666;
    margin-right: 20rpx;
}

.exchange__category_item--cur {
    color: #fff;
    background: #E93B3D;
}

.exchange__icon_select {
    width: 15px;
    height: 15px;
    margin: 0 20rpx;
}

.exchange__list_item {
    display: flex;
    align-items: center;
    background: #fff;
    padding: 20rpx 0;
}

.exchange__list_item_img {
    position: relative;
}

.exchange__list_item_img image {
    width: 150rpx;
    height: 150rpx;
}

.exchange__list_item_info {
    flex: 1;
    margin: 0 20rpx;
}

.exchange__list_item_price {
    margin-top: 5px;
}

.exchange__list_item_price--now {
    color: #E93B3D;
}

.exchange__list_item_price--now text {
    font-size: 18px;
}

.exchange__list_item_price--original {
    color: #999;
    text-decoration: line-through;
    margin-left: 10rpx;
}

.exchange__list_item--none {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    padding: 1px 0;
    font-size: 10px;
    color: #fff;
    text-align: center;
    background: rgba(0,0,0,.5);
}

.exchange__list_scroll {
    height: 600rpx;
}

.exchange__confirm {
    display: flex;
    align-items: center;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
}

.exchange__confirm_sum {
    flex: 1;
    height: 49px;
    border-top: 1rpx solid #ddd;
    background: #fff;
}

.exchange__confirm_sum_total,.exchange__confirm_sum_money {
    padding-left: 20rpx;
}

.exchange__confirm_sum_total text,.exchange__confirm_sum_money text {
    color: #E93B3D;
}

.exchange__confirm_sum_total {
    display: inline-block;
    position: relative;
    margin-top: 4px;
}

.exchange__confirm_sum .arrow {
    position: relative;
}

.exchange__confirm_sum .arrow::before {
    position: absolute;
    content: "";
    right: -20px;
    top: 7px;
    display: block;
    height: 10px;
    width: 10px;
    border-width: 1rpx;
    border-color: transparent;
    border-style: solid;
    border-top-color: #333;
    border-left-color: #333;
    transform: rotate(45deg);
}

.exchange__confirm_btn {
    display: flex;
    align-items: center;
    text-align: center;
    justify-content: center;
    font-size: 16px;
    width: 100px;
    height: 50px;
    color: #fff;
    background: #E93B3D;
}

.exchange__layer {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,.5);
}

.exchange__layer_floating {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    padding-bottom: 100rpx;
}

.exchange__layer_panel {
    width: 100%;
    height: 700rpx;
}

.exchange__layer_sum {
    position: relative;
    height: 90rpx;
    line-height: 90rpx;
    vertical-align: middle;
    text-align: center;
}

.exchange__layer_close {
    position: absolute;
    width: 36rpx;
    height: 36rpx;
    right: 20rpx;
    top: 20rpx;
}

.exchange__layer_submit {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: #E93B3D;
    color: #fff;
    height: 100rpx;
}