@import "../../../../app.wxss";

.global-info__mask {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 330;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,.5);
}

.global-info__main {
    position: fixed;
    z-index: 331;
    bottom: -60vh;
    left: 0;
    background: #fff;
    width: 100vw;
    height: 60vh;
    transition: all .5s cubic-bezier(0.175,0.885,0.32,1.0);
}

.global-info__main.show {
    bottom: 0;
}

.global-info__header {
    display: flex;
    align-items: center;
    height: 46px;
    background: #f7f7f7;
    padding: 0 10px;
    font-size: 18px;
}

.global-info__header_l {
    flex: 1;
}

.global-info__header_r {
    width: 15px;
    height: 15px;
}

.global-info__content {
    margin-left: 10px;
}

.global-info__content_item {
    border-top: 1rpx solid #ddd;
    padding: 10px 10px 10px 0;
    font-size: 12px;
}

.global-info__content_item:first-child {
    border-top: 0;
}

.global-info__content_tit {
    font-size: 14px;
    color: #AE65A2;
    padding-bottom: 6px;
}

.global-info__footer {
    position: fixed;
    width: 100%;
    height: 50px;
    left: 0;
    bottom: 0;
}

.global-info__btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 50px;
    background: #802F70;
    color: #fff;
}