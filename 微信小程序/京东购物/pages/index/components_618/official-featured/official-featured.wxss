}

.featured-list2__info {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    padding-top: 10rpx;
    background-image: url('data:image/png;base64,');
    background-repeat: no-repeat;
    background-position: center bottom;
    background-size: 170rpx 64rpx;
}

.featured-list2__info-title,.featured-list2__info-des {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.featured-list2__info-title {
    font-size: 26rpx;
    font-weight: bold;
    color: #333;
}

.featured-list2__info-des {
    font-size: 24rpx;
    margin-top: -2rpx;
}

.featured-list2__info::after {
    content: '';
    width: 76rpx;
    height: 32rpx;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 10rpx;
    margin: 0 auto;
    border-radius: 32rpx;
    background: currentColor url('data:image/png;base64,') no-repeat center;
    background-size: 50rpx 20rpx;
}