@-webkit-keyframes official-featured_slider {
    0%,40%,100% {
        transform: translate3d(0,0,0);
    }

    50%,90% {
        transform: translate3d(-50%,0,0);
    }
}

@keyframes official-featured_slider {
    0%,40%,100% {
        transform: translate3d(0,0,0);
    }

    50%,90% {
        transform: translate3d(-50%,0,0);
    }
}

.featured {
    width: 750rpx;
    height: 710rpx;
    background-size: 100% 100%;
    overflow: hidden;
}

.featured-header {
    position: relative;
    height: 36rpx;
    margin: 20rpx 30rpx 30rpx;
}

.featured-header__title {
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
    text-align: center;
}

.featured-header__link {
    z-index: 1;
    font-size: 24rpx;
    color: #fff;
    position: absolute;
    right: 0;
    top: 8rpx;
    border-radius: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    padding: 0 5rpx 0 15rpx;
}

.featured-header__link::after {
    content: '';
    display: inline-block;
    vertical-align: middle;
    margin: -2rpx 0 0 2rpx;
    width: 20rpx;
    height: 20rpx;
    background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAUBAMAAAB/pwA+AAAAG1BMVEUAAAD////////////////////////////////rTT7CAAAACXRSTlMA/m5nZkjySkY8RoMoAAAAMElEQVQI12NgYGhlgINEBzhTUQTOZBIkTdgAISyMJByAzEQoQGijRJAhEWFrOJQGAMspBiopq55eAAAAAElFTkSuQmCC') no-repeat;
    background-size: 100%;
}

.featured-list1 {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 20rpx;
    overflow: hidden;
}

.featured-list1__item {
    width: 350rpx;
    height: 160rpx;
    background: #fff;
    overflow: hidden;
    position: relative;
    box-sizing: border-box;
    margin-bottom: 10rpx;
}

.featured-list1__item:nth-child(1) {
    color: #f43c95;
    background-image: -webkit-linear-gradient(left,#ffebe5,#fff 60%);
}

.featured-list1__item:nth-child(2) .featured-slider__item:nth-child(1) {
    color: #983ad2;
    background-image: -webkit-linear-gradient(left,#f7e5ff,#fff 60%);
}

.featured-list1__item:nth-child(2) .featured-slider__item:nth-child(2) {
    color: #14b296;
    background-image: -webkit-linear-gradient(left,#e5fff7,#fff 60%);
}

.featured-list1__item:nth-child(3) {
    color: #f96c27;
    background-image: -webkit-linear-gradient(left,#fff4e5,#fff 60%);
}

.featured-list1__item:nth-child(4) {
    color: #f72d57;
    background-image: -webkit-linear-gradient(left,#ffece8,#fff 60%);
}

.featured-list1__info {
    position: absolute;
    left: 20rpx;
    top: 15rpx;
    right: 160rpx;
}

.featured-list1__info-title,.featured-list1__info-des {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.featured-list1__info-title {
    font-size: 32rpx;
    font-weight: bold;
}

.featured-list1__info-des {
    font-size: 28rpx;
}

.featured-list1__info::after {
    content: '';
    display: block;
    width: 70rpx;
    height: 36rpx;
    margin-top: 5rpx;
    border-radius: 36rpx;
    background: currentColor url('data:image/png;base64,') no-repeat center;
    background-size: 50rpx 20rpx;
}

.featured-list1__image {
    position: absolute;
    right: 0;
    top: 0;
    width: 160rpx;
    height: 160rpx;
    padding: 10rpx;
    box-sizing: border-box;
}

.featured-list1__image image {
    display: block;
    width: 100%;
    height: 100%;
}

.featured-slider {
    position: relative;
    width: 700rpx;
    -webkit-transform: translate3d(0,0,0);
    -webkit-animation: official-featured_slider 8s infinite;
}

.featured-slider__item {
    width: 350rpx;
    height: 160rpx;
    position: absolute;
    top: 0;
}

.featured-slider__item:nth-child(1) {
    left: 0;
}

.featured-slider__item:nth-child(2) {
    left: 350rpx;
}

.featured-list2 {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 20rpx;
    overflow: hidden;
}

.featured-list2__item {
    width: 170rpx;
    height: 120rpx;
    background: #fff;
    overflow: hidden;
    position: relative;
    box-sizing: border-box;
    margin-bottom: 10rpx;
    text-align: center;
}

.featured-list2__item:nth-child(1) {
    color: #42a4ff;
    background-color: #d5ebff;
    background-image: -webkit-linear-gradient(top,#e6f2ff,#c3e2ff);
}

.featured-list2__item:nth-child(2) {
    color: #31b8a0;
    background-color: #b1f4e8;
    background-image: -webkit-linear-gradient(top,#dffaf5,#b1f5e8);
}

.featured-list2__item:nth-child(3) {
    color: #4fbf5d;
    background-color: #b5f6d4;
    background-image: -webkit-linear-gradient(top,#dcfbeb,#aaf5ce);
}

.featured-list2__item:nth-child(4) {
    color: #5b8ad6;
    background-color: #c2cbf8;
    background-image: -webkit-linear-gradient(top,#e3e8fc,#bdc8f6);
}

.featured-list2__item:nth-child(5) {
    color: #f07063;
    background-color: #ffcdc8;
    background-image: -webkit-linear-gradient(top,#fee9e6,#ffcac4);
}

.featured-list2__item:nth-child(6) {
    color: #f3aa56;
    background-color: #fde8b2;
    background-image: -webkit-linear-gradient(top,#fef4db,#fce6ac);
}

.featured-list2__item:nth-child(7) {
    color: #22c3cb;
    background-color: #b6f4f7;
    background-image: -webkit-linear-gradient(top,#defafb,#b0f4f7);
}

.featured-list2__item:nth-child(8) {
    color: #c351e4;
    background-color: #f3c4ff;
