.banner-freshmen,.banner-freshmen__image {
    display: block;
    width: 750rpx;
    height: 172rpx;
}

.banner-goods {
    width: 750rpx;
    height: 260rpx;
    background-size: 100% 100%;
    overflow: hidden;
    position: relative;
}

.banner-goods__swiper {
    position: absolute;
    top: 53rpx;
    left: 320rpx;
}

.banner-goods__swiper::after {
    content: '';
    display: block;
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}

.banner-goods__swiper,.banner-goods__item,.banner-goods__image {
    width: 110rpx;
    height: 110rpx;
}

.banner-goods__image {
    display: block;
}

.banner-goods__text {
    font-size: 30rpx;
    color: #fff;
    position: absolute;
    top: 193rpx;
    left: 382rpx;
    font-style: italic;
    text-align: center;
    width: 230rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}