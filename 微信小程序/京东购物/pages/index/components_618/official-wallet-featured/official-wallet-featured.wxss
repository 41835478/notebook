@import "../../../../__wuBaseWxss__/22.wxss";

.header {
    position: relative;
    padding: 30rpx 0 20rpx;
}

.header__title {
    position: relative;
    z-index: 1;
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}

.header__icon {
    margin-right: 10rpx;
    width: 36rpx;
    height: 36rpx;
}

.header__desc {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,0);
    font-size: 36rpx;
    font-weight: bold;
    line-height: 1.2;
    color: rgba(255,255,255,.3);
}

.featured {
    width: 750rpx;
    height: 1070rpx;
    background-size: 100% 100%;
    overflow: hidden;
}

.featured-header {
    position: relative;
    margin: -20rpx 30rpx 0;
}

.featured-header__link {
    z-index: 1;
    font-size: 24rpx;
    color: #fff;
    position: absolute;
    right: 0;
    top: 38rpx;
    border-radius: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    padding: 0 5rpx 0 15rpx;
}

.featured-header__link::after {
    content: '';
    display: inline-block;
    vertical-align: middle;
    margin: -2rpx 0 0 2rpx;
    width: 20rpx;
    height: 20rpx;
    background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAUBAMAAAB/pwA+AAAAG1BMVEUAAAD////////////////////////////////rTT7CAAAACXRSTlMA/m5nZkjySkY8RoMoAAAAMElEQVQI12NgYGhlgINEBzhTUQTOZBIkTdgAISyMJByAzEQoQGijRJAhEWFrOJQGAMspBiopq55eAAAAAElFTkSuQmCC') no-repeat;
    background-size: 100%;
}

.featured-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 30rpx;
    overflow: hidden;
}

.featured-list__item {
    width: 217rpx;
    height: 308rpx;
    background: #fff;
    margin-bottom: 20rpx;
    border-radius: 4rpx;
    overflow: hidden;
    position: relative;
}

.featured-list__image {
    display: block;
    width: 177rpx;
    height: 177rpx;
    margin: 25rpx auto 0;
}

.featured-list__info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 90rpx;
    z-index: 1;
    text-align: center;
    background-size: 100% 100%;
    overflow: hidden;
}

.featured-list__info-title,.featured-list__info-des {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0 20rpx;
}

.featured-list__info-title {
    font-size: 26rpx;
    color: rgba(255,255,255,.8);
    margin: 18rpx 0 -5rpx;
}

.featured-list__info-des {
    font-size: 24rpx;
    color: #fff;
    font-weight: bold;
}