@import "../../../../__wuBaseWxss__/20.wxss";

.channel-nav {
    position: relative;
    z-index: 1;
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    height: 334rpx;
    padding: 40rpx 20rpx;
    border-radius: 20rpx 20rpx 0 0;
    background-size: 100%;
    background-color: #fff;
    margin-top: -30rpx;
}

.channel-nav__item {
    width: 20%;
    text-align: center;
    margin-bottom: 30rpx;
}

.channel-nav__icon {
    display: block;
    width: 72rpx;
    height: 72rpx;
    margin: 0 auto 10rpx;
}

.channel-nav__icon-image {
    width: 100%;
    height: 100%;
}

.channel-nav__text {
    font-size: 24rpx;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}