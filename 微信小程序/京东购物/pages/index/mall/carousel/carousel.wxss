.carousel {
    position: relative;
    height: 366rpx;
    margin-top: -28rpx;
    overflow: hidden;
    background: #f7f7f7;
}

.carousel-swiper,.carousel-swiper__image {
    width: 100%;
    height: 100%;
}

.carousel-dot {
    position: absolute;
    left: 0;
    bottom: 50rpx;
    right: 0;
    height: 10rpx;
    text-align: center;
    font-size: 0;
}

.carousel-dot__item {
    display: inline-block;
    margin: 0 10rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 6rpx;
    background: rgba(255,255,255,0.4);
    transition: all .2s;
}

.carousel-dot__item--cur {
    width: 20rpx;
    background: #fff;
}