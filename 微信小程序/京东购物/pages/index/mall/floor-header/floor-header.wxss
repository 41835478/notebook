.floor-header {
    padding: 15px 0 10px;
    position: relative;
    text-align: center;
    border-bottom: 1rpx solid #f0f0f0;
    height: 134rpx;
    background-size: 100% 100%;
    box-sizing: border-box;
}

.floor-header__group {
    display: inline-block;
}

.floor-header__zh {
    font-size: 18px;
    font-weight: bold;
}

.floor-header__zh:first-letter {
    color: #333;
}

.floor-header__en {
    display: block;
    font-size: 7px;
    text-align: justify;
    opacity: .5;
}

.floor-header__en::after {
    content: '';
    display: inline-block;
    width: 100%;
}

.floor-header__more {
    font-size: 24rpx;
    color: #999;
    position: absolute;
    right: 35rpx;
    top: 40rpx;
}

.floor-header__more::after {
    content: '';
    display: inline-block;
    vertical-align: middle;
    margin: -4rpx 0 0 15rpx;
    width: 12rpx;
    height: 20rpx;
