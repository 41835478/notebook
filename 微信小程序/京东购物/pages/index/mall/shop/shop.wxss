@import "../../../../__wuBaseWxss__/20.wxss";

.floor-title {
    border-bottom: 1rpx solid #f0f0f0;
}

.shop {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    overflow: hidden;
    border-bottom: 1rpx solid #f0f0f0;
}

.shop__item {
    position: relative;
    border-right: 1rpx solid #f0f0f0;
    border-top: 1rpx solid #f0f0f0;
    box-sizing: border-box;
    width: 50%;
    height: 310rpx;
}

.shop-head {
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    right: 30rpx;
}

.shop-head__logo {
    display: block;
    width: 120rpx;
    height: 40rpx;
    margin-bottom: 10rpx;
}

.shop-head__title {
    font-size: 28rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.shop-image {
    position: absolute;
    left: 30rpx;
    bottom: 30rpx;
    right: 30rpx;
    display: flex;
    justify-content: space-between;
}

.shop-image__item {
    display: block;
    width: 148rpx;
    height: 148rpx;
}