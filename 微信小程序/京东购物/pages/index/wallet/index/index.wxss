.back2top {
    position: fixed;
    display: block;
    right: 0;
    bottom: 45px;
    width: 45px;
    height: 45px;
    background-color: rgba(0,0,0,.7);
    border-radius: 4px 0 0 4px;
}

.back2top::after {
    content: "";
    display: block;
    width: 100%;
    height: 100%;
    background-image: url("data:image/png;base64,");
    background-position: center;
    background-repeat: no-repeat;
    background-size: 16px 20px;
}