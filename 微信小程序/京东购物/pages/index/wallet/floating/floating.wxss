.floating {
    z-index: 251;
    position: fixed;
    bottom: 110px;
    right: 0;
}

.floating__close {
    z-index: 1;
    position: absolute;
    left: -8px;
    top: -8px;
    width: 20px;
    height: 20px;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100%;
}

.floating__image {
    display: block;
    width: 50px;
    height: 50px;
}