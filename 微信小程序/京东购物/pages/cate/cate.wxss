.fake_search_bar {
    position: fixed;
    z-index: 99;
    top: 0;
    right: 0;
    left: 0;
    box-sizing: border-box;
    height: 50px;
    padding: 10px 15px 0;
    box-sizing: border-box;
    background: #fff;
    border-bottom: 1rpx solid #ddd;
}

.fake_search_bar.flex {
    display: flex;
    align-items: center;
    padding: 0 15px;
}

.fake_search_bar.flex .search_box {
    flex: 1;
    height: 28px;
    line-height: 28px;
    background: #efeff4;
}

.fake_search_bar .search_box {
    position: relative;
    height: 30px;
    line-height: 30px;
    text-align: center;
    background: #f1f1f1;
    border-radius: 15px;
}

.fake_search_bar .align_left {
    padding-left: 15px;
    text-align: left;
}

.fake_search_bar icon {
    display: inline-flex;
    margin-top: -2px;
    margin-right: 5px;
    align-items: center;
    vertical-align: middle;
}

.fake_search_bar text {
    color: #999;
}

.cate {
    position: fixed;
    top: 50px;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    background: #fff;
}

.level1,.level2 {
    height: 100%;
}

.level1 {
    width: 160rpx;
}

.level1 .tab {
    height: 50px;
    line-height: 50px;
    text-align: center;
    font-size: 12px;
    background: #f8f8f8;
}

.level1 .tab.cur {
    font-size: 14px;
    color: #E93B3D;
    background: #fff;
}

.level2 {
    flex: 1;
}

.level2 .header {
    font-size: 14px;
    font-weight: bold;
    margin: 15px 0 5px;
}

.level2 .list {
    display: flex;
    flex-wrap: wrap;
    padding-right: 15px;
}

.level2 .list_item {
    width: 33.33%;
    padding: 10px;
    box-sizing: border-box;
    text-align: center;
}

.level2 .list_item .img {
    position: relative;
    padding-top: 100%;
}

.level2 .list_item image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.level2 .list_item .name {
    margin-top: 5px;
    font-size: 12px;
    line-height: 1.3;
}

.level2__content {
    padding: 0 0 30rpx 20rpx;
}

.marketing__header {
    font-size: 14px;
    font-weight: bold;
    margin: 15px 0 5px;
}

.marketing__list {
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;
    margin: 10px 10px 10px 0;
}

.marketing__list-item {
    width: 50%;
    height: 60px;
    background-color: #F8F8F8;
    position: relative;
    box-sizing: border-box;
    padding: 10px 50px 10px 10px;
    margin-bottom: 1px;
}

.marketing__list-item:nth-child(2n) {
    margin: 0 -1px 1px 1px;
}

.marketing__list-item-title {
    font-size: 14px;
    color: #333;
    font-weight: bold;
}

.marketing__list-item-des {
    font-size: 12px;
    color: #E93B3D;
}

.marketing__list-item-title,.marketing__list-item-des {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.marketing__list-item-image {
    width: 50px;
    height: 50px;
    position: absolute;
    top: 5px;
    right: 0;
}

.promote {
    display: block;
    height: 46px;
    line-height: 46px;
    font-size: 16px;
    color: #fff;
    text-align: center;
    border-radius: 4px;
    background-color: #E93B3D;
    margin: 15px 15px 0;
}

.promote::after {
    content: '';
    display: inline-block;
    width: 15px;
    height: 15px;
    vertical-align: middle;
    margin: -2px 0 0 5px;
    background: url('data:image/png;base64,') no-repeat;
    background-size: 100%;
}

.banner {
    position: relative;
    overflow: hidden;
    margin: 10px 10px 20px 0;
    padding-top: 34%;
}

.banner__swiper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.banner__swiper-item-image {
    display: block;
    width: 100%;
    height: 100%;
}

.banner__dots {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 5px;
    height: 4px;
    text-align: center;
    font-size: 0;
}

.banner__dot {
    display: inline-block;
    margin: 0 2px;
    width: 4px;
    height: 4px;
    border-radius: 4px;
    background: rgba(0,0,0,.2);
    transition: all .2s;
}

.banner__dot--cur {
    width: 8px;
    background: rgba(233,59,61,.5);
}