.sales-promotion {
    box-sizing: border-box;
    width: 550rpx;
    height: 378rpx;
    padding-top: 76rpx;
    background: url(http://img11.360buyimg.com/jdphoto/s550x378_jfs/t19987/137/809354886/57783/a9d67185/5b0bfdcaN1df27bfa.png) no-repeat;
    background-size: 100%;
}

.sales-promotion__item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 10rpx 0 0 10rpx;
    box-sizing: border-box;
    width: 260rpx;
    height: 120rpx;
    padding: 0 10rpx 0 10rpx;
    float: left;
    border-radius: 8rpx;
    background: #fff;
}

.sales-promotion__text-wrap {
    width: 140rpx;
}

.sales-promotion__title {
    font-size: 28rpx;
    font-weight: bold;
    color: #f74600;
}

.sales-promotion__desc {
    font-size: 24rpx;
    color: #ff826e;
}

.sales-promotion__img {
    width: 100rpx;
    height: 100rpx;
}

.line1 {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}