.mod_msgbox_mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    background: rgba(0,0,0,.6);
}

.mod_msgbox_wrap {
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 270px;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    box-sizing: border-box;
    padding: 20px 15px 15px;
    text-align: center;
    border-radius: 6px;
    color: #333;
    background-color: #fff;
    overflow: hidden;
    box-shadow: 0 1px 10px 0 rgba(0,0,0,.3);
}

.mod_msgbox_wrap .close {
    padding: 12px;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
}

.mod_msgbox_wrap .close::after {
    content: "";
    display: block;
    width: 20px;
    height: 20px;
    background: url(data:image/png;base64,) 50% no-repeat;
    background-size: 11px auto;
}

.mod_msgbox_wrap .icon {
    display: block;
    width: 50px;
    height: 50px;
    margin: 5px auto 0;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 50px auto;
}

.mod_msgbox_wrap .icon.icon_success {
    background: url(data:image/png;base64,) no-repeat;
    background-size: 50px auto;
}

.mod_msgbox_wrap .title {
    font-size: 16px;
}

.mod_msgbox_wrap .small {
    font-size: 12px;
    color: #999;
    display: inline-block;
    max-height: 200px;
    overflow: auto;
}

.mod_msgbox_wrap .title+.small {
    margin-top: 8px;
}

.mod_msgbox_wrap .btns {
    position: relative;
    display: flex;
}

.mod_msgbox_wrap .btns:last-child {
    margin: 10px -15px -15px;
}

.mod_msgbox_wrap .btns .btn {
    flex: 1;
    text-align: center;
    position: relative;
    width: 100px;
    height: 44px;
    line-height: 44px;
    background: #fff;
    color: #333;
    font-size: 14px;
}

.mod_msgbox_wrap .btns .btn::before {
    content: "";
    position: absolute;
    z-index: 1;
    height: 0;
    border-top: 1rpx solid #e5e5e5;
    left: 0;
    right: 0;
    top: 0;
}

.mod_msgbox_wrap .btns .btn.btn_red {
    color: #e93b3d;
}

.mod_msgbox_wrap .btns .btn+.btn::after {
    content: "";
    position: absolute;
    z-index: 1;
    width: 0;
    border-left: 1rpx solid #e5e5e5;
    top: 0;
    bottom: 0;
    left: 0;
}

.mod_msgbox_wrap.info {
    padding: 0px 15px 15px;
}

.mod_msgbox_wrap.info .small {
    text-align: left;
}

.mod_msgbox_wrap.info .title {
    position: relative;
    padding: 0 30px;
    height: 46px;
    line-height: 46px;
}

.mod_msgbox_wrap.info .title::after {
    content: "";
    position: absolute;
    z-index: 1;
    height: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: 0 -15px;
    border-bottom: 1px solid #e5e5e5;
}