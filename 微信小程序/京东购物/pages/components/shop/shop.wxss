@import "../../../__wuBaseWxss__/4.wxss";

@import "../../../app.wxss";

.shopInfo {
    margin-top: 15px;
    background: #ffffff;
    box-sizing: border-box;
    padding: 10px;
}

.shopInfo_shot {
    display: flex;
    align-items: center;
}

.shopInfo_shot .flag_solid {
    display: inline-block;
    margin-left: 5px;
    width: 46px;
    min-width: 46px;
    text-align: center;
}

.shopInfo_logo {
    width: 90px;
    height: 30px;
    box-sizing: border-box;
    border: 1rpx solid #ddd;
    margin: 0 5px;
}

.shopInfo_diamond {
    background: #631AC2;
}

.shopInfo_detail {
    display: flex;
    margin-top: 10px;
}

.shopInfo_detail_wrap {
    flex: 1;
    display: flex;
}

.shopInfo_detail_item {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex: 1;
    border-right: 1rpx solid #ddd;
}

.shopInfo_detail_item .num {
    font-size: 14px;
}

.shopInfo_detail_item .name {
    font-size: 10px;
}

.shopInfo_detail_item:last-child {
    border-right: 0;
}

.shopInfo_detail_score {
    font-size: 10px;
}

.shopInfo_detail_score .red {
    color: #E93B3D;
}

.shopInfo_detail_score .green {
    color: #18c461;
}

.shopInfo_operation {
    display: flex;
    margin-top: 10px;
}

.shopInfo_operation text {
    line-height: 15px;
    vertical-align: middle;
}

.shopInfo_operation_item {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
    height: 30px;
    font-size: 12px;
    margin-right: 10px;
    border: 1rpx solid #ddd;
    border-radius: 4px;
}

.shopInfo_operation_item image {
    width: 15px;
    height: 15px;
    margin-right: 4px;
}

.shopInfo_operation_item.faved {
    color: #FF9602;
}

.shopInfo_operation_item:last-child {
    margin-right: 0;
}

.shopInfo .icon_global {
    width: 34px;
}

.shopInfo .icon_global_zy {
    width: 58px;
}

.shopInfo .icon_global,.shopInfo .icon_global_zy {
    position: relative;
    top: 2px;
    height: 14px;
    margin-left: 4px;
}

.shopInfo .icon_categShop {
    width: 68px;
    height: 26px;
    position: relative;
    top: 2px;
    left: 2px;
}

.shopInfo .icon_goodShop {
    width: 67.5px;
    height: 15px;
    position: relative;
    top: 2px;
    left: 4px;
}

.flag_coupon {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin-top: -2px;
    box-sizing: border-box;
    line-height: 1;
    border-radius: 1px;
    padding: 3px 6px;
    font-size: 10px;
    color: #fff;
    background: #47c1c4;
}

.flag_coupon::before,.flag_coupon::after {
    content: '';
    position: absolute;
    top: 50%;
    width: 5px;
    height: 5px;
    border-radius: 3px;
    background: #fff;
    transform: translate(-50%,-50%);
}

.flag_coupon::before {
    left: 0;
}

.flag_coupon::after {
    right: -5px;
}

.flag_solid,.flag_hollow {
    display: inline-block;
    vertical-align: middle;
    margin-top: -2px;
    box-sizing: border-box;
    padding: 2px 3px;
    line-height: 1;
    font-size: 10px;
    border-radius: 2px;
}

.flag_solid {
    color: #fff;
    background: #E93B3D;
}

.flag_solid.green {
    background: #09bb07;
}