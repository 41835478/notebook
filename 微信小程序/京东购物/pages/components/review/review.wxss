@import "../../../__wuBaseWxss__/23.wxss";

@import "../../../app.wxss";

.review {
    margin-top: 15px;
    overflow: hidden;
}

.review .header .flex_c {
    font-size: 12px;
    text-align: right;
}

.review .header .flex_c .n {
    padding-right: 1px;
    color: #E93B3D;
}

.review_default {
    position: relative;
    background: #f7f7f7;
    font-size: 12px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    color: #999;
    margin: 0 10px 10px;
}

.review .header {
    justify-content: space-between;
}

.review .total {
    position: relative;
    margin: 10px auto;
    font-size: 12px;
    color: #333;
    text-align: center;
    width: 92px;
    height: 25px;
    line-height: 25px;
    border: 1rpx solid #CCC;
    border-radius: 100px;
}

.review .tips {
    color: #999;
}

.review_time {
    float: right;
    font-size: 12px;
    color: #999;
}

.review_image {
    overflow-x: auto;
    white-space: nowrap;
    -webkit-overflow-scrolling: touch;
}

.review_entries {
    padding: 0 10px;
    margin: 15px 0;
    overflow: hidden;
}

.review_entries_item {
    float: left;
    font-size: 10px;
    border-radius: 2px;
    text-align: center;
    height: 25px;
    line-height: 25px;
    margin-right: 10px;
    background: #FDF0F0;
    color: #666;
    padding: 0 10px;
}

.review_entries_item.cur {
    color: #FFF;
    background: #E93B3D;
}

.review_detail text {
    font-size: 12px;
    color: #FC1C32;
    margin-left: 3px;
}

.flex_row {
    display: flex;
}

.flex_row .flex_c {
    flex: 1;
    padding-right: 10px;
}

.flex_row .flex_r {
    padding-right: 30px;
    text-align: right;
    font-size: 12px;
    color: #999;
}

.flex_row.header {
    height: 40px;
    line-height: 40px;
    overflow: hidden;
}