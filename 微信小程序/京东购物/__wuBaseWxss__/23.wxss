.review_item {
    padding: 10px 10px 10px 0;
}

.review_item .user {
    font-size: 12px;
}

.review_item .user .level {
    color: #999;
}

.review_item .star {
    display: inline-block;
    vertical-align: middle;
    margin-top: -2px;
    margin-left: 5px;
    width: 60px;
    height: 12px;
    background: url(data:image/png;base64,) repeat-x;
    background-size: 12px;
}

.review_item .star .num {
    height: 12px;
    background: url(data:image/png;base64,) repeat-x;
    background-size: 12px;
}

.review_item .content {
    margin: 10px 0;
}

.review_item .content .images {
    font-size: 0;
}

.review_item .content .image {
    position: relative;
    display: inline-block;
    margin-top: 5px;
    margin-right: 5px;
    width: 160rpx;
    height: 160rpx;
}

.review_item .content image {
    width: 100%;
    height: 100%;
}

.review_item .content .mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 160rpx;
    font-size: 14px;
    color: #fff;
    background: rgba(0,0,0,.5);
}

.review_item .time {
    font-size: 12px;
    color: #999;
}