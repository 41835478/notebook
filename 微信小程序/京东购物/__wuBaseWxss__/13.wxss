.check_box {
    z-index: 1;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 84rpx;
    height: 86rpx;
}

.check_box.checked::after {
    background-image: url(data:image/png;base64,);
}

.check_box::after {
    position: absolute;
    left: 50%;
    top: 50%;
    content: "";
    display: block;
    width: 40rpx;
    height: 40rpx;
    margin-left: -15rpx;
    background-image: url(data:image/png;base64,);
    background-size: 40rpx;
}

.check_box_for_detail {
    width: 15px;
    height: 15px;
    padding: 5px;
}

.check_box_for_detail .cb {
    position: relative;
    box-sizing: border-box;
    width: 15px;
    height: 15px;
    pointer-events: none;
    border: 1px solid #666;
    border-radius: 15px;
}

.check_box_for_detail .cb::after {
    content: '';
    position: absolute;
    box-sizing: border-box;
}

.check_box_for_detail .cb.checked {
    border: 0 none;
    background: #E93B3D;
}

.check_box_for_detail .cb.checked::after {
    top: 5px;
    left: 4px;
    width: 8px;
    height: 4px;
    border-left: 1px solid #fff;
    border-bottom: 1px solid #fff;
    transform: rotate(-45deg);
}

.check_box_for_detail .cb.disabled::after {
    top: 50%;
    left: -1px;
    width: 15px;
    height: 1px;
    background: #666;
    transform: translateY(-50%) rotate(45deg);
}