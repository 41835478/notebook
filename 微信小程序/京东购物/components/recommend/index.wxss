@import "../../pages/components/sku_panel/sku_panel.wxss";

@import "../../__wuBaseWxss__/5.wxss";

.mod_recommend {
    position: relative;
    overflow: hidden;
    margin: 30rpx 0;
    background: #F7F7F7;
}

.mod_recommend_title {
    margin: 24rpx 30rpx 36rpx;
    position: relative;
    height: 1rpx;
    background: #ccc;
    z-index: 0;
    top: 50%;
}

.mod_recommend_title_text {
    padding: 0 30rpx;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 1;
    color: #999999;
    background: #F7F7F7;
    font-size: 12px;
}

.mod_recommend_title_text::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: rotate(45deg);
    margin-top: -4rpx;
    width: 8rpx;
    height: 8rpx;
    background: #ccc;
}

.mod_recommend_title_text::after {
    content: "";
    display: block;
    position: absolute;
    margin-top: -4rpx;
    right: 0;
    top: 50%;
    transform: rotate(45deg);
    width: 8rpx;
    height: 8rpx;
    background: #ccc;
}

.mod_recommend_list {
    height: 100%;
    padding-right: 1rpx;
    overflow: hidden;
    background: #F7F7F7;
}

.mod_recommend_list_item {
    float: left;
    position: relative;
    width: 50%;
    border-bottom: 1rpx solid #F7F7F7;
    background: #fff;
}

.mod_recommend_list_item .mrli_cover {
    position: relative;
    padding-top: 315rpx;
    overflow: hidden;
    margin: 30rpx 30rpx 0 30rpx;
    border-radius: 4rpx;
}

.mod_recommend_list_item .mrli_cover .tag {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50rpx;
    background-repeat: 50%;
    background-image: url(https://img11.360buyimg.com/jdphoto/s335x50_jfs/t18751/292/522134345/20440/a6f5de14/5a9383cdNd72b2a30.png);
    background-size: 335rpx 50rpx;
    font-size: 20rpx;
    color: #fff;
    box-sizing: border-box;
    text-align: center;
}

.mod_recommend_list_item .mrli_cover .tag text {
    box-sizing: border-box;
    position: absolute;
    top: 10rpx;
    left: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 50rpx;
    padding: 0 10rpx;
    width: 100%;
}

.mod_recommend_list_item .mrli_cover .pre_price text {
    width: 220rpx;
}

.mod_recommend_list_item .mrli_cover .price_wrap {
    position: absolute;
    bottom: 0;
    right: 10rpx;
    height: 97rpx;
    width: 92rpx;
    background: url(https://img11.360buyimg.com/jdphoto/s92x97_jfs/t19765/298/490294292/6682/6bb88760/5a936decNa6bbaa56.png) no-repeat 50%;
    background-size: 92rpx 97rpx;
    color: #F952B1;
    text-align: center;
}

.mod_recommend_list_item .mrli_cover .price_wrap .title {
    font-size: 14rpx;
    padding: 22rpx 10rpx 0;
    line-height: 12rpx;
}

.mod_recommend_list_item .mrli_cover .price_wrap .price {
    font-size: 24rpx;
    padding: 4rpx 10rpx 0 4rpx;
    line-height: 20rpx;
}

.mod_recommend_list_item .mrli_cover .price_wrap .price::before {
    content: "ï¿¥";
    font-size: 12rpx;
}

.mod_recommend_list_item .mrli_cover .price_wrap .price .cents {
    font-size: 12rpx;
    display: inline;
}

.mod_recommend_list_item .mrli_cover .price_wrap .date {
    font-size: 12rpx;
    line-height: 10rpx;
    padding: 0 10rpx 0 14rpx;
}

.mod_recommend_list_item .mrli_cover image {
    display: block;
    width: 315rpx;
    height: 315rpx;
    position: absolute;
    left: 0;
    top: 0;
    border: 0 none;
}

.mod_recommend_list_item .mrli_cover .corner_mark {
    height: 60rpx;
    width: 60rpx;
    position: absolute;
    background-repeat: 50%;
    background-size: 60rpx;
    bottom: 0;
    right: 0;
}

.mod_recommend_list_item .mrli_info {
    color: #333333;
}

.mod_recommend_list_item .mrli_info_name {
    padding: 25rpx 30rpx 0 30rpx;
    margin: 0;
    font-size: 24rpx;
    color: #333;
    line-height: 36rpx;
    height: 72rpx;
    word-break: break-all;
    word-wrap: break-word;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.mod_recommend_list_item .mrli_info_name .icon {
