    background-size: 48rpx 28rpx;
}

.mod_recommend_list_item .mrli_info_price {
    color: #e93b3d;
    padding-left: 30rpx;
    font-size: 24rpx;
    font-weight: 700;
    vertical-align: middle;
}

.mod_recommend_list_item .mrli_info_price text {
    font-size: 32rpx;
    margin-left: -4rpx;
}

.mod_recommend_list_item .mrli_info_buy {
    position: absolute;
    bottom: 0;
    right: 30rpx;
    width: 60rpx;
    height: 60rpx;
    background: url(https://img11.360buyimg.com/jdphoto/s30x30_jfs/t15400/50/1963422520/264/2a2e0ae5/5a615cf0N003d3951.png) no-repeat 50%;
    background-size: 30rpx;
}

.mod_recommend_list_item .mrli_info_more {
    position: absolute;
    bottom: 0;
    right: 30rpx;
    width: 60rpx;
    height: 60rpx;
    background: url(https://img11.360buyimg.com/jdphoto/s30x6_jfs/t17233/6/2560314360/179/3041ac5d/5afd3bf4N12bc82b4.png) no-repeat 50%;
    background-size: 30rpx;
}

.mod_recommend_list_item .mrli_info .price {
    display: inline-block;
    vertical-align: middle;
    margin-right: 10rpx;
}

.mod_recommend_list_item .mrli_info .promotion_tip {
    display: inline-block;
    height: 28rpx;
    line-height: 28rpx;
    padding: 0 4rpx;
    border: 1rpx solid #E93B3D;
    border-radius: 4rpx;
    font-size: 20rpx;
    color: #E93B3D;
    text-align: center;
    vertical-align: middle;
}

.mod_recommend_list_item .mrli_info .plus_price {
    display: inline-block;
    font-size: 24rpx;
    color: #333333;
    letter-spacing: 0;
    line-height: 36rpx;
    vertical-align: middle;
}

.mod_recommend_list_item .mrli_info .plus_price::after {
    content: "";
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin: -4rpx 0 0 4rpx;
    width: 58rpx;
    height: 20rpx;
    background: #fff url(https://img11.360buyimg.com/jdphoto/s58x20_jfs/t15538/324/1941363887/916/bb0fe712/5a6ee4e9Ne455b5b0.png) 50% no-repeat;
    background-size: 58rpx 20rpx;
}

.mod_recommend_list_item .mrli_info .price_max_heigth {
    min-height: 100rpx;
}

.mod_recommend_list_item .mrli_info .price_max_heigth+.mrli_info_buy {
    bottom: 36rpx;
}

.mod_recommend_list_item .mrli_info .price_max_heigth+.mrli_info_more {
    bottom: 36rpx;
}

.mod_recommend_list_item .mrli_mark {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.mod_recommend_list_item .mrli_mark .sheld,.mod_recommend_list_item .mrli_mark .ctn {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.mod_recommend_list_item .mrli_mark .sheld {
    background-color: #FFF;
    opacity: 0.8;
    z-index: 1;
}

.mod_recommend_list_item .mrli_mark .ctn {
    background-color: transparent;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.mod_recommend_list_item .mrli_mark .ctn .item {
    width: 172rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    font-size: 28rpx;
    text-align: center;
    margin: 20rpx 0;
}

.mod_recommend_list_item .mrli_mark .ctn .similar {
    color: #FFF;
    top: 180rpx;
    background-image: linear-gradient(90deg,#E93B3D 0%,#FF9574 100%);
    box-shadow: 0 5rpx 10rpx 0 rgba(233,59,61,0.2);
}

.mod_recommend_list_item .mrli_mark .ctn .dislike {
    color: #333;
    bottom: 179rpx;
    background-color: #FFF;
    box-shadow: 0 5rpx 10rpx 0 rgba(0,0,0,0.05);
}

.mod_recommend_list_item .mrli_mark .ctn .close {
    position: absolute;
    bottom: 0;
    right: 0;
    padding-right: 32rpx;
    padding-bottom: 32rpx;
    width: 26rpx;
    height: 26rpx;
}

.mod_recommend_list_item .flex_wrap {
    min-height: 50rpx;
}

.mod_recommend_list_item .flex_wrap .mrli_info_price {
    flex: 1;
}

.mod_recommend_list_item .flex_wrap .plus_price {
    display: block;
    padding-bottom: 14rpx;
}

.mod_recommend_list_item .flex_wrap+.mrli_info_buy {
    bottom: 36rpx;
}

.mod_recommend_list_item .flex_wrap+.mrli_info_more {
    bottom: 36rpx;
}

.mod_recommend_list_item:nth-child(2n) {
    float: right;
    border-left: 1rpx solid #F7F7F7;
    margin-right: -1rpx;
}

.mod_recommend .margin {
    margin-top: 10rpx;
}