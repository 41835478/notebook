<view class="confirm-wrap" wx:if="{{modelData.isShow==true}}">
    <view class="mask"></view>
    <view class="confirm-content">
        <view class="title" wx:if="{{modelData.title!=''}}">{{modelData.title}}</view>
        <view class="content">{{modelData.content}}</view>
        <view class="button-wrap">
            <button style="border-right: 1rpx solid #ebebeb" wx:if="{{modelData.showCancel==true}}">{{modelData.cancelText}}</button>
            <button bindgetuserinfo="setUserWxInfo" openType="getUserInfo">{{modelData.confirmText}}</button>
        </view>
    </view>
</view>
