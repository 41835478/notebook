.dialog-basic {
    position: fixed;
    z-index: 110;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    visibility: visible;
}

.dialog-basic.hidden-modal {
    visibility: hidden;
}

.dialog-basic .dialog-background {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 110;
    background-color: rgba(0,0,0,0.4);
}

.dialog-basic .dialog-content {
    overflow: hidden;
    position: absolute;
    top: 10%;
    left: 50%;
    transform: translate(-50%,0);
    z-index: 111;
    width: calc(100% - 184rpx);
    background-color: #fff;
    border-radius: 20rpx;
}

.dialog-basic .dialog-content .dialog-title {
    font-size: 40rpx;
    line-height: 40rpx;
    color: #333;
    font-weight: bold;
    text-align: center;
    margin: 56rpx 0 40rpx 0;
}

.dialog-basic .dialog-content .dialog-subtitle {
    color: #999;
    text-align: left;
    font-size: 24rpx;
    line-height: 24rpx;
    height: 24rpx;
    margin: 24rpx 0 24rpx 38rpx;
}

.dialog-basic .dialog-content .dialog-subtitle .error {
    color: #FF5455;
}

.dialog-basic .dialog-content .dialog-input {
    position: relative;
    background-color: #F6F7F9;
    color: #333;
    border-radius: 8rpx;
    margin: 0 32rpx 20rpx 32rpx;
    font-size: 32rpx;
    height: 76rpx;
    padding: 0 84rpx 0 24rpx;
}

.dialog-basic .dialog-content .input-cancel {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    width: 84rpx;
    height: 76rpx;
    background: url('https://pan.baidu.com/h5-static/mini-program/images/ic_cancel.png') no-repeat 0 0;
    background-size: 36rpx;
    background-position: center;
}

.dialog-basic .dialog-content .dialog-input-placeholder {
    font-size: 30rpx;
    color: #999;
}

.dialog-basic .dialog-content .dialog-button-container {
    width: 100%;
    height: 100rpx;
    margin: 20rpx 0 0 0;
}

.dialog-basic .dialog-content .dialog-confirm,.dialog-cancel {
    color: #3888FF;
    background-color: #fff;
    width: 50%;
    position: absolute;
    bottom: 0;
    border-top: 1rpx solid #EBEBEB;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
}

.dialog-basic .dialog-content .dialog-cancel {
    left: 0;
    border-top-left-radius: 0;
    border-bottom-left-radius: 20rpx;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    border-right: 1rpx solid #EBEBEB;
}

.dialog-basic .dialog-content .dialog-cancel::after {
    content: none;
}

.dialog-basic .dialog-content .dialog-confirm {
    right: 0;
    border-top-right-radius: 0;
    border-bottom-right-radius: 20rpx;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
}

.dialog-basic .dialog-content .dialog-confirm::after {
    content: none;
}