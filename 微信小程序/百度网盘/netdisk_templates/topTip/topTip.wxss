.toptip-container {
    position: fixed;
    top: -78rpx;
    width: 100%;
    height: 78rpx;
    text-align: center;
    line-height: 78rpx;
    color: #fff;
    font-size: 30rpx;
    font-weight: bold;
    opacity: 0.96;
    transition: top 300ms;
}

.toptip-normal {
    background-color: #3888ff;
}

.toptip-err {
    background-color: #ff4544;
}

.toptip-icon {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: -8rpx;
    margin-right: 20rpx;
}

.toptip-entry {
    top: 0;
}

.toptip-exit {
    top: -78rpx;
}