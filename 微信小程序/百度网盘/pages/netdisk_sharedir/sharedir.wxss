@import "../../netdisk_templates/file_list/fileList.wxss";

@import "../../netdisk_templates/bottom_modal/bottomModal.wxss";

@import "../../netdisk_templates/topTip/topTip.wxss";

@import "../../netdisk_templates/dialog/dialog.wxss";

page {
    min-height: auto;
}

.sharedir-wrap {
    width: 100%;
}

.sharedir-wrap .sharedir-scroll-view {
    height: 100%;
}

.sharedir-wrap .sharedir-header {
    padding-top: 40rpx;
}

.sharedir-wrap .sharedir-header .description-wrap {
    padding-left: 56rpx;
}

.sharedir-wrap .sharedir-header .description-wrap .description-title {
    color: #000;
    font-size: 54rpx;
    font-weight: bold;
    line-height: 66rpx;
    margin-bottom: 22rpx;
    width: 95%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.sharedir-wrap .sharedir-header .description-wrap .description-subtitle {
    color: #333;
    font-size: 28rpx;
    line-height: 28rpx;
    margin: 0 0 40rpx 0;
}

.sharedir-wrap .sharedir-header .description-wrap .avator-wrap {
    padding-left: 10rpx;
    height: 70rpx;
    margin-bottom: 52rpx;
}

.sharedir-wrap .sharedir-header .description-wrap .avator-wrap .avator-item {
    border-radius: 100%;
    border: 4rpx #fff solid;
    width: 66rpx;
    height: 66rpx;
    margin-left: -10rpx;
    background-repeat: no-repeat;
    background-size: 66rpx;
    background-position: center;
    display: inline-block;
}

.sharedir-wrap .sharedir-header .description-wrap .avator-wrap .avator-item.avator-add {
    margin-left: 4rpx;
    padding: 0;
    background-image: url(https://pan.baidu.com/h5-static/mini-program/images/ic_add_people_small.png);
    box-sizing: content-box;
    color: rgba(0,0,0,0);
    background-color: rgba(0,0,0,0);
}

.sharedir-wrap .sharedir-header .description-wrap .avator-wrap .avator-item.avator-add.button-hover {
    color: rgba(0,0,0,0);
    background-color: rgba(0,0,0,0);
}

.sharedir-wrap .sharedir-header .description-wrap .avator-wrap .avator-item.avator-add::after {
    content: none;
}

.sharedir-wrap .sharedir-header .oper-button-wrap {
    width: 100%;
    height: 158rpx;
    text-align: center;
    font-size: 26rpx;
    color: #333;
    border-top: 1rpx solid #F2F2F2;
}

.sharedir-wrap .sharedir-header .oper-button-wrap .oper-button {
    width: 25%;
    height: 100%;
    float: left;
}

.sharedir-wrap .sharedir-header .oper-button-gap {
    height: 20rpx;
    background: #F6F7F9;
}

.sharedir-wrap .sharedir-header .oper-button-wrap .oper-button .op-icon {
    width: 100%;
    height: 48rpx;
    background-size: 48rpx;
    background-position: center;
    background-repeat: no-repeat;
    margin: 30rpx 0 12rpx 0;
}

.sharedir-wrap .sharedir-header .oper-button-wrap .oper-button text {
    margin-bottom: 30rpx;
}

.sharedir-wrap .sharedir-list {
    overflow: hidden;
}