@import "../../netdisk_templates/dialog/dialog.wxss";

page {
    min-height: auto;
    background-color: #F6F7F9;
}

.setshare-wrap {
    width: 100%;
}

.setshare-wrap .setshare-top {
}

.setshare-wrap .setshare-top .avator {
    padding-top: 34rpx;
    background-color: #fff;
}

.setshare-wrap .setshare-top .avator .avator-row {
    margin: 0 24rpx;
    height: 218rpx;
}

.setshare-wrap .setshare-top .avator .avator-row.last-row {
    height: 212rpx;
}

.setshare-wrap .setshare-top .avator .avator-row .avator-item {
    width: 20%;
    height: 100%;
    float: left;
}

.setshare-wrap .setshare-top .avator .avator-row .avator-item .avator-item-img {
    margin: 0 auto;
    width: 110rpx;
    height: 110rpx;
    padding: 0;
    background-repeat: no-repeat;
    background-size: 100%;
    border-radius: 100%;
}

.setshare-wrap .setshare-top .avator .avator-row .avator-item button,.setshare-wrap .setshare-top .avator .avator-row .avator-item button.button-hover {
    color: rgba(0,0,0,0);
    background-color: rgba(0,0,0,0);
}

.setshare-wrap .setshare-top .avator .avator-row .avator-item button::after {
    content: none;
}

.setshare-wrap .setshare-top .avator .avator-row .avator-item.avator-add .avator-item-img {
    background-image: url(https://pan.baidu.com/h5-static/mini-program/images/ic_add_people_big.png);
}

.setshare-wrap .setshare-top .avator .avator-row .avator-item .avator-item-name {
    text-align: center;
    width: 110rpx;
    margin: 0 auto;
    font-size: 26rpx;
    line-height: 26rpx;
    margin-top: 26rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.setshare-wrap .setshare-top .avator .avator-more {
    width: 100%;
    height: 26rpx;
    font-size: 26rpx;
    line-height: 26rpx;
    color: #999;
    padding-bottom: 50rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
}

.setshare-wrap .setshare-top .avator .avator-more .more-icon {
    width: 20rpx;
    height: 22rpx;
    margin-left: 6rpx;
    background: url(https://pan.baidu.com/h5-static/mini-program/images/ic_see_more.png) no-repeat center center;
    background-size: contain;
}

.setshare-wrap .setshare-top .group-name {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    height: 124rpx;
    background-color: #fff;
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #353535;
}

.setshare-wrap .setshare-top .group-name .group-name-title {
    height: 100%;
    margin: 0 38rpx;
    flex-grow: 0;
    flex-shrink: 0;
    display: flex;
    align-items: center;
}

.setshare-wrap .setshare-top .group-name .group-name-text {
    width: auto;
    height: 100%;
    margin-right: 32rpx;
    flex-grow: 1;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-align: end;
    -webkit-box-pack: center;
    -webkit-line-clamp: 2;
}

.setshare-wrap .setshare-top .group-name .group-name-text .file-name {
    margin-right: 28rpx;
}

.setshare-wrap .setshare-top .group-name .group-name-text .icon-sharedir-rename {
    width: 16rpx;
    height: 28rpx;
    background-size: 16rpx 24rpx;
    background-repeat: no-repeat;
    background-position: center;
    display: inline-block;
    vertical-align: middle;
    margin-top: -8rpx;
}

.setshare-wrap .setshare-bottom {
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    font-size: 26rpx;
    color: #999999;
    text-align: center;
}

.setshare-wrap .setshare-bottom.fixed {
    position: fixed;
    left: 0;
    bottom: 0;
}