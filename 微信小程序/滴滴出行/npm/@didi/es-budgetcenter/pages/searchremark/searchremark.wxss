.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.clearfix {
    display: inline-block;
}

page {
    background: #fff;
    height: 100%;
}

.budgetSearchHtml {
    background: #fff;
    font-size: 12px;
    border-top: 1px solid #e6e6e6;
}

.budgetSearchHtml .top {
    border-top: 0;
    border-bottom: 1px solid #e6e6e6;
    background: #fafafa;
}

.budgetSearchHtml .btn {
    width: 20%;
    height: 36px;
    color: #fc9153;
    border: none;
    margin: 0;
    padding: 0;
    background: none;
}

.budgetSearchHtml .title {
    width: 60%;
    height: 36px;
    line-height: 36px;
    border: none;
    margin: 0;
    padding: 0;
    background: none;
}

.budgetSearchHtml .top {
    width: 100%;
    padding: 5px 0;
    background-color: #f0f0f0;
}

.budgetSearchHtml .top .query {
    margin-left: 10px;
    width: 82%;
    height: 33px;
    float: left;
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    background: #fff;
}

.budgetSearchHtml .top .ico {
    width: 15%;
    height: 100%;
    float: left;
    font-size: 1.6rem;
    line-height: 36px;
    text-align: center;
    color: #bfbfbf;
}

.budgetSearchHtml .top .inp {
    margin-left: 10px;
    width: 95%;
    height: 100%;
    float: left;
    border: none;
    outline: medium;
    background-color: transparent;
}

.budgetSearchHtml .top .inp:focus {
    border: none;
}

.budgetSearchHtml .top .close {
    margin-right: 10px;
    width: 12%;
    height: 33px;
    float: right;
    line-height: 33px;
    text-align: center;
    font-weight: bold;
    font-size: 14px;
    color: #f80;
}

.budgetSearchHtml .listBox {
    width: 100%;
    overflow-y: scroll;
    text-align: left;
    -webkit-overflow-scrolling: touch;
}

.budgetSearchHtml .listBox:after {
    overflow: hidden;
    clear: both;
    content: "";
    width: 100%;
    height: 0;
    display: block;
    visibility: hidden;
}

.budgetSearchHtml .listBox li {
    padding-top: 12px;
    padding-bottom: 12px;
    padding-left: 20px;
    border-bottom: 1px solid #e6e6e6;
}

.budgetSearchHtml .listBox li:hover {
    background: #f0f0f0;
}

.budgetSearchHtml .listBox li:last-child {
    margin-bottom: 30px;
}

.budgetSearchHtml .listBox li.loading {
    padding: 20px;
    color: #999;
    opacity: 1;
    background: none;
    border: none;
    text-align: center;
    margin: 0 auto;
}

.budgetSearchHtml .listBox li.nobd {
    border: none;
}

.budgetSearchHtml .listBox p {
    width: 90%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: break-all;
    height: 21px;
    line-height: 21px;
    color: #3c3c3c;
}

.budgetSearchHtml .listBox .h3 {
    text-indent: -20px;
    margin-top: 50px;
    font-weight: normal;
    text-align: center;
    color: #999;
}

.budgetSearchHtml .listBox span {
    width: 90%;
    height: 20px;
    line-height: 20px;
    color: #bfbfbf;
}

.budgetSearchHtml .listBox .singleline {
    height: 42px;
    line-height: 42px;
}

.budgetSearchHtml .listSelect {
    width: 100%;
    overflow-y: scroll;
    text-align: left;
    -webkit-overflow-scrolling: touch;
}

.budgetSearchHtml .listSelect li {
    height: 44px;
    line-height: 44px;
    border-bottom: 1px solid #e6e6e6;
    text-align: center;
}

.budgetSearchHtml .listSelect li.loading {
    background: none;
}

.budgetSearchHtml .listSelect li.selected {
    background: #f0f0f0;
}

.budgetSearchHtml .listSelect li:last-child {
    margin-bottom: 10px;
}

.budgetSearchHtml .listSelect li.loading {
    padding: 20px;
    color: #999;
    opacity: 1;
    background-position: 20px 22px;
    border: none;
    text-indent: 20px;
}

.budgetSearchHtml .listSelect li.nobd {
    border: none;
}

