.arrive_time,.circle view,.text,.text_center,.title {
    text-align: center;
}

.btn-wrapper {
    margin: 10px;
}

.mf-btn,.mf-btn[type=primary] {
    display: block;
    margin: 0;
    padding: 17px 16px;
    width: 100%;
    line-height: 16px;
    border-radius: 2px;
    cursor: pointer;
    text-align: center;
    vertical-align: middle;
    background-image: none;
    white-space: nowrap;
    outline: 0;
    font-size: 16px;
    color: #fff;
    background-color: #4a4c5b;
    border: none;
    box-sizing: border-box;
    -webkit-tap-highlight-color: transparent;
}

.mf-btn.disable,.mf-btn:disabled,button.mf-btn[disabled],button.mf-btn[disabled][type=primary],button.mf-btn[disabled][type=default] {
    background: #ccc;
    position: relative;
    color: #fff;
}

page {
    background: #fff;
}

.title {
    font-size: 25px;
    color: #333;
    margin-top: 10%;
}

@media screen and (min-height:520px) {
    .title {
        margin-top: 98px;
    }
}

.text {
    font-size: 14px;
    color: #666;
    width: 650rpx;
    margin: 4px auto 0;
    line-height: 21px;
}

.circle {
    width: 600rpx;
    border-radius: 4px;
    border: 1px solid #f0f0f0;
    box-shadow: 0 0 60px #f0f0f0;
    margin: 60rpx auto 80rpx;
    padding: 35px 0;
    position: relative;
}

.circle:after,.circle:before {
    content: " ";
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 0;
    height: 0;
}

.circle:before {
    top: -15px;
    border-left: 15px solid transparent;
    border-bottom: 15px solid #f0f0f0;
    border-right: 15px solid transparent;
}

.circle:after {
    top: -14px;
    border-left: 14px solid transparent;
    border-bottom: 14px solid #fff;
    border-right: 14px solid transparent;
}

.circle_title {
    font-size: 17px;
    color: #666;
}

.circle_money {
    font-size: 16px;
    color: #fc9153;
    margin: 10px 0;
    height: 30px;
    position: relative;
}

.circle_money view,.circle_times view {
    display: inline-block;
}

.circle_times view {
    vertical-align: -1rpx;
    color: #fc9153;
}

.circle_money_span {
    font-size: 50px;
    margin: 0 2px;
    display: inline-block;
    height: 40px;
    vertical-align: -1px;
}

.circle_times {
    margin-top: 25px;
    font-size: 17px;
    color: #666;
}

.submit {
    width: 90%;
    margin: 10px auto;
}

.mf-btn.white {
    color: #666;
    background: #fcfcfc;
    box-shadow: 0 1rpx 1.5px 0 rgba(0,0,0,.1);
}

.cancel {
    width: 90%;
    margin: 0 auto;
    border: solid #979797;
    border-width: 1rpx;
}

.arrive_time {
    font-size: 13px;
    color: #333;
}

.arrive_time view {
    color: #fc9153;
    display: inline-block;
}

.arr_time {
    vertical-align: -1rpx;
}

.loading {
    width: 24px;
    height: 24px;
    position: absolute;
    top: 48%;
    left: 48%;
    background-size: 100% 100%;
}

button:after {
    transform: scale(0)!important;
}