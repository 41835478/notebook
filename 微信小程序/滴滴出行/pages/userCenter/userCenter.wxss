page {
    background-color: #f3f3f3;
}

.menu,.user-info {
    box-shadow: 0 2px 8px 0 rgba(0,0,0,.08);
    background-color: #fff;
}

.user-info {
    padding: 24px 0;
    font-size: 0;
    text-align: center;
}

.user-avatar image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin: 0 auto;
}

.user-phone {
    margin-top: 14px;
    font-size: 17px;
    line-height: 24px;
    color: #333;
}

.menu-list {
    margin-top: 6px;
}

.menu-link .mfic {
    font-size: 110%;
    color: #4a4c5b;
    vertical-align: middle;
}

.link-text {
    margin-left: 10px;
    vertical-align: middle;
}