<view class="user-center">
    <view class="user-info">
        <view class="user-avatar">
            <image bindtap="_dispatch" data-bindtap="clickAvatar" mode="aspectFill" src="{{state.avatar}}"></image>
        </view>
        <view class="user-phone">
            <text>{{state.phone}}</text>
        </view>
    </view>
    <view class="menu-list">
        <view bindtap="_dispatch" class="menu-link" data-bindtap="navigateToNewPage" data-page="mytravel">
            <view class="retina-border-bottom">
                <text class="mfic mfic-side-trip"></text>
                <text class="link-text">行程</text>
            </view>
        </view>
        <view bindtap="_dispatch" class="menu-link" data-bindtap="navigateToNewProgram" data-program="wallet">
            <view class="retina-border-bottom">
                <text class="mfic mfic-side-wallet"></text>
                <text class="link-text">钱包</text>
            </view>
        </view>
        <view bindtap="_dispatch" class="menu-link" data-bindtap="navigateToNewPage" data-page="setting">
            <view>
                <text class="mfic mfic-side-set"></text>
                <text class="link-text">设置</text>
            </view>
        </view>
    </view>
</view>
