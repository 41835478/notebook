.gj-sug-container {
    background: #f3f4f5;
    width: 100%;
    height: 100%;
    font-size: 14px;
}

.gj-sug-container .gj-sug-input-area {
    display: flex;
    width: 100%;
    line-height: 54px;
    height: 54px;
    box-sizing: border-box;
    position: relative;
    background: #fff;
    box-shadow: 0 1px 3px 0 rgba(0,0,0,.12);
}

.gj-sug-container .gj-sug-input-area .gj-search-image {
    display: flex;
    align-items: center;
}

.gj-sug-container .gj-sug-input-area .gj-search-image .gj-search-icon {
    width: 16px;
    height: 16px;
    margin: 0 20px;
}

.gj-sug-container .gj-sug-input-area .gj-sug-input {
    background: 0 0;
    flex: 1;
    height: 54px;
    line-height: 54px;
    outline: 0;
    box-sizing: border-box;
}

.gj-sug-container .gj-sug-input-area .gj-sug-clear {
    display: flex;
    align-items: center;
    width: 22px;
}

.gj-sug-container .gj-sug-input-area .gj-sug-clear .clear-icon {
    width: 12px;
    height: 12px;
}

.gj-sug-container .gj-sug-input-area .gj-search-cancel {
    position: relative;
    height: 54px;
    width: 60px;
    line-height: 54px;
    text-align: center;
    font-size: 14px;
    color: #999;
}

.gj-sug-container .gj-sug-input-area .gj-search-cancel i {
    position: absolute;
    width: 1px;
    height: 14px;
    border-left: 1px solid #e5e5e5;
    top: 18px;
    left: 0;
}

.gj-sug-container .transit-sug-list {
    position: absolute;
    top: 64px;
    left: 10px;
    right: 10px;
    bottom: 0;
    width: auto;
    background: #fff;
    box-shadow: 0 1px 6px 0 rgba(0,0,0,.1);
    border-radius: 2px;
}

.gj-sug-container .transit-sug-list .transit-list-item {
    border-bottom: 1px solid #f5f5f5;
}

.gj-sug-container .transit-sug-list .transit-list-item:active {
    background: #f7f7f7;
}

.gj-sug-container .transit-sug-list .transit-list-item .transit-list-item-inner {
    display: flex;
    margin: 0 16px;
    height: 60px;
}

.gj-sug-container .transit-sug-list .transit-list-item .transit-list-item-inner .transit-sug-icon {
    margin-right: 12px;
    height: 100%;
    width: 14px;
}

.gj-sug-container .transit-sug-list .transit-list-item .transit-list-item-inner .transit-sug-icon .sug-img-icon {
    display: inline-block;
    position: relative;
    top: 24px;
    height: 12px;
    width: 12px;
}

.gj-sug-container .transit-sug-list .transit-list-item .transit-list-item-inner .transit-sug-text {
    flex: 1;
    height: 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.gj-sug-container .transit-sug-list .transit-list-item .transit-list-item-inner .transit-sug-text .transit-sugitem-name {
    font-size: 14px;
    line-height: 14px;
    color: #333;
}

.gj-sug-container .transit-sug-list .transit-list-item .transit-list-item-inner .transit-sug-text .transit-sugitem-name .sug-realtime {
    display: inline-block;
    position: relative;
    font-size: 10px;
    padding: 1px 2px;
    font-style: normal;
    color: #84c0fc;
    line-height: 10px;
    height: 10px;
    letter-spacing: 0;
    text-align: left;
    border: 1px solid #84c0fc;
    margin-left: 4px;
    border-radius: 1px;
    top: -1px;
}

.gj-sug-container .transit-sug-list .transit-list-item .transit-list-item-inner .transit-sug-text .transit-sugitem-desc {
    display: inline-block;
    width: 300px;
    margin-top: 6px;
    font-size: 12px;
    height: 12px;
    line-height: 12px;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.gj-sug-container .no-history p,.gj-sug-container .no-result p {
    display: block;
    text-align: center;
}

.gj-sug-container .transit-sug-list .clear-history-btn {
    font-size: 14px;
    color: #666;
    text-align: center;
    height: 40px;
    line-height: 40px;
    border-bottom: 1px solid #f5f5f5;
}

.gj-sug-container .guess-search {
    background: #fafafa;
    height: 28px;
    line-height: 28px;
    padding: 0 10px;
    color: #999;
    font-size: 12px;
}

.gj-sug-container .no-result {
    font-size: 14px;
    color: #666;
    text-align: center;
    margin-top: 80px;
}

.gj-sug-container .no-result image {
    width: 114px;
    height: 115px;
    margin-bottom: 10px;
}

.gj-sug-container .no-result .sug-tip {
    font-size: 12px;
    color: #999;
    letter-spacing: 0;
    margin-top: 10px;
}

.gj-sug-container .no-history {
    font-size: 14px;
    color: #666;
    text-align: center;
    margin-top: 95px;
}

.gj-sug-container .no-history image {
    width: 92px;
    height: 92px;
    margin-bottom: 20px;
}