@import "../../__wuBaseWxss__/30.wxss";

@import "../../comps/history/index.wxss";

@import "../../comps/playlist/index.wxss";

@import "../../comps/actionmodal/index.wxss";

@import "../../__wuBaseWxss__/29.wxss";

page {
    background-color: #F5F7F9;
}

.mod_body .mod_empty {
    display: none;
}

.mod_head {
    position: relative;
    padding: 25px 16px 0px;
    height: 62px;
}

.mod_title {
    font-size: 16px;
    font-weight: bold;
}

.mod_head .arrow_right {
    position: absolute;
    right: 16px;
    top: 29px;
    width: 20px;
    height: 20px;
}

.mod_scroll_list {
    width: 100%;
    height: 100px;
    overflow-y: hidden;
}

.figures_list {
    display: block;
    width: 100%;
    padding-bottom: 5px;
    white-space: nowrap;
}

scroll-view.figures_list {
    height: calc(152rpx + 55px);
}

.figures_list .list_item {
    width: 271rpx;
    margin: 0 5px;
    display: inline-block;
    vertical-align: top;
    text-align: center;
}

.figures_list .list_item:first-child {
    margin-left: 16px;
}

.figure {
    position: relative;
}

.figure_pic {
    width: 271rpx;
    height: 152rpx;
}

.mod_history,.mod_playlist {
    background: #fff;
}

.mod_history .mod_body,.mod_playlist .mod_body {
    height: calc(152rpx + 60px);
}

.mod_history .mod_body.none,.mod_playlist .mod_body.none {
    height: 10px;
}

.user_head {
    position: relative;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.user_head:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 15px;
    right: 0;
    height: 1px;
}

.user_head .avatar_con {
    position: relative;
    margin-top: 20px;
    margin-bottom: 10px;
}

.user_head .avatar {
    display: block;
    width: 64px;
    height: 64px;
    border-radius: 100%;
}

.user_head .avatar_icon {
    position: absolute;
    height: 32rpx;
    width: 32rpx;
    bottom: 4rpx;
    right: 4rpx;
    background-size: 32rpx 32rpx;
    background-repeat: no-repeat;
    background-position: center center;
}

.user_head .avatar_icon.wx {
    background-image: url(https://puui.qpic.cn/vupload/0_20171010/icon_login_wx.png/0);
}

.user_head .avatar_icon.qq {
    background-image: url(https://puui.qpic.cn/vupload/0_20171010/icon_login_qq.png/0);
}

.user_head .name {
    margin-bottom: 15px;
    min-height: 22px;
    font-size: 16px;
    max-width: 90%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: bold;
}

.gap {
    display: block;
    height: 15px;
    background-color: #F5F7F9;
}

.gap_line {
    display: block;
    margin-left: 15px;
    height: 1px;
    background: linear-gradient(to bottom,transparent 50%,#EBEBEB 50%,#EBEBEB 100%);
    background-size: 100% 1px;
}

.list_block {
    display: flex;
    flex-direction: row;
}

.list_block .list_item {
    position: relative;
    height: 72px;
    padding: 12px 16px;
    background-color: #fff;
    font-size: 16px;
    line-height: 28px;
    display: flex;
    align-items: center;
    flex-direction: row;
    flex: 1;
}

.list_block .list_item:after {
    content: '';
    position: absolute;
    top: 25%;
    left: 0;
    height: 50%;
    width: 1rpx;
    background: #e5e5e5;
}

.list_block .list_item:first-child:after {
    display: none;
}

.list_block .item_icon {
    flex: none;
    width: 25px;
    height: 25px;
    margin-right: 8px;
    background-position: left center;
    background-repeat: no-repeat;
    background-size: 22px;
}

.list_block .item_text {
    flex: 1;
    display: flex;
    justify-content: center;
    flex-direction: column;
    line-height: 1.5;
    font-size: 16px;
}

.list_block .item_more,.list_block .item_nomore {
    position: relative;
    height: 28px;
    color: #979797;
    padding-right: 14px;
    font-size: 14px;
}

.list_block .item_nomore {
    padding-right: 0;
}

.list_block .arrow_right {
    position: absolute;
    right: 0;
    top: 8px;
    width: 15px;
    height: 15px;
}

.list_block .endtime {
    display: block;
    line-height: 1.25em;
    font-size: 12px;
    color: #979797;
}

.arrow_right:before,.arrow_right:after {
    content: '';
    position: absolute;
    right: 0;
    top: 3px;
    width: 9px;
    height: 2px;
    background-color: #BCBCBC;
    transform: rotate(45deg);
}

.arrow_right:before {
    top: 8px;
    transform: rotate(-45deg);
}

.icon_vip {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_vip.svg);
}

.icon_vip_grey {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_vip_grey.svg);
}

.icon_vip_card {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_vip_card.svg);
}

.list_item_setting .item_text {
    font-size: 16px;
    font-weight: bold;
}