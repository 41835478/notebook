.empty {
    margin-top: 34rpx;
    height: 510rpx;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/empty.png) center top no-repeat;
    background-size: 574rpx 356rpx;
    padding-bottom: 44rpx;
    position: relative;
}

.empty .title {
    text-align: center;
    font-size: 36rpx;
    color: #666666;
    line-height: 64rpx;
}

.empty .text {
    text-align: center;
    font-size: 28rpx;
    color: #979797;
    line-height: 44rpx;
}

.empty .line {
    position: absolute;
    height: 1rpx;
    bottom: 1rpx;
    left: 32rpx;
    right: 0rpx;
    background-color: #ebebeb;
}