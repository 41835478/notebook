.mod_loading.loadmore {
    height: auto;
    padding-bottom: 11px;
}

page {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #26272b;
}

.mod_player_place {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: #26272b;
    height: calc(100vw / 16 * 9);
}

.mod_poster_placeholder {
    position: relative;
    width: 100%;
    flex: 0 0 auto;
    overflow: hidden;
}

.mod_player {
    position: relative;
    z-index: 11;
    left: 0;
    top: 0;
    width: 100%;
}

.mod_player_hide {
    display: none;
}

.mod_player:before {
    content: '';
    display: block;
    width: 100%;
    padding-bottom: 56.25%;
}

.player_video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.player_error_layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.75);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    z-index: 2;
    font-size: 15px;
}

.icon_replay {
    background-image: url(http://i.gtimg.cn/qqlive/images/tinyappplay/icon_btn_refresh.svg);
    width: 16px;
    height: 16px;
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: contain;
    display: inline-block;
    vertical-align: -3px;
}

.icon_player_play {
    background-image: url(http://i.gtimg.cn/qqlive/images/tinyappplay/player_btn_icon_play.svg);
    width: 16px;
    height: 16px;
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: contain;
    display: inline-block;
    vertical-align: -3px;
}

.mod_poster_placeholder .poster_text .poster_text_line.sub_text {
    font-size: 13px;
    margin-top: 24rpx;
    color: #ccc;
}

.mod_poster_placeholder {
    position: relative;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 12;
}

.mod_poster_placeholder .hl {
    color: #ff7000;
    display: inline-block;
}

.mod_poster_placeholder.hide {
    z-index: 1;
}

.mod_poster_placeholder:before {
    content: '';
    display: block;
    width: 100%;
    padding-bottom: 56.25%;
}

.mod_poster_placeholder .poster_placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.mod_poster_placeholder .poster_placeholder.poster_placeholder_vip .poster_mask_3,.mod_poster_placeholder .poster_placeholder.poster_placeholder_limit .poster_mask_3 {
    position: absolute;
    z-index: 1;
    background: rgba(0,0,0,.75);
    width: 100%;
    height: 100%;
}

.mod_poster_placeholder .poster_text {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    font-size: 15px;
}

.mod_poster_placeholder .poster_text .poster_text_line {
    display: block;
    margin-top: 30rpx;
}

.mod_poster_placeholder .poster_text .poster_button {
    min-width: 272rpx;
    padding: 0 30rpx;
    margin: 0 10rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 44rpx;
    background-color: #333;
    display: inline-block;
}

.mod_poster_placeholder .poster_text .poster_button_vip {
    background-color: #df4833;
    margin-left: 20 rpx;
}

.mod_poster_placeholder .poster_pic {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.mod_poster_placeholder .btn_play {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 118rpx;
    height: 118rpx;
    margin-top: -75rpx;
    margin-left: -59rpx;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/btn_play.svg) 0 0 no-repeat;
    background-size: cover;
    z-index: 10;
}

.mod_poster_placeholder .poster_mask_1,.mod_poster_placeholder .poster_mask_2 {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 40%;
}

.mod_poster_placeholder .poster_mask_1 {
    z-index: 2;
    background-image: linear-gradient(to top,#212738,rgba(0,0,0,0));
}

.mod_poster_placeholder .poster_mask_2 {
    z-index: 3;
    background-image: linear-gradient(to top,rgba(40,42,47,.6),rgba(0,0,0,0));
}

.player_video_poster {
    position: relative;
    text-align: center;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.75);
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
    -webkit-box-align: center;
}

.player_video_poster .poster_block {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.player_video_poster .poster_block .title {
    font-size: 42rpx;
    color: white;
    margin-bottom: 24rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    overflow: hidden;
    width: calc(100vw - 48rpx);
    padding: 0 24rpx;
    white-space: normal;
    text-align: center;
}

.player_video_poster .poster_block .sub_title {
    font-size: 26rpx;
    color: white;
}

.player_video_poster .poster_block .btn {
    display: inline-block;
    font-size: 26rpx;
    color: white;
    padding: 10rpx 40rpx;
    border-radius: 20rpx;
    background: rgba(40,40,40,0.6);
}

.page_before {
    position: relative;
    width: 100%;
    height: calc(100% - 100rpx - 100vw / 16 * 9);
}

.block {
    padding: 0 0 40rpx 0;
    margin-left: 32rpx;
    border-bottom: 1px solid rgba(255,255,255,0.1);
}

.block:last-child {
    border-bottom: none;
    padding-bottom: 0;
}

.block .hd {
    padding-top: 50rpx;
    color: #6368c1;
    font-size: 30rpx;
    font-weight: bold;
}

.block .bd {
    margin-top: 40rpx;
    color: white;
    font-size: 26rpx;
}

.page_live {
    position: relative;
    width: 100%;
    height: calc(100% - 100rpx - 96rpx - 100vw / 16 * 9);
}

.mod_meta {
    padding: 0 32rpx;
    line-height: 96rpx;
    height: 96rpx;
    color: #6368c1;
    font-weight: bold;
    font-size: 30rpx;
    text-align: center;
}

.mod_meta.sticked {
    box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.mod_meta.meta_before {
    height: 68rpx;
    line-height: 68rpx;
    background: rgba(0,0,0,0.2);
    color: white;
    font-size: 26rpx;
}

.list_container {
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
}

.mod_list {
    padding-bottom: 12rpx;
}

.page_before {
    padding-bottom: 0;
}

.mod_list .chat_item {
    padding-top: 40rpx;
    display: flex;
    flex-direction: row;
}

.mod_list .chat_item.mine {
    flex-direction: row-reverse;
    text-align: right;
}

.mod_list .chat_item .chat_avatar {
    width: 72rpx;
    height: 72rpx;
    min-width: 72rpx;
    border-radius: 40rpx;
    margin: 0 20rpx 0 0;
    overflow: hidden;
}

.mod_list .chat_item .chat_avatar image {
    width: 100%;
    height: 100%;
}

.mod_list .chat_item .chat_body {
    padding-right: 20rpx;
    flex: 1;
}

.page_before .mod_list .chat_item .chat_body {
    padding-bottom: 50rpx;
    border-bottom: 1px solid rgba(255,255,255,0.1);
}

.page_before .mod_list .chat_item:last-child .chat_body {
    border-bottom: none;
}

.mod_list .chat_item .chat_meta {
    color: #6368c1;
    font-size: 26rpx;
    font-weight: bold;
    margin: 0 0 12rpx;
}

.mod_list .chat_item .chat_meta .chat_name {
    display: inline-block;
}

.mod_list .chat_item .chat_meta .chat_reply,.mod_list .chat_item .chat_meta .chat_time {
    display: inline-block;
    color: rgba(255,255,255,.3);
    margin: 0 20rpx;
}

.mod_list .chat_item .chat_content {
    color: white;
    font-size: 30rpx;
}

.mod_list .chat_item .chat_replys {
    padding: 18rpx 0 0;
}

.mod_list .chat_item .chat_replys .chat_reply_item {
    padding-top: 12rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: white;
}

.mod_list .chat_item .chat_replys .chat_reply_item .chat_reply {
    display: inline-block;
    color: #979797;
    padding: 0 8rpx;
}

.mod_list .chat_item .chat_replys .chat_reply_item .chat_name {
    color: #6368c1;
    font-weight: bold;
    display: inline-block;
    font-size: 13px;
}

.page_form {
    height: 100rpx;
    padding: 18rpx 20rpx;
    background-color: #3e4079;
}

.page_form input,.chat_input {
    background: white;
    height: 64rpx;
    width: 100%;
    border-radius: 10rpx;
    font-size: 28rpx;
    padding: 0 20rpx;
}

.mod_empty {
    position: relative;
    height: calc(100vh - (100vw / 16 * 9));
}