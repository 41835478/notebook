.article_title {
    margin: 0 18px;
    font-size: 20px;
    line-height: 30px;
    color: #222222;
    font-weight: bold;
}

.article_meta {
    margin: 20px 18px;
    line-height: 28px;
    overflow: hidden;
}

.article_meta .author_avatar {
    float: left;
    width: 28px;
    height: 28px;
    background-size: cover;
    border-radius: 100%;
}

.article_meta .author_name {
    float: left;
    margin-left: 10px;
    max-width: 8em;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 15px;
}

.article_meta .date {
    float: right;
    font-size: 13px;
    color: #979797;
}

.video_banner {
    padding: 15px 0 15px 18px;
    background-color: #F5F7F9;
    display: flex;
    align-items: center;
    flex-direction: row;
}

.video_banner .video_pic {
    width: 112rpx;
    height: 158rpx;
    margin-right: 38rpx;
    flex: 0 0 112rpx;
    border-radius: 4px;
    box-shadow: 0px 6px 12px 0px rgba(22,23,25,0.3);
}

.video_banner .video_content {
    flex: 1 1 auto;
}

.video_banner .video_title {
    line-height: 1.5;
    padding-right: 10px;
    font-size: 15px;
    font-weight: bold;
}

.video_banner .video_scrore {
    display: inline-block;
    color: #fe801e;
    font-style: italic;
}

.video_banner .video_desc {
    font-size: 13px;
    color: #979797;
}

.video_banner .video_action {
    position: relative;
    width: 170rpx;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    flex: 0 0 170rpx;
}

.video_banner .video_action:before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    width: 1rpx;
    height: 32rpx;
    background-color: #000000;
    transform: translate(0,-50%);
    opacity: 0.08;
}

.video_banner .add_collect {
    display: block;
    width: 50px;
    height: 50px;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_collect.svg) center no-repeat;
    background-size: 25px;
}

.article {
    margin: 15px;
    line-height: 1.5;
}

.article .pic {
    width: 100%;
}

.article .mod_player {
    margin: 20px -10px;
}

.article video {
    width: 100%;
    height: 56.25vw;
}