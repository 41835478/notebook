@import "../../__wuBaseWxss__/30.wxss";

@import "../search/index.wxss";

.body {
    overflow: hidden;
    background-color: #252c35;
    transition: background 0.3s ease;
}

.debug .logo:after {
    content: '\6d4b';
    background-color: #FC7105;
    position: absolute;
    padding: 0 2px;
    right: -1.4em;
    top: 5px;
    color: #fff;
    line-height: 1.2;
    font-size: 12px;
    border-radius: 2px;
}

.header {
    position: relative;
    z-index: 5;
}

.logo {
    position: absolute;
    left: 18px;
    top: 16px;
    width: 100px;
    height: 23px;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/logo_white.svg) 0 0 no-repeat;
}

.btn_search {
    position: absolute;
    right: 5px;
    top: 7px;
    width: 40px;
    height: 40px;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_search.svg) center center no-repeat;
    background-size: 24px;
}

.headline {
    position: relative;
    overflow: hidden;
    transform: translateZ(0);
}

.headline.none {
    display: none;
}

.headline::before {
    content: '';
    position: relative;
    z-index: 2;
    display: block;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%;
}

.headline::before {
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/post_mask.png) 0 0 repeat;
    background-size: 4px 4px;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.cover_mask::before {
    opacity: 1;
}

.headline .headline_poster {
    position: absolute;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    transform: translateZ(0);
    background-size: cover;
}

.headline .btn_play {
    position: absolute;
    z-index: 4;
    left: 50%;
    top: 50%;
    width: 118rpx;
    height: 118rpx;
    margin-top: -59rpx;
    margin-left: -59rpx;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/btn_play.svg) 0 0 no-repeat;
    background-size: cover;
    filter: drop-shadow(0px 4px 10px rgba(22,23,25,0.3));
}

.headline .none {
    display: none;
}

.headline .play_desc {
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    margin-top: 40rpx;
    text-align: center;
    opacity: 0.8;
    color: #fff;
    font-size: 24rpx;
}

.headline .poster_mask_top,.headline .poster_mask_bottom {
    position: absolute;
    z-index: 3;
    left: 0;
    bottom: -1px;
    width: 100%;
    height: 80px;
    transition: background 0.3s ease;
}

.headline .poster_mask_top {
    bottom: auto;
    top: 0;
    opacity: 0.5;
    background: linear-gradient(to bottom,rgba(0,0,0,1),rgba(0,0,0,0));
}

.headline .poster_mask_bottom {
    -webkit-mask: url(https://i.gtimg.cn/qqlive/images/tinyapp/head_linemask.png) left bottom no-repeat;
    -webkit-mask-size: contain;
}

.android .headline .poster_mask_bottom {
}

.card_swiper {
    position: absolute;
    bottom: 0;
    z-index: 7;
    width: 100%;
    height: 802rpx;
    white-space: nowrap;
    transform: translateZ(0px);
}

.card_swiper.none {
    display: none;
}

.card_box {
    overflow: visible;
    box-sizing: border-box;
    padding-top: 147rpx;
}

.android .card_box {
    transition-timing-function: linear!important;
}

.card {
    position: absolute;
    left: 16px;
    right: 16px;
    bottom: 56rpx;
    height: 600rpx;
    background-color: #fff;
    border-radius: 12px;
    color: #222;
    box-sizing: border-box;
    box-shadow: 0px 6px 16px 0px rgba(0,0,0,0.12);
}

.android .card {
    box-shadow: none;
}

.card:after {
    content: '';
    position: absolute;
    left: -26px;
    top: 0;
    bottom: 0;
    width: 20px;
    background-color: #fff;
    border-radius: 12px 12px;
    opacity: 0.5;
    display: none;
}

.card_box_l3,.card_box_l4,.card_box_large {
    padding-top: 0;
}

.card_box_l3 .card,.card_box_l4 .card,.card_box_large .card {
    top: 0;
    height: auto;
    padding-top: 0;
}

.card .cover {
    position: relative;
    display: block;
    margin: -80rpx auto 40rpx;
    width: 260rpx;
    height: 364rpx;
    border-radius: 4px;
    box-shadow: 0px 12px 24px 0px rgba(22,23,25,0.15);
}

.card .cover_pic {
    width: 100%;
    height: 100%;
    border-radius: 4px;
    background-color: #f5f7f9;
}

.card .title {
    text-align: center;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    font-weight: bold;
    font-size: 17px;
}

.card .desc {
    line-height: 20px;
    max-height: 40px;
    margin: 12px 35px 0;
    font-size: 14px;
    text-align: center;
    color: #666666;
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.card .desc_guest {
}

.card .desc .name:after {
    content: '„ÄÅ';
}

.card .desc .name:last-child:after {
    content: '';
}

.card_large {
    height: 736rpx;
}

.card_title {
    position: relative;
    display: block;
    margin: 50rpx auto 0;
    text-align: center;
    font-size: 34rpx;
    color: #222;
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 90%;
}

.card_title::after {
    content: '';
    display: inline-block;
    width: 7px;
    height: 7px;
    border-right: 2px solid currentColor;
    border-bottom: 2px solid currentColor;
    transform: rotate(-45deg);
    vertical-align: 1px;
    margin-left: 5px;
}

.noarrow::after {
    display: none;
}

.card .video_list {
    display: block;
    margin: 0;
    white-space: normal;
    text-align: center;
}

.card .video_list_h {
    margin-top: 50rpx;
}

.video_list .video_item {
    position: relative;
    display: inline-block;
    width: 271rpx;
    margin: 0 10px 40rpx;
    box-sizing: border-box;
    vertical-align: top;
    text-align: left;
}

.video_list .figure {
    position: relative;
    border-radius: 4px;
    overflow: hidden;
    background-color: #f5f7f9;
}

.video_list .figure_pic {
    display: block;
    width: 271rpx;
    height: 152rpx;
}

.video_list .video_title {
    margin-top: 20rpx;
    font-size: 14px;
    line-height: 1.25;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.video_list .video_desc {
    margin-top: 10rpx;
    line-height: 15px;
    font-size: 13px;
    color: #979797;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.card_box_l1 .card,.card_box_l2 .card {
    padding-top: 50rpx;
}

.card_box_l1 .card_title,.card_box_l2 .card_title {
    margin-top: 0;
}

.card_box_l1 .video_list .video_item {
    display: block;
    width: 558rpx;
    margin: 40rpx auto 0;
    padding: 0;
    text-align: center;
}

.card_box_l1 .video_list .figure_pic {
    width: 558rpx;
    height: 304rpx;
}

.card_box_l2 .video_list .video_item {
    margin-top: 70rpx;
}

.card_box_update .card_title:after {
    display: none;
}

.card .video_list_v {
    margin-top: 50rpx;
}

.video_list_v {
    text-align: center;
}

.video_list_v .video_item {
    display: inline-block;
    width: 196rpx;
    margin: 0 4px;
}

.video_list_v .figure {
    width: 196rpx;
    height: 276rpx;
}

.video_list_v .figure_pic {
    width: 100%;
    height: 100%;
}

.video_list_v .video_desc {
    max-height: 30px;
}

.video_list_v .video_title {
    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

@media (max-height:520px) {
    .card {
        bottom: 16px;
    }

    .card_box_l3 .card,.card_box_l4 .card,.card_box_large .card {
        top: 80rpx;
    }

    .card_box_l3 .video_list_h,.card_box_l4 .video_list_h,.card_box_large .video_list_h {
        margin-top: 34rpx;
    }

    .card_box_l3 .card_title,.card_box_l4 .card_title,.card_box_large .card_title {
        margin-top: 36rpx;
    }

    .card .desc {
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .video_list .video_desc {
        display: block;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .video_list_v .video_desc {
        height: 16px;
        overflow: hidden;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card .video_list_v .video_title {
        display: block;
        max-height: 32px;
        margin-top: 8px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .video_list .video_item {
        margin-bottom: 30rpx;
    }

    .video_list .video_title {
        max-height: 16px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .video_list .video_desc {
        margin-top: 8rpx;
    }
}

@media (max-height:469px) {
    .headline .btn_play {
        display: none;
    }

    .card {
        bottom: 16px;
    }
}

.wx-swiper-wrapper,.wx-swiper-slides {
    transform: translateZ(0px);
}

.none {
    display: none!important;
}