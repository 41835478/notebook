.mark_vip_5,.mark_vip_6,.mark_vip_7 {
    position: absolute;
    right: 0px;
    top: 0px;
    height: 24px;
    width: 120px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: right 0;
    pointer-events: none;
}

.mark_vip_5 {
    background-image: url(https://i.gtimg.cn/qqlive/images/20160715/ticket@2x.png);
}

.mark_vip_6 {
    background-image: url(https://i.gtimg.cn/qqlive/images/20160715/vip@2x.png);
}

.mark_vip_7 {
    background-image: url(https://i.gtimg.cn/qqlive/images/20160715/pay@2x.png);
}

.mark_vip_limit,.mark_free_limit {
    width: 68px;
    transform: rotate(-45deg) translate(-19px,-6px);
    background-color: #ff8406;
}

.mod_figure {
    margin: 0 -5px;
    font-size: 0;
}

.mod_figure .item {
    display: inline-block;
    vertical-align: top;
    float: left;
    width: 33.33333%;
}

.mod_figure .figure {
    padding: 0 5px;
}

.mod_figure .figure .figure_pic {
    position: relative;
    display: inline-block;
    width: 100%;
    overflow: hidden;
}

.mod_figure .figure image {
    width: 100%;
    height: 160px;
    background: #DDDEDF url(http://vm.gtimg.cn/tencentvideo/vstyle/mobile/vip/style/app_v2/img/common/imgholder.png?d=1102&max_age=31104000) center center no-repeat;
}

.mod_figure .figure_title {
    display: block;
    width: 100%;
    max-height: 36px;
    margin-top: 5px;
    font-size: 14px;
    line-height: 18px;
    text-overflow: ellipsis;
    text-align: center;
    white-space: normal;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.mod_figure .figure_title .txt {
    display: inline-block;
    text-align: center;
}

.mod_figure .figure .figure_pic:before {
    content: '';
    position: relative;
    display: block;
    width: 100%;
    padding-bottom: 56.25%;
}

.mod_figure .figure .figure_pic image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.mod_figure .figure .figure_pic:before {
    padding-bottom: 140.24%;
}