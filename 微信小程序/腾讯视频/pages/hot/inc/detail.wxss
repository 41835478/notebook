.figure_box .detail {
    padding: 0 16px;
    background-color: #fff;
}

.figure_box .detail .info {
    padding: 10px 0;
    width: 100%;
    display: box;
}

.figure_box .detail .label {
    box-flex: 1;
    height: 28px;
    overflow: hidden;
}

.figure_box .detail .label .txt {
    font-size: 12px;
    color: #999;
    padding-left: 10px;
    padding-right: 10px;
    border-radius: 14px;
    display: inline-block;
    background-color: #f6f8fa;
    margin-right: 10px;
    height: 28px;
    line-height: 28px;
    vertical-align: top;
}

.figure_box .label .playcount {
    font-size: 12px;
    color: #999;
    height: 28px;
    line-height: 28px;
}

.figure_box .label .vplus {
    height: 28px;
    line-height: 28px;
    border-radius: 14px;
    display: inline-block;
    background-color: #f6f8fa;
    margin-right: 10px;
}

.figure_box .label .vplus .avatar {
    height: 28px;
    width: 28px;
    border-radius: 14px;
    display: inline-block;
}

.figure_box .label .vplus .nick {
    font-size: 12px;
    color: #999;
    padding-left: 10px;
    padding-right: 10px;
    display: inline-block;
    vertical-align: top;
}

.figure_box .comment_box {
    display: inline-block;
}

.figure_box .comment_box .num {
    display: inline-block;
    font-size: 12px;
    color: #999;
    margin-left: 3px;
    vertical-align: middle;
}

.figure_box .operation .icon {
    display: inline-block;
    width: 23px;
    height: 23px;
    margin-top: 2px;
    vertical-align: -6px;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/comment.svg) 0 0 no-repeat;
    background-size: cover;
}

.figure_box .operation .icon.comment {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/comment.svg);
}

.figure_box .operation .icon.share {
    margin-left: 17px;
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/share.svg);
}

.figure_box .operation .icon.delete {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/delete.svg);
    margin-left: 16px;
}