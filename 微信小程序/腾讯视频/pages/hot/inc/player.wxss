.mod_feeds_player {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 9;
}

.mod_feeds_player::before {
    content: '';
    display: block;
    width: 100%;
    padding-bottom: 56.25%;
}

.mod_feeds_player video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.player_error_text {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.75);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    z-index: 2;
    font-size: 15px;
}

.canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100px;
    z-index: 100;
    border: none;
    color: transparent;
    background: linear-gradient(to top,rgba(0,0,0,0) 0%,rgba(0,0,0,0.4) 100%);
}