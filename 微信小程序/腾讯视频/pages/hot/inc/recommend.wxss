.mod_toast {
    position: fixed;
}

.figure_box .recommend::before {
    content: '';
    display: block;
    width: 100%;
    padding-bottom: 56.25%;
}

.figure_box .recommend {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background-color: rgba(0,0,0,0.75);
    margin-top: 10px;
}

.figure_box .recommend .mod {
    padding: 0 24px;
    margin: auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
}

.recommend_box {
    display: box;
    box-orient: vertical;
    box-pack: center;
    box-align: center;
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
}

.recommend_pic {
    position: relative;
    -webkit-flex: 0 0 auto;
    flex-shrink: 0 0 auto;
    width: 127px;
    height: 72px;
}

.recommend_pic image {
    display: block;
    width: 100%;
    height: 100%;
    background: none;
    border-radius: 3px;
}

.recommend_pic .play_icon {
    width: 34px;
    height: 34px;
    margin-left: -17px;
    margin-top: -17px;
}

.recommend_info {
    -webkit-flex: 1 1 auto;
    flex-shrink: 1 1 auto;
    width: 100%;
    padding-left: 11px;
    text-align: left;
}

.recommend_info .title {
    font-size: 12px;
    color: #fff;
    margin-bottom: 7px;
    opacity: 0.6;
}

.recommend_info .cont {
    font-size: 15px;
    line-height: 22px;
    color: #fff;
    margin-top: 0;
}

.mod_replay {
    margin: 0 auto;
    text-align: center;
    line-height: 44px;
    height: 44px;
    border-radius: 22px;
    width: 151px;
    background-color: rgba(54,54,54,0.8);
}

.mod_replay .refresh_icon {
    vertical-align: middle;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_refresh.svg) 0 0 no-repeat;
    background-size: cover;
    width: 17px;
    height: 17px;
    display: inline-block;
}

.mod_replay .txt {
    display: inline-block;
    margin-left: 3px;
    font-size: 14px;
    color: #fff;
}