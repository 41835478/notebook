@import "../../../../__wuBaseWxss__/30.wxss";

@import "../../../../__wuBaseWxss__/29.wxss";

.body {
    font-family: PingFangSC-Regular,Tahoma,sans-serif;
    margin: 0;
    padding: 0;
    color: #222;
}

.topbar {
    background: #fff;
}

.mod_loading.scroll_loading {
    height: 50px;
}

.mod_loading.hide {
    display: none;
}

.mod_loading.loadmore {
    height: auto;
    padding-bottom: 3px;
}

.mod_figures {
    padding: 12px 12px 0 12px;
}

.modJ_figures.hide {
    display: none;
}

.mod_figure {
    width: 100%;
}

.mod_figure .item {
    width: 33.3%;
    padding: 0 4px;
    display: inline-block;
    box-sizing: border-box;
    vertical-align: top;
    margin-bottom: 12px;
    text-align: center;
}

.figure_pic {
    width: 100%;
    height: 306rpx;
}

.figure_pic_mod {
    display: block;
    font-size: 0;
    position: relative;
}

.figure_title {
    margin-top: 7px;
}

.figure_caption .figure_score {
    position: absolute;
    right: 5px;
    top: 13px;
    color: #FF7000;
}

.figure_caption .figure_other {
    position: absolute;
    left: 5px;
    top: 13px;
}

.mod_figure_h .item {
    width: 50%;
}

.mod_figure_h .figure_pic {
    width: 100%;
    height: 188rpx;
}