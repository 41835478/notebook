@import "../../../../__wuBaseWxss__/29.wxss";

.body {
    font-family: PingFangSC-Regular,Tahoma,sans-serif;
    margin: 0;
    padding: 0;
    color: #222;
    background: #f5f7f9;
}

.topbar {
    background: #fff;
}

.mod_loading.hide {
    display: none;
}

.mod_loading.loadmore {
    height: auto;
    padding-bottom: 3px;
}

.mod_bg {
    background: #fff;
    padding-top: 22px;
    margin-bottom: 20px;
}

.mod_bg.hide {
    display: none;
}

.mod_bd {
    padding-top: 5px;
}

.mod_line {
    position: relative;
}

.mod_line:after {
    content: "";
    position: absolute;
    left: 16px;
    right: 0;
    bottom: 0;
    border-bottom: 1px solid #ebebeb;
    -webkit-transform: scaleY(.5);
    -webkit-transform-origin: 0 0;
}

.mod_title {
    position: relative;
    margin: 0 16px 16px;
}

.mod_title .title_txt {
    font-size: 17px;
    line-height: 22px;
    font-weight: 700;
}

.mod_title .title_more {
    position: absolute;
    top: 0;
    right: 0;
    text-align: right;
    font-size: 14px;
    line-height: 22px;
    color: #979797;
}

.mod_title .title_more .txt {
    display: inline-block;
    max-width: 200px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.mod_title .icon_more {
    position: relative;
    top: -7px;
    margin-left: 5px;
    display: inline-block;
    width: 8px;
    height: 8px;
    border: 1px solid #979797;
    border-width: 1px 1px 0 0;
    transform: rotate(45deg);
}

.mod_star_detail {
    padding: 15px 0 22px;
}

.mod_star_detail .star_detail {
    padding: 0 16px 20px;
    margin-bottom: 22px;
    overflow: hidden;
}

.mod_star_detail .star_pic {
    float: left;
    width: 129px;
    height: 129px;
}

.mod_star_detail .star_pic .pic {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.mod_star_detail .star_info {
    margin-left: 150px;
    margin-top: -7px;
}

.mod_star_detail .star_info .tit {
    font-size: 16px;
    line-height: 30px;
    font-weight: 700;
    word-wrap: break-word;
}

.mod_star_detail .star_info .txt {
    font-size: 14px;
    line-height: 20px;
    color: #666;
    margin: 3px 0;
    word-wrap: break-word;
}

.mod_star_detail .star_info .txt:nth-child(2) {
    margin-top: 0;
}

.mod_star_detail .star_txt {
    margin: 0 16px;
    font-size: 15px;
    line-height: 20px;
    word-wrap: break-word;
}

.mod_star_detail .mod_title {
    margin-bottom: 16px;
}

.mod_star_acc {
    padding-bottom: 22px;
}

.mod_star_acc .acc_txt {
    margin: 0 16px;
    font-size: 13px;
    line-height: 20px;
    word-wrap: break-word;
}