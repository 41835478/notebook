@import "../../__wuBaseWxss__/30.wxss";

@import "../../__wuBaseWxss__/29.wxss";

.body {
    font-family: PingFangSC-Regular,Tahoma,sans-serif;
    margin: 0;
    padding: 0;
    color: #222;
    background: #f5f7f9;
}

.mod_loading.hide {
    display: none;
}

.mod_loading.loadmore {
    height: auto;
    padding-bottom: 3px;
}

.topbar {
    background: #fff;
}

.mod_figures {
    -webkit-overflow-scrolling: touch;
    overflow: auto;
    margin-bottom: 20px;
    font-size: 0px;
}

.mod_figure {
    white-space: nowrap;
    font-size: 0;
    padding: 2px 0 10px 16px;
}

.mod_figure .item {
    width: 109px;
    display: inline-block;
    vertical-align: top;
    margin: 0 8px 12px 0;
    text-align: center;
}

.mod_figure .item.horizon {
    width: 166px;
}

.figure_pic {
    width: 100%;
    height: 153px;
}

.figure_pic.horizon {
    height: 96px;
}

.figure_pic_mod {
    display: block;
    font-size: 0;
    position: relative;
}

.figure_caption .figure_score {
    position: absolute;
    right: 5px;
    top: 13px;
    color: #FF7000;
}

.figure_caption .figure_other {
    position: absolute;
    left: 5px;
    top: 13px;
}

.mark {
    position: absolute;
    right: 0px;
    top: 0px;
    height: 24px;
    width: 120px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: right 0;
    pointer-events: none;
}

.mod_figure .figure_title {
    margin-top: 8px;
    line-height: 20px;
}

.mod_figures_v .item {
    width: 135px;
}

.mod_figures_v .figure_pic {
    height: 76px;
}

.mod_bg {
    background: #fff;
    padding-top: 22px;
    margin-bottom: 20px;
}

.mod_bg.hide {
    display: none;
}

.mod_bd {
    padding-top: 5px;
}

.mod_line {
    position: relative;
}

.mod_line:after {
    content: "";
    position: absolute;
    left: 16px;
    right: 0;
    bottom: 0;
    border-bottom: 1px solid #ebebeb;
    -webkit-transform: scaleY(.5);
    -webkit-transform-origin: 0 0;
}

.mod_title {
    position: relative;
    margin: 0 16px 16px;
}

.mod_title .title_txt {
    font-size: 17px;
    line-height: 22px;
    font-weight: 700;
}

.mod_title .title_more {
    position: absolute;
    top: 0;
    right: 0;
    text-align: right;
    font-size: 14px;
    line-height: 22px;
    color: #979797;
}

.mod_title .title_more .txt {
    display: inline-block;
    max-width: 200px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    vertical-align: top;
}

.mod_title .icon_more {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/arrow-right-icon.svg);
    background-position: center;
    background-repeat: no-repeat;
    display: inline-block;
    margin: 5px 0 0 7px;
    width: 7px;
    height: 12px;
    background-size: 100%;
}

.mod_star_info {
    padding: 15px 0 22px;
}

.mod_star_info .star_pic {
    padding: 0 16px 16px;
    margin-bottom: 22px;
}

.mod_star_info .star_pic .pic {
    display: block;
    width: 64px;
    height: 64px;
    border-radius: 100%;
    margin: 0 auto 8px;
}

.mod_star_info .star_pic .txt {
    font-size: 16px;
    line-height: 22px;
    text-align: center;
    font-weight: 700;
}

.mod_star_info .star_txt {
    margin: 0 16px;
    font-size: 15px;
    line-height: 20px;
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    max-height: 100px;
    overflow: hidden;
}

.mod_star_info .mod_title {
    margin-bottom: 16px;
}

.mod_ator_list {
    -webkit-overflow-scrolling: touch;
    overflow: auto;
    padding: 25px 0 0 0;
    height: auto;
    min-height: 102px;
    margin-bottom: 12px;
}

.mod_ator_list .ator_list {
    padding: 0 4px;
    white-space: nowrap;
    font-size: 0;
    padding-bottom: 12px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-start;
}

.mod_ator_list .list_item {
    position: relative;
    white-space: normal;
    display: inline-block;
    vertical-align: top;
    -webkit-flex: 0 0 auto;
    flex-shrink: 0 0 auto;
    width: 56px;
    margin: 0 12px;
}

.mod_ator_list .ator_pic {
    position: relative;
    width: 56px;
    height: 56px;
    margin-bottom: 6px;
}

.mod_ator_list .ator_pic .pic {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.mod_ator_list .ator_pic .tag {
    position: absolute;
    right: 0;
    bottom: 0;
    padding: 0 2px;
    background-color: rgba(34,34,34,.9);
    border-radius: 2px;
    font-size: 11px;
    line-height: 16px;
    text-align: center;
    color: #fff;
}

.mod_ator_list .ator_name {
    width: 56px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-align: center;
    font-size: 13px;
    line-height: 21px;
}