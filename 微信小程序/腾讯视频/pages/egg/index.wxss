.body {
    font-size: 16px;
    background-color: #fff;
}

.line {
    color: #333;
    padding: 5px 10px;
    line-height: 1.5;
}

.line:nth-child(2n) {
    background-color: #F7F7F7;
}

.label {
    opacity: 0.5;
    margin-right: 10px;
}

.inp_content {
    position: relative;
    display: inline-block;
    width: -webkit-calc(100% - 5em);
    vertical-align: -4px;
}

.line_switch {
    margin-bottom: 5px;
    line-height: 36px;
}

input {
    position: relative;
    display: inline-block;
    width: 99%;
    height: 22px;
    padding: 0;
    border-bottom: 1px solid #ddd;
}

.content {
    word-wrap: break-all;
    word-break: break-all;
}