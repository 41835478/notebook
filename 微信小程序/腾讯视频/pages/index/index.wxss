@import "../search/index.wxss";

@import "../../comps/channeltpl/index.wxss";

.body {
    margin: 0;
    padding: 0;
    color: #00002a;
    width: 100%;
}

.search_box {
    position: relative;
}

.search_box .icon {
    position: absolute;
    top: 4px;
    left: 0;
    width: 40px;
    height: 40px;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/search_icon.svg) center center no-repeat;
    background-size: 20px;
    margin-left: 5px;
}

.search_box .text {
    font-size: 12px;
    line-height: 16px;
    color: #a2a2b6;
    padding: 16px 16px 16px 41px;
}