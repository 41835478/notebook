.mod_box {
    margin: 0 16px 35px 16px;
}

.mod_hd {
    margin: 15px 0;
}

.mod_title {
    font-size: 18px;
    line-height: 22px;
    font-weight: bold;
}

.figure_pic {
    border-radius: 0;
}

.figure_desc {
    font-size: 12px;
    color: #a2a2b6;
}

.mod_box.focus_box {
    margin: 0 0 14px 0;
    background-image: -webkit-linear-gradient(90deg,rgb(242,244,245) 0%,rgb(255,255,255) 59%);
}

.focus_box .mod_hd {
    margin: 15px 16px;
}

.focus {
    padding: 0 16px;
}

.focus .figure_pic {
    width: 100%;
    height: 51.47vw;
}

.mod_figures_focus {
    height: calc(51.47vw + 48px);
}

.focus .figure_title {
    margin: 0;
    padding: 13px 0;
}

.figure_title_focus {
    margin: 7px 0 13px 0;
}

.figure_pic_focus {
    width: 100%;
    height: 51.47vw;
}

.mod_figures_focus_hpics {
    height: calc(51.47vw + 40px);
}

.figure_lr {
    margin-bottom: 16px;
}

.figure_l {
    position: relative;
    float: left;
    width: 216rpx;
    height: 122rpx;
}

.figure_l .figure_pic {
    width: 100%;
    height: 100%;
}

.figure_r {
    position: relative;
    margin-left: 248rpx;
    height: 122rpx;
}

.vertical_center {
    width: 100%;
    height: 100%;
    display: box;
    box-orient: vertical;
    box-pack: center;
    box-align: center;
    display: -webkit-flex;
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.vertical_center .figure_desc {
    margin-top: 4px;
}

.vertical_center .figure_title {
    margin-top: 0;
}

.list_item {
    display: inline-block;
    width: 50%;
    box-sizing: border-box;
    vertical-align: top;
    margin-bottom: 13px;
}

.list_item:nth-child(odd) {
    padding-right: 9rpx;
}

.list_item:nth-child(even) {
    padding-left: 9rpx;
}

.list_item:nth-last-child(2),.list_item:last-child {
    margin-bottom: -3px;
}

.figures_list_h .figure_pic {
    width: 100%;
    height: 25.07vw;
}

.figures_list_v .figure_pic {
    width: 216rpx;
    height: 300rpx;
}

.figure_title {
    margin-top: 6px;
    font-size: 14px;
    line-height: 20px;
    color: #000028;
}

.figure_desc {
    margin-top: 4px;
    font-size: 12px;
    line-height: 18px;
    color: #a2a2b6;
}

.mod_box_scroll {
    margin-right: 0;
}

.mod_box_scroll .figures_list {
    overflow: auto;
    white-space: nowrap;
}

.figures_scroll_list_h {
    height: 160px;
}

.mod_box_scroll .list_scroll_item {
    display: inline-block;
    margin-right: 9px;
    vertical-align: top;
}

.figures_scroll_list_h .list_scroll_item {
    width: 334rpx;
}

.figures_scroll_list_v .list_scroll_item {
    width: 216rpx;
}

.figures_scroll_list_v {
    height: 352rpx;
}

.figures_scroll_list_v.scroll_box_subtitle {
    height: 396rpx;
}

.figures_scroll_list_h {
    height: 248rpx;
}

.figures_scroll_list_h.scroll_box_subtitle {
    height: 284rpx;
}

@media (max-width:360px) {
    .figures_scroll_list_v {
        height: 364rpx;
    }

    .figures_scroll_list_v.scroll_box_subtitle {
        height: 408rpx;
    }

    .figures_scroll_list_h {
        height: 260rpx;
    }

    .figures_scroll_list_h.scroll_box_subtitle {
        height: 296rpx;
    }
}

.figure_subscript {
    position: absolute;
    top: 6px;
    left: 0;
}

.figure_subscript .icon {
    position: absolute;
    top: -5px;
    left: -6px;
    width: 18px;
    height: 18px;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/label_icon.svg) center center no-repeat;
    background-size: 6px;
}

.figure_subscript .text {
    font-size: 10px;
    color: #fff;
    text-shadow: 0px 1px 2px rgb(85,85,85);
    line-height: 9px;
    padding-left: 8px;
}

.figure_count {
    position: absolute;
    right: 5px;
    bottom: 5px;
    font-size: 10px;
    color: #fff;
    padding: 2px 3px;
    line-height: 1;
    background-color: rgba(162,162,182,0.5);
}

.body .mod_loading {
    position: absolute;
}

.mod_loading.hide {
    display: none;
}

.mod_loading.loadmore {
    height: auto;
    padding-bottom: 16px;
}

.mod_empty {
    height: calc(100vh - 48px);
    margin-top: 48px;
}

.list_banner::before {
    height: 1px;
    content: '';
    background: linear-gradient(to bottom,#a2a2b6 0%,#a2a2b6 50%,transparent 50%);
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    position: absolute;
    width: 100%;
    opacity: 0.2;
}

.list_banner {
    width: 100%;
    padding-top: 14px;
    position: relative;
    margin-top: 16px;
}

.list_banner .change {
    width: 100%;
    text-align: center;
    line-height: 16px;
    height: 16px;
}

.list_banner .icon {
    width: 12px;
    height: 12px;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/refresh_icon.svg) center center no-repeat;
    background-size: cover;
    display: inline-block;
    vertical-align: -2px;
}

.list_banner .text {
    font-size: 12px;
    padding-left: 5px;
    line-height: 16px;
    color: #a2a2b6;
    display: inline-block;
}

.figure_detail_two_row {
    height: 48px;
    overflow: hidden;
}

.figure_title_two_row {
    font-size: 15px;
    white-space: normal;
    height: auto;
    max-height: 48px;
    line-height: 24px;
}

.figure_title_two_row .figure_title {
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    word-wrap: break-all;
    word-break: normal;
    line-height: 22px;
}