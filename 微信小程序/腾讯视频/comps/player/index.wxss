.mod_player {
    position: relative;
    z-index: 11;
    left: 0;
    top: 0;
    width: 100%;
}

.mod_player_hide {
    display: none;
}

.mod_player:before {
    content: '';
    display: block;
    width: 100%;
    padding-bottom: 56.25%;
}

.mod_player .player_video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.player_error_layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.75);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    z-index: 2;
    font-size: 15px;
}

.icon_replay {
    background-image: url(http://i.gtimg.cn/qqlive/images/tinyappplay/icon_btn_refresh.svg);
    width: 16px;
    height: 16px;
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: contain;
    display: inline-block;
    vertical-align: -3px;
}

.icon_player_play {
    background-image: url(http://i.gtimg.cn/qqlive/images/tinyappplay/player_btn_icon_play.svg);
    width: 16px;
    height: 16px;
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: contain;
    display: inline-block;
    vertical-align: -3px;
}

.mod_poster_placeholder .poster_text .poster_text_line.sub_text {
    font-size: 13px;
    margin-top: 24rpx;
    color: #ccc;
}

.mod_poster_placeholder {
    position: relative;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 12;
}

.mod_poster_placeholder .hl {
    color: #ff7000;
    display: inline-block;
}

.mod_poster_placeholder.hide {
    z-index: 1;
}

.mod_poster_placeholder:before {
    content: '';
    display: block;
    width: 100%;
    padding-bottom: 56.25%;
}

.mod_poster_placeholder .poster_placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.mod_poster_placeholder .poster_placeholder.poster_placeholder_vip .poster_mask_3,.mod_poster_placeholder .poster_placeholder.poster_placeholder_limit .poster_mask_3 {
    position: absolute;
    z-index: 1;
    background: rgba(0,0,0,.75);
    width: 100%;
    height: 100%;
}

.mod_poster_placeholder .poster_text {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    font-size: 15px;
}

.mod_poster_placeholder .poster_text .poster_text_line {
    display: block;
    margin-top: 30rpx;
}

.mod_poster_placeholder .poster_text .poster_button {
    min-width: 272rpx;
    padding: 0 30rpx;
    margin: 0 10rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 44rpx;
    background-color: #333;
    display: inline-block;
}

.mod_poster_placeholder .poster_text .poster_button_vip {
    background-color: #df4833;
    margin-left: 20 rpx;
}

.mod_poster_placeholder .poster_pic {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.mod_poster_placeholder .btn_play {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 118rpx;
    height: 118rpx;
    margin-top: -75rpx;
    margin-left: -59rpx;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/btn_play.svg) 0 0 no-repeat;
    background-size: cover;
    z-index: 10;
}

.mod_poster_placeholder .poster_mask_1,.mod_poster_placeholder .poster_mask_2 {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 40%;
}

.mod_poster_placeholder .poster_mask_1 {
    z-index: 2;
    background-image: linear-gradient(to top,#212738,rgba(0,0,0,0));
}

.mod_poster_placeholder .poster_mask_2 {
    z-index: 3;
    background-image: linear-gradient(to top,rgba(40,42,47,.6),rgba(0,0,0,0));
}