.qqlogin-modal-mask {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 99;
    background-color: rgba(0,0,0,.2);
}

.qqlogin-modal {
    width: 564rpx;
    height: 500rpx;
    border-radius: 20rpx;
    background-color: white;
    position: fixed;
    z-index: 100;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    margin: auto;
}

.qqlogin-modal.bottom-pos {
    bottom: 100rpx;
    top: auto;
}

.qqlogin-modal .top {
    border-top-right-radius: 20rpx;
    border-top-left-radius: 20rpx;
    height: 388rpx;
    background: linear-gradient(60deg,#0083f5 0%,#58caff 100%);
    position: relative;
    text-align: center;
}

.qqlogin-modal .texture {
    height: 100%;
    width: 100%;
    background: url(https://puui.qpic.cn/vupload/0_20171013/1507881519234/0);
    background-size: 100% auto;
    position: absolute;
    top: 0;
    left: 0;
}

.qqlogin-modal .qqlogo {
    height: 208rpx;
    width: 176rpx;
    margin-top: -40rpx;
    display: inline-block;
}

.qqlogin-modal .title {
    margin-top: 26rpx;
    margin-bottom: 18rpx;
    line-height: 34rpx;
    font-size: 34rpx;
    color: white;
    font-weight: bold;
}

.qqlogin-modal .text {
    padding: 0 64rpx;
    font-size: 30rpx;
    color: white;
    line-height: 46rpx;
}

.qqlogin-modal-mask.none,.qqlogin-modal.none {
    display: none;
}

.qqlogin-modal .bottom {
    display: flex;
}

.qqlogin-modal .action,.qqlogin-modal .cancel {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
    color: #222;
    line-height: 112rpx;
}

.qqlogin-modal .action {
    color: #ff7000;
}

