.tabbar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    display: -webkit-box;
    -webkit-box-orient: horizontal;
    -webkit-box-pack: center;
    -webkit-box-align: center;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    background: #fff;
    transition: background 0.3s ease;
    color: #737373;
    z-index: 2;
}

.tabbar:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(to bottom,#E0E0E0 0%,#E0E0E0 50%,transparent 50%);
    background-color: #E0E0E0;
}

.tabbar .tab {
    width: 33.33%;
    padding-top: 10px;
    text-align: center;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
    -webkit-box-align: center;
    display: -webkit-flex;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    font-size: 12px;
}

.tabbar .tab.current {
    color: #FF7000;
}

.tabbar .tab_text {
    margin-bottom: 3px;
}

.tabbar .tab_icon {
    display: block;
    width: 20px;
    height: 20px;
    margin-bottom: 2px;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_home_normal.svg) 0 0 no-repeat;
    background-size: cover;
}

.tabbar .tab_icon_search {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_search.svg);
}

.tabbar .tab_icon_play {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_play.svg);
}

.tabbar .tab_icon_channel {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_channel_normal.svg);
}

.tabbar .current .tab_icon_channel {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_channel_selected.svg);
}

.tabbar .tab_icon_user {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_user_normal.svg);
}

.tabbar .current .tab_icon_user {
    background-image: url(https://i.gtimg.cn/qqlive/images/tinyapp/icon_user_selected.svg);
}