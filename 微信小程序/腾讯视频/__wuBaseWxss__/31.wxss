.nav_row {
    padding: 0 4px;
    font-size: 0;
    margin-top: 10px;
}

.nav_link {
    display: inline-block;
    font-size: 17px;
    text-align: center;
    white-space: nowrap;
    padding: 9px 13px;
    line-height: 22px;
    font-weight: bold;
}

.nav_link.current {
    color: #ff7000;
    position: relative;
}

.nav_link.current::after {
    height: 2px;
    background: #ff7000;
    content: '';
    display: block;
    width: 13px;
    left: 50%;
    bottom: 0;
    margin-left: -6px;
    position: absolute;
    border-radius: 1px;
}