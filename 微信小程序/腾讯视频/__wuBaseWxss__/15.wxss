@import "../pages/hot/inc/player.wxss";

@import "../pages/hot/inc/recommend.wxss";

@import "../pages/hot/inc/detail.wxss";

@import "../pages/hot/inc/loading.wxss";

@import "../pages/hot/inc/error.wxss";

.body {
    position: relative;
}

.hide {
    display: none;
}

.top_tips {
    font-size: 13px;
    color: #ff7000;
    line-height: 32px;
    height: 32px;
    text-align: center;
}

.figure_box {
    padding-top: 10px;
    background-color: #F5F7F9;
    position: relative;
}

.figure_box:first-child {
    padding-top: 0;
}

.mod_poster {
    position: relative;
    left: 0;
    top: 0;
    width: 100%;
}

.mod_poster::before {
    content: '';
    display: block;
    width: 100%;
    padding-bottom: 56.25%;
}

.mod_poster .poster {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.mod_poster .time {
    position: absolute;
    bottom: 5px;
    right: 7px;
    font-size: 11px;
    color: #fff;
}

.mod_poster .toptitle {
    position: absolute;
    top: 0;
    font-size: 17px;
    font-weight: bold;
    line-height: 22px;
    color: #fff;
    margin-right: 14px;
    background: linear-gradient(to top,rgba(0,0,0,0) 0%,rgba(0,0,0,0.75) 100%);
    padding: 13px 16px;
    padding-bottom: 21px;
    width: 100%;
}

.play_icon {
    position: absolute;
    z-index: 4;
    left: 50%;
    top: 50%;
    width: 118rpx;
    height: 118rpx;
    margin-top: -59rpx;
    margin-left: -59rpx;
    background: url(https://i.gtimg.cn/qqlive/images/tinyapp/btn_play.svg) 0 0 no-repeat;
    background-size: cover;
    filter: drop-shadow(0px 4px 10px rgba(22,23,25,0.3));
}

.two_row {
    white-space: normal;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}