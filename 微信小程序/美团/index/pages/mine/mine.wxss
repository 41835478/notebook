page {
    background: #f8f8f8;
}

.user-info {
    display: flex;
    background: #fff;
    padding: 20rpx 40rpx;
    margin-bottom: 20rpx;
}

.user-img {
    height: 130rpx;
    width: 130rpx;
    border: 4rpx solid #FFFFFF;
    box-shadow: 0 6rpx 10rpx 0 rgba(0,0,0,0.10);
    border-radius: 100rpx;
}

.user-text {
    text-align: left;
    padding-left: 50rpx;
    line-height: 148rpx;
    font-size: 38rpx;
    font-weight: 500;
}

.mine-list {
    background: #fff;
    padding: 0 40rpx;
}

.mine-item {
    display: flex;
    padding: 20rpx 0;
    position: relative;
}

.arrow:after {
    content: '';
    position: absolute;
    right: 20rpx;
    top: 50%;
    width: 8rpx;
    height: 8rpx;
    margin-top: -3rpx;
    transform: rotate(45deg);
    border-right: 1px solid #999;
    border-top: 1px solid #999;
}

.icon-item {
    width: 40rpx;
    height: 40rpx;
    margin-left: 10rpx;
    position: relative;
    top: 4rpx;
}

.text-item {
    font-size: 28rpx;
    color: #333;
    padding-left: 30rpx;
    line-height: 48rpx;
}

.text-right {
    font-size: 24rpx;
    color: #999;
    line-height: 48rpx;
    text-align: right;
    padding-right: 40rpx;
    flex: 1;
    vertical-align: bottom;
}

.subtext-item {
    font-size: 22rpx;
    color: #999999;
    line-height: 48rpx;
    padding-left: 20rpx;
}