@import "../../tpls/nav-ico/nav-ico.wxss";

@import "../../tpls/guess/guess.wxss";

.home-page {
    background: #fff;
}

.search-view {
    position: relative;
    padding: 10rpx 0;
    background: #fff;
    position: fixed;
    width: 100%;
    z-index: 100;
    top: 0;
    display: flex;
}

.search-view-placeholder {
    height: 80rpx;
    width: 100%;
}

.search-content {
    margin: 0 30rpx;
    flex: 2;
    position: relative;
}

.search-input {
    border: 0rpx;
    border-radius: 50rpx;
    background-color: #f4f4f4;
    height: 58rpx;
    font-size: 26rpx;
    padding-left: 70rpx;
}

.top-swiper {
    background: #fff;
    padding: 10rpx 30rpx 30rpx 30rpx;
    height: 190rpx;
}

.banner-item {
    position: relative;
}

.slide-image {
    width: 100%;
    height: 190rpx;
    background-color: #ccc;
}

.icon-search {
    width: 30rpx;
    height: 30rpx;
    float: left;
    position: absolute;
    top: 15rpx;
    left: 24rpx;
}

.submit-btn {
    width: 100%;
    height: 190rpx;
    position: absolute;
    top: 0rpx;
    background-color: transparent;
    border-width: 0rpx;
    padding-left: 0;
    padding-right: 0;
}

.submit-btn::after {
    border-width: 0rpx;
}

.nav-ico-wrapper {
    padding-bottom: 20rpx;
    background: #f8f8f8;
}

.city-content {
    flex-basis: 88rpx;
    max-width: 148rpx;
    height: 58rpx;
    margin-left: 30rpx;
    text-align: center;
    position: relative;
}

.city-name {
    display: inline-block;
    color: #333333;
    font-size: 28rpx;
    line-height: 58rpx;
    flex-basis: 60rpx;
    max-width: 120rpx;
    text-align: center;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    margin-right: 28rpx;
}

.icon-city {
    width: 20rpx;
    height: 12rpx;
    position: absolute;
    right: 0rpx;
    top: 23rpx;
}