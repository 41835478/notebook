.pendant-com {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    opacity: 0.95;
    background: #fff;
    position: fixed;
    box-shadow: 0 10rpx 40rpx 0 rgba(0,0,0,0.15);
    bottom: 80rpx;
    right: 30rpx;
}

.pendant-icon {
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin: 16rpx auto 4rpx;
}

.pendant-text {
    text-align: center;
    display: block;
    font-size: 18rpx;
    color: #00A9C0;
}