.popup-dialog__mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    background: rgba(0,0,0,0.4);
    display: none;
}

.popup-dialog__container {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 750rpx;
    transform: translateY(150%);
    transition: all 0.4s ease;
    z-index: 12;
    background: rgba(248,247,255,1);
}

.popup-dialog--show .popup-dialog__container {
    transform: translateY(0);
}

.popup-dialog--show .popup-dialog__mask {
    display: block;
}

.popup-header {
    height: 100rpx;
    border-bottom: 2rpx solid #d9d9d9;
    display: flex;
    flex-direction: row;
    background: #fff;
}

.popup-header_cancel {
    width: 210rpx;
    font-size: 32rpx;
    color: #5c626d;
    line-height: 100rpx;
    text-align: left;
    padding-left: 40rpx;
}

.popup-header_title {
    width: 510rpx;
    font-size: 34rpx;
    color: #0e0e0f;
    line-height: 100rpx;
    text-align: center;
}

.popup-header_confirm {
    width: 210rpx;
    font-size: 32rpx;
    color: #fb0;
    line-height: 100rpx;
    text-align: right;
    padding-right: 40rpx;
}

.popup-body {
    height: 689rpx;
    background: rgba(248,247,255,1);
}

.auto-phone_tip {
    background: #fff;
    padding: 77rpx 40rpx 80rpx 64rpx;
    overflow: hidden;
}

.auto-phone_tip image {
    width: 130rpx;
    height: 130rpx;
    float: left;
}

.auto-tip-text {
    margin-left: 180rpx;
    margin-top: 20rpx;
