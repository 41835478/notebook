.setphone-self--title {
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    font-weight: bold;
    color: #000;
    border-bottom: 1px solid #d9d9d9;
}

.section--infogroup {
    padding: 0 40rpx;
    background: #fff;
}

.section--infogroup .info-item {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    min-height: 127rpx;
    font-size: 34rpx;
    box-sizing: border-box;
}

.item-bottomline {
    border-bottom: 1px solid #d9d9d9;
}

.info-item input {
    line-height: 118rpx;
    color: #0e0e0f;
}

.info-item .desc {
    font-size: 28rpx;
    color: #888;
    margin-left: 20rpx;
}

.info-item.with-icon:before,.info-item.with-icon:after {
    content: '';
    display: block;
    position: absolute;
    right: 40rpx;
    width: 0;
    height: 0;
    border-width: 16rpx;
    border-style: solid dashed dashed dashed;
}

.info-item.with-icon:before {
    bottom: 30rpx;
    border-color: #c7c7c7 transparent transparent transparent;
}

.info-item.with-icon:after {
    bottom: 34rpx;
    border-color: #fff transparent transparent transparent;
}

