<view class="alert-wrapper" wx:if="{{showAlert}}">
    <view class="alert-box">
        <view class="alert-box_title" wx:if="{{title}}">
          {{title}} 
        </view>
        <view class="alert-box_content">
        {{content}} 
      </view>
        <view bindtap="hidden" class="alert-box_confirm">
        {{buttonText}} 
      </view>
    </view>
</view>
