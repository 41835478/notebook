.alert-wrapper {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.alert-box {
    width: 580rpx;
    padding-top: 20rpx;
    border-radius: 10rpx;
    background: #FFF;
    font-size: 32rpx;
}

.alert-box_title {
    padding-top: 30rpx;
    text-align: center;
    color: #0E0E0F;
}

.alert-box_content {
    padding: 30rpx 50rpx;
    color: #5C626D;
    text-align: left;
}

.alert-box_confirm {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #FFBB00;
    border-top: 1px solid #E5E5E5;
}

.alert-box_confirm:active {
    background: #F3F2F9;
}