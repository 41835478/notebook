page {
    background-color: #f8f8f8;
}

.contanier {
    padding: 0 30rpx;
    background-color: #fff;
}

.shop_name {
    font-size: 30rpx;
    font-family: PingFangSC-Medium;
    color: rgba(51,51,51,1);
    line-height: 42rpx;
    padding: 28rpx 0 10rpx 0;
    width: 100%;
    box-sizing: border-box;
    display: block;
}

.shop_address {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(51,51,51,1);
    line-height: 44rpx;
    width: 100%;
    box-sizing: border-box;
    display: block;
    margin-bottom: 36rpx;
}

.desc {
    font-size: 30rpx;
    font-family: PingFangSC-Regular;
    color: rgba(136,136,136,1);
    line-height: 42rpx;
    margin-bottom: 24rpx;
    display: block;
}

.time {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(51,51,51,1);
    line-height: 40rpx;
    margin-bottom: 36rpx;
    display: block;
}

.phoneBox {
    padding-bottom: 24rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    line-height: 40rpx;
    border-bottom: 2rpx solid rgba(235,235,235,1);
}

.phoneBox .phonenumber {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(51,51,51,1);
    line-height: 40rpx;
    display: inline-block;
    height: 40rpx;
    min-height: initial;
    overflow: inherit;
    white-space: inherit;
    text-overflow: inherit;
    width: 630rpx;
}

.phoneBox .change {
    color: rgba(19,128,255,1);
    float: right;
}

.phoneBox .clearAll {
    width: 36rpx;
    height: 36rpx;
    float: right;
}

.tip {
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    color: rgba(155,155,155,1);
    line-height: 34rpx;
    padding: 10rpx 0 30rpx;
    display: block;
}

.submit {
    box-sizing: border-box;
    height: 96rpx;
    background: linear-gradient(90deg,rgba(255,240,59,1),rgba(255,214,41,1));
    border-radius: 8px;
    font-size: 32rpx;
    font-family: PingFangSC-Medium;
    color: rgba(51,51,51,1);
    line-height: 96rpx;
    text-align: center;
    padding: 0;
    margin: 90rpx 30rpx 0 30rpx;
}

.submit::after {
    border: none;
}