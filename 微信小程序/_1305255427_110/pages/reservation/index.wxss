.single_shop {
    background-color: #f8f8f8;
    padding: 0 30rpx 32rpx;
    width: 100%;
    box-sizing: border-box;
    box-shadow: 0px -1rpx 0px 0px #eee;
}

.single_shop.active {
    background-color: #fff;
    padding-bottom: 40rpx;
    box-shadow: 0px 4px 14px 0px rgba(0,0,0,0.07);
}

.single_shop .shop_name {
    font-size: 28rpx;
    font-family: PingFangSC-Medium;
    color: rgba(51,51,51,1);
    line-height: 40rpx;
    padding: 26rpx 0 20rpx 0;
    width: 100%;
    box-sizing: border-box;
    display: block;
}

.single_shop .shop_address {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(155,155,155,1);
    line-height: 42rpx;
    width: 100%;
    box-sizing: border-box;
    display: block;
}

.single_shop.active .shop_address {
    color: #333;
}

.single_shop .shop_name.active::after {
    font-size: 22rpx;
    font-family: PingFangSC-Regular;
    color: rgba(255,120,49,1);
    content: '最近';
    display: inline-block;
    width: 52rpx;
    height: 32rpx;
    line-height: 32rpx;
    background: rgba(255,241,234,1);
    border-radius: 4rpx;
    margin-left: 22rpx;
    text-align: center;
}

.single_shop .shop_name .number {
    float: right;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    color: rgba(155,155,155,1);
}

.single_shop .contact {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(19,128,255,1);
    line-height: 40rpx;
    margin-top: 20rpx;
    margin-bottom: 30rpx;
    display: none;
}

.single_shop.active .contact {
    display: block;
}

.single_shop .info_phone::after {
    content: '';
    width: 2rpx;
    height: 20rpx;
    background: rgba(216,216,216,1);
    border-radius: 3rpx;
    display: inline-block;
    margin: 0 22rpx;
}

.single_shop .shop_time {
    margin-top: 30rpx;
    display: none;
}

.single_shop.active .shop_time {
    display: initial;
}

.single_shop .shop_time .desc {
    font-size: 30rpx;
    font-family: PingFangSC-Regular;
    color: rgba(136,136,136,1);
    line-height: 42rpx;
    margin-bottom: 20rpx;
    display: block;
}

.single_shop .shop_time .choose_time {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(51,51,51,1);
    line-height: 40rpx;
    margin-bottom: 30rpx;
}

.single_shop .shop_time .choose_time .select {
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    border: 4rpx solid rgba(223,223,223,1);
    transform: translateY(4rpx);
    position: relative;
    box-sizing: border-box;
    margin-right: 18rpx;
}

.single_shop .shop_time .choose_time .select.select.active {
    border: none;
}

.single_shop .shop_time .choose_time .select.active::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 32rpx;
    height: 32rpx;
    background: url("https://aihuishou-internal.oss-cn-hangzhou.aliyuncs.com/miniapps/earth/select.png") no-repeat center/cover;
}

.single_shop .shop_time button {
    width: 100%;
    height: 80rpx;
    background: linear-gradient(90deg,rgba(255,240,59,1),rgba(255,214,41,1));
    border-radius: 6rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(51,51,51,1);
    line-height: 80rpx;
    text-align: center;
    padding: 0;
    margin-top: 40rpx;
}

.single_shop .shop_time button::after {
    border: none;
}