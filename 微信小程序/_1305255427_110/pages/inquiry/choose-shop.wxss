.page-container {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-between;
}

.left-container {
    width: 226rpx;
    height: 100%;
    background: #f3f2f9;
}

.right-container {
    width: 510rpx;
    height: 100%;
}

.left-item {
    height: 96rpx;
    width: 228rpx;
    background-color: inherit;
    font-size: 30rpx;
    color: #5c626d;
    line-height: 96rpx;
    text-indent: 40rpx;
    position: relative;
}

.left-item.active {
    font-size: 30rpx;
    color: #0e0e0f;
    background-color: #fff;
}

.left-item.active:before {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 6rpx;
    height: 96rpx;
    background-color: #ffd100;
}

.right-item {
    height: 96rpx;
}

.right-item .navigator {
    margin: 0;
    padding: 0;
    border: none;
    border-radius: 0;
    padding-left: 40rpx;
    line-height: 96rpx;
    font-size: 30rpx;
    color: #333;
}

.only-right-container {
    width: 100%;
    padding-left: 32rpx;
}

.only-right-container .right-item {
    height: 96rpx;
    line-height: 96rpx;
    border-bottom: 1px solid #eee;
}

.only-right-container .right-item .navigator {
    margin: 0;
    padding: 0;
    border: none;
    border-radius: 0;
    line-height: 96rpx;
    font-size: 30rpx;
    color: #0E0E0F;
}