}

.envelope-container {
    width: 100%;
    height: 100%;
    background-image: url('https://sr.aihuishou.com/activity/minapp/envelope.png');
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.fireworks {
    background-image: url('https://sr.aihuishou.com/activity/minapp/envelopefireworks.png');
}

.getphone-container {
    padding: 64rpx 0;
    background-color: #fff;
    border-radius: 10rpx;
    text-align: center;
}

.getphone-container p {
    font-size: 36rpx;
}

.getphone-text {
