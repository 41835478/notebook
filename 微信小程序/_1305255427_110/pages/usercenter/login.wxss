.form {
    padding: 0 48rpx;
    width: 100%;
    box-sizing: border-box;
    display: block;
}

.input-comp {
    border-bottom: 2rpx solid #eee;
    padding-top: 34rpx;
}

.info-phonenumber {
    display: inline-block;
    width: 400rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Regular;
    color: rgba(51,51,51,1);
    line-height: 38rpx;
    position: relative;
    top: -10rpx;
}

.clearAll {
    width: 36rpx;
    height: 36rpx;
    position: relative;
    top: -4rpx;
}

.info-getcaptch {
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
    color: rgba(153,153,153,1);
    display: inline-block;
    height: 64rpx;
    width: 192rpx;
    text-align: center;
    line-height: 64rpx;
    background: rgba(230,230,230,1);
    border-radius: 4rpx;
    position: relative;
    top: -20rpx;
    float: right;
}

.info-getcaptch.active {
    color: rgba(51,51,51,1);
    background: rgba(255,232,0,1);
}

.setphone-btn {
    width: 654rpx;
    height: 88rpx;
    background: rgba(230,230,230,1);
    border-radius: 16rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    color: rgba(153,153,153,1);
    line-height: 88rpx;
    text-align: center;
    margin-top: 44rpx;
    display: block;
}

.setphone-btn.active {
    color: #333;
    background: linear-gradient(90deg,rgba(255,240,59,1),rgba(255,214,41,1));
}

.desc {
    display: block;
    text-align: center;
    text-align: center;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: rgba(153,153,153,1);
    line-height: 36rpx;
    margin-top: 40rpx;
}

.captch-popup-wrap {
    position: fixed;
    justify-content: center;
    align-items: center;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    display: none;
    z-index: 99;
}

.captch-popup-wrap.show {
    display: flex;
}

.captch-popup {
    width: 682rpx;
    padding-top: 52rpx;
    border-radius: 10rpx;
    background-color: #fff;
}

.captch-title {
    line-height: 48rpx;
    text-align: center;
    color: #000;
    font-size: 34rpx;
}

.captch-content {
    padding: 38rpx 0 42rpx;
}

.captch-input-wrap {
    width: 580rpx;
    height: 94rpx;
    box-sizing: border-box;
    border: 1rpx solid #bebcbc;
    border-radius: 10rpx;
    color: #bebebe;
    position: relative;
    margin: 0 auto;
}

.captch-input-wrap.error {
    border-color: #ff2727;
}

.captch-input {
    display: block;
    height: 92rpx;
    width: 100%;
    padding: 22rpx 150rpx 22rpx 22rpx;
    font-size: 42rpx;
    color: #2a3440;
    line-height: 50px;
    box-sizing: border-box;
}

.captch-img {
    position: absolute;
    right: 10rpx;
    top: 4rpx;
    width: 130rpx;
    height: 86rpx;
}

.captch-bottom {
    height: 100rpx;
    border-top: 1px solid #e5e5e5;
}

.check-captch {
    display: block;
    height: 100rpx;
    width: 100%;
    text-align: center;
    background-color: #fff;
    line-height: 100rpx;
    font-size: 36rpx;
    color: #ffd000;
    border: none;
    padding: 0;
}

.captch-error {
    display: none;
    padding-top: 20rpx;
    padding-left: 40rpx;
    width: 600rpx;
    color: #ff2727;
    font-size: 26rpx;
    line-height: 36rpx;
    margin: 0 auto;
}

.captch-error.show {
    display: block;
}