page,.page-container {
    background-color: #fff;
    height: 100%;
    width: 100%;
}

.sel-wrap {
    opacity: 0;
    padding-top: 26rpx;
    transition: opacity .6s ease-in;
}

.sel-item {
    margin: 0 auto 40rpx;
    width: 670rpx;
    height: 110rpx;
    border: 1rpx solid #434250;
    border-radius: 10rpx;
    box-sizing: border-box;
    position: relative;
}

.sel-item.with-icon {
    padding-left: 80rpx;
}

.sel-item .item-text {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 110rpx;
    font-size: 36rpx;
    line-height: 45rpx;
    color: #000;
}

.tips-icon {
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    top: 50%;
    left: 30rpx;
    margin-top: -25rpx;
    color: #20B35D;
    font-size: 48rpx;
    line-height: 50rpx;
    text-align: center;
}

.tips-wrap {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(0,0,0,.5);
    z-index: 99;
}

.tips-content {
    position: relative;
    width: 682rpx;
    background: #fff;
    padding-bottom: 20rpx;
    border-radius: 10rpx;
}

.tips-imgs {
    width: 682rpx;
    height: 396rpx;
}

.tips-imgs image {
    width: 100%;
    height: 396rpx;
}

.tips-text {
    width: 682rpx;
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
    max-height: 208rpx;
    line-height: 42rpx;
    word-wrap: break-word;
    box-sizing: border-box;
    overflow: auto;
}

.tips-text text {
    font-size: 30rpx;
    line-height: 42rpx;
    color: #353535;
}

.tips-close {
    position: absolute;
    left: 50%;
    margin-left: -31rpx;
    bottom: -112rpx;
    height: 62rpx;
    width: 62rpx;
    font-size: 60rpx;
    border-radius: 50%;
    color: #fff;
    text-align: center;
    line-height: 62rpx;
}

.sel-item.active {
    border-color: #20B35D;
}

.sel-item.active .item-text {
    color: #20B35D;
}

.pull-down,.pull-up {
    position: fixed;
    left: 0;
    right: 0;
    width: 100%;
    height: 50rpx;
    text-align: center;
    font-size: 32rpx;
    color: #bababa;
}

.pull-down {
    opacity: 0;
    top: 52rpx;
    transition: opacity .6s ease-in;
}

.pull-up {
    opacity: 0;
    bottom: 116rpx;
    transition: opacity .6s ease-in;
}

.hide {
    display: none;
}

.show {
    opacity: 1;
}