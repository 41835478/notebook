.top-searchbar {
    width: 750rpx;
    height: 89rpx;
    display: block;
    position: relative;
    top: 0;
    background-color: #F2F2F2;
}

.top-searchbar text {
    display: absolute;
    float: left;
    margin: 10rpx 0.65rpx 10.4rpx 10.4rpx;
    transform: scale(.65);
}

.view-searchbar {
    width: 634rpx;
    height: 56rpx;
    background-color: #fff;
    display: inline-block;
    float: left;
    margin: 16rpx 18rpx 16rpx 16rpx;
    border-radius: 10rpx;
}

.input-searchbar {
    width: 583rpx;
    height: 56rpx;
    background-color: #fff;
    display: block;
    float: left;
    font-size: 28rpx;
    border-radius: 10rpx;
}

.nav-serchbar-canel {
    width: 64rpx;
    height: 45rpx;
    margin: 20rpx 15rpx 23rpx 0;
    color: #20B35D;
    font-size: 32rpx;
    display: inline-block;
    position: relative;
    padding: 0;
    border: 0;
    background-color: #F2F2F2;
}

.nav-serchbar-canel::after {
    border: 0;
}

.scroll-container {
    width: 750rpx;
}

.container-item {
    height: 98rpx;
    border-bottom: 1px #EEE solid;
}

.container-item.hidden {
    display: none;
}

.main-icon-before {
    height: 98rpx;
    margin: 0;
    border: 0;
    padding: 0;
    border-radius: 0;
}

.container-item navigator {
    height: 98rpx;
    margin: 0;
    border: 0;
    padding: 0;
    border-radius: 0;
}

.scroll-view-container {
    width: 720rpx;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #EEE;
}

.scroll-view-container.hidden {
    display: none;
}

.item-name {
    font-size: 32rpx;
    display: inline-block;
    padding: 27rpx 0 27rpx 0;
}

.item-price {
    font-size: 26rpx;
    color: #F15307;
    margin: 31rpx 0 30rpx 0;
    right: 18rpx;
    display: inline-block;
    position: absolute;
}