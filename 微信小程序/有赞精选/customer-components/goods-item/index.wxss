.goods-item__sales {
    font-size: 24rpx;
    color: #999;
    line-height: 36rpx;
}

.goods-item__store-arrow {
    font-size: 11px;
    color: #999999;
    display: inline;
}

.goods-item__store {
    font-size: 11px;
    color: #999999;
}

.goods-item__price {
    font-size: 24rpx;
    font-weight: 500;
    color: #f40;
}

.goods-item__price>text {
    font-size: 32rpx;
}

.goods-item__detail-list {
    display: block!important;
    position: relative;
    top: 78rpx;
}

.goods-item__detail {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.goods-item__content-list {
    display: inline-block;
    width: 430rpx;
    height: 220rpx;
    margin: 10rpx;
    vertical-align: top;
}

.goods-item__content {
    padding: 10rpx;
}

.goods-item__title {
    font-size: 12px;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 18px;
}

.goods-item__image-list {
    width: 220rpx!important;
    height: 220rpx;
    border-radius: 10rpx;
    padding-top: 0!important;
    display: inline-block;
    margin: 20rpx 0 0 20rpx;
}

.goods-item {
    background-color: #fff;
}

.goods-item__image {
    width: 100%;
    padding-top: 100%;
    background-size: cover;
}