<view class="zan-popup zan-popup--{{isShow?'show':''}}">
    <view bindtap="closePopup" class="zan-popup__mask"></view>
    <view class="zan-popup__container">
        <view class="take-coupon">
            <view class="take-coupon__img">
                <view class="take-coupon__text">
                    <view class="take-coupon__success">{{text}}</view>
                    <view class="take-coupon__desc" wx:if="{{title}}">{{title}}</view>
                </view>
            </view>
            <view bindtap="closePopup" class="take-coupon__close"></view>
        </view>
    </view>
</view>
