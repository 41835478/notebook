.order-dialog .zan-popup__container {
    width: 100%;
}

.order-dialog__header {
    position: relative;
    padding: 10px 0;
    line-height: 30px;
    border-bottom: 1rpx solid #e5e5e5;
    font-size: 16px;
    text-align: center;
}

.order-dialog__action {
    display: flex;
    padding: 0;
    border-top: 0px none;
}

.order-dialog__action-btn {
    flex: 1;
    border-radius: 0px;
    border-left: 0 none;
    border-right: 0 none;
}