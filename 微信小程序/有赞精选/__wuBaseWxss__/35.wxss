.top-info {
    border: 0px none;
    margin-top: 0;
}

.top-info--has-border-bottom {
    border-bottom: 1rpx solid #e5e5e5;
}

.top-info__hd {
    padding: 20px 15px;
}

.top-info__status {
    position: relative;
    height: 40px;
    overflow: hidden;
}

.top-info__icon {
    position: absolute;
    left: 0;
    top: 50%;
    width: 40px;
    height: 40px;
    transform: translateY(-50%);
    background: url('https://b.yzcdn.cn/v2/image/wap/trade/result/order_status/icon_totuan2@2x.png') center no-repeat;
    background-size: 40px 40px;
}

.top-info__icon--50,.top-info__icon--5 {
    background-image: url('https://img.yzcdn.cn/public_files/2017/09/25/c1dd075cd6eb3d9e70b1a30fc29514d6.png');
}

.top-info__icon--topay {
    background-image: url('https://b.yzcdn.cn/v2/image/wap/trade/result/order_status/icon_topay2@2x.png');
}

.top-info__icon--tosend {
    background-image: url('https://b.yzcdn.cn/v2/image/wap/trade/result/order_status/icon_yifukuan2@2x.png');
}

.top-info__icon--send {
    background-image: url('https://b.yzcdn.cn/v2/image/wap/trade/result/order_status/icon_send2@2x.png');
}

.top-info__icon--sign {
    background-image: url('https://b.yzcdn.cn/v2/image/wap/trade/result/order_status/icon_success2@2x.png');
}

.top-info__icon--closed {
    background-image: url('https://b.yzcdn.cn/v2/image/wap/trade/result/order_status/icon_close2@2x.png');
}

.top-info__desc {
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    padding-left: 50px;
}

.top-info__steps {
    margin-top: 15px;
    height: 40px;
}

.top-info__express {
    padding-left: 40px;
    background: url('https://b.yzcdn.cn/v2/image/wap/trade/result/express@2x.png') 15px 13px no-repeat;
    background-size: 18px 17px;
}

.top-info__express-desc {
    padding-top: 5px;
}

.top-info_self-fetch_qrcode {
    position: absolute;
    right: 0;
    top: 50%;
    width: 40px;
    height: 40px;
    transform: translateY(-50%);
    background: url('https://img.yzcdn.cn/public_files/2017/07/27/9e6c9a6332714c6ffad548104265cab7.png') no-repeat center / contain;
    background-size: 30px 30px;
}