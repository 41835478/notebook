.goods-container {
    display: flex;
    flex-direction: column;
    padding: 0 10rpx;
    background-color: transparent;
    position: relative;
}

.goods-img {
    width: 336rpx;
    height: 336rpx;
    padding-bottom: 5rpx;
}

.goods-title {
    font-size: 24rpx;
    margin-top: 20rpx;
    width: 336rpx;
    line-height: 35rpx;
    height: 70rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.sold {
    position: relative;
}

.img-sold {
    background-image: url('https://img.yzcdn.cn/public_files/2017/10/11/f8dd02fc590df5b49ddd941fbafe3c86.png');
    background-size: 173.25rpx;
    background-position: 50% 50%;
    background-color: rgba(0,0,0,.5);
    background-repeat: no-repeat;
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.goods-price {
    color: red;
    font-size: 16px;
    margin-bottom: 20rpx;
}