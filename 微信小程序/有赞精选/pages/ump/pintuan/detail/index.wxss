@import "../../../../components/sku/index.wxss";

@import "../../../../components/share/shareDialog.wxss";

@import "../../../../components/ZanAccount/index.wxss";

.pintuan_detail_container {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: #f5f5f5;
}

.pintuan_detail_card {
    height: 320rpx;
    width: 100%;
    background: #FFF;
    position: relative;
    border-bottom: 1px solid #f1f1f1;
}

.pintuan_detail_card__view {
    position: relative;
    float: left;
    width: 280rpx;
    height: 280rpx;
    padding: 20rpx;
}

.pintuan_detail_card_cover__img {
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    width: 96rpx;
    height: 34rpx;
    background-size: 96rpx 34rpx;
    z-index: 99;
    background-repeat: no-repeat;
}

.pintuan_detail_card_cover__img-freshmen {
    background-image: url('https://img.yzcdn.cn/public_files/2017/10/23/8846385567e47caf3b52eeb5000eafc8.png');
}

.pintuan_detail_card_cover__img-pennylottery {
    background-image: url('https://img.yzcdn.cn/public_files/2017/10/23/a8ba0eff78cae95a385a356b9f3439c7.png');
}

.pintuan_detail_card__img {
    height: 280rpx;
    width: 280rpx;
    position: relative;
    float: left;
    border: 1rpx #F0F0F0 solid;
}

.pintuan_detail_card_content {
    display: flex;
    flex-direction: column;
    height: 280rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-right: 20rpx;
    width: auto;
}

.pintuan_detail_card_title {
    display: -webkit-box;
    font-size: 14px;
    color: #333333;
    line-height: 18px;
    font-weight: bold;
    max-height: 36px;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.pintuan_detail_card_member {
    margin-top: 24rpx;
    display: flex;
    flex-direction: row;
    height: 42rpx;
}

.pintuan_detail_card_success_icon {
    position: absolute;
    height: 120rpx;
    width: 120rpx;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: url('https://img.yzcdn.cn/public_files/2017/09/18/6b52bd94541d3a84fc8ad382277139a4.png') no-repeat;
    background-size: cover;
}

.pintuan_detail_card_failed_icon {
    position: absolute;
    height: 120rpx;
    width: 120rpx;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: url('https://img.yzcdn.cn/public_files/2017/09/22/7379b4febd77ded87c9977c23c4bc565.png') no-repeat;
    background-size: cover;
}

.pintuan_detail_card_group_full_icon {
    position: absolute;
    height: 120rpx;
    width: 120rpx;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: url('https://img.yzcdn.cn/public_files/2017/09/22/ee2e3c2fc7064d24fcb83cca48f20842.png') no-repeat;
    background-size: cover;
}

.pintuan_detail_card_group_stoped_icon {
    position: absolute;
    height: 120rpx;
    width: 120rpx;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: url('https://img.yzcdn.cn/public_files/2017/09/22/54a97b66589907e974d35d4c8559f074.png') no-repeat;
    background-size: cover;
}

.pintuan_detail_card_group_invalid_icon {
    position: absolute;
    height: 120rpx;
    width: 120rpx;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: url('https://img.yzcdn.cn/public_files/2017/09/22/d94ec5c3b930c53b215ab467dc6efbd9.png') no-repeat;
    background-size: cover;
}

.pintuan_detail_card_member_text {
    font-size: 12px;
    color: #999999;
    line-height: 16px;
}

.pintuan_detail_card_member_icon {
    width: 16px;
    height: 16px;
    background: url('https://img.yzcdn.cn/public_files/2017/09/18/899cc975156f948e72586a39e48daa50.png') no-repeat center;
    background-size: 16px;
    margin-right: 10rpx;
}

.pintuan_detail_card_group_price_view {
    flex: 1;
    display: flex;
    flex-direction: row;
    align-items: flex-end;
}

.pintuan_detail_card_group_price {
    font-size: 12px;
    color: #FF4444;
    font-weight: bold;
}

.pintuan_detail_card_group_price__number {
    font-size: 22px;
    line-height: 22px;
    margin: 0px 5px;
    color: #FF4444;
    font-weight: bold;
}

.pintuan_detail_card_normal_price {
    margin-top: 12rpx;
    font-size: 12px;
    color: #999999;
}

.pintuan_detail_card_content_view {
    position: relative;
}

.pintuan_detail_info {
    width: 100%;
    margin-top: 20rpx;
    padding-top: 20rpx;
    padding-bottom: 30rpx;
    min-height: 100rpx;
    background: #FFF;
    border-top: 1px solid #f1f1f1;
    border-bottom: 1px solid #f1f1f1;
    position: relative;
}

.pintuan_detail_info_top {
    padding: 20rpx;
}

.pintuan_detail_info_title {
    height: 22px;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.pintuan_detail_info_title text {
    line-height: 22px;
    margin-left: 20rpx;
}

.pintuan_detail_info_title icon {
    margin-top: 1px;
    height: 20px;
}

.pintuan_detail_info__success text {
    margin-left: 20rpx;
    line-height: 24px;
    font-size: 16px;
    font-weight: bold;
}

.pintuan_detail_info__wait {
    display: block;
    position: relative;
}

.pintuan_detial_info__new_group_title {
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 16px;
    line-height: 24px;
}

.pintuan_detial_info__wait_title {
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 16px;
    line-height: 24px;
    color: #333333;
}

.pintuan_detial_info_intro_icon {
    height: 72rpx;
    width: 60rpx;
    padding-left: 30rpx;
    padding-bottom: 30rpx;
    position: absolute;
    right: 0px;
    top: 0px;
    background: url('https://img.yzcdn.cn/public_files/2017/09/20/479c70cd13f26115741cfe50ca39e4a5.png') no-repeat;
    background-size: 60rpx 72rpx;
}

.pintuan_detial_info__wait_title_number {
    margin-left: 10rpx;
    margin-right: 10rpx;
    color: red;
    font-weight: bold;
    font-size: 18px;
}

.pintuan_detail_info__lefttime {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    font-size: 12px;
    line-height: 16px;
    color: #999;
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: 260rpx;
    margin: 0 auto;
    background: #FFF;
}

.pintuan_detail_info__lefttime_time {
    font-size: 12px;
    line-height: 16px;
    margin-left: 12rpx;
    margin-right: 12rpx;
    color: red;
}

.pintuan_detial_info_wrap {
    border-bottom: 1px solid #E5E5E5;
    margin: 0 120rpx 20rpx;
    height: 35rpx;
}

.pintuan_detail_button {
    margin-left: 20rpx;
    margin-right: 20rpx;
    background: #FF4444;
    color: #FFF;
    height: 42px;
    line-height: 42px;
    font-size: 16px;
}

.pintuan_detail_button_text {
    display: block;
    font-size: 14px;
    color: #3183FB;
    margin-top: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    width: auto;
    text-align: center;
}

.member_avatar_grid {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin: 20rpx 40rpx;
}

.member_avatar_grid_item {
    flex: 0 0 20%;
    height: 110rpx;
    width: 100rpx;
    margin-bottom: 20rpx;
    display: flex;
    position: relative;
    justify-content: center;
}

.member_avatar_grid_item_img {
    width: 100rpx;
    height: 100rpx;
    margin: 0 auto;
    border-radius: 50%;
}

.member_avatar_grid_item_label_view {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.member_avatar_grid_item_label {
    line-height: 16px;
    font-size: 10px;
    color: #FFF;
    padding: 0 10rpx;
    background: #FF5050;
    border-radius: 4px;
}

.cj-cell {
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    padding: 20rpx 30rpx;
    margin-bottom: 30rpx;
}

.cj-cell__title {
    font-size: 28rpx;
    color: #FF5050;
    margin-bottom: 16rpx;
}

.cj-cell__desc {
    font-size: 24rpx;
    color: #999999;
}