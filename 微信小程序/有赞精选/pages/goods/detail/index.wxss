.dacu-1 {
    width: 67px;
    height: 13px;
    background: url('https://img.yzcdn.cn/public_files/2017/10/24/1cb56e781059ace655f8f22bc28264ab.png') no-repeat;
    background-size: 67px 13px;
    flex: 1;
    margin-left: 10px;
    display: inline-block;
}

.dacu-1.title {
    margin-left: 0;
}

.dacu-2 {
    background: url('https://img.yzcdn.cn/public_files/2017/10/24/d05240c80b294106809a99a5a0c82861.png') no-repeat;
    background-size: 66px 13px;
    width: 66px;
    height: 13px;
    flex: 1;
    margin-left: 10px;
