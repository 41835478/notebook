.reciver-wrap {
    position: relative;
}

.no-border {
    border-top: none;
    border-bottom: none;
}

.line-price {
    border-bottom: 1rpx solid #000;
    margin: 0 15px;
    padding: 12px 0;
}

.title-with-share-icon {
    width: 85%;
}

.bottom-remove {
    margin-bottom: -10px;
}

.order-preference__bd view {
    display: inline;
    font-size: 12px;
}

.order-preference__action {
    color: #4a90e2;
}

.header-right {
    padding: 4rpx 20rpx;
    margin: 50rpx 34rpx 0 0;
    font-size: 12px;
    color: #FF4545;
    text-align: center;
    position: absolute;
    top: -50rpx;
    right: -40rpx;
}

.header-right:after {
    content: "";
    position: absolute;
    transform: scale(0.5);
    top: -50%;
    bottom: -50%;
    left: -50%;
    right: -50%;
    border-radius: 46rpx;
    border: 1px #FF4545 solid;
}

.header-right.is-collection {
    color: #cbcbcb!important;
}

.header-right.is-collection:after {
    border: 1px #cbcbcb solid!important;
}

@media only screen and (device-width:375px) and (device-height:812px) and (-webkit-device-pixel-ratio:3) {
    .buy-now {
        padding-bottom: 68rpx!important;
    }
