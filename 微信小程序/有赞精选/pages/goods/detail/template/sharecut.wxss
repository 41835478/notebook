.sharecut {
    background: #f8f8f8;
    margin-top: -10px;
}

.sharecut__current-price {
    margin-top: 18rpx;
    height: 36rpx;
    line-height: 36rpx;
    font-size: 24rpx;
    color: #999;
}

.sharecut-area {
    padding: 0 30rpx;
    background-color: #fff;
    padding-bottom: 6px;
}

.sharecut-share-wrap {
    padding: 0 30rpx;
    background-color: #fff;
    padding-top: 12rpx;
    padding-bottom: 30rpx;
    position: relative;
}

.sharecut__current-price .tag {
    color: #f44;
    margin-left: 4px;
    font-weight: bold;
}

.sharecut__current-price .price {
    font-size: 32rpx;
    color: #f44;
    font-weight: bold;
}

.sharecut__tag {
    font-size: 24rpx;
    color: #fff;
    background: #f44;
    height: 28rpx;
    line-height: 28rpx;
    display: inline-block;
    padding: 0 8rpx;
    border-radius: 4rpx;
    position: relative;
    top: -4rpx;
    margin-left: 18rpx;
}

.sharecut__origin-price {
    font-size: 24rpx;
    color: #999;
    text-decoration: line-through;
    height: 28rpx;
    line-height: 28rpx;
    display: inline-block;
}

.sharecut__status-wrap {
    margin-top: 10rpx;
    height: 28rpx;
    line-height: 28rpx;
}

.sharecut__engage {
    font-size: 24rpx;
    color: #999;
    height: 24rpx;
    line-height: 24rpx;
    display: inline-block;
    float: right;
}

.sharecut-share {
    width: 100%;
    border-radius: 86rpx;
    background-color: rgba(255,68,68,0.08);
    font-size: 26rpx;
    border: 1px solid #f44;
    height: 86rpx;
    color: #f44;
    line-height: 86rpx;
    text-align: center;
    padding: 0;
    box-sizing: content-box;
}

.sharecut-share .formid-ele {
    border: 1px solid transparent;
}

.sharecut-share::after {
    display: none;
}

.sharecut-rules {
    padding: 0 30rpx;
    margin-top: 20rpx;
    background: #fff;
    position: relative;
}

.sharecut-rules .sharecut-rules__title {
    height: 88rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 88rpx;
    border-bottom: 1px solid #f3f3f3;
    text-align: left;
}

.sharecut-rules__detail {
    font-size: 24rpx;
    color: #666;
    line-height: 36rpx;
    margin-top: 10rpx;
    padding-bottom: 32rpx;
}

.sharecut-rules__detail .rules {
    margin-top: 10rpx;
}

.sharecut-detail {
    margin-top: 20rpx;
    background-color: #fff;
    padding-top: 40rpx;
    position: relative;
}

.sharecut-detail__title {
    text-align: center;
    color: #333;
    font-size: 32rpx;
    font-weight: bold;
}

.sharecut-detail__title .cut,.sharecut-detail__title .need {
    color: #f44;
}

.sharecut-detail__time {
    text-align: center;
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #999;
    position: absolute;
    left: 50%;
    min-width: 344rpx;
    margin-left: -177rpx;
}

.sharecut-detail__time::before {
    height: 1rpx;
    border-top: 1rpx solid #e5e5e5;
    content: "";
    display: block;
    width: 86rpx;
    position: absolute;
    left: -86rpx;
    top: 17rpx;
}

.sharecut-detail__time::after {
    height: 1rpx;
    border-top: 1rpx solid #e5e5e5;
    content: "";
    display: block;
    width: 86rpx;
    position: absolute;
    right: -86rpx;
    top: 17rpx;
}

.sharecut-detail__time .time {
    color: #f44;
}

.sharecut-detail__friend {
    margin: 0 auto;
    margin-top: 30rpx;
    text-align: center;
    height: 94rpx;
    padding-bottom: 44rpx;
}

.sharecut-detail__many-friend {
    padding-left: 64rpx;
}

.sharecut-detail__friend image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
}

.sharecut-detail__price {
    height: 28rpx;
    min-width: 60rpx;
    border-radius: 28rpx;
    background: #ff5050;
    color: #fff;
    font-size: 8px;
    line-height: 28rpx;
    position: absolute;
    top: 66rpx;
    left: 10rpx;
}

.sharecut-detail__avatar {
    position: relative;
    height: 80rpx;
    width: 80rpx;
    display: inline-block;
    margin-right: 20rpx;
}

.icon-money-bag {
    width: 24rpx;
    height: 32rpx;
    display: inline-block;
    background: url('https://img.yzcdn.cn/v2/mars/images/sharecut/icon-money-bag.png');
    background-size: 24rpx 32rpx;
    position: relative;
    top: 6rpx;
}

.icon-arrow {
    background: url('https://img.yzcdn.cn/v2/mars/images/sharecut/icon-arrow.png');
    width: 12rpx;
    height: 20rpx;
    display: inline-block;
    background-size: 12rpx 20rpx;
    position: relative;
    bottom: 1rpx;
}

.friend-scroll-wrap {
    overflow-y: scroll;
}

::-webkit-scrollbar {
    height: 0;
    width: 0;
    color: transparent;
}

.sharecut-rules .noborder {
    border-bottom: none;
}

.sharecut-rules .arrow {
    width: 36px;
    height: 28px;
    margin-top: -7px;
}

.sharecut-btn-disabled {
    background-color: #f3f3f3;
    border: #bbb;
    color: #999;
}

.sharecut-btn-disabled .icon-money-bag {
    width: 24rpx;
    height: 32rpx;
    display: inline-block;
    background: url('https://img.yzcdn.cn/v2/mars/images/sharecut/icon-money-bag-disabled.png');
    background-size: 24rpx 32rpx;
    position: relative;
    top: 6rpx;
}

.sharecut-btn-disabled .icon-arrow {
    background: url('https://img.yzcdn.cn/v2/mars/images/sharecut/icon-arrow-disabled.png');
    width: 12rpx;
    height: 20rpx;
    display: inline-block;
    background-size: 12rpx 20rpx;
    position: relative;
    bottom: 1rpx;
}