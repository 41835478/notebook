@import "../../../components/followWechat/tips/followWechat.wxss";

@import "../../../components/followWechat/followYZ.wxss";

.cart__hd {
    position: relative;
    height: 46px;
}

.cart__hd .checkbox {
    height: 46px;
}

.cart__hd .shop-name {
    line-height: 46px;
    font-size: 14px;
    color: #333;
    margin-right: 60px;
}

.cart__hd .shop-opt {
    position: absolute;
    top: 0;
    right: 0;
    color: #999;
    font-size: 12px;
    height: 46px;
    padding: 0 14px;
    line-height: 46px;
    text-align: center;
}

.cart__bd {
    overflow: hidden;
}

.cart__item {
    position: relative;
    width: 100%;
    background: #fff;
    margin-bottom: 10px;
    overflow: hidden;
}

.cart__item-bd {
    position: relative;
    z-index: 2;
    background: #fafafa;
    transition: transform 0.2s ease-out;
    transition: transform 0.2s ease-out,-webkit-transform 0.2s ease-out;
}

.cart__item-bd--translate {
    transform: translateX(-60px);
}

.cart__item-ft {
    position: absolute;
    top: 0;
    right: 0;
    width: 60px;
    height: 100px;
    line-height: 100px;
    background: #FF4343;
    font-size: 14px;
    color: #fff;
    text-align: center;
}

.checkbox {
    position: relative;
    float: left;
    width: 45px;
    height: 100px;
}

.checkbox-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.cart__goods {
    margin-left: 45px;
}

.zan-card {
    padding-left: 0;
}

.zan-card__detail {
    height: 90px;
}

.goods__title {
    font-size: 14px;
    color: #333;
    line-height: 20px;
}

.goods__sku {
    margin-top: 5px;
    font-size: 12px;
    line-height: 12px;
    height: 12px;
    color: #666;
}

.goods__price {
    position: absolute;
    left: 0;
    bottom: 0;
    font-size: 14px;
    color: #f44;
}

.goods__error-msg {
    position: absolute;
    left: 0;
    bottom: 0;
    color: #f60;
    margin-top: 4px;
    font-size: 12px;
}

.goods__stepper {
    position: absolute;
    right: 0;
    bottom: 0;
    color: #666;
    font-size: 12px;
}

.goods__stepper-select {
    display: none;
}

.cart--edit-model .goods__title,.cart--edit-model .goods__stepper {
    display: none;
}

.cart--edit-model .goods__stepper-select {
    display: block;
}

.cart--edit-model .cart__item-bd {
    margin-right: 45px;
}

.cart--edit-model .cart__item-ft {
    z-index: 3;
}

.unavailable-title {
    margin-top: 20px;
    color: #999;
    font-size: 12px;
    text-align: center;
}

.clear-unavailable-goods {
    text-align: center;
    margin: 10px 0 15px 0;
}

.bottom-fixed {
    bottom: 0;
    left: 0;
    right: 0;
    position: fixed;
    width: 100%;
    background: #fcfcfc;
    border-top: 1rpx solid #e5e5e5;
    z-index: 4;
}

.bottom-checked-all {
    float: left;
    width: 80px;
}

.bottom-checked-all__text {
    float: left;
    width: 35px;
    height: 50px;
    line-height: 50px;
    color: #333;
    font-size: 14px;
}

.bottom-price-info {
    color: #999;
    text-align: right;
    font-size: 12px;
    line-height: 18px;
    padding: 6px 10px;
    margin-right: 110px;
}

.bottom-btn {
    float: right;
    width: 110px;
}

.bottom-btn .zan-btn--large {
    font-size: 14px;
}

.cart-single-pay-tips {
    font-size: 12px;
    color: #FF6600;
    line-height: 70rpx;
    text-align: center;
    background: #FFF7CC;
}

.empty-cart {
    padding-top: 60px;
    text-align: center;
}

.empty-cart view {
    margin-bottom: 10px;
}

.empty-cart .zan-btn {
    display: inline-block;
    width: 105px;
    margin-top: 20px;
}

.cartpay__content {
    width: 100%;
}

.cartpay__panel {
    margin-top: 0;
    max-height: 800rpx;
    overflow: auto;
}

.cartpay__head {
    padding: 15px 15px;
}

.cartpay__close {
    color: #666;
    font-size: 1.5em;
}

.cartpay__title {
    display: flex;
    justify-content: center;
    font-size: 16px;
}

.cartpay__shopname {
    font-size: 14px;
}

.cartpay__shopinfo {
    font-size: 12px;
}

.cartpay__price {
    display: inline;
    color: #f60;
}

.cartpay .zan-cell::after {
    left: 0;
}