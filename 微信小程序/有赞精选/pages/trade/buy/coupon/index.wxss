@import "../../../../components/coupon/coupon_cell.wxss";

.coupon-code-exchange {
    border-bottom: 1rpx solid #e5e5e5;
    padding: 14rpx 30rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    background-color: #fff;
}

.coupon-exchange__input {
    width: 70%;
    height: 60rpx;
    color: #333;
    font-size: 28rpx;
}

.coupon-exchange__button {
    width: 120rpx;
    height: 60rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 4rpx;
    color: #999999;
    background-color: #e5e5e5;
    border-width: 1rpx;
    border-color: #CACACA;
}

.coupon-exchange__button.enable {
    color: #fff;
    background-color: #ff4444;
}

.coupon-exchange_error {
    height: 22rpx;
    color: #ff4444;
    font-size: 22rpx;
    margin-bottom: 6rpx;
}

.coupon-not-use {
    height: 88rpx;
    line-height: 88rpx;
    border-top: 1rpx solid #BBB;
    color: #333;
    font-size: 32rpx;
    text-align: center;
    position: fixed;
    bottom: 0px;
    left: 0px;
    right: 0px;
    background-color: #fff;
}