.segmentedControl {
    margin: 15px auto;
    border: 1px solid #666666;
    border-radius: 4rpx;
    width: 304px;
    height: 24px;
}

.segmentedControl text {
    float: left;
    width: 151px;
    font-size: 12px;
    color: #666666;
    line-height: 24px;
    text-align: center;
    border-right: 1px solid #666666;
}

.segmentedControl text.selected {
    background-color: #666666;
    color: white;
}

.segmentedControl text.last {
    border-right: 0;
    width: 152px;
}

.shop__im-icon {
    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
    width: 16px;
    height: 16px;
    background: url("https://img.yzcdn.cn/public_files/2016/12/02/8812ea19818110de677ac215286b3005.png") center no-repeat;
    background-size: 16px 16px;
}

.column-divider {
    width: 1px;
    height: 40px;
    background: #eeeeee;
}