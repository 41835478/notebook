.unavailable__tips {
    margin: 20px 0 10px;
    text-align: center;
    color: #999;
    font-size: 12px;
}

.unavailable__panel {
    position: relative;
    padding: 5px 0;
    padding-left: 15px;
    white-space: nowrap;
}

.unavailable__image {
    width: 90px;
    height: 90px;
    margin-right: 5px;
}

.unavailable__action {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 80px;
    line-height: 100px;
    padding-right: 10px;
    background-color: #fff;
    text-align: right;
    font-size: 14px;
    color: #666;
}

.unavailable__action::after {
    content: '';
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #c8c8c8;
    border-style: solid;
    transform: translateY(-20%) matrix(0.71,0.71,-0.71,0.71,0,0);
}

.unavailable-dialog__list {
    max-height: 60vh;
    overflow: scroll;
}

.unavailable-dialog__tag {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    line-height: 20px;
    text-align: center;
    font-size: 12px;
    color: #fff;
    background-color: rgba(0,0,0,0.6);
}

.order-container {
    background-color: #f8f8f8;
}

.sms {
    padding: 6px 15px;
}

.sms__title {
    line-height: 32px;
}

.sms__ft {
    height: 32px;
}

.sms__switch {
    width: 51px;
    height: 32px;
}

.order-total {
    overflow: hidden;
    padding: 12px 15px;
    line-height: 26px;
}

.order-tip {
    margin-top: 20px;
    height: 100px;
}

.order-tip__img {
    width: 59px;
    height: 16px;
    vertical-align: text-bottom;
}