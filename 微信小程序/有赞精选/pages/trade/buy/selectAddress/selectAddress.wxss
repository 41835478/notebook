@import "../../../goods/search/search/index.wxss";

.cancelText {
    position: relative;
    color: #38f;
    font-size: 28rpx;
    padding-left: 30rpx;
    width: 10%;
    padding-top: 15rpx;
}

.selectGoodsText {
    background: #ededed;
    color: #666;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
}

.searchCityBg {
    width: 100%;
    height: 80rpx;
    background: red;
}

.searchCityBgView {
    width: 100%;
    height: 80rpx;
    background: red;
}

.addressViewBg {
    background-color: #F8F8F8;
    height: 80rpx;
    width: 100%;
    display: flex;
    position: relative;
}

.addressShowText {
    font-size: 28rpx;
    color: #666;
    padding-top: 20rpx;
    padding-left: 30rpx;
}

.pullDownImage {
    width: 25rpx;
    height: 30rpx;
    padding-left: 20rpx;
    padding-top: 26rpx;
}

.searchImage {
    width: 35rpx;
    height: 35rpx;
    padding-top: 26rpx;
    position: absolute;
    right: 20rpx;
}

.tableViewCell {
    display: flex;
    width: 100%;
    background-color: #fff;
    position: relative;
}

.addressLineViewClass {
    height: 2rpx;
    width: 100%;
    background-color: #ededed;
}

.addressLineViewCellClass {
    position: absolute;
    left: 30rpx;
    bottom: 0px;
    right: 0px;
    height: 2rpx;
    background-color: #ededed;
}

.adreessDetail {
    display: block;
}

.topAddressDetail {
    font-size: 26rpx;
    color: #333333;
    padding-top: 18rpx;
    padding-left: 20rpx;
}

.bottomAddressDetail {
    font-size: 24rpx;
    color: #999999;
    padding-top: 8rpx;
    padding-left: 20rpx;
}

.radioButton {
    padding-left: 30rpx;
    padding-top: 26rpx;
    size: 36rpx;
}

.searchAdressBg {
    display: flex;
    background-color: #F8F8F8;
    border-bottom: #E6E6EA solid;
    border-width: 2rpx;
}

.searchInputBg {
    width: 100%;
    height: 86rpx;
}