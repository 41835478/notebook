.shop__shopname {
    height: 50px;
    line-height: 50px;
    padding-left: 38px;
    background-image: url("https://img.yzcdn.cn/public_files/2017/10/31/c614843f332096b49b34bb101d4828d8.png");
    background-size: 14px 14px;
    font-size: 14px;
    background-repeat: no-repeat;
    background-position: left;
    background-position-x: 15px;
}

.order-panel__title {
    align-self: flex-start;
}

.shop__im {
    line-height: 16px;
}

.shop__im-icon {
    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
    width: 16px;
    height: 16px;
    background: url("https://img.yzcdn.cn/public_files/2016/12/02/8812ea19818110de677ac215286b3005.png") center no-repeat;
    background-size: 16px 16px;
}

.shop__im-desc {
    margin-top: -8rpx;
    vertical-align: middle;
}

.shop__phone-desc {
    vertical-align: middle;
}

.column-divider {
    width: 1px;
    height: 40px;
    background: #eeeeee;
}

.message__contact-button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120px;
    opacity: 0;
}

.activity-tag {
    color: white;
    background-color: #ff4444;
    font-size: 10px;
    line-height: 14px;
    padding: 2px 3px;
    border-radius: 2px;
    border-color: #ff5050;
}

@import "../templates/self_fetch/self_fetch_detail.wxss";

@import "../templates/pintuan/pintuan.wxss";

@import "../../../components/share/shareDialog.wxss";

.order-total {
    overflow: hidden;
    padding: 0;
}

.order-total__cell {
    line-height: 26px;
}

.order-info__cell {
    line-height: 22px;
}

.virtual-code__code {
    padding: 0;
}

.virtual-code__image {
    width: 320px;
    height: 320px;
}

.paid--success__panel {
    margin-top: 0;
    height: 100vh;
    border-top: 0 none;
    overflow: auto;
}

.paid-success {
    background: #fff;
    margin: 0;
    padding: 0;
    border: 0;
    font: inherit;
    font-size: 100%;
    vertical-align: baseline;
    -webkit-tap-highlight-color: transparent;
}

.order-item__action {
    margin-right: 10px;
}

.order-item__extra-row {
    padding: 10px 15px;
}

.bottom-fixed {
    bottom: 0;
    left: 0;
    right: 0;
    position: fixed;
    height: 30px;
    background: #fcfcfc;
    z-index: 4;
}

.contact-support {
    position: relative;
}

.contact-support__btn {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}