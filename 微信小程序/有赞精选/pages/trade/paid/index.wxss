.paid--success__panel {
    margin-top: 0;
    border-top: 0 none;
}

.paid-success_panel .success {
    background: #fff;
    margin: 0;
    padding: 0;
    border: 0;
    font: inherit;
    font-size: 100%;
    vertical-align: baseline;
    -webkit-tap-highlight-color: transparent;
}

.paid--success__logo {
    padding: 30px 0 10px;
    text-align: center;
}

.paid--success__tips {
    padding: 0 10px;
    font-size: 16px;
    text-align: left;
    display: inline-block;
    vertical-align: top;
    line-height: 20px;
    margin-bottom: 20px;
}

.paid--success__price {
    font-size: 20px;
}

.paid--success_self_fetch_tips {
    height: 12px;
    color: #666;
    font-size: 12px;
    padding-top: 10px;
    text-align: center;
}

.guess--title {
    font-size: 24rpx;
    color: #999999;
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-top: 10px;
    text-align: center;
}

.banner {
    width: 100%;
    height: 348rpx;
    margin-top: 10px;
    background-size: 100% 348rpx;
    background-image: url('https://img.yzcdn.cn/mars/image/010cecab7f3a.png');
}