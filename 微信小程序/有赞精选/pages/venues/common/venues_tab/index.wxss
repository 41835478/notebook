.zan-tab-fix {
    position: relative;
    height: 80rpx;
}

.zan-tab {
    width: 100vw;
    overflow-x: scroll;
    height: auto;
    background-color: #fff;
    border-bottom: 1rpx solid #e5e5e5;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 80rpx;
    z-index: 10;
}

.zan-tab__title {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #333333;
    position: relative;
}

.zan-tab__bd {
    border: none;
}

.zan-tab__bd--scroll {
    display: table;
    box-sizing: border-box;
    padding-left: 96rpx;
}

.zan-tab__bd--scroll .zan-tab__item {
    min-width: 0;
    position: relative;
    overflow: visible;
}

.zan-tab__title {
    margin: 0 20rpx;
}

.zan-tab__item--selected.zan-tab__title,.zan-tab__item--selected .zan-tab__title {
    border-bottom: 6rpx solid #fff;
    color: #EE0000;
}

.zan-tab__item--selected.zan-tab__title {
    border-bottom: none;
}

.zan-tab__title.zan-tab__fixed {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
    background: #fff;
    padding: 0 20rpx;
    margin: 0;
}

.zan-tab__title.zan-tab__fixed:before {
    content: ' ';
    width: 1rpx;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    height: 50rpx;
    background-color: #e5e5e5;
}

.zan-tab__item--selected.zan-tab__title:after,.zan-tab__item--selected .zan-tab__title:after {
    content: '';
    display: block;
    height: 6rpx;
    width: 40rpx;
    background-color: #EE0000;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}

.zan-tab__item .icon {
    display: none;
}

.zan-tab__hot .icon {
    display: block;
    width: 23rpx;
    height: 23rpx;
    position: absolute;
    z-index: 9;
    top: 5rpx;
    right: 10rpx;
}

.zan-tab__button {
    background-color: transparent;
    border: none;
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
}

.zan-tab__button::after {
    display: none;
}

.formid-ele {
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.formid-ele text {
    display: none;
}