.goods-item {
    margin: 0 10rpx 10rpx 0;
    width: calc((100% - 10rpx) / 2);
    height: 532rpx;
    background-color: #fff;
}

.goods-item:nth-child(2n) {
    margin-right: 0;
}

.goods-item__image-wrap {
    position: relative;
}

.goods-item__image {
    width: 100%;
}

.goods-item__image-mask {
    background: rgba(0,0,0,0.5) url('https://img.yzcdn.cn/public_files/2017/10/11/f8dd02fc590df5b49ddd941fbafe3c86.png') center/50% no-repeat;
    display: none;
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.goods-item__image-wrap.soldout .goods-item__image-mask {
    display: block;
}

.goods-item__title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin: 10rpx 20rpx 20rpx;
    height: 36px;
    line-height: 18px;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #666;
}

.goods-item__price {
    margin-left: 16rpx;
    font-family: PingFang-SC-Medium;
    font-size: 18px;
    color: #f44;
}

.banner {
    width: 100%;
    height: 320rpx;
    vertical-align: bottom;
}

.description {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin: 10px 10px 13px;
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #666;
}

.zan-tab--sticky {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
}