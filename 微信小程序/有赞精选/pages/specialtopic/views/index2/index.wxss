.section-container {
    background-color: #f5f5f5;
}

.section-container image {
    vertical-align: bottom;
}

.section-title {
    box-sizing: border-box;
    height: 44px;
    padding: 20px 10px 10px;
    background: #f4f4f4;
    font-size: 14px;
}

.section-title__line {
    border-bottom: 1px solid #e3e3e3;
    margin-top: 7px;
    width: 100%;
}

.section-title__content {
    display: table;
    margin: -9px auto 0;
    padding: 0 7px;
    background: #f4f4f4;
    text-align: center;
}

.section-image {
    width: 100%;
}

.section-description {
    padding: 10px;
    line-height: 21px;
    font-size: 12px;
    color: #666;
}

.zan-tab {
    position: sticky;
    top: 0;
    z-index: 11;
}