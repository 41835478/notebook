.state-list {
    display: flex;
    justify-content: space-around;
    font-size: 12px;
}

.state-list__item {
    padding: 20px 0;
    flex: 1;
    text-align: center;
    color: #333;
}

.state-list__icon {
    position: relative;
    width: 24px;
    height: 24px;
    font-size: 24px;
    margin: 0 auto 10px;
}

.cart-count {
    display: inline-block;
    font-size: 12px;
    line-height: 18px;
    height: 18px;
    background: #98A1A9;
    color: #fff;
    padding: 0 9px;
    border-radius: 9px;
    vertical-align: middle;
}

.banner {
    position: relative;
    width: 750rpx;
    height: 345rpx;
    background: #FF5353;
    color: #fff;
    overflow: hidden;
}

.banner__logo {
    display: block;
    margin: 63rpx auto 0;
    width: 161rpx;
    height: 161rpx;
    border: 4rpx solid white;
    border-radius: 50%;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
}

.banner__title {
    text-align: center;
    font-size: 14px;
    padding: 29rpx;
}

.banner--usercenter {
    background: #FFF;
    color: #333;
    border-bottom: 1rpx solid #e5e5e5;
}

.message--contact {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.separator-container {
    background-color: #ffffff;
    height: 1rpx;
    padding-left: 15px;
}

.separator {
    height: 100%;
    background-color: #e5e5e5;
}

.order-type-icon {
    width: 28px;
    height: 28px;
}

.zan-panel-no-border-top {
    border-top: 0rpx;
}

.zan-panel-no-border-bottom {
    border-bottom: 0rpx;
}