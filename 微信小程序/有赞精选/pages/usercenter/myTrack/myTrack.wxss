.timetext {
    height: 72rpx;
    width: 100%;
    background-color: #F8F8F8;
}

.timetext text {
    font-size: 14px;
    margin-left: 30rpx;
    color: #999999;
    line-height: 72rpx;
}

.item {
    height: 260rpx;
    width: 690rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.item-left {
    width: 220rpx;
    height: 220rpx;
}

.item-right {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 220rpx;
    margin-left: 20rpx;
    width: 450rpx;
}

.item-title {
    font-size: 14px;
    height: 80rpx;
    line-height: 40rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.item-price {
    color: red;
    font-size: 18px;
}

.line {
    width: 100%;
    height: 0.5px;
    margin-left: 30rpx;
    background-color: #E5E5E5;
}