@import "../../../templates/loadMore/loadMore.wxss";

.page-content__empty-btn {
    width: 150rpx;
}

.page-content--goods {
    padding: 0 10rpx 0 10rpx;
}

.page-content--goods .page-content__goods {
    display: flex;
    justify-content: space-between;
    margin-top: 0;
}

.page-content--goods .page-content__goods:first-child {
    margin-top: 15rpx;
}

.page-content--goods .page-content__goods-item {
    margin-bottom: 10rpx;
    width: calc((100vw - 30rpx) / 2);
}

.page-content--store {
    padding: 0 20rpx;
}

.page-content--store .page-content__block:first-child {
    margin-top: 20rpx;
}

.page-content--store .page-content__goods-item {
    margin: 0 10rpx 10rpx 0;
    width: 217rpx;
    height: 217rpx;
}

.page-content--store .page-content__goods-item:nth-child(3n) {
    margin-right: 0;
}

.page-content__goods {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
    margin-top: 20rpx;
}

.page-content__goods-store-new {
    position: relative;
    display: block;
    width: 100%;
    height: 446rpx;
}

.page-content__goods-store-new .page-content__goods-item {
    position: absolute;
    margin: 0;
    width: 222rpx;
    height: 222rpx;
}

.page-content__goods-store-new .page-content__goods-item:first-child {
    top: 0;
    left: 0;
    width: calc(100% - 225rpx);
    height: 446rpx;
}

.page-content__goods-store-new .page-content__goods-item:nth-child(2) {
    top: 0;
    right: 0;
    margin-bottom: 2rpx;
}

.page-content__goods-store-new .page-content__goods-item:nth-child(3) {
    right: 0;
    bottom: 0;
}

.page-content__goods-empty {
    width: 100%;
    line-height: 217rpx;
    font-size: 28rpx;
    color: #999;
    text-align: center;
}

.page-content__block {
    margin-bottom: 20rpx;
    padding: 16rpx 20rpx;
    border-radius: 8rpx;
    background-color: #fff;
}

.selector__popup-item {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 2rpx solid #f8f8f8;
    text-align: center;
}

.selector__popup-item:last-child {
    border-bottom: 0;
}

.selector {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    width: 130rpx;
    padding-left: 26rpx;
    font-size: 28rpx;
    color: #666;
}

.selector .zan-icon-arrow {
    margin: 0 13rpx 0 12rpx;
    font-size: 14rpx;
    transform: rotate(90deg);
}

.selector__popup {
    position: absolute;
    top: 40rpx;
    left: 0;
    width: 100%;
    border-radius: 8rpx;
    background-color: #fff;
    opacity: 0;
    transition: all 0.2s linear;
    visibility: hidden;
    z-index: 11;
}

.selector__popup--show {
    opacity: 1;
    visibility: visible;
    transform: translateY(20rpx);
}

.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.page-header__tab {
    width: calc(100vw - 130rpx);
}

.page-content {
    height: calc(100vh - 36px);
    box-sizing: border-box;
    background-color: #f8f8f8;
}

.page-content__empty {
    margin-top: 82rpx;
    text-align: center;
}

.page-content__empty-text {
    color: #999999;
    font-size: 28rpx;
    width: 300rpx;
    padding-bottom: 20rpx;
    margin: 0 auto;
}

.store__description {
    font-size: 24rpx;
    color: #999;
}

.store__cert {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 22rpx;
    color: #666;
}

.store__cert-block {
    margin-right: 12rpx;
}

.zan-icon-certificate {
    font-size: 20rpx;
    color: #06bf04;
}