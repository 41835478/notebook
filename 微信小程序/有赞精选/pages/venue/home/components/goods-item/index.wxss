.goods-item__old-price {
    font-size: 22rpx;
    color: #ccc;
    text-decoration: line-through;
}

.goods-item__price {
    margin-right: 8rpx;
    line-height: 40rpx;
    font-size: 20rpx;
    font-weight: 700;
    color: #f40;
}

.goods-item__price>text {
    font-size: 28rpx;
}

.goods-item__title {
    white-space: no-wrap;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-top: 4rpx;
    font-size: 24rpx;
    color: #333;
}

.goods-item__detail {
    display: flex;
    justify-content: center;
    align-items: center;
}

.goods-item__groupon {
    display: flex;
    align-items: center;
    border: 1rpx #f44 solid;
    border-top-left-radius: 6rpx;
    border-top-right-radius: 6rpx;
    overflow: hidden;
    background: #f44;
}

.goods-item__groupon--label {
    padding: 0 12px;
    font-size: 12px;
    color: #f44;
    background: #fff;
}

.goods-item__groupon--content {
    font-size: 12px;
    color: #fff;
    text-align: center;
    flex-grow: 2;
}

.goods-item__groupon-wrap {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
}

.goods-item__image {
    width: 100%;
    vertical-align: bottom;
}

.goods-item {
    position: relative;
    display: inline-block;
    width: 200rpx;
    height: 100%;
    background-color: #fff;
}

.goods-item .form-id-row {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.goods-item__image-wrap {
    position: relative;
}