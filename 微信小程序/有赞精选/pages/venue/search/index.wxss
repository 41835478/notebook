.page-search {
    position: relative;
}

.page-search .search-view {
    background: #ffffff;
    width: 100%;
    height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 13px;
    position: relative;
    position: -webkit-sticky;
    position: sticky;
}

.page-search .search-view .search-icon {
    position: absolute;
    left: 50rpx;
    top: 50%;
    width: 28rpx;
    height: 28rpx;
    z-index: 1;
    transform: translateY(-50%);
    background: url("https://img.yzcdn.cn/mars/image/search.png") no-repeat center center;
    background-size: 28rpx 28rpx;
}

.page-search .search-view ::-webkit-input-placeholder {
    color: #666666;
}

.page-search .search-view .search-input {
    flex: 6;
    height: 58rpx;
    line-height: 58rpx;
    background: #F6F5F5;
    color: #666666;
    padding-left: 72rpx;
    border-radius: 32rpx;
    margin: 0 24rpx;
}

.page-search .search-view .search-cancel {
    flex: 1;
    color: #666666;
    z-index: 10;
}

.page-search .search-view:after {
    content: "";
    transform: scale(0.5);
    position: absolute;
    border-bottom: 1px solid #D9D9D9;
    top: -50%;
    right: -50%;
    bottom: -50%;
    left: -50%;
}

.page-search .search-null {
    padding: 100rpx 0 30rpx 0;
    font-size: 13px;
    color: #666666;
    text-align: center;
}

.page-search .search-container {
    width: 100%;
}

.page-search .search-container .search-recommend {
    padding: 34rpx 30rpx 0 30rpx;
}

.page-search .search-container .search-recommend .container-tab {
    display: flex;
    justify-content: space-between;
    color: #333333;
    font-size: 13px;
}

.page-search .search-container .search-recommend .container-tab .container-title {
    flex: 1;
}

.page-search .search-container .search-recommend .container-tab .delete-icon {
    font-size: 14px;
    color: #5C5C5C;
    position: relative;
}

.page-search .search-container .search-recommend .container-items {
    padding-top: 14rpx;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    color: #333333;
    font-size: 12px;
}

.page-search .search-container .search-recommend .container-items .classify-item-title {
    text-align: center;
    display: inline-block;
    vertical-align: middle;
    line-height: 12px;
}

.page-search .search-container .search-recommend .container-items .container-item {
    border-radius: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    background: #F6F5F5;
    padding: 12rpx 30rpx;
    margin: 0 20rpx 20rpx 0;
    position: relative;
}

.page-search .search-container .search-recommend .container-items .classify-item {
    width: 120rpx;
    height: 148rpx;
    border: none;
    margin: 0 64rpx 40rpx 0;
    line-height: 50rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    position: relative;
    background-repeat: no-repeat;
    background-size: 120rpx 114rpx;
    background-position: center top;
}

.page-search .search-container .search-recommend .container-items .classify-item:nth-child(4n) {
    margin-right: 0;
}

.page-search .search-container .search-recommend .container-items-recent {
    max-height: 210rpx;
    overflow: hidden;
}

.page-search .associate-container {
    padding-left: 5%;
    width: 100%;
}

.page-search .associate-container .associate-item {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 16px;
    color: #999;
    border-bottom: 1px #eee solid;
    width: 95%;
}

.page-search .result-container {
    min-height: calc(100vh - 90rpx);
    background: #F8F8F8;
}

.page-search .result-container .goods-wrap {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 10rpx;
    box-sizing: border-box;
}

.page-search .result-container .goods-wrap .goods-item {
    margin: 0 10rpx 10rpx 0;
    width: calc((100% - 10rpx) / 2);
}

.page-search .result-container .goods-wrap .goods-item:nth-child(2n) {
    margin-right: 0;
}