.gray-bg {
    height: 100%;
    position: fixed;
    top: 0px;
    left: 0px;
    right: 0px;
    background-color: rgba(0,0,0,0.7);
    z-index: 10;
}

.qrcode-container-all {
    width: 100%;
    height: 100%;
}

.qrcode-container {
    position: absolute;
    border: 1px solid #e5e5e5;
    border-left-color: rgba(0,0,0,0.7);
    border-right-color: rgba(0,0,0,0.7);
    background-color: #fff;
    overflow: hidden;
    z-index: 11;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0px);
    visibility: visible;
    border-radius: 4px;
    background: white;
    width: 300px;
    height: 415px;
}

.qrcode-container .h3 {
    color: #333333;
    line-height: 74px;
    text-align: center;
    border-bottom: 1px dashed #e5e5e5;
}

.qrcode-container .left-circle,.qrcode-container .right-circle {
    background-color: rgba(0,0,0,0.7);
    width: 7px;
    height: 14px;
    position: absolute;
    top: 67px;
}

.qrcode-container .left-circle::before,.qrcode-container .right-circle::before {
    content: '';
    position: absolute;
    width: 6px;
    height: 12px;
    top: 1px;
    background-color: rgba(0,0,0,0.7);
}

.qrcode-container .left-circle {
    left: -1px;
    border-radius: 0 14px 14px 0;
}

.qrcode-container .left-circle::before {
    left: 0;
    border-radius: 0 12px 12px 0;
}

.qrcode-container .right-circle {
    right: -1px;
    border-radius: 14px 0 0 14px;
}

.qrcode-container .right-circle::before {
    right: 0;
    border-radius: 12px 0 0 12px;
}

.code-container {
    max-height: 300px;
    max-height: 80vh;
}

.code {
    padding: 0 10px;
    text-align: center;
}

.code .p {
    color: #666;
    margin-top: 10px;
    line-height: 16px;
}

.code .img {
    width: 200px;
    height: 200px;
    margin-top: 51px;
}

.long-press-tips {
    position: relative;
    line-height: 14px;
    color: #E5E5E5;
    text-align: center;
    margin-top: 517px;
    z-index: 12;
