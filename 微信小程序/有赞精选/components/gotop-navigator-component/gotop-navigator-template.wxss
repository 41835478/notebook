.widget-navigation {
    position: fixed;
    bottom: 115px;
    right: 5px;
    z-index: 9;
    width: 60px;
    height: 60px;
}

.widget-goTop {
    position: fixed;
    bottom: 55px;
    right: 11px;
    z-index: 9;
    width: 90rpx;
    height: 90rpx;
}

.mask {
    position: fixed;
    z-index: 10;
    background-color: transparent;
    height: 100%;
    width: 100%;
    top: 0px;
    left: 0px;
    overflow: hidden;
}

.back-mask {
    position: fixed;
    z-index: 10;
    background-color: black;
    opacity: 0;
    height: 100%;
    width: 100%;
    top: 0px;
    left: 0px;
    overflow: hidden;
}

.btn_container {
    position: fixed;
    background-color: transparent;
    height: 100%;
    width: 100%;
    top: 0px;
    left: 0px;
    overflow: hidden;
    z-index: 11;
}

.widget-homepage {
    width: 78px;
    height: 40px;
    position: fixed;
    opacity: 0;
    right: 15px;
    bottom: 127px;
}

.widget-track {
    width: 78px;
    height: 40px;
    opacity: 0;
    position: fixed;
    right: 15px;
    bottom: 127px;
}

.widget-me {
    width: 64px;
    height: 40px;
    opacity: 0;
    position: fixed;
    right: 15px;
    bottom: 127px;
}

.widget-share {
    width: 90rpx;
    height: 90rpx;
    position: fixed;
    right: 11px;
    bottom: 105px;
    background-color: transparent;
    border: 0;
}

.widget-cancel {
    width: 40px;
    height: 40px;
    position: fixed;
    right: 15px;
    bottom: 127px;
    opacity: 0;
}

@media only screen and (device-width:375px) and (device-height:812px) and (-webkit-device-pixel-ratio:3) {
    .widget-navigation {
        bottom: 149px!important;
    }

    .widget-goTop {
        bottom: 95px!important;
    }

    .widget-cancel,.widget-share,.widget-me {
        bottom: 149px!important;
    }
}