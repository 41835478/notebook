.acc-dlg {
    background-color: rgba(0,0,0,0.3);
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    bottom: 0;
    z-index: 99;
}

.acc-dlg .acc-dlg__bd {
    background-color: white;
    display: flex;
    flex-direction: column;
    border-radius: 8rpx;
    padding-bottom: 40rpx;
    width: 600rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.acc-dlg__bd .acc-dlg--close {
    height: 88rpx;
    width: 88rpx;
    position: absolute;
    right: 0;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.acc-captcha {
    display: flex;
    justify-content: space-between;
    margin-top: 24rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
}

.acc-captcha .acc-captcha__bd {
    margin-right: 24rpx;
    display: flex;
    align-items: center;
    border: #BBBBBB solid 2rpx;
    border-radius: 4rpx;
    flex: 1;
}

.acc-dlg__bd .acc-input__hint {
    height: 44rpx;
    text-align: left;
    color: #333333;
    font-size: 32rpx;
    margin-top: 40rpx;
    margin-left: 40rpx;
    margin-bottom: 40rpx;
}

.acc-dlg__bd .acc-input__line--horizontal {
    height: 2rpx;
    background-color: #E5E5E5;
    margin-top: 30rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.acc-dlg__bd .acc-input__line--right {
    margin: 10rpx 30rpx;
    color: #FF6600;
    line-height: 32rpx;
    font-size: 24rpx;
    height: 52rpx;
    display: flex;
    align-items: center;
}

.acc-dlg__bd .acc-input__bd {
    height: 90rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    border: #BBBBBB solid 2rpx;
    border-radius: 4rpx;
    display: flex;
    align-items: center;
}

.acc-input__title {
    font-size: 28rpx;
    color: #333333;
    width: 84rpx;
    margin-left: 20rpx;
    height: 90rpx;
    display: flex;
    align-items: center;
}

.acc-input__content {
    font-size: 28rpx;
    margin-left: 20rpx;
    margin-right: 10rpx;
    flex: 1;
    height: 90rpx;
}

.acc-dlg__action {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 90rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    margin-top: 40rpx;
    background-color: #44BB00;
    border-radius: 4rpx;
}

.acc-dlg__action .acc-btn--ok {
    font-size: 28rpx;
    color: white;
}

.acc-input--disabled {
    background-color: #f8f8f8;
}

.acc-dlg__action--bottom {
    display: -webkit-flex;
    justify-content: space-between;
    margin-left: 40rpx;
    margin-right: 40rpx;
    margin-top: 40rpx;
    padding: 0rpx;
}

.acc-btn--bottom {
    font-size: 24rpx;
    color: #999;
}

.acc-btn__separator--vertical {
    margin-left: 14rpx;
    margin-right: 14rpx;
    font-size: 24rpx;
    color: #999;
}

.acc-code {
    height: 90rpx;
    width: 160rpx;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border: #06BE04 solid 2rpx;
    border-radius: 4rpx;
}

.acc-code.acc-code--disabled {
    background-color: #ccc;
    border: #ddd solid 1rpx;
}

.acc-code.acc-code--enabled {
    background-color: white;
    border: #06BE04 solid 2rpx;
}

.acc-code .acc-code__btn--disabled {
    color: white;
}

.acc-code .acc-code__btn--enabled {
    color: #06BE04;
}