.cardContent .styledContent {
    font-family: Lantinghei SC;
    display: flex;
    justify-content: center;
    text-shadow: 0 4rpx 4rpx rgba(0,0,0,0.2);
}

.cardContent .styledContent .startMark.showMark {
    opacity: 1;
}

.cardContent .styledContent .startMark.hideMark {
    opacity: 0;
}

.cardContent .styledContent .afterMark {
    align-self: flex-end;
}

.cardContent .styledContent .afterMark.showMark {
    opacity: 1;
}

.cardContent .styledContent .afterMark.hideMark {
    opacity: 0;
}

.cardContent .styledContent .textAlignLeft {
    text-align: justify;
}

.cardContent .styledContent .textAlignCenter {
    text-align: center;
}

.cardContent .styledContent .contentLine {
    white-space: nowrap;
    line-height: 1.5;
}

.cardContent .fz-h5 {
    font-size: 22rpx;
}

.cardContent .fz-h4 {
    font-size: 22rpx;
}

.cardContent .fz-h3 {
    font-size: 26rpx;
}

.cardContent .fz-h2 {
    font-size: 31rpx;
}

.cardContent .fz-h1 {
    font-size: 36rpx;
}

.cardContent .rectline {
    margin: 30rpx auto;
    width: 43rpx;
    border-top: 3rpx solid white;
}

#hotpost-loadingbar {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 999;
    top: 0;
    display: none;
}

#hotpost-loadingbar.show {
    display: block;
}

#hotpost-loadingbar.hide {
    display: none;
}

#hotpost-loadingbar .flashy_loading {
    width: 240rpx;
    height: 240rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -120rpx;
    margin-left: -120rpx;
    border-radius: 8rpx;
}

#hotpost-loadingbar .flashy_loading .rotate {
    height: 60rpx;
    width: 60rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -30rpx;
    margin-left: -30rpx;
    background-image: url(data:image/png;base64,);
    background-size: 100%;
    -webkit-background-size: cover;
    background-size: cover;
    animation: rotate 0.7s linear infinite both;
}

@-webkit-keyframes rotate {
    0% {
        -webkit-transform: rotate(0deg);
    }

    50% {
        -webkit-transform: rotate(180deg);
    }

    100% {
        -webkit-transform: rotate(360deg);
    }
}

@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }

    50% {
        transform: rotate(180deg);
    }

    100% {
        transform: rotate(360deg);
    }
}