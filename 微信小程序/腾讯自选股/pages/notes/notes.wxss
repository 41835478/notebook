.notes {
}

.notes__h {
    height: 50rpx;
    background: #20272d;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    font-size: 30rpx;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.notes__h .red {
    color: #ff3d01;
}

.notes__h .green {
    color: #00ff00;
}

.notes__h__name {
    padding: 0 30rpx;
    width: 140rpx;
    text-align: center;
}

.notes__h__price {
    padding: 0 10rpx;
    font-size: 25rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
}

.notes__h__price view {
    margin: 0 10rpx;
    color: #5e6670;
}

.notes__c {
    font-size: 30rpx;
    padding: 10rpx;
}

.notes__button {
    width: 90%;
    background: #3d76b8;
    color: #f7fbff;
}