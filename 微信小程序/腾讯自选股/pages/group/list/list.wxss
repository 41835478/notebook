.glist {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    font-size: 30rpx;
}

.glist .on {
    font-weight: bold;
}

.glist .glist_edit {
    width: 70rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}

.glist .glist_done {
    width: 70rpx;
    display: none;
}

.glist .edit_item {
    width: 70rpx;
    display: none;
}

.glist .del_item {
    width: 70rpx;
    display: none;
}

.glist__title {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    height: 70rpx;
    background-color: #18212c;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    padding: 0 20rpx;
}

.glist__title .name {
    -webkit-box-flex: 1;
    flex: 1;
}

.glist__title .hover {
}

.glist__tr {
    border-bottom: 1rpx solid $splitBorderColor;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    height: 100rpx;
    padding: 0 20rpx;
}

.glist__tr .name {
    -webkit-box-flex: 1;
    flex: 1;
}

.glist__tr__noborder {
    border-bottom: none;
}

.glist__add {
    position: absolute;
    padding: 20rpx 0;
    bottom: 0;
    height: 70rpx;
    width: 100%;
    color: $blue;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
}

.glist__add__button {
    height: 70rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 30rpx;
    background-position-x: 25rpx;
    background-position-y: 20rpx;
    padding: 0 20rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: end;
    -ms-flex-pack: end;
    justify-content: flex-end;
    width: 180rpx;
}

.edit .glist_edit {
    display: none;
}

.edit .glist_done {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}

.edit .edit_item {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}

.edit .del_item {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}