.gadd {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    font-size: 30rpx;
}

.gadd__title {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    height: 70rpx;
    background-color: #18212c;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    padding: 0 20rpx;
    color: #47505d;
}

.gadd__c {
    height: 300rpx;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    padding: 50rpx 40rpx;
}

.gadd__c__input {
    padding: 0 20rpx;
    height: 70rpx;
    border-bottom: 2rpx solid #2158b1;
}

.gadd__c__button {
    -webkit-appearance: none;
    margin-top: 30rpx;
    font-size: 34rpx;
    width: 100%;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -ms-flex-pack: center;
    justify-content: center;
    box-pack: center;
    height: 84rpx;
    background-color: #3083e3;
    border-radius: 5px;
    text-align: center;
    color: #fff;
}