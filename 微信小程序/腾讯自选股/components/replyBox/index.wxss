.replyBox_foot {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 110rpx;
    background-color: #f3f3f3;
    box-shadow: 0 0 0 1px #e5e5e5;
    text-align: center;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -ms-flex-pack: distribute;
    justify-content: space-around;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
}

.replyBox_foot__iphonex {
    padding-bottom: 50rpx;
}

.replyBox_foot_input {
    position: relative;
    display: inline-block;
    width: 80%;
    line-height: 74rpx;
    background-color: #fff;
    color: #939393;
    font-size: 28rpx;
    text-align: left;
    z-index: 2;
}

.replyBox_foot_input::after,.replyBox_foot_input::before {
    position: absolute;
    content: '';
    top: 0;
    height: 74rpx;
    width: 74rpx;
    border-radius: 60%;
    background-color: #fff;
    z-index: -1;
}

.replyBox_foot_input::before {
    left: -37rpx;
}

.replyBox_foot_input::after {
    right: -37rpx;
}