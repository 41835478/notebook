@import "shop_template/shop_template.wxss";

@import "shop_template/floorTemplate.wxss";

@import "../../__wuBaseWxss__/5.wxss";

@import "components/skuList/index.wxss";

page {
    background-color: #f8f8f8;
}

.loadingFrame {
    width: 750rpx;
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 90rpx;
    font-size: 22rpx;
    background-color: #f8f8f8;
    color: #848689;
    text-align: center;
}

.layout {
    width: 100%;
    height: 100%;
}

.scroll {
    background-color: #f8f8f8;
}

.banner {
    display: flex;
    flex-direction: row;
    background-color: white;
    height: 88rpx;
    width: 750rpx;
    overflow: hidden;
}

.banner-bg {
    position: absolute;
    left: 0px;
    top: 0px;
    z-index: 0;
    height: 200rpx;
    width: 750rpx;
}

.banner-float {
    position: absolute;
    left: 0px;
    top: 0px;
    z-index: 0;
    height: 200rpx;
    width: 750rpx;
    background-color: black;
    opacity: .6;
}

.banner-ct {
    display: flex;
    flex: 1;
    flex-direction: row;
    align-items: center;
    height: 88rpx;
}

.banner-logo {
    margin-left: 20rpx;
    width: 180rpx;
    height: 60rpx;
}

.banner-logo-squre {
    margin-left: 20rpx;
    width: 70rpx;
    height: 70rpx;
}

.input-view {
    display: flex;
    flex: 1;
    margin-left: 20rpx;
    margin-right: 20rpx;
    background: #eceef1;
    padding-left: 10px;
    padding-right: 10px;
    border-radius: 100rpx;
    height: 60rpx;
    overflow: hidden;
}

.searh-text {
    font-size: 26rpx;
    color: #232326;
    margin-right: 20rpx;
}

.input-placeholder {
    display: flex;
    flex: 1;
    height: 60rpx;
    font-size: 26rpx;
    color: #232326;
    align-self: center;
    background-color: rgba(0,0,0,0);
}

.input-sytle {
    font-size: 26rpx;
    color: #bbbbbb;
}

.search-icon {
    height: 30rpx;
    width: 30rpx;
    align-self: center;
    margin-right: 20rpx;
}

.delete-icon {
    height: 30rpx;
    width: 30rpx;
    align-self: center;
}

.input-mask {
    position: absolute;
    width: 100%;
    background: rgba(0,0,0,0.75);
    z-index: 200;
}

.banner-shopName {
    margin-top: 6rpx;
    text-align: center;
    font-size: 32rpx;
    color: #ffffff;
    text-shadow: 1px 1px 1px #000000;
}

.banner-tag {
    height: 26rpx;
    margin-top: 6rpx;
}

.tab-content {
    justify-content: center;
    align-items: center;
    border-top: 1rpx solid #e0e0e0;
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 72rpx;
    border-bottom-color: black;
    position: fixed;
    right: 0px;
    bottom: 0px;
    background-color: #f3f4f6;
    z-index: 3;
}

.tab-content-view {
    justify-content: center;
    align-items: center;
    flex-grow: 1;
    display: flex;
    flex-direction: row;
    height: 72rpx;
    width: 370rpx;
}

.tab-selected {
    background-color: #e1e1e1;
}

.tab-img {
    width: 40rpx;
    height: 40rpx;
}

.tab-img-new {
    width: 40rpx;
    height: 40rpx;
}

.tab-img-arrow {
    width: 16rpx;
    height: 26rpx;
    margin-right: 30rpx;
}

.tab-text {
    color: #666666;
    font-size: 28rpx;
    margin-left: 10rpx;
}

.tab-text-red {
    color: #f20303;
}

.tab-line {
    width: 3rpx;
    height: 24rpx;
    background-color: #e0e0e0;
}

.back-top {
    position: fixed;
    right: 24rpx;
    bottom: 60rpx;
    overflow: hidden;
    z-index: 500;
}

.back-top-img {
    width: 78rpx;
    height: 78rpx;
}

.shopTest {
    display: flex;
    color: white;
    background-color: red;
    padding: 5px;
    font-size: 28rpx;
    z-index: 1;
}

.downRefresh {
    color: red;
    text-align: center;
    width: 100%;
    height: 40px;
    line-height: 40px;
    font-size: 30rpx;
}

.my {
    background: #f8f8f8;
    position: absolute;
    top: 0px;
    width: 100%;
    height: 100%;
}

.my-0 {
    z-index: -1;
}

.my-2 {
    z-index: 2;
}

.my-item {
    display: flex;
    flex-direction: row;
    height: 88rpx;
    align-items: center;
    background: white;
}

.my-content-left {
    display: flex;
    flex-direction: row;
    flex: 1;
    margin-left: 24rpx;
}

.my-content-right {
    display: flex;
    flex-direction: row;
    flex: 1;
    justify-content: flex-end;
}

.arrow {
    margin-right: 30rpx;
}

.line1 {
    background-color: #e5e5e5;
    margin-left: 24rpx;
    height: 1px;
}

.line2 {
    background-color: #e5e5e5;
    height: 1px;
}

.my-font {
    color: #232326;
    font-size: 30rpx;
    margin-left: 20rpx;
    text-align: center;
    height: 40rpx;
    line-height: 40rpx;
}

.drawer_box_toast {
    width: 416rpx;
    height: 176rpx;
    overflow: hidden;
    position: fixed;
    top: 70%;
    left: 0;
    z-index: 1001;
    background: rgba(0,0,0,0.6);
    margin: -150px 50rpx 0 167rpx;
    border-radius: 6px;
}

.toast_content {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.toast_title {
    font-size: 30rpx;
    color: white;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    word-break: break-all;
    overflow: hidden;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: rgba(0,0,0,0.6);
    overflow: hidden;
}

.drawer_content {
    height: 440rpx;
    width: 670rpx;
    overflow-y: scroll;
    border-radius: 18rpx;
    background-color: white;
    margin-top: 40%;
    margin-left: 40rpx;
    justify-content: center;
    align-items: center;
    display: flex;
    flex-direction: column;
}

.textInput {
    border-radius: 6rpx;
    padding-left: 10rpx;
    margin-left: 40rpx;
    height: 72rpx;
    width: 360rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #e0e0e0;
}

.inputcode {
    width: 160rpx;
    height: 72rpx;
    background-color: white;
    border: 1rpx solid #232326;
    margin-left: 60rpx;
}

.btn {
    width: 80%;
    padding: 20rpx 0;
    border-radius: 10rpx;
    text-align: center;
    margin: 40rpx 10%;
    background: #000;
    color: #fff;
}

.drawer_box {
    width: 650rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 1001;
    background: #FAFAFA;
    margin: -150px 50rpx 0 50rpx;
    border-radius: 3px;
}

.drawer_title {
    padding: 15px;
    font: 20px "microsoft yahei";
    text-align: center;
}

.drawer_content_1 {
    height: 210px;
    overflow-y: scroll;
}

.btn_ok {
    padding: 10px;
    font: 20px "microsoft yahei";
    text-align: center;
    border-top: 1px solid #E8E8EA;
    color: #3CC51F;
}

.top {
    padding-top: 8px;
}

.bottom {
    padding-bottom: 8px;
}

.title {
    height: 30px;
    line-height: 30px;
    width: 160rpx;
    text-align: center;
    display: inline-block;
    font: 300 28rpx/30px "microsoft yahei";
}

.input_base {
    border: 2rpx solid #ccc;
    padding-left: 10rpx;
    margin-right: 50rpx;
}

.input_h30 {
    height: 30px;
    line-height: 30px;
}

.input_h60 {
    height: 60px;
}

.input_view {
    font: 12px "microsoft yahei";
    background: #fff;
    color: #000;
    line-height: 30px;
}

input {
    font: 12px "microsoft yahei";
    background: #fff;
    color: #000;
}

radio {
    margin-right: 20px;
}

.grid {
    display: box;
}

.col-0 {
    -webkit-box-flex: 0;
}

.col-1 {
    -webkit-box-flex: 1;
}

.fl {
    float: left;
}

.fr {
    float: right;
}