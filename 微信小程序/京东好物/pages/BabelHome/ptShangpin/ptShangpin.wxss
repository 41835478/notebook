.pt-list {
    box-sizing: border-box;
    width: 750rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: flex-start;
    background-color: #f7e3aa;
}

.pt-item {
    box-sizing: border-box;
    width: 350rpx;
    height: 520rpx;
    margin-top: 9rpx;
    background-color: #fffbee;
    overflow: hidden;
    position: relative;
}

.pt-item-margin {
    margin-left: 20rpx;
    margin-right: 10rpx;
}

.pt-img {
    width: 350rpx;
    height: 350rpx;
}

.pt-img-gray {
    position: absolute;
    top: 114rpx;
    left: 114rpx;
    width: 122rpx;
    height: 122rpx;
}

.pt-slogan {
    margin-top: 9rpx;
    margin-left: 20rpx;
    position: relative;
    display: block;
    font-size: 22rpx;
    height: 23rpx;
    line-height: 23rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    max-width: 250rpx;
    white-space: nowrap;
    justify-content: center;
    align-items: center;
}

.pt-comment {
    margin-top: 3rpx;
    margin-left: 20rpx;
    font-size: 22rpx;
    height: 24rpx;
    line-height: 24rpx;
    position: relative;
    display: block;
    justify-content: center;
    align-items: center;
    text-overflow: ellipsis;
    overflow: hidden;
    max-width: 260rpx;
    white-space: nowrap;
}

.pt-markLabel {
    width: 68rpx;
    height: 66rpx;
    color: #ffffff;
    font-size: 36rpx;
    text-align: center;
    line-height: 66rpx;
}

.pt-markLabel.style1Text {
    height: 34rpx;
    font-size: 22rpx;
    line-height: 33rpx;
    text-align: center;
    overflow: hidden;
}

.pt-markLabel.style2Text {
    top: 9rpx;
    left: 10rpx;
    height: 46rpx;
    width: 46rpx;
    color: #ffffff;
    word-break: break-all;
    font-size: 23rpx;
    line-height: 24rpx;
    position: absolute;
    overflow: hidden;
}

.pt-other {
    color: #f23030;
    font-size: 26rpx;
}

.pt-cart {
    width: 50rpx;
    height: 50rpx;
}

.pt-title {
    font-size: 26rpx;
    color: #252525;
    margin-top: 16rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    height: 54rpx;
    line-height: 28.5rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    word-break: break-all;
    overflow: hidden;
}

.pt-price {
    margin-left: 20rpx;
    display: inline-block;
    height: 32rpx;
}

.pt-price-origin {
    text-decoration: line-through;
    line-height: 23rpx;
    display: inline-block;
    height: 23rpx;
    max-width: 130rpx;
    color: #999999;
    font-size: 22rpx;
    margin-left: 8rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    position: relative;
}

.pt-promotionTag {
    margin-top: -3rpx;
    display: inline-block;
    line-height: 28rpx;
    height: 28rpx;
    max-width: 174rpx;
    color: #ffffff;
    font-size: 24rpx;
    margin-left: 8rpx;
    overflow: hidden;
    position: relative;
}

.pt-price-text {
    color: #000000;
}

.pt-price-text-gray {
    color: #999999;
}

.pt-price-text-red {
    color: #f02b2b;
}

.pt-price-1 {
    margin-top: 6rpx;
    height: 34rpx;
    line-height: 34rpx;
    max-width: 250rpx;
    font-size: 32rpx;
    display: inline-block;
    text-overflow: ellipsis;
    overflow: hidden;
}

.pt-hasMore {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 22rpx;
    background-color: #f7e3aa;
    color: #848689;
    text-align: center;
}

.pt-newProduct-tips {
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background-color: #f8f8f8;
    font-size: 28rpx;
    color: #686868;
    position: relative;
    z-index: 1;
    margin-top: 12rpx;
}

.pt-newProduct-tips view {
    margin: 0 auto;
    width: 315rpx;
    height: 100%;
    z-index: 2;
    background-color: #f8f8f8;
    position: relative;
}

.pt-newProduct-tips image {
    width: 23rpx;
    height: 23rpx;
    margin-right: 12rpx;
}

.pt-newProduct-tips:before {
    content: '';
    border-bottom: 1px solid #e0e0e0;
    height: 1px;
    position: absolute;
    left: 20rpx;
    top: 30rpx;
    z-index: 1;
    width: 710rpx;
}

.pt-hasNoData {
    margin-top: 150rpx;
    flex-direction: column;
    background-color: #f8f8f8;
    justify-content: center;
    align-items: center;
    display: flex;
}

.pt-img-noData {
    width: 236rpx;
    height: 140rpx;
}

.pt-img-wifi {
    width: 210rpx;
    height: 210rpx;
}

.fontNodata {
    color: #838588;
    text-align: center;
    font-size: 34rpx;
    margin-top: 44rpx;
}

.fontWifi {
    color: #838588;
    text-align: center;
    font-size: 34rpx;
    margin-top: 28rpx;
}

.fontReload {
    width: 220rpx;
    height: 66rpx;
    background-color: #ffffff;
    color: #666666;
    font-size: 28rpx;
    margin-top: 36rpx;
    border-color: #bebebe;
    border-radius: 8rpx;
    border-style: solid;
    border-width: 1px;
    text-align: center;
    line-height: 66rpx;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.pt-tab-scroll {
    white-space: nowrap;
    width: 100%;
    overflow-x: scroll;
    overflow-y: hidden;
}

.pt-tab-image-content {
    height: 100%;
}

.pt-tab-content {
    height: 100%;
}

.pt-tab-item-image {
    font-size: 32rpx;
    display: inline-block;
    text-align: center;
    white-space: nowrap;
}

.pt-tab-item {
    font-size: 32rpx;
    display: inline-block;
    text-align: center;
    margin: 0 30px 0 0;
    white-space: nowrap;
}

.firstItem {
    margin: 0 30px 0 30px;
}

.activity {
    border-bottom-width: 6rpx;
    border-bottom-style: solid;
}

.pt-tab-image {
    display: inline-block;
}

.item-H {
    display: inline-block;
    width: 60px;
}

.imageView {
    display: inline-block;
}

.itemH {
    margin: 0 100px 0 100px;
}