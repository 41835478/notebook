page {
    background: #fff;
}

image {
    max-width: 100%!important;
}

view,text {
    color: #484848;
    font-family: 'PingFangSC-Light',Arial,Helvetica,sans-serif,"Hiragino Sans GB";
}

text.strong {
    font-weight: 600;
}

.clearfix:after {
    clear: both;
    height: 0;
    overflow: hidden;
    display: block;
    visibility: hidden;
    content: ".";
}

.banner {
    width: 100%!important;
}

.notes-wrapper {
    padding: 25px 20px 20px;
}

.notes-title {
    line-height: 1.2;
    font-size: 30px;
    font-weight: 600;
    margin-bottom: 20px;
}

.notes-meta {
    font-size: 12px;
    margin-bottom: 20px;
}

.notes-meta>text {
    margin-right: 10px;
}

.notes-author {
    margin-bottom: 27px;
    min-height: 60px;
    align-items: center;
    display: flex;
    -webkit-box-align: center;
}

.notes-author .author {
    -webkit-box-flex: 1;
    flex: 1;
}

.notes-author .author .avatar {
    border-radius: 30px;
    height: 60px;
    width: 60px;
    float: left;
}

.notes-author .author .info {
    margin-left: 70px;
}

.notes-author .author .nickname {
    font-size: 16px;
    line-height: 22px;
    position: relative;
    padding-right: 5px;
    display: inline-block;
}

.notes-author .author .level {
    font-size: 10px;
    text-align: center;
    border-radius: 2px;
    display: inline-block;
    position: relative;
    margin: 0 0 3px 5px;
    height: 16px;
    line-height: 16px;
    background: #474747;
    padding: 0 5px;
    color: #ffdb26;
    vertical-align: middle;
}

.notes-author .author .social-data {
    margin-top: 5px;
    font-size: 12px;
    color: #767676;
}

.notes-author .place {
    float: right;
    display: flex;
    box-sizing: border-box;
    border-left: 1px solid #e5e5e5;
    align-items: center;
    height: 40px;
}

.notes-author .place .size1 {
    font-size: 37.5px;
    padding-left: 16px;
}

.notes-author .place .size2 {
    font-size: 36px;
    padding-left: 14px;
}

.notes-author .place .size3 {
    font-size: 30px;
    padding-left: 12px;
}

.notes-author .place .size4 {
    font-size: 24px;
    padding-left: 10px;
}

.notes-author .place .size5 {
    font-size: 19px;
    padding-left: 10px;
}

.notes-author .place .size6 {
    font-size: 16px;
    padding-left: 10px;
}

.notes-point {
    margin: 32px auto 30px;
    border: 1px solid #e5e5e5;
    padding: 5px 0 18px;
    position: relative;
    font-size: 14px;
    line-height: 16px;
}

.notes-point .legend {
    position: absolute;
    height: 14px;
    background-color: #fff;
    line-height: 14px;
    padding: 0 4px;
    font-size: 10px;
    color: #767676;
    left: 16px;
    top: -7px;
}

.notes-point .point {
    float: left;
    margin: 15px 0 0 18px;
    white-space: nowrap;
}

.notes-point .point:nth-child(odd) {
    width: 166px;
}

.notes-point .point:before {
    content: "";
    vertical-align: middle;
    margin-right: 4px;
    display: inline-block;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background-color: #474747;
    background: url(https://css.mafengwo.net/mobile/images/post/note/notes-sprites.png?a=2) no-repeat 0 -85px;
    background-size: 100px auto;
}

.notes-point .point.people:before {
    background-position-x: -20px;
}

.notes-point .point.cost:before {
    background-position-x: -40px;
}

.notes-point .point.day:before {
    background-position-x: -60px;
}

.notes-detail {
    margin-left: -20px;
    margin-right: -20px;
    padding: 0 20px;
    word-break: break-word;
}

.notes-detail .tit {
    margin-bottom: 30px;
    font-size: 24px;
    line-height: 1.25;
    font-weight: 600;
}

.notes-detail .txt {
    margin-bottom: 30px;
    font-size: 18px;
    line-height: 1.5;
}

.notes-detail .photo {
    margin: 0 -20px 30px;
}

.notes-detail .photo-wrap image {
    width: 100%!important;
}

.notes-detail .photo-bar {
    margin: 10px 11px 0;
    line-height: 16px;
    font-size: 12px;
}

.notes-detail .photo-bar .location:before {
    content: "";
    vertical-align: middle;
    margin-right: 4px;
    display: inline-block;
    width: 16px;
    height: 16px;
    background: url(https://css.mafengwo.net/mobile/images/post/note/notes-sprites.png?a=2) no-repeat 0 0;
    background-size: 100px auto;
}

.notes-detail .video {
    margin: 0 -20px 30px;
}

.notes-detail .video video {
    width: 100%;
}

.notes-end {
    margin-top: 30px;
    margin-bottom: 5px;
    padding-bottom: 30rpx;
}

.notes-end view {
    text-align: center;
    font-size: 10px;
    font-weight: 600;
    line-height: 1;
    color: #999;
}

.notes-end view.n-cp {
    text-align: left;
    margin-bottom: 20px;
    font-size: 15px;
    line-height: 1.2;
    font-weight: normal;
}

.go-top::after {
    border: none;
}

.questions_footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background: rgba(255,255,255,1);
    box-shadow: 0 0 0.2rpx 0 rgba(0,0,0,0.1);
}

.questions_footer button {
    height: 100rpx;
    font-size: 30rpx;
    font-family: "PingFangSC-Regular";
    color: rgba(71,71,71,1);
    line-height: 100rpx;
    background: #fff;
    padding: 0 50rpx;
    box-sizing: inherit;
    display: inline-block;
    text-align: inherit;
    position: absolute;
}

.questions_footer_index {
    top: 0;
    left: 18%;
}

.questions_footer_index::before {
    content: '';
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 50%;
    left: 0rpx;
    margin-top: -20rpx;
    background: url("https://b2-q.mafengwo.net/s11/M00/31/2A/wKgBEFr6w_-AIqzYAAAGY0ZpFYc225.png") no-repeat;
    background-size: cover;
    display: inline-block;
}

.questions_footer_share {
    position: absolute;
    border: none;
    top: 0;
    right: 12%;
}

.questions_footer_share::before {
    content: '';
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 50%;
    left: 0rpx;
    margin-top: -20rpx;
    background: url("https://b1-q.mafengwo.net/s11/M00/30/53/wKgBEFr6wseAWeagAAAFOQAbLbI824.png") no-repeat;
    background-size: cover;
    display: inline-block;
}

.questions_footer_icon {
    display: inline-block;
    width: 2rpx;
    height: 60rpx;
    background: #f0f0ea;
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -30rpx 0 0 -1rpx;
}

.go-app {
    width: 218rpx;
    height: 72rpx;
    position: fixed;
    bottom: 120rpx;
    right: -5rpx;
    z-index: 899;
    background: url("https://p4-q.mafengwo.net/s11/M00/31/87/wKgBEFr6xG-AKSggAAASrPNSKxI731.png") no-repeat;
    background-size: cover;
}

.go-app::after {
    border: none;
}

button::after {
    border: none;
}

input {
    outline: none;
    border: none;
    list-style: none;
}

.fix-iphonex-button {
    bottom: 33rpx!important;
}

.fix-iphonex-button::after {
    content: ' ';
    position: fixed;
    bottom: 0!important;
    height: 33rpx!important;
    width: 100%;
    background: #fff;
}