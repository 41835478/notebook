page {
    background: #fff;
}

image {
    max-width: 100%!important;
}

.banner {
    width: 100%!important;
}

.title {
    color: #111;
    font-size: 25px;
    font-weight: normal;
    line-height: 1.2;
    margin: 25px 25px 50px;
}

.title_tip {
    color: #999;
    font-size: 14px;
    margin-top: 18px;
    line-height: 1;
    font-weight: normal;
}

.title_tip_time {
    margin: 0 0 0 10px;
}

.user {
    margin: 0 25px;
    min-height: 60px;
}

.user_logo {
    border-radius: 30px;
    height: 60px;
    width: 60px;
    float: left;
}

.user_info {
    margin-left: 70px;
}

.user_name {
    font-size: 18px;
    line-height: 22px;
    color: #111;
    position: relative;
    padding-right: 10px;
    display: inline-block;
}

.user_name::after {
    content: "";
    background: url(https://css.mafengwo.net/wxapp/images/gl_icons_v2.png?2017) 0 -40px no-repeat;
    background-size: 20px 80px;
    height: 20px;
    width: 20px;
    position: absolute;
    right: -15px;
    top: 0px;
}

.user_intro {
    margin-top: 4px;
    font-size: 14.5px;
    line-height: 1.3;
    color: #999;
}

.summary {
    color: #111;
    font-size: 17px;
    line-height: 25px;
    margin: 20px 25px 0;
    position: relative;
    text-indent: 2em;
    padding: 20px 0 0;
}

.summary::before {
    content: "";
    background: url(https://css.mafengwo.net/wxapp/images/gl_icons_v2.png?2017) 0 -20px no-repeat;
    background-size: 20px 80px;
    height: 20px;
    width: 20px;
    position: absolute;
    left: 0;
    top: 0;
}

.paras {
    padding: 0 0 40px;
}

.para_t {
    color: #111;
    font-size: 20px;
    font-weight: bold;
    line-height: 30px;
    position: relative;
    padding: 0 0 0 25px;
    margin: 25px 25px 25px 0;
}

.para_t::before {
    content: '';
    background: #111;
    width: 6px;
    height: 20px;
    position: absolute;
    left: 0;
    top: 5px;
}

.para_st {
    color: #111;
    font-size: 18px;
    font-weight: bold;
    line-height: 28px;
    position: relative;
    margin: 15px 25px;
}

.para_img,.para_video,.para_audio {
    margin: 5px 25px 15px;
}

audio {
    max-width: 100%;
}

.para_img_ext {
    color: #999;
    font-size: 12px;
    line-height: 1;
    margin-top: 5px;
    text-align: right;
}

.para_text {
    color: #111;
    font-size: 17px;
    line-height: 25px;
    margin: 0 25px 10px;
}

.para_text_bold {
    font-weight: bold;
}

.para_text_link {
    color: #ffc811;
}

.para_link_app {
    color: #30a2f2;
    text-decoration: underline;
    font-size: 15px;
}

.para_quote {
    background: #f8f8f8;
    border-radius: 4px;
    margin: 15px 25px;
    padding: 10px;
}

.para_quote_logo {
    border-radius: 50%;
    height: 45px;
    width: 45px;
    float: left;
}

.para_quote_info {
    margin-left: 55px;
}

.para_quote_name {
    font-size: 16px;
    line-height: 1.4;
    color: #111;
    position: relative;
    display: inline-block;
}

.para_quote_lv {
    color: #eb5443;
    font-size: 15px;
    margin: 0 0 0 5px;
    display: inline-block;
}

.para_quote_content {
    font-size: 14px;
    line-height: 1.4;
    margin-top: 3px;
    color: #999;
}

.para_tips {
    background: url(https://css.mafengwo.net/wxapp/images/tips.png) no-repeat #fff3df;
    background-size: 70px 25px;
    padding: 35px 20px 15px;
    margin: 15px 25px;
    color: #4d4537;
    font-size: 16px;
    line-height: 22px;
}

.thanks {
    color: #999;
    font-size: 14px;
    line-height: 20px;
    margin: 15px 25px;
}

.questions_footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100rpx;
    background: rgba(255,255,255,1);
    box-shadow: 0 0 0.2rpx 0 rgba(0,0,0,0.1);
}

.questions_footer button {
    height: 100rpx;
    font-size: 30rpx;
    font-family: "PingFangSC-Regular";
    color: rgba(71,71,71,1);
    line-height: 100rpx;
    background: #fff;
    padding: 0 50rpx;
    box-sizing: inherit;
    display: inline-block;
    text-align: inherit;
    position: absolute;
}

.questions_footer_index {
    top: 0;
    left: 18%;
}

.questions_footer_index::before {
    content: '';
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 50%;
    left: 0rpx;
    margin-top: -20rpx;
    background: url("https://b2-q.mafengwo.net/s11/M00/31/2A/wKgBEFr6w_-AIqzYAAAGY0ZpFYc225.png") no-repeat;
    background-size: cover;
    display: inline-block;
}

.questions_footer_share {
    position: absolute;
    border: none;
    top: 0;
    right: 12%;
}

.questions_footer_share::before {
    content: '';
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 50%;
    left: 0rpx;
    margin-top: -20rpx;
    background: url("https://b1-q.mafengwo.net/s11/M00/30/53/wKgBEFr6wseAWeagAAAFOQAbLbI824.png") no-repeat;
    background-size: cover;
    display: inline-block;
}

.questions_footer_icon {
    display: inline-block;
    width: 2rpx;
    height: 60rpx;
    background: #f0f0ea;
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -30rpx 0 0 -1rpx;
}

button::after {
    border: none;
}

input {
    outline: none;
    border: none;
    list-style: none;
}

.fix-iphonex-button {
    bottom: 33rpx!important;
}

.fix-iphonex-button::after {
    content: ' ';
    position: fixed;
    bottom: 0!important;
    height: 33rpx!important;
    width: 100%;
    background: #fff;
}