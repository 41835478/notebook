.cate-list {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: row;
    overflow: hidden;
    color: #5c5c5c;
    background-color: #fff;
    border-top: 1px solid #cccccc;
}

.cate-list-first {
    box-sizing: border-box;
    width: 248rpx;
    height: 100%;
    color: #43474c;
}

.cate-list-first-item {
    height: 98rpx;
    line-height: 98rpx;
    width: 100%;
    padding-left: 30rpx;
    font-size: 26rpx;
    background-color: #f6f7f8;
}

.cate-list-second {
    width: 70%;
    background-color: #f2f3f6;
    padding: 0 30rpx;
    height: 100%;
}

.cate-list-second-item {
    font-size: 26rpx;
}

.selected-cate {
    color: #ff5540;
    background-color: #f2f3f6;
}

.third-cate {
    margin-bottom: 22rpx;
}

.third-cate-item {
    display: inline-block;
    font-size: 26rpx;
    color: #43474c;
    box-sizing: border-box;
    width: 50%;
}

.third-cate-item text {
    display: inline-block;
    margin-bottom: 22rpx;
    width: 210rpx;
    height: 64rpx;
    line-height: 64rpx;
    background-color: #fff;
    border: 1rpx solid #e2e5e9;
    border-radius: 3rpx;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.second-text {
    font-size: 26rpx;
    overflow: hidden;
    line-height: 98rpx;
}

.third-text {
    display: inline-block;
    width: 210rpx;
    height: 64rpx;
    line-height: 64rpx;
    background-color: #fff;
    border-width: 1rpx;
    border-style: solid;
    border-radius: 3rpx;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.taget-cate {
    display: inline-block;
    font-size: 26rpx;
    box-sizing: border-box;
}

.taget-cate text {
    display: inline-block;
    margin-bottom: 22rpx;
    margin-right: 22rpx;
    width: 210rpx;
    height: 64rpx;
    line-height: 64rpx;
    background-color: #fff;
    color: #ff5540;
    border: 1rpx solid #ff5540;
    border-radius: 3rpx;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.left-cate text {
    margin-right: 30rpx;
}

.right-cate text {
    margin-left: 11rpx;
}

@import "../curtain/curtain.wxss";